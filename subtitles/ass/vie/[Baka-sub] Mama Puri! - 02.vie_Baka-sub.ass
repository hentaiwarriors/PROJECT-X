Dialogue: 0,0:00:57.38,0:00:58.22,Default,,0000,0000,0000,,Cái gì ?
Dialogue: 0,0:00:59.29,0:01:00.58,Default,,0000,0000,0000,,Cái gì là sao hả ?
Dialogue: 0,0:01:00.83,0:01:02.87,Default,,0000,0000,0000,,Mình vừa nói rõ ràng rồi đó, miễn thắc mắc.
Dialogue: 0,0:01:03.08,0:01:04.62,Default,,0000,0000,0000,,Không thắc mắc hơi phí.
Dialogue: 0,0:01:04.87,0:01:06.43,Default,,0000,0000,0000,,Cậu mà cũng đòi làm mẹ kế mình á!
Dialogue: 0,0:01:06.82,0:01:07.93,Default,,0000,0000,0000,,Thần kinh à?
Dialogue: 0,0:01:08.13,0:01:09.17,Default,,0000,0000,0000,,Im ngay!
Dialogue: 0,0:01:09.38,0:01:12.97,Default,,0000,0000,0000,,Coi thường nhau vừa vừa thôi nhé, tôi rút lưỡi cậu ra bây giờ!
Dialogue: 0,0:01:14.34,0:01:15.59,Default,,0000,0000,0000,,Rút lưỡi á?
Dialogue: 0,0:01:19.98,0:01:22.06,Default,,0000,0000,0000,,Khoan đã... từ nhỏ tới giờ...
Dialogue: 0,0:01:22.31,0:01:23.84,Default,,0000,0000,0000,,cậu vẫn yêu ông già mình à?
Dialogue: 0,0:01:24.77,0:01:26.81,Default,,0000,0000,0000,,Chuyện gì thế, Haruka-kun!?
Dialogue: 0,0:01:28.20,0:01:29.40,Default,,0000,0000,0000,,Chào bác ạ!
Dialogue: 0,0:01:30.28,0:01:32.44,Default,,0000,0000,0000,,Vãi. Bố già từ đâu chui ra vậy?!
Dialogue: 0,0:01:33.85,0:01:36.24,Default,,0000,0000,0000,,Haruka-kun, cháu nghiêm túc đấy chứ?
Dialogue: 0,0:01:37.22,0:01:39.44,Default,,0000,0000,0000,,T-Tất nhiên rồi, cháu có bao giờ nói dối bác điều gì đâu!
Dialogue: 0,0:01:39.66,0:01:42.25,Default,,0000,0000,0000,,Cứ như truyện thần tiên vậy, Haruka-kun!
Dialogue: 0,0:01:42.40,0:01:44.26,Default,,0000,0000,0000,,Ta cảm động quá!
Dialogue: 0,0:01:45.00,0:01:46.54,Default,,0000,0000,0000,,Nghe đây, Kenta!
Dialogue: 0,0:01:46.75,0:01:49.29,Default,,0000,0000,0000,,Từ bây giờ, con phải coi cô ấy như một ứng viên mẹ kế.
Dialogue: 0,0:01:49.50,0:01:52.84,Default,,0000,0000,0000,,Sắp xếp cho cô ấy một phòng ngay lập tức. Nghe chưa hả thằng kia?
Dialogue: 0,0:01:52.85,0:01:54.88,Default,,0000,0000,0000,,Vậy nhé, ta đi làm đây.
Dialogue: 0,0:01:55.84,0:01:57.08,Default,,0000,0000,0000,,Cố gắng lên!
Dialogue: 0,0:01:58.24,0:01:59.47,Default,,0000,0000,0000,,Cả cháu nữa, Haruka-kun!
Dialogue: 0,0:02:04.23,0:02:06.56,Default,,0000,0000,0000,,Sao ông già xuất quỷ nhập thần ghê vậy nhỉ?
Dialogue: 0,0:02:08.17,0:02:10.96,Default,,0000,0000,0000,,Cám ơn vì bữa tối, Sawagiri-san! Thức ăn ngon lắm!
Dialogue: 0,0:02:11.20,0:02:14.07,Default,,0000,0000,0000,,Ngon thật đó. Chiyo-san, cô đúng là một đầu bếp cừ khôi.
Dialogue: 0,0:02:14.87,0:02:16.33,Default,,0000,0000,0000,,Lần đầu tiên tôi được người khác khen nấu ăn ngon đấy.
Dialogue: 0,0:02:16.50,0:02:19.95,Default,,0000,0000,0000,,Xin lỗi vì Haruka không xuống ăn cùng. Cô ấy cứ ở lì trong phòng.
Dialogue: 0,0:02:20.16,0:02:22.37,Default,,0000,0000,0000,,Không sao đâu. Chắc cô ấy đang mệt.
Dialogue: 0,0:02:22.58,0:02:23.38,Default,,0000,0000,0000,,Phải đó.
Dialogue: 0,0:02:23.62,0:02:26.41,Default,,0000,0000,0000,,Ban nãy thấy cô ấy một mình khuân cả đống hành lý có vẻ nặng nhọc lắm.
Dialogue: 0,0:02:27.00,0:02:30.38,Default,,0000,0000,0000,,Cô ấy đã được ông già cho phép rồi, vậy nên khuyên bảo cũng chẳng ăn thua.
Dialogue: 0,0:02:30.63,0:02:32.95,Default,,0000,0000,0000,,À, chắc một thời gian là cô ấy chán ngay thôi ấy mà.
Dialogue: 0,0:02:33.17,0:02:34.84,Default,,0000,0000,0000,,Các cô chỉ cần đối xử tốt với cô ấy trong thời gian này là được.
Dialogue: 0,0:02:35.34,0:02:37.55,Default,,0000,0000,0000,,Chắc chắn rồi. Cứ tin ở bọn tôi.
Dialogue: 0,0:02:38.22,0:02:39.84,Default,,0000,0000,0000,,Nhắc mới nhớ, Noriko-san đâu rồi nhỉ ?
Dialogue: 0,0:02:40.40,0:02:43.18,Default,,0000,0000,0000,,Không biết nữa. Ban nãy tôi còn thấy cô ấy quanh quẩn ở đây.
Dialogue: 0,0:02:43.39,0:02:44.96,Default,,0000,0000,0000,,Ai vừa gọi tôi thế nhỉ?
Dialogue: 0,0:02:45.43,0:02:48.90,Default,,0000,0000,0000,,À, tôi vừa ăn tối với Haruka-kun xong.
Dialogue: 0,0:02:49.48,0:02:51.81,Default,,0000,0000,0000,,Dân thể thao có khác, ăn nhiều gớm.
Dialogue: 0,0:02:51.92,0:02:53.32,Default,,0000,0000,0000,,Một bữa ăn ra trò.
Dialogue: 0,0:02:53.86,0:02:56.19,Default,,0000,0000,0000,,Không ngờ cô nấu ăn khá thật đó, Chiyo-san.
Dialogue: 0,0:02:56.78,0:02:59.95,Default,,0000,0000,0000,,Bình thường tôi khoái ăn tối bên ngoài hơn.
Dialogue: 0,0:03:00.20,0:03:01.82,Default,,0000,0000,0000,,Đồ ăn họ làm hết xảy luôn!
Dialogue: 0,0:03:03.16,0:03:04.10,Default,,0000,0000,0000,,Ăn bên ngoài hả?
Dialogue: 0,0:03:04.58,0:03:08.37,Default,,0000,0000,0000,,Đúng vậy. Họ phục vụ khách hàng tận tình lắm.
Dialogue: 0,0:03:08.48,0:03:11.17,Default,,0000,0000,0000,,Đúng là cứu cánh cho những ứng viên nội trợ như chúng ta.
Dialogue: 0,0:03:11.82,0:03:13.17,Default,,0000,0000,0000,,Thôi nào, Noriko-san!
Dialogue: 0,0:03:14.30,0:03:15.84,Default,,0000,0000,0000,,Sao vậy, Kazuho-san?
Dialogue: 0,0:03:17.82,0:03:18.97,Default,,0000,0000,0000,,Sawagiri-san!
Dialogue: 0,0:03:19.48,0:03:22.05,Default,,0000,0000,0000,,Chiyo-san! Này, tôi không cố ý...
Dialogue: 0,0:03:23.14,0:03:26.10,Default,,0000,0000,0000,,Ơ này, tôi vừa nói gì sai à?
Dialogue: 0,0:03:26.25,0:03:28.43,Default,,0000,0000,0000,,Sawagiri-san, đứng lại đã nào!
Dialogue: 0,0:03:28.64,0:03:29.48,Default,,0000,0000,0000,,Sawagiri-san!
Dialogue: 0,0:03:32.15,0:03:34.77,Default,,0000,0000,0000,,Sawagiri-san, đừng hiểu lầm.
Dialogue: 0,0:03:35.40,0:03:37.74,Default,,0000,0000,0000,,Trước khi các cô tới đây, tôi cũng hay đi ăn ngoài mà.
Dialogue: 0,0:03:38.41,0:03:42.03,Default,,0000,0000,0000,,Xin lỗi cậu! Tôi thật vô dụng!
Dialogue: 0,0:03:42.46,0:03:43.66,Default,,0000,0000,0000,,Tôi chả làm được việc gì ra hồn cả!
Dialogue: 0,0:03:43.87,0:03:47.08,Default,,0000,0000,0000,,Đừng nói vậy chứ? Cô đã giúp chúng tôi rất nhiều mà!
Dialogue: 0,0:03:47.83,0:03:49.62,Default,,0000,0000,0000,,Vậy nên đừng nói những lời cay đắng như vậy.
Dialogue: 0,0:03:50.16,0:03:52.21,Default,,0000,0000,0000,,Nhờ có cô, tôi đã...
Dialogue: 0,0:03:55.42,0:03:56.30,Default,,0000,0000,0000,,Cúp điện ư?
Dialogue: 0,0:03:57.55,0:03:58.51,Default,,0000,0000,0000,,Công tắc tịt luôn rồi.
Dialogue: 0,0:03:59.17,0:04:00.09,Default,,0000,0000,0000,,Sawagiri-san?
Dialogue: 0,0:04:00.97,0:04:02.89,Default,,0000,0000,0000,,Uh, uh, Kenta-san...
Dialogue: 0,0:04:03.47,0:04:05.27,Default,,0000,0000,0000,,Tôi...Tôi sợ bóng tối lắm!
Dialogue: 0,0:04:05.47,0:04:08.02,Default,,0000,0000,0000,,Đừng sợ. Chỉ là cúp điện tạm thời thôi mà.
Dialogue: 0,0:04:08.22,0:04:10.98,Default,,0000,0000,0000,,Nhưng tôi sợ lắm. Từ nhỏ tôi đã rất sợ bóng tối!
Dialogue: 0,0:04:11.81,0:04:12.95,Default,,0000,0000,0000,,Cậu ở đâu vậy, Kenta-san?
Dialogue: 0,0:04:13.36,0:04:15.20,Default,,0000,0000,0000,,Tôi không dám ở một mình trong bóng tối đâu!
Dialogue: 0,0:04:15.61,0:04:18.03,Default,,0000,0000,0000,,Ở yên đó, Sawagiri-san. Tôi tới chỗ cô ngay đây.
Dialogue: 0,0:04:18.53,0:04:19.78,Default,,0000,0000,0000,,Ah! Tôi vừa dẫm phải thứ gì đó!
Dialogue: 0,0:04:19.83,0:04:21.28,Default,,0000,0000,0000,,Kenta-san!
Dialogue: 0,0:04:22.03,0:04:23.45,Default,,0000,0000,0000,,Kenta-san...
Dialogue: 0,0:04:24.08,0:04:26.58,Default,,0000,0000,0000,,Chiyo-san, đừng siết tôi chặt như vậy
Dialogue: 0,0:04:29.11,0:04:31.33,Default,,0000,0000,0000,,Kenta-san... Kenta-san...
Dialogue: 0,0:04:31.83,0:04:32.71,Default,,0000,0000,0000,,Kenta-san!
Dialogue: 0,0:04:33.37,0:04:35.38,Default,,0000,0000,0000,,Sawagiri-san, không sao rồi.
Dialogue: 0,0:04:35.96,0:04:36.88,Default,,0000,0000,0000,,Tôi đây.
Dialogue: 0,0:04:38.36,0:04:39.63,Default,,0000,0000,0000,,Kenta-san...
Dialogue: 0,0:04:40.63,0:04:43.13,Default,,0000,0000,0000,,Cô không bị thương ở đâu chứ?
Dialogue: 0,0:04:44.51,0:04:47.14,Default,,0000,0000,0000,,Tôi sợ bóng tối lắm.
Dialogue: 0,0:04:47.35,0:04:48.58,Default,,0000,0000,0000,,Sợ hãi và cô đơn.
Dialogue: 0,0:04:48.63,0:04:50.32,Default,,0000,0000,0000,,Tôi không dám ở một mình trong bóng tối đâu.
Dialogue: 0,0:04:50.52,0:04:51.73,Default,,0000,0000,0000,,Đừng lo.
Dialogue: 0,0:04:51.93,0:04:54.02,Default,,0000,0000,0000,,Có tôi ở đây rồi. Cô sẽ không sao hết.
Dialogue: 0,0:04:54.56,0:04:56.56,Default,,0000,0000,0000,,Kenta-san, cám ơn cậu.
Dialogue: 0,0:04:57.12,0:05:00.19,Default,,0000,0000,0000,,Cũng may là chúng ta đều ngã lên giường.
Dialogue: 0,0:05:01.86,0:05:02.34,Default,,0000,0000,0000,,Sao vậy?
Dialogue: 0,0:05:02.78,0:05:05.27,Default,,0000,0000,0000,,Ban nãy cậu gọi tôi bằng tên thường phải không?
Dialogue: 0,0:05:06.16,0:05:08.20,Default,,0000,0000,0000,,Thôi chết! Tôi xin lỗi...
Dialogue: 0,0:05:08.70,0:05:11.12,Default,,0000,0000,0000,,Cậu không cần phải xin lỗi.
Dialogue: 0,0:05:11.75,0:05:13.29,Default,,0000,0000,0000,,Thôi thích được cậu gọi như vậy.
Dialogue: 0,0:05:14.71,0:05:18.88,Default,,0000,0000,0000,,Từ khi chuyển tới đây, tôi là người duy nhất không được cậu gọi bằng tên thường.
Dialogue: 0,0:05:19.13,0:05:21.17,Default,,0000,0000,0000,,Vậy nên tôi buồn lắm.
Dialogue: 0,0:05:22.30,0:05:23.93,Default,,0000,0000,0000,,Làm ơn đi, Kenta-san...
Dialogue: 0,0:05:24.72,0:05:28.47,Default,,0000,0000,0000,,tôi muốn được gần gũi với cậu hơn!
Dialogue: 0,0:05:49.20,0:05:52.83,Default,,0000,0000,0000,,Sawagiri-san, chúng ta làm vậy liệu có ổn không?
Dialogue: 0,0:05:53.25,0:05:54.46,Default,,0000,0000,0000,,Không ổn chút nào.
Dialogue: 0,0:05:55.67,0:05:58.75,Default,,0000,0000,0000,,Nếu cậu không chịu gọi tôi bằng tên thường thì không ổn chút nào.
Dialogue: 0,0:05:59.58,0:06:00.55,Default,,0000,0000,0000,,Uhm, vậy...
Dialogue: 0,0:06:01.42,0:06:02.42,Default,,0000,0000,0000,,Chiyo-san.
Dialogue: 0,0:06:03.43,0:06:04.34,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,0:06:31.40,0:06:32.70,Default,,0000,0000,0000,,Không...
Dialogue: 0,0:06:41.18,0:06:42.34,Default,,0000,0000,0000,,Này...
Dialogue: 0,0:06:43.09,0:06:46.26,Default,,0000,0000,0000,,Kenta-san, làm ơn giúp tôi với.
Dialogue: 0,0:06:46.57,0:06:48.26,Default,,0000,0000,0000,,Tôi muốn cậu.
Dialogue: 0,0:06:49.89,0:06:51.51,Default,,0000,0000,0000,,Được thôi, Chiyo-san.
Dialogue: 0,0:06:52.39,0:06:53.26,Default,,0000,0000,0000,,Tôi làm nhé.
Dialogue: 0,0:06:53.47,0:06:55.53,Default,,0000,0000,0000,,Nhưng tối quá nhìn không rõ.
Dialogue: 0,0:06:55.77,0:06:59.19,Default,,0000,0000,0000,,Ôi không, Kenta-san! Đó là hậu môn tôi mà.
Dialogue: 0,0:06:59.98,0:07:00.77,Default,,0000,0000,0000,,Vậy ở đây hả?
Dialogue: 0,0:07:01.02,0:07:04.86,Default,,0000,0000,0000,,Không phải. Ở đây nè Kenta-san.
Dialogue: 0,0:07:06.04,0:07:07.74,Default,,0000,0000,0000,,Nhẹ nhàng thôi nhé.
Dialogue: 0,0:07:12.58,0:07:15.29,Default,,0000,0000,0000,,Tôi sẵn sàng rồi. Nhét nó vào đi.
Dialogue: 0,0:07:23.62,0:07:25.76,Default,,0000,0000,0000,,Cô không sao chứ, Sawagiri-san ?
Dialogue: 0,0:07:25.96,0:07:28.42,Default,,0000,0000,0000,,Lại thế nữa rồi. gọi tôi bằng tên thường chứ.
Dialogue: 0,0:07:28.63,0:07:30.38,Default,,0000,0000,0000,,Xin lỗi, Chiyo-san.
Dialogue: 0,0:08:02.82,0:08:05.29,Default,,0000,0000,0000,,Ôi không! Nếu chúng ta tiến xa hơn nữa...
Dialogue: 0,0:08:06.59,0:08:08.09,Default,,0000,0000,0000,,Đừng nghĩ đến điều đó.
Dialogue: 0,0:08:08.30,0:08:11.55,Default,,0000,0000,0000,,Tôi muốn nghe giọng nói ngọt ngào của cô, Sawagiri-san.
Dialogue: 0,0:08:12.64,0:08:16.26,Default,,0000,0000,0000,,Gọi tên... Gọi tên tôi đi, Kenta-san!
Dialogue: 0,0:08:17.01,0:08:20.18,Default,,0000,0000,0000,,Đừng nói vậy. Chẳng lẽ cô không thích chuyện này ư!?
Dialogue: 0,0:08:20.39,0:08:23.65,Default,,0000,0000,0000,,Đừng đùa giỡn tôi nữa mà, Kenta-san!
Dialogue: 0,0:08:43.93,0:08:47.80,Default,,0000,0000,0000,,Kenta-san! Tôi không thể... Tôi không thể... Kenta-san!
Dialogue: 0,0:08:48.88,0:08:51.66,Default,,0000,0000,0000,,Tốt lắm. Chính là giọng nói dễ thương này, Chiyo-san.
Dialogue: 0,0:08:53.63,0:08:55.89,Default,,0000,0000,0000,,Gọi tên tôi... một lần nữa đi!
Dialogue: 0,0:08:56.11,0:08:56.91,Default,,0000,0000,0000,,Chiyo-san.
Dialogue: 0,0:08:57.00,0:08:57.80,Default,,0000,0000,0000,,Phải!
Dialogue: 0,0:08:57.81,0:08:58.45,Default,,0000,0000,0000,,Chiyo-san.
Dialogue: 0,0:08:58.54,0:08:59.18,Default,,0000,0000,0000,,Phải!
Dialogue: 0,0:09:20.36,0:09:21.58,Default,,0000,0000,0000,,Chiyo-san!
Dialogue: 0,0:09:22.51,0:09:24.25,Default,,0000,0000,0000,,Kenta-san...
Dialogue: 0,0:09:32.22,0:09:33.98,Default,,0000,0000,0000,,Thế nhé, tôi đi làm đây.
Dialogue: 0,0:09:34.18,0:09:36.14,Default,,0000,0000,0000,,Chúc một ngày tốt lành, Chiyo-san!
Dialogue: 0,0:09:36.34,0:09:38.18,Default,,0000,0000,0000,,Hả? Chúc một ngày tốt lành!
Dialogue: 0,0:09:40.39,0:09:43.89,Default,,0000,0000,0000,,Kenta-kun, ban nãy  cậu vừa gọi Chiyo-san bằng tên thường của cô ấy phải không.
Dialogue: 0,0:09:44.18,0:09:45.73,Default,,0000,0000,0000,,Giữa hai người có chuyện gì à?
Dialogue: 0,0:09:45.94,0:09:47.94,Default,,0000,0000,0000,,Ấy, không có gì đâu.
Dialogue: 0,0:09:48.15,0:09:51.23,Default,,0000,0000,0000,,Thật không đấy? Hôm nay trông cậu phởn lắm đó.
Dialogue: 0,0:09:51.44,0:09:56.20,Default,,0000,0000,0000,,Ấy, tha cho tôi đi. Gọi cô ấy bằng họ hoài cũng không hay mà.
Dialogue: 0,0:09:56.95,0:09:58.78,Default,,0000,0000,0000,,Thế sao hôm nay lạ đổi sang xưng hô ngọt xớt thế?
Dialogue: 0,0:09:58.83,0:10:00.28,Default,,0000,0000,0000,,Nghe cứ như đúng rồi ấy?
Dialogue: 0,0:10:00.49,0:10:02.38,Default,,0000,0000,0000,,Hôm qua hai người đã làm chuyện mờ ám gì với nhau hả?
Dialogue: 0,0:10:02.70,0:10:03.66,Default2,,0000,0000,0000,,Haruka-chan!
Dialogue: 0,0:10:03.87,0:10:04.86,Default,,0000,0000,0000,,Không có gì đâu, thật mà!
Dialogue: 0,0:10:05.08,0:10:08.83,Default,,0000,0000,0000,,Hôm qua phòng cô ấy đột nhiên cúp điện, nên...
Dialogue: 0,0:10:09.13,0:10:10.48,Default,,0000,0000,0000,,Thật hả?
Dialogue: 0,0:10:10.92,0:10:11.85,Default,,0000,0000,0000,,Thật đó!
Dialogue: 0,0:10:12.05,0:10:13.61,Default,,0000,0000,0000,,Tôi chả tin.
Dialogue: 0,0:10:13.88,0:10:14.68,Default,,0000,0000,0000,,Thật mà, tôi nói thật mà!
Dialogue: 0,0:10:04.01,0:10:05.04,Default2,,0000,0000,0000,,Noriko-san!
Dialogue: 0,0:10:06.25,0:10:08.71,Default2,,0000,0000,0000,,Hai người kia thân mật quá nhỉ?
Dialogue: 0,0:10:09.34,0:10:11.75,Default2,,0000,0000,0000,,Có lẽ do họ sắp trở thành mẹ con với nhau.
Dialogue: 0,0:10:11.84,0:10:13.46,Default2,,0000,0000,0000,,E là không phải vậy đâu.
Dialogue: 0,0:10:19.22,0:10:21.47,Default,,0000,0000,0000,,Nè, cô muốn nói với tôi chuyện gì thế?
Dialogue: 0,0:10:22.06,0:10:24.94,Default,,0000,0000,0000,,Cũng không có gì đặc biệt đâu.
Dialogue: 0,0:10:25.98,0:10:31.02,Default,,0000,0000,0000,,Tôi chỉ hơi nghi ngờ về việc cô muốn trở thành mẹ kế của Kenta.
Dialogue: 0,0:10:31.23,0:10:33.57,Default,,0000,0000,0000,,Tất nhiên là tôi muốn rồi.
Dialogue: 0,0:10:34.28,0:10:35.51,Default,,0000,0000,0000,,Sao tự nhiên cô lại hỏi vậy?
Dialogue: 0,0:10:35.95,0:10:40.12,Default,,0000,0000,0000,,À, tôi chỉ nghĩ một người mẹ thì sẽ không bao giờ làm những chuyện thế này.
Dialogue: 0,0:10:40.53,0:10:43.32,Default,,0000,0000,0000,,Nghe đi rồi phát biểu cảm tưởng nhé.
Dialogue: 0,0:10:46.79,0:10:48.38,Default,,0000,0000,0000,,Cô ghi âm được hôm đó sao?
Dialogue: 0,0:10:49.25,0:10:50.28,Default,,0000,0000,0000,,Hôm tôi và Kenta-kun...
Dialogue: 0,0:10:50.82,0:10:51.79,Default,,0000,0000,0000,,Cứ coi là vậy đi.
Dialogue: 0,0:10:52.75,0:10:55.59,Default,,0000,0000,0000,,Bí quyết nghề nghiệp của tôi mà!
Dialogue: 0,0:10:56.97,0:10:59.09,Default,,0000,0000,0000,,Ôi, không, tôi thực sự không muốn điều đó.
Dialogue: 0,0:10:59.59,0:11:02.60,Default,,0000,0000,0000,,Ban đầu tôi không chủ định...
Dialogue: 0,0:11:03.06,0:11:04.88,Default,,0000,0000,0000,,Uhm, đừng lo.
Dialogue: 0,0:11:05.14,0:11:08.64,Default,,0000,0000,0000,,Tôi không muốn xen vào thú vui riêng của cô khi chúng ta vẫn còn đang sống cùng nhau.
Dialogue: 0,0:11:15.08,0:11:16.86,Default,,0000,0000,0000,,Kazuho-san, điện thoại kìa.
Dialogue: 0,0:11:20.27,0:11:22.45,Default,,0000,0000,0000,,Xin chào? Đây là nhà riêng của Taguchi.
Dialogue: 0,0:11:23.16,0:11:26.20,Default,,0000,0000,0000,,J-Jinta-san!? Trời ơi, ngài đâu cần phải...
Dialogue: 0,0:11:26.41,0:11:28.82,Default,,0000,0000,0000,,Mọi chuyện vẫn ổn, cám ơn ngài.
Dialogue: 0,0:11:29.04,0:11:31.00,Default,,0000,0000,0000,,Ngài đang ở đâu vậy?
Dialogue: 0,0:11:31.88,0:11:33.04,Default,,0000,0000,0000,,Tôi ấy hả?
Dialogue: 0,0:11:33.80,0:11:34.75,Default,,0000,0000,0000,,Bên bờ biển!
Dialogue: 0,0:11:37.38,0:11:40.35,Default,,0000,0000,0000,,Trên đường về nhà, bỗng dưng tôi nảy ra ý định ghé bờ biển chơi.
Dialogue: 0,0:11:40.59,0:11:44.85,Default,,0000,0000,0000,,Thật tuyệt vời. Mùi muối biển đã khiến tâm hồn tôi rung động.
Dialogue: 0,0:11:48.31,0:11:50.94,Default,,0000,0000,0000,,Nhân tiện, Kenta thế nào rồi?
Dialogue: 0,0:11:51.15,0:11:53.46,Default,,0000,0000,0000,,Chắc cu cậu vẫn lười biếng như xưa phải không?!
Dialogue: 0,0:11:54.36,0:11:56.15,Default,,0000,0000,0000,,Không, cậu ấy chăm chỉ lắm ạ.
Dialogue: 0,0:11:56.36,0:11:59.40,Default,,0000,0000,0000,,Cậu ấy đối xử với mọi người rất tốt.
Dialogue: 0,0:12:00.03,0:12:02.62,Default,,0000,0000,0000,,Hôm qua khu này vừa bị cúp điện,
Dialogue: 0,0:12:02.82,0:12:07.58,Default,,0000,0000,0000,,cũng may là có Kenta, cậu ấy đã giúp mọi người  bình tĩnh trở lại.
Dialogue: 0,0:12:07.69,0:12:08.33,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,0:12:08.83,0:12:11.33,Default,,0000,0000,0000,,Vâng, hẳn là vậy rồi.
Dialogue: 0,0:12:13.21,0:12:15.59,Default,,0000,0000,0000,,Này, Noriko-san! Dừng lại mau!
Dialogue: 0,0:12:15.79,0:12:18.34,Default,,0000,0000,0000,,Suỵt! Cứ nghe điện thoại tiếp đi.
Dialogue: 0,0:12:18.55,0:12:19.63,Default,,0000,0000,0000,,Nhưng mà...
Dialogue: 0,0:12:20.13,0:12:22.34,Default,,0000,0000,0000,,Uh, xin lỗi ngài. Không có gì đâu ạ.
Dialogue: 0,0:12:22.80,0:12:27.02,Default,,0000,0000,0000,,Vâng. Um, vâng, đúng vậy ạ. Vâng
Dialogue: 0,0:12:27.81,0:12:29.88,Default,,0000,0000,0000,,Ôi trời, đúng là một thảm họa
Dialogue: 0,0:12:30.18,0:12:33.60,Default,,0000,0000,0000,,Coi vậy mà lại hay. Cuối cùng thằng Kenta cũng ra dáng đàn ông được một chút.
Dialogue: 0,0:12:34.31,0:12:35.49,Default,,0000,0000,0000,,Vâng, đúng vậy ạ.
Dialogue: 0,0:12:35.98,0:12:41.12,Default,,0000,0000,0000,,Cậu ấy đối xử với chúng tôi hệt như mẹ ruột mình vậy.
Dialogue: 0,0:12:42.45,0:12:45.20,Default,,0000,0000,0000,,Oh, không phải chỗ đó... Vâng
Dialogue: 0,0:12:48.91,0:12:52.04,Default,,0000,0000,0000,,Oh, cho tôi xin lỗi nhé. Sóng lớn quá.
Dialogue: 0,0:12:52.25,0:12:55.75,Default,,0000,0000,0000,,Vậy nhé, cho tôi gửi lời cảm ơn tới tất cả các cô.
Dialogue: 0,0:12:55.96,0:12:59.57,Default,,0000,0000,0000,,Nhân tiện, Kazuho-san, cô vẫn nấu ăn cho cả nhà hả?!
Dialogue: 0,0:12:59.88,0:13:02.84,Default,,0000,0000,0000,,Chiyo đánh máy giỏi nhưng nấu ăn thì dở lắm.
Dialogue: 0,0:13:03.80,0:13:06.10,Default,,0000,0000,0000,,Jinta-san, ngài cũng biết chuyện đó sao?
Dialogue: 0,0:13:06.76,0:13:10.82,Default,,0000,0000,0000,,Chiyo-san đang rất xấu hổ về chuyện đó.
Dialogue: 0,0:13:13.40,0:13:15.90,Default,,0000,0000,0000,,Uh, không! Không có gì đâu ạ.
Dialogue: 0,0:13:16.98,0:13:18.62,Default,,0000,0000,0000,,Không có chuyện gì đâu, thưa ngài.
Dialogue: 0,0:13:19.28,0:13:21.32,Default,,0000,0000,0000,,Vâng... Vâng, đúng ạ.
Dialogue: 0,0:13:21.53,0:13:23.78,Default,,0000,0000,0000,,Tôi cũng không rõ lắm.
Dialogue: 0,0:13:26.28,0:13:30.62,Default,,0000,0000,0000,,Nhưng tôi nghĩ cô ấy là người tốt.
Dialogue: 0,0:13:33.09,0:13:35.12,Default,,0000,0000,0000,,Vậy hả!
Dialogue: 0,0:13:35.33,0:13:38.31,Default,,0000,0000,0000,,Uhm, hi vọng Kenta cũng nhìn ra điểm tốt của con bé.
Dialogue: 0,0:13:38.54,0:13:41.76,Default,,0000,0000,0000,,Oh, nãy giờ con cà con kê lâu quá, xin lỗi cô nhé.
Dialogue: 0,0:13:42.33,0:13:44.46,Default,,0000,0000,0000,,Tôi sẽ cúp máy và về nhà ngay đây.
Dialogue: 0,0:13:44.68,0:13:47.85,Default,,0000,0000,0000,,Uhm, không cần để ý đến tôi. Mọi người sống vui vẻ cùng nhau là tốt rồi.
Dialogue: 0,0:13:49.35,0:13:50.89,Default,,0000,0000,0000,,Cám ơn ngài.
Dialogue: 0,0:13:54.84,0:13:57.32,Default,,0000,0000,0000,,Noriko-san, cô làm cái quái gì vậy!?
Dialogue: 0,0:13:58.15,0:13:59.86,Default,,0000,0000,0000,,Dừng lại được rồi đó.
Dialogue: 0,0:14:01.39,0:14:02.48,Default,,0000,0000,0000,,Còn lâu nhé.
Dialogue: 0,0:14:02.69,0:14:04.65,Default,,0000,0000,0000,,Giờ mới là phần thú vị nhất đây.
Dialogue: 0,0:14:05.65,0:14:08.95,Default,,0000,0000,0000,,Ta-da! Thử cái ngoại cỡ này xem nào?
Dialogue: 0,0:14:09.08,0:14:11.74,Default,,0000,0000,0000,,Cái gì? Dừng lại ngay!
Dialogue: 0,0:14:12.49,0:14:13.70,Default,,0000,0000,0000,,Nào, sẵn sàng nhé!
Dialogue: 0,0:14:18.67,0:14:21.59,Default,,0000,0000,0000,,Haruka-san, mừng cô trở về! May vừa kịp lúc!
Dialogue: 0,0:14:22.82,0:14:24.06,Default,,0000,0000,0000,,Chào mọi người.
Dialogue: 0,0:14:24.38,0:14:25.84,Default,,0000,0000,0000,,Đừng có giả ngơ, Haruka.
Dialogue: 0,0:14:26.47,0:14:28.89,Default,,0000,0000,0000,,Về trễ mà không gọi lấy nổi một cú điện thoại hả!
Dialogue: 0,0:14:29.40,0:14:30.93,Default,,0000,0000,0000,,Mình xin lỗi.
Dialogue: 0,0:14:30.97,0:14:33.85,Default,,0000,0000,0000,,Mình ghé qua nhà để lấy vài thứ cần thiết.
Dialogue: 0,0:14:34.60,0:14:36.89,Default,,0000,0000,0000,,Cái gì? Cậu có biết mọi người lo lắng thế nào không hả?!
Dialogue: 0,0:14:37.52,0:14:39.69,Default,,0000,0000,0000,,Hơn nữa, chính cậu là người đòi ở lại đây bằng được.
Dialogue: 0,0:14:39.90,0:14:41.44,Default,,0000,0000,0000,,Tái phạm một lần nữa thì dọn đồ ra khỏi đây luôn đi.
Dialogue: 0,0:14:41.65,0:14:44.57,Default,,0000,0000,0000,,K-Kenta-san, cậu quá lời rồi đó.
Dialogue: 0,0:14:45.03,0:14:46.11,Default,,0000,0000,0000,,Nhưng mà Chiyo-san,
Dialogue: 0,0:14:46.65,0:14:48.16,Default,,0000,0000,0000,,Cậu ta càng lúc càng trở nên ích kỉ
Dialogue: 0,0:14:48.36,0:14:51.83,Default,,0000,0000,0000,,Dù sao cô ấy cũng trở về an toàn rồi mà. Phải không, Kenta-san?
Dialogue: 0,0:14:52.85,0:14:55.29,Default,,0000,0000,0000,,Xin lỗi. Tất cả đều là lỗi của mình.
Dialogue: 0,0:14:56.16,0:14:57.58,Default,,0000,0000,0000,,Làm ơn bỏ qua cho mình lần này.
Dialogue: 0,0:14:58.37,0:14:59.68,Default,,0000,0000,0000,,Nghe đây, bà chằn...
Dialogue: 0,0:14:59.92,0:15:01.67,Default,,0000,0000,0000,,Thôi nào, bỏ đi, bỏ đi...
Dialogue: 0,0:15:03.38,0:15:05.82,Default,,0000,0000,0000,,Hừ, Kenta là đồ ngốc.
Dialogue: 0,0:15:08.01,0:15:09.84,Default,,0000,0000,0000,,Suốt ngày gọi mình là bà chằn này nọ.
Dialogue: 0,0:15:10.30,0:15:12.97,Default,,0000,0000,0000,,Cậu ta vẫn chưa nhận ra vì sao mình đòi tới đây ư?
Dialogue: 0,0:15:14.60,0:15:17.52,Default,,0000,0000,0000,,Nếu cứ thế này, mình sẽ chẳng có hi vọng gì cả.
Dialogue: 0,0:15:17.97,0:15:19.10,Default,,0000,0000,0000,,Kenta ngốc.
Dialogue: 0,0:15:20.23,0:15:22.31,Default,,0000,0000,0000,,Ah, Kenta, chàng trai bé nhỏ của tôi!
Dialogue: 0,0:15:22.52,0:15:25.52,Default,,0000,0000,0000,,Ah, Noriko-san, sao cô lại mang rượu vào đây vậy.
Dialogue: 0,0:15:25.73,0:15:26.62,Default,,0000,0000,0000,,Sao cô vẫn cứ tu ừng ực vậy hả!?
Dialogue: 0,0:15:26.86,0:15:30.20,Default,,0000,0000,0000,,Rượu ngon mà. Để tôi uống thêm chút nữa.
Dialogue: 0,0:15:30.41,0:15:31.28,Default,,0000,0000,0000,,Không được!
Dialogue: 0,0:15:31.74,0:15:33.45,Default,,0000,0000,0000,,Cậu chả có khiếu hài hước gì cả.
Dialogue: 0,0:15:41.21,0:15:43.00,Default,,0000,0000,0000,,Hừ, buông tôi ra nào!
Dialogue: 0,0:15:45.21,0:15:48.63,Default,,0000,0000,0000,,Không phải như cậu nghĩ đâu! Noriko-san say khướt rồi...
Dialogue: 0,0:15:49.63,0:15:50.88,Default,,0000,0000,0000,,Sao vậy, Haruka?
Dialogue: 0,0:15:51.98,0:15:52.93,Default,,0000,0000,0000,,Đồ ngốc!
Dialogue: 0,0:15:55.06,0:15:59.18,Default,,0000,0000,0000,,Ah, Kenta, áo ngực chật quá. Cậu cởi nó ra dùm tôi nhé?
Dialogue: 0,0:15:59.39,0:16:02.94,Default,,0000,0000,0000,,Đờ mờ, Noriko-san, đi ngủ hộ tôi cái!
Dialogue: 0,0:16:09.86,0:16:11.11,Default,,0000,0000,0000,,Mọi người đâu cả rồi?
Dialogue: 0,0:16:12.11,0:16:14.95,Default,,0000,0000,0000,,Hôm nay họ đi làm hết rồi.
Dialogue: 0,0:16:15.74,0:16:18.58,Default,,0000,0000,0000,,Sao tự nhiên hôm nay bố già lại mò về vậy?
Dialogue: 0,0:16:19.83,0:16:23.63,Default,,0000,0000,0000,,Chọn được mẹ kế chưa con ?
Dialogue: 0,0:16:24.38,0:16:28.42,Default,,0000,0000,0000,,À, bọn họ đều tốt cả. Chỉ có Haruka là hơi khó hiểu.
Dialogue: 0,0:16:29.80,0:16:31.88,Default,,0000,0000,0000,,Con đúng là hết thuốc chữa.
Dialogue: 0,0:16:32.68,0:16:34.30,Default,,0000,0000,0000,,Vậy bố già chữa dùm con đi.
Dialogue: 0,0:16:41.60,0:16:42.77,Default,,0000,0000,0000,,Trống vắng thật.
Dialogue: 0,0:16:44.05,0:16:45.02,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,0:16:52.15,0:16:53.82,Default,,0000,0000,0000,,Ah, trời sắp tối rồi.
Dialogue: 0,0:16:54.78,0:16:56.20,Default,,0000,0000,0000,,Oh, chào cháu, Haruka-kun.
Dialogue: 0,0:16:57.45,0:16:58.62,Default,,0000,0000,0000,,Oh, chào bác ạ.
Dialogue: 0,0:16:59.41,0:17:01.88,Default,,0000,0000,0000,,Chơi thể thao mới về hả? Cháu siêng thật đấy.
Dialogue: 0,0:17:02.79,0:17:05.47,Default,,0000,0000,0000,,Vâng ạ. Ngày nào cháu cũng chơi đến ướt đẫm mồ hôi mới về.
Dialogue: 0,0:17:06.17,0:17:08.25,Default,,0000,0000,0000,,Đã vậy, nhà tắm ở trường lại hỏng nữa chứ.
Dialogue: 0,0:17:08.46,0:17:10.67,Default,,0000,0000,0000,,Bác đi làm mới về à ?
Dialogue: 0,0:17:10.88,0:17:13.59,Default,,0000,0000,0000,,Không. Ta lại chuẩn bị xa nhà một thời gian.
Dialogue: 0,0:17:15.01,0:17:16.80,Default,,0000,0000,0000,,Bác lại đi công tác xa ư?
Dialogue: 0,0:17:17.60,0:17:19.85,Default,,0000,0000,0000,,Lí do này nghe quen quá.
Dialogue: 0,0:17:20.06,0:17:21.07,Default,,0000,0000,0000,,Có lẽ vậy.
Dialogue: 0,0:17:23.10,0:17:25.44,Default,,0000,0000,0000,,Bác nói hệt như Kenta vậy.
Dialogue: 0,0:17:26.02,0:17:29.11,Default,,0000,0000,0000,,Không, thằng Kenta bắt chước ta đấy.
Dialogue: 0,0:17:29.12,0:17:30.84,Default,,0000,0000,0000,,Sao cũng được, nhưng giống lắm ạ.
Dialogue: 0,0:17:34.08,0:17:35.32,Default,,0000,0000,0000,,Haruka-kun...
Dialogue: 0,0:17:35.99,0:17:37.91,Default,,0000,0000,0000,,cháu yêu Kenta, phải không?
Dialogue: 0,0:17:40.92,0:17:41.79,Default,,0000,0000,0000,,Vâng ạ.
Dialogue: 0,0:17:42.41,0:17:45.42,Default,,0000,0000,0000,,Chỉ khi trở thành ứng viên mẹ kế, cháu mới có cơ hội ở bên cậu ấy.
Dialogue: 0,0:17:46.33,0:17:47.67,Default,,0000,0000,0000,,Ra vậy.
Dialogue: 0,0:17:48.21,0:17:50.38,Default,,0000,0000,0000,,Chúng ta ai cũng muốn ở bên người mà mình thật sự yêu thương.
Dialogue: 0,0:17:51.51,0:17:52.38,Default,,0000,0000,0000,,Chúc cháu may mắn.
Dialogue: 0,0:17:56.21,0:17:57.22,Default,,0000,0000,0000,,Nhưng mà...
Dialogue: 0,0:17:57.56,0:17:59.64,Default,,0000,0000,0000,,Cháu không biết mình nên làm gì lúc này nữa.
Dialogue: 0,0:18:01.52,0:18:04.10,Default,,0000,0000,0000,,Chà, thằng con ngốc nghếch này.
Dialogue: 0,0:18:12.84,0:18:15.35,Default,,0000,0000,0000,,Chiyo-san, tôi tắm trước vậy nhé.
Dialogue: 0,0:18:16.15,0:18:18.53,Default,,0000,0000,0000,,Cậu hiếm khi chịu tắm chung với người khác nhỉ, Kenta-san?
Dialogue: 0,0:18:21.41,0:18:23.79,Default,,0000,0000,0000,,Tôi thấy hơi xấu hổ, hay để lần sau đi.
Dialogue: 0,0:18:24.35,0:18:25.50,Default,,0000,0000,0000,,Kenta...
Dialogue: 0,0:18:27.62,0:18:30.46,Default,,0000,0000,0000,,Cậu vừa làm gì trong phòng Chiyo-san vậy ?
Dialogue: 0,0:18:30.89,0:18:33.88,Default,,0000,0000,0000,,Làm gì kệ mình. Không phải việc của cậu.
Dialogue: 0,0:18:34.55,0:18:35.92,Default,,0000,0000,0000,,Nói vậy mà nghe được à?
Dialogue: 0,0:18:36.13,0:18:39.85,Default,,0000,0000,0000,,Sao cậu luôn đối xử tốt với người khác và tỏ ra lạnh nhạt với mình hả?
Dialogue: 0,0:18:40.39,0:18:42.76,Default,,0000,0000,0000,,Bởi vì cậu suốt ngày bám theo đuôi mình.
Dialogue: 0,0:18:43.85,0:18:46.10,Default,,0000,0000,0000,,Thời thơ ấu của chúng ta đã qua lâu rồi.
Dialogue: 0,0:18:46.98,0:18:47.98,Default,,0000,0000,0000,,Hơn nữa, cậu...
Dialogue: 0,0:18:49.06,0:18:52.82,Default,,0000,0000,0000,,Mình không kềm lòng nổi nữa, Kenta! Nhìn mình đi!
Dialogue: 0,0:18:53.40,0:18:57.03,Default,,0000,0000,0000,,Cậu coi mình là gì hả? Mình yêu cậu thực lòng mà!
Dialogue: 0,0:18:57.24,0:18:59.57,Default,,0000,0000,0000,,Cậu đang nói cái quái gì vậy, chả ăn nhập với nhau gì cả!?
Dialogue: 0,0:18:59.78,0:19:01.85,Default,,0000,0000,0000,,Thôi mình xin, bỏ áo xuống và té đi, bà chằn ngốc!
Dialogue: 0,0:19:02.03,0:19:05.16,Default,,0000,0000,0000,,Ahh! Sao lúc nào cậu cũng gọi mình là bà chằn ngốc chứ!
Dialogue: 0,0:19:05.41,0:19:06.54,Default,,0000,0000,0000,,Chính Kenta mới là đồ ngốc!
Dialogue: 0,0:19:09.38,0:19:13.21,Default,,0000,0000,0000,,Sao lại phớt lờ mình chứ? Mình chỉ muốn được cậu đối xử như những người kia thôi mà!
Dialogue: 0,0:19:14.05,0:19:15.42,Default,,0000,0000,0000,,Chuyện gì thế?
Dialogue: 0,0:19:16.00,0:19:17.34,Default,,0000,0000,0000,,Kenta-san...
Dialogue: 0,0:19:17.55,0:19:20.43,Default,,0000,0000,0000,,Tôi nghĩ cậu nên chú ý tới cảm xúc của Haruka hơn nữa.
Dialogue: 0,0:19:22.39,0:19:24.33,Default,,0000,0000,0000,,Nhưng mình chưa làm "chuyện đó" bao giờ,
Dialogue: 0,0:19:24.47,0:19:26.57,Default,,0000,0000,0000,,vậy nên chắc mình sẽ làm rất tệ!
Dialogue: 0,0:19:26.77,0:19:29.10,Default,,0000,0000,0000,,Nào nào, mọi người!
Dialogue: 0,0:19:29.69,0:19:32.15,Default,,0000,0000,0000,,Tôi có ý này!
Dialogue: 0,0:19:32.31,0:19:34.19,Default,,0000,0000,0000,,No-Noriko-san?
Dialogue: 0,0:19:34.40,0:19:36.49,Default,,0000,0000,0000,,Đừng lo, Haruka-kun.
Dialogue: 0,0:19:37.11,0:19:38.99,Default,,0000,0000,0000,,Mọi chuyện cứ để Noriko-san này lo!
Dialogue: 0,0:19:39.70,0:19:41.45,Default,,0000,0000,0000,,Tôi đảm bảo cô sẽ không sao đâu.
Dialogue: 0,0:19:44.11,0:19:45.33,Default,,0000,0000,0000,,Thật chứ?
Dialogue: 0,0:19:57.34,0:20:01.47,Default,,0000,0000,0000,,Nào, Kenta! Lại đây và chăm sóc Haruka-kun đi nào.
Dialogue: 0,0:20:01.68,0:20:04.55,Default,,0000,0000,0000,,Um, tại sao chúng ta phải làm chuyện này nhỉ?
Dialogue: 0,0:20:05.06,0:20:08.81,Default,,0000,0000,0000,,Kenta, nghe mình nói này. Mình không ngại làm chuyện này đâu.
Dialogue: 0,0:20:09.28,0:20:10.73,Default,,0000,0000,0000,,Đi mà, Kenta...
Dialogue: 0,0:20:11.40,0:20:13.85,Default,,0000,0000,0000,,Cậu khiến cô ấy phải mặt dày nói ra rồi đó.
Dialogue: 0,0:20:14.06,0:20:15.48,Default,,0000,0000,0000,,Tốt hơn cả là vâng lời cô ấy đi.
Dialogue: 0,0:20:16.27,0:20:18.78,Default,,0000,0000,0000,,Cậu bằng lòng thật chứ?
Dialogue: 0,0:20:19.61,0:20:22.61,Default,,0000,0000,0000,,Vâng, mình bằng lòng. Bởi vì mình yêu cậu.
Dialogue: 0,0:20:22.86,0:20:23.74,Default,,0000,0000,0000,,Haruka...
Dialogue: 0,0:20:27.08,0:20:28.83,Default,,0000,0000,0000,,Nhẹ nhàng với cô ấy nhé?
Dialogue: 0,0:20:29.42,0:20:31.27,Default,,0000,0000,0000,,Chiyo-san, cô lo vụ này dùm tôi nhé.
Dialogue: 0,0:20:31.46,0:20:32.08,Default,,0000,0000,0000,,Được thôi.
Dialogue: 0,0:20:33.54,0:20:36.63,Default,,0000,0000,0000,,Kazuho-san này! Cô chịu cởi quần áo rồi hả!?
Dialogue: 0,0:20:37.21,0:20:37.96,Default,,0000,0000,0000,,Uhm, nhưng mà...
Dialogue: 0,0:20:39.01,0:20:43.01,Default,,0000,0000,0000,,Ah, để tôi chăm sóc cô như những lần trước nhé.
Dialogue: 0,0:20:43.59,0:20:45.60,Default,,0000,0000,0000,,Cô thích điều đó mà, phải không?
Dialogue: 0,0:20:48.10,0:20:52.19,Default,,0000,0000,0000,,Ý tôi là: chưa gì mà cô đã ướt đẫm thế này rồi. Cô dâm thật đấy, Kazuho-san.
Dialogue: 0,0:20:58.60,0:21:01.90,Default,,0000,0000,0000,,Haruka, cậu cho mình xem ngực lần nữa được không?
Dialogue: 0,0:21:03.03,0:21:05.49,Default,,0000,0000,0000,,Vâng. Nhìn cho kĩ vào nhé, Kenta.
Dialogue: 0,0:21:06.96,0:21:08.16,Default,,0000,0000,0000,,Sờ chúng đi nào.
Dialogue: 0,0:21:14.38,0:21:16.92,Default,,0000,0000,0000,,Kenta-san, ngậm lấy chúng đi chứ.
Dialogue: 0,0:21:24.72,0:21:26.44,Default,,0000,0000,0000,,Mình chưa cho ai liếm ngực như vậy bao giờ.
Dialogue: 0,0:21:26.97,0:21:28.35,Default,,0000,0000,0000,,Cảm giác lạ quá.
Dialogue: 0,0:21:35.10,0:21:37.40,Default,,0000,0000,0000,,Này, Kenta, thấp xuống một chút...
Dialogue: 0,0:21:37.61,0:21:38.90,Default,,0000,0000,0000,,Liếm chỗ đó của mình đi.
Dialogue: 0,0:21:42.03,0:21:44.28,Default,,0000,0000,0000,,Ah, Kenta, ối? Không!
Dialogue: 0,0:21:44.82,0:21:46.56,Default,,0000,0000,0000,,Thế này xấu hổ lắm!
Dialogue: 0,0:21:46.78,0:21:48.62,Default,,0000,0000,0000,,Dừng lại, dừng lại! Dừng lại đi!
Dialogue: 0,0:21:53.50,0:21:57.71,Default,,0000,0000,0000,,Dừng lại đi, Kenta! Làm vậy mình không thích đâu!
Dialogue: 0,0:22:05.63,0:22:09.85,Default,,0000,0000,0000,,Đau quá, Kenta. Mình... mình không thể cử động nổi!
Dialogue: 0,0:22:10.36,0:22:13.18,Default,,0000,0000,0000,,Haruka-san, ráng chịu thêm một lúc nữa.
Dialogue: 0,0:22:13.43,0:22:15.23,Default,,0000,0000,0000,,Sẽ dễ chịu ngay thôi.
Dialogue: 0,0:22:26.95,0:22:29.12,Default,,0000,0000,0000,,Kenta-san, đến lúc rồi đó.
Dialogue: 0,0:22:29.83,0:22:30.91,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,0:22:31.12,0:22:33.04,Default,,0000,0000,0000,,Haruka-san, thư giãn nhé.
Dialogue: 0,0:22:34.87,0:22:36.67,Default,,0000,0000,0000,,Chỗ đó của cậu như đang tan ra.
Dialogue: 0,0:22:37.79,0:22:38.71,Default,,0000,0000,0000,,Kenta-san?
Dialogue: 0,0:22:39.43,0:22:40.84,Default,,0000,0000,0000,,Phải.
Dialogue: 0,0:22:41.92,0:22:43.71,Default,,0000,0000,0000,,Sẵn sàng chưa? Mình vào nhé, Haruka.
Dialogue: 0,0:22:45.05,0:22:47.09,Default,,0000,0000,0000,,Vâng, Kenta.
Dialogue: 0,0:22:58.10,0:22:59.23,Default,,0000,0000,0000,,Haruka?
Dialogue: 0,0:22:59.61,0:23:00.61,Default,,0000,0000,0000,,Chiyo-san?
Dialogue: 0,0:23:01.44,0:23:05.36,Default,,0000,0000,0000,,Cô ấy sẽ ổn thôi. Cứ giữ nguyên như vậy một lúc.
Dialogue: 0,0:23:05.87,0:23:09.07,Default,,0000,0000,0000,,Haruka-san, cô cũng thế. Ráng nằm yên như vậy một chút nữa.
Dialogue: 0,0:23:09.28,0:23:10.37,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,0:23:27.47,0:23:29.80,Default,,0000,0000,0000,,Kazuho-san, cô hết chịu nổi rồi phải không?!
Dialogue: 0,0:23:30.39,0:23:33.01,Default,,0000,0000,0000,,Ta-da! Để tôi xài thứ có kích cỡ loại hai nhé!
Dialogue: 0,0:23:34.14,0:23:36.85,Default,,0000,0000,0000,,Tôi sẽ không chịu nổi đâu! Nó lớn quá.
Dialogue: 0,0:23:37.06,0:23:39.31,Default,,0000,0000,0000,,Oh, nghe hay đấy.
Dialogue: 0,0:23:39.52,0:23:41.94,Default,,0000,0000,0000,,Chúc vui vẻ!
Dialogue: 0,0:23:54.85,0:23:55.70,Default,,0000,0000,0000,,Phải!
Dialogue: 0,0:23:56.33,0:23:57.70,Default,,0000,0000,0000,,Làm đi, Kenta-san.
Dialogue: 0,0:23:57.91,0:23:58.87,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,0:24:09.22,0:24:14.22,Default,,0000,0000,0000,,Nhẹ nhàng thôi, Kenta! Đây là lần đầu tiên của mình mà.
Dialogue: 0,0:24:15.18,0:24:16.64,Default,,0000,0000,0000,,Mình xin lỗi, Haruka.
Dialogue: 0,0:24:17.14,0:24:19.98,Default,,0000,0000,0000,,Mình không thể ngừng lại được, Tuyệt quá đi mất
Dialogue: 0,0:24:21.44,0:24:22.40,Default,,0000,0000,0000,,Thật ư?
Dialogue: 0,0:24:22.60,0:24:25.44,Default,,0000,0000,0000,,Cậu thích lắm phải không? Nghĩa là cậu không chê mình?
Dialogue: 0,0:24:27.73,0:24:30.85,Default,,0000,0000,0000,,U-Uhm. Cậu thấy sao rồi?
Dialogue: 0,0:24:31.07,0:24:32.24,Default,,0000,0000,0000,,Mình không biết nữa.
Dialogue: 0,0:24:33.37,0:24:36.74,Default,,0000,0000,0000,,Bên trong mình như đang tê dại đi.
Dialogue: 0,0:24:40.05,0:24:42.05,Default,,0000,0000,0000,,Kenta-san! Cậu thô bạo quá đấy.
Dialogue: 0,0:24:42.25,0:24:44.32,Default,,0000,0000,0000,,Tôi không sao, Chiyo-san.
Dialogue: 0,0:24:44.33,0:24:46.59,Default,,0000,0000,0000,,Thật ra, cảm giác sung sướng vô cùng.
Dialogue: 0,0:24:47.80,0:24:50.30,Default,,0000,0000,0000,,Đâm sâu vào nữa đi, Kenta.
Dialogue: 0,0:24:50.55,0:24:52.14,Default,,0000,0000,0000,,Thế này hả?
Dialogue: 0,0:24:52.34,0:24:53.84,Default,,0000,0000,0000,,Phải rôi, như vậy đó!
Dialogue: 0,0:24:57.58,0:24:59.81,Default,,0000,0000,0000,,Nữa đi, Kenta!
Dialogue: 0,0:25:12.38,0:25:14.78,Default,,0000,0000,0000,,Haruka, mình đang cố đây.
Dialogue: 0,0:25:15.12,0:25:16.37,Default,,0000,0000,0000,,Mình sắp ra rồi!
Dialogue: 0,0:25:17.85,0:25:19.45,Default,,0000,0000,0000,,Không sao hết. Ra đi nào!
Dialogue: 0,0:25:19.94,0:25:21.33,Default,,0000,0000,0000,,Ra vào bên trong mình, Kenta!
Dialogue: 0,0:25:21.91,0:25:23.96,Default,,0000,0000,0000,,Mình muốn cậu bắn hết vào bên trong mình!
Dialogue: 0,0:25:36.05,0:25:39.56,Default,,0000,0000,0000,,Cảm giác ấm áp đang lan tỏa khắp cơ thể mình.
Dialogue: 0,0:25:39.76,0:25:41.14,Default,,0000,0000,0000,,Thật tuyệt vời.
Dialogue: 0,0:25:41.85,0:25:44.14,Default,,0000,0000,0000,,Cậu làm tuyệt lắm, Kenta!
Dialogue: 0,0:25:45.15,0:25:47.81,Default,,0000,0000,0000,,Này, Haruka-san? Sướng không hả?
Dialogue: 0,0:25:48.36,0:25:51.15,Default,,0000,0000,0000,,Nếu hai người duy trì được lâu, sẽ còn sướng hơn thế này nhiều.
Dialogue: 0,0:25:51.36,0:25:52.53,Default,,0000,0000,0000,,Thật hả?
Dialogue: 0,0:25:53.11,0:25:54.65,Default,,0000,0000,0000,,Cảm giác thật sung sướng làm sao.
Dialogue: 0,0:25:58.83,0:26:02.50,Default,,0000,0000,0000,,Có lẽ Haruka-kun đã nhập hội với chúng ta rồi.
Dialogue: 0,0:26:03.20,0:26:04.87,Default,,0000,0000,0000,,"Nhập hội"?
Dialogue: 0,0:26:06.37,0:26:08.42,Default,,0000,0000,0000,,Hội những người bạn thân.
Dialogue: 0,0:26:08.63,0:26:11.46,Default,,0000,0000,0000,,Nào, Kazuho-san, đến phiên cô rồi đó!
Dialogue: 0,0:26:21.31,0:26:22.77,Default,,0000,0000,0000,,Kenta-san, cậu đáng nể thật đó!
Dialogue: 0,0:26:22.97,0:26:24.73,Default,,0000,0000,0000,,Hồi sức nhanh dã man!
Dialogue: 0,0:26:25.44,0:26:27.85,Default,,0000,0000,0000,,Lần này, tôi sẽ tự tay chăm sóc cậu.
Dialogue: 0,0:26:33.99,0:26:37.36,Default,,0000,0000,0000,,Này, Kenta, cho mình tham gia với nào?
Dialogue: 0,0:27:09.10,0:27:10.31,Default,,0000,0000,0000,,Cứ thế này...
Dialogue: 0,0:27:10.81,0:27:13.32,Default,,0000,0000,0000,,Thì chọn mẹ kế bằng niềm tin và hi vọng à!
Dialogue: 0,0:27:13.82,0:27:16.36,Default,,0000,0000,0000,,Bố già ơi!
Dialogue: 0,0:29:27.87,0:29:30.33,Default,,0000,0000,0000,,Chiến sự nóng bỏng phải không, Kenta!
Dialogue: 0,0:27:42.89,0:27:46.81,EDE,,0000,0000,0000,,Em ngừng chơi game và chỉ đường cho anh.
Dialogue: 0,0:27:47.34,0:27:53.94,EDE,,0000,0000,0000,,Nhưng khi em cố nhìn vào mắt anh, anh lại cúi mặt xuống.
Dialogue: 0,0:27:54.92,0:27:58.82,EDE,,0000,0000,0000,,Mỗi người một hướng đi, không hề nói câu từ biệt.
Dialogue: 0,0:27:59.55,0:28:06.37,EDE,,0000,0000,0000,,Bước chân chúng ta giao nhau, bay bổng cùng cơn gió
Dialogue: 0,0:28:06.78,0:28:10.29,EDE,,0000,0000,0000,,Nếu em có cơ hội nhìn sâu vào mắt anh ,
Dialogue: 0,0:28:12.92,0:28:18.63,EDE,,0000,0000,0000,,Em biết kỉ niệm nơi đôi ta hẹn thề sẽ quay trở lại.
Dialogue: 0,0:28:20.31,0:28:25.48,EDE,,0000,0000,0000,,Ở nơi đó, em vẫn tin
Dialogue: 0,0:28:25.58,0:28:31.93,EDE,,0000,0000,0000,,Rằng khoảng cách giữa đôi ta sẽ ngày một ngắn lại.
Dialogue: 0,0:28:32.53,0:28:37.60,EDE,,0000,0000,0000,,Cùng ngắm nhìn cảnh vật chẳng hề đổi thay
Dialogue: 0,0:28:37.81,0:28:43.91,EDE,,0000,0000,0000,,và hướng về phía trước, em sẽ được nghe giọng nói của anh lần nữa.
Dialogue: 0,0:28:43.95,0:28:46.43,EDE,,0000,0000,0000,,Em vẫn mãi yêu anh...
