Dialogue: 0,0:00:09.48,0:00:11.99,Default,Comment,0000,0000,0000,,{\an8}{\fs26\b0\c&HBFBFBF&}    Baka-sub.net
Dialogue: 0,0:00:21.65,0:00:23.55,Default,Comment,0000,0000,0000,,Chúng ta đến nơi sớm hơn dự định nhỉ.
Dialogue: 0,0:00:23.82,0:00:24.95,Default,Comment,0000,0000,0000,,Yusuke-kun.
Dialogue: 0,0:00:25.89,0:00:27.32,Default,Comment,0000,0000,0000,,Uhm.
Dialogue: 0,0:00:27.39,0:00:30.26,Default,Comment,0000,0000,0000,,Um, mà này, em muốn nói chuyện gì thì đợi đến lúc anh dừng xe nhé.
Dialogue: 0,0:00:43.74,0:00:45.23,Default,Comment,0000,0000,0000,,Oh, Yusuke-kun!
Dialogue: 0,0:00:46.51,0:00:48.24,Default,Comment,0000,0000,0000,,Quá rồi. dừng lại, dừng lại!
Dialogue: 0,0:00:54.28,0:00:57.01,Default,Comment,0000,0000,0000,,Phew, cuối cùng thì cũng tới nơi...
Dialogue: 0,0:01:01.09,0:01:04.08,Default,Comment,0000,0000,0000,,Yusuke-kun, anh lái xe cừ lắm. Anh mệt lắm rồi phải ko.
Dialogue: 0,0:01:07.66,0:01:08.65,Default,Comment,0000,0000,0000,,Cám ơn em.
Dialogue: 0,0:01:17.81,0:01:18.93,Default,Comment,0000,0000,0000,,Orisaku-san và tôi...
Dialogue: 0,0:01:19.51,0:01:24.21,Default,Comment,0000,0000,0000,,Ý tôi là Akira và tôi đã chính thức trở thành vợ chồng vào hôm nay.
Dialogue: 0,0:01:24.98,0:01:30.32,Default,Comment,0000,0000,0000,,Chúng tôi đã gặp nhiều trở ngại, nhưng cuối cùng thì cả hai đã có thể bắt đầu một cuộc sống mới mẻ và thú vị bên nhau.
Dialogue: 0,0:01:30.62,0:01:31.68,Default,Comment,0000,0000,0000,,Điều này hệt như một giấc mơ!
Dialogue: 0,0:01:36.76,0:01:39.49,Default,Comment,0000,0000,0000,,Đây là báu vật của chúng ta phải ko.
Dialogue: 0,0:01:40.33,0:01:41.23,Default,Comment,0000,0000,0000,,Đúng rồi.
Dialogue: 0,0:01:44.63,0:01:47.33,Default,Comment,0000,0000,0000,,Nhưng, em mới thật sự là báu vật quý giá nhất đối với anh .
Dialogue: 0,0:01:48.40,0:01:49.67,Default,Comment,0000,0000,0000,,Yusuke-kun...
Dialogue: 0,0:01:58.38,0:02:00.64,Default,Comment,0000,0000,0000,,Đêm nay, anh có muốn tắm trước?
Dialogue: 0,0:02:00.72,0:02:01.74,Default,Comment,0000,0000,0000,,Ăn tối?
Dialogue: 0,0:02:01.82,0:02:05.81,Default,Comment,0000,0000,0000,,Hay là... em nào?
Dialogue: 0,0:02:08.96,0:02:12.36,Default,Comment,0000,0000,0000,,Đúng rồi, đêm nay là đêm đầu tiên chúng tôi sống cùng nhau!
Dialogue: 0,0:02:23.21,0:02:26.33,Default,Comment,0000,0000,0000,,Nằm đợi trên giường khó chịu ghê ta.
Dialogue: 0,0:02:26.41,0:02:28.21,Default,Comment,0000,0000,0000,,Mình cũng hơi ngượng nữa...
Dialogue: 0,0:02:28.28,0:02:31.47,Default,Comment,0000,0000,0000,,Nhưng mà... mình sẽ sớm bị kích thích thôi!
Dialogue: 0,0:02:35.72,0:02:36.88,Default,Comment,0000,0000,0000,,Em xin lỗi.
Dialogue: 0,0:02:36.99,0:02:40.18,Default,Comment,0000,0000,0000,,Em phải làm vài việc lặt vặt nên ko thể kì lưng cho anh được.
Dialogue: 0,0:02:40.66,0:02:42.28,Default,Comment,0000,0000,0000,,Đừng để ý chuyện đó làm gì.
Dialogue: 0,0:02:42.36,0:02:44.55,Default,Comment,0000,0000,0000,,Chẳng phải hai chúng ta sẽ sống bên nhau trọn đời sao.
Dialogue: 0,0:02:45.53,0:02:46.72,Default,Comment,0000,0000,0000,,{\i1}Anh muốn...{\i0}
Dialogue: 0,0:02:47.76,0:02:50.29,Default,Comment,0000,0000,0000,,Anh nói phải, ngày hôm nay anh rất mệt đúng ko.
Dialogue: 0,0:02:53.10,0:02:55.93,Default,Comment,0000,0000,0000,,Uh, đúng thế... em cũng thế mà...
Dialogue: 0,0:03:25.47,0:03:26.73,Default,Comment,0000,0000,0000,,{\i1}Cô ấy chắc hẳn rất mệt.{\i0}
Dialogue: 0,0:03:26.80,0:03:30.26,Default,Comment,0000,0000,0000,,{\i1}Tôi rất mong đợi chuyện này... nhưng cũng ko thể trách cô ấy được.{\i0}
Dialogue: 0,0:04:02.80,0:04:05.00,Default,Comment,0000,0000,0000,,Yusuke-kun, anh đã ngủ chưa?
Dialogue: 0,0:04:05.84,0:04:08.64,Default,Comment,0000,0000,0000,,Rồi! Anh, ý anh là chưa, anh vẫn đang thức đây.
Dialogue: 0,0:04:10.95,0:04:13.51,Default,Comment,0000,0000,0000,,Đúng là em mệt thật, nhưng em cũng đang rất phấn khích và...
Dialogue: 0,0:04:13.58,0:04:17.02,Default,Comment,0000,0000,0000,,Uhm, cuối cùng thì em cũng đã trở thành vợ anh.
Dialogue: 0,0:04:17.09,0:04:21.68,Default,Comment,0000,0000,0000,,Và khi em nghĩ tới chồng của em đang nằm bên cạnh, cơn buồn ngủ của em đã biến mất.
Dialogue: 0,0:04:21.76,0:04:22.92,Default,Comment,0000,0000,0000,,Em cũng nghĩ vậy à, Orisaku-san?
Dialogue: 0,0:04:22.99,0:04:26.02,Default,Comment,0000,0000,0000,,Này, anh còn gọi em là Orisaku-san nữa sao!
Dialogue: 0,0:04:26.76,0:04:30.75,Default,Comment,0000,0000,0000,,Bây giờ em đã là Oshima Akira vì thế phải gọi em là Akira chứ.
Dialogue: 0,0:04:30.83,0:04:33.16,Default,Comment,0000,0000,0000,,Em nói đúng, anh xin lỗi.
Dialogue: 0,0:04:33.24,0:04:35.00,Default,Comment,0000,0000,0000,,Um... Akira này.
Dialogue: 0,0:04:35.94,0:04:36.69,Default,Comment,0000,0000,0000,,Vâng!
Dialogue: 0,0:04:46.41,0:04:47.47,Default,Comment,0000,0000,0000,,Akira...
Dialogue: 0,0:04:48.78,0:04:50.08,Default,Comment,0000,0000,0000,,Yusuke-kun...
Dialogue: 0,0:04:53.89,0:04:55.22,Default,Comment,0000,0000,0000,,Yusuke-kun...
Dialogue: 0,0:05:07.64,0:05:08.80,Default,Comment,0000,0000,0000,,Akira!
Dialogue: 0,0:05:29.93,0:05:32.26,Default,Comment,0000,0000,0000,,Sẽ ổn thôi mà...
Dialogue: 0,0:05:33.26,0:05:36.46,Default,Comment,0000,0000,0000,,{\i1}Cả hai đều lớn rồi mà... chắc ko sao đâu nhỉ?{\i0}
Dialogue: 0,0:05:37.67,0:05:39.13,Default,Comment,0000,0000,0000,,{\i1}Vậy đây là cái đó của Akira...{\i0}
Dialogue: 0,0:05:39.20,0:05:40.46,Default,Comment,0000,0000,0000,,Đau đấy!
Dialogue: 0,0:05:40.90,0:05:42.63,Default,Comment,0000,0000,0000,,A, Anh xin lỗi!
Dialogue: 0,0:05:43.00,0:05:44.37,Default,Comment,0000,0000,0000,,Lần này, anh sẽ nhẹ nhàng hơn...
Dialogue: 0,0:05:54.38,0:05:56.35,Default,Comment,0000,0000,0000,,Xin lỗi em cười nhiều quá hả.
Dialogue: 0,0:05:56.79,0:05:58.91,Default,Comment,0000,0000,0000,,Em sẽ cố nín cười, tiếp tục đi anh...
Dialogue: 0,0:05:59.65,0:06:03.22,Default,Comment,0000,0000,0000,,Cả hai chúng ta đều đã chờ đợi ngày này từ lâu...
Dialogue: 0,0:06:03.29,0:06:05.12,Default,Comment,0000,0000,0000,,Vì thế làm ơn...
Dialogue: 0,0:06:05.19,0:06:06.18,Default,Comment,0000,0000,0000,,Yeah.
Dialogue: 0,0:06:15.17,0:06:17.00,Default,Comment,0000,0000,0000,,Anh ko thể... nhịn được nữa!
Dialogue: 0,0:06:41.30,0:06:42.49,Default,Comment,0000,0000,0000,,Akira...
Dialogue: 0,0:06:45.53,0:06:47.16,Default,Comment,0000,0000,0000,,Đừng...!
Dialogue: 0,0:06:50.31,0:06:52.36,Default,Comment,0000,0000,0000,,Đừng có nhìn chăm chăm vào đó như thế anh yêu.
Dialogue: 0,0:06:55.28,0:06:56.97,Default,Comment,0000,0000,0000,,{\i1}Dễ thương thật...{\i0}
Dialogue: 0,0:07:26.54,0:07:28.77,Default,Comment,0000,0000,0000,,Anh sẽ nhét nó vào trong... được ko em?
Dialogue: 0,0:07:37.42,0:07:38.25,Default,Comment,0000,0000,0000,,Huh?
Dialogue: 0,0:07:40.66,0:07:44.52,Default,Comment,0000,0000,0000,,Yusuke-kun... phải làm cho anh ướt cái đó đã...
Dialogue: 0,0:07:51.50,0:07:53.02,Default,Comment,0000,0000,0000,,Em cảm thấy rồi!
Dialogue: 0,0:08:01.54,0:08:03.48,Default,Comment,0000,0000,0000,,...Tại sao thế nhỉ?
Dialogue: 0,0:08:05.51,0:08:06.95,Default,Comment,0000,0000,0000,,{\i1}Mình bắt đầu cảm thấy sướng rồi...{\i0}
Dialogue: 0,0:08:34.24,0:08:35.54,Default,Comment,0000,0000,0000,,Anh xin lỗi...
Dialogue: 0,0:08:36.81,0:08:40.91,Default,Comment,0000,0000,0000,,Ko, là do anh mệt quá thôi, Yusuke-kun.
Dialogue: 0,0:08:41.52,0:08:44.92,Default,Comment,0000,0000,0000,,Đừng lo, ngày mai chúng ta sẽ tiếp tục mà...
Dialogue: 0,0:08:44.99,0:08:48.65,Default,Comment,0000,0000,0000,,Nếu ko được, thì lại đến ngày kia, vì thế anh đừng lo gì cả.
Dialogue: 0,0:08:49.56,0:08:51.92,Default,Comment,0000,0000,0000,,{\i1}Ngày kia ư...{\i0}
Dialogue: 0,0:08:51.99,0:08:55.49,Default,Comment,0000,0000,0000,,Cố lên Yusuke-kun, anh làm được mà!
Dialogue: 0,0:09:05.24,0:09:07.50,Default,Comment,0000,0000,0000,,Anh yêu...
Dialogue: 0,0:09:10.78,0:09:12.08,Default,Comment,0000,0000,0000,,Thức dậy đi nào.
Dialogue: 0,0:09:18.75,0:09:19.85,Default,Comment,0000,0000,0000,,Cuối cùng thì anh cũng dậy rồi.
Dialogue: 0,0:09:19.92,0:09:21.45,Default,Comment,0000,0000,0000,,Chào buổi sáng.
Dialogue: 0,0:09:21.52,0:09:22.96,Default,Comment,0000,0000,0000,,Chào buổi sáng, Yusuke-kun.
Dialogue: 0,0:09:23.02,0:09:25.46,Default,Comment,0000,0000,0000,,Bữa sáng đã sẵn sàng, chúng ta cùng ăn nào.
Dialogue: 0,0:09:25.53,0:09:27.69,Default,Comment,0000,0000,0000,,Anh còn phải tới trường quay sáng nay, đúng ko?
Dialogue: 0,0:09:27.76,0:09:30.29,Default,Comment,0000,0000,0000,,Đúng thế, anh ko thể tới muộn được!
Dialogue: 0,0:09:30.37,0:09:31.63,Default,Comment,0000,0000,0000,,Anh phải mặc quần áo ngay mới được.
Dialogue: 0,0:09:32.17,0:09:36.50,Default,Comment,0000,0000,0000,,Em thấy thứ này rớt ra khỏi chiếc hộp đó, thế cô ấy là ai vậy?
Dialogue: 0,0:09:38.51,0:09:43.74,Default,Comment,0000,0000,0000,,Cô ấy là một người bạn cũ của anh, cô ấy kém anh vài tuổi.
Dialogue: 0,0:09:47.92,0:09:52.18,Default,Comment,0000,0000,0000,,Cô ấy ngay từ nhỏ rất ốm yếu nên đã qua Mĩ chữa bệnh.
Dialogue: 0,0:09:52.25,0:09:55.42,Default,Comment,0000,0000,0000,,Dĩ nhiên, anh chưa gặp lại cô ấy từ khi đó tới giờ.
Dialogue: 0,0:09:56.32,0:09:58.85,Default,Comment,0000,0000,0000,,Anh đã giữ tấm ảnh này lại làm kỉ niệm.
Dialogue: 0,0:09:59.83,0:10:04.13,Default,Comment,0000,0000,0000,,Em hiểu rồi, vậy em sẽ ko phải lo gì nữa...
Dialogue: 0,0:10:04.60,0:10:06.86,Default,Comment,0000,0000,0000,,Oh, em đang ghen đấy à?
Dialogue: 0,0:10:07.77,0:10:10.40,Default,Comment,0000,0000,0000,,Ko phải thế đâu! Anh đi thay quần áo nhanh lên nào.
Dialogue: 0,0:10:15.31,0:10:19.18,Default,Comment,0000,0000,0000,,{\i1}Yusuke-kun, chúng ta sẽ kết hôn vào một ngày nào đó nhé.{\i1}
Dialogue: 0,0:10:20.08,0:10:22.14,Default,Comment,0000,0000,0000,,{\i1}Được thôi, Akko, mình hứa với bạn.{\i0}
Dialogue: 0,0:10:28.32,0:10:29.95,Default,Comment,0000,0000,0000,,Anh đi làm đây.
Dialogue: 0,0:10:30.66,0:10:31.75,Default,Comment,0000,0000,0000,,Bảo trọng nhé anh yêu.
Dialogue: 0,0:10:31.83,0:10:34.45,Default,Comment,0000,0000,0000,,Yusuke-kun, đừng quên phải cố hết sức mình trong đêm nay nhé.
Dialogue: 0,0:10:36.26,0:10:37.42,Default,Comment,0000,0000,0000,,Hứa nhé!
Dialogue: 0,0:10:49.54,0:10:52.24,Default,Comment,0000,0000,0000,,Anh sẽ cố gắng hết sức !
Dialogue: 0,0:10:57.25,0:10:59.41,Default,Comment,0000,0000,0000,,Mình đã trở thành một bà nội trợ kể từ hôm nay.
Dialogue: 0,0:10:59.49,0:11:01.01,Default,Comment,0000,0000,0000,,Bắt đầu nào!
Dialogue: 0,0:11:13.77,0:11:16.46,Default,Comment,0000,0000,0000,,Mơ ước của mình đã thành hiện thực, mình sẽ được tham gia đoàn làm phim!
Dialogue: 0,0:11:18.14,0:11:19.07,Default,Comment,0000,0000,0000,,Oi, Yusuke!
Dialogue: 0,0:11:21.71,0:11:23.87,Default,Comment,0000,0000,0000,,Cậu chắc đang hạnh phúc nhỉ!
Dialogue: 0,0:11:25.01,0:11:29.18,Default,Comment,0000,0000,0000,,{\i1}Anh bạn này đã xem bộ film dài 8 phút của tôi và đánh giá rất cao nó.{\i0}
Dialogue: 0,0:11:29.25,0:11:33.62,Default,Comment,0000,0000,0000,,{\i1}Anh ấy thậm chí còn mời tôi tới đây làm việc. Anh ấy là phó giám đốc, Fujimiya Shizuma-san.{\i0}
Dialogue: 0,0:11:37.63,0:11:39.59,Default,Comment,0000,0000,0000,,Nhẹ tay hộ cái, Shizuma-san.
Dialogue: 0,0:11:40.86,0:11:43.59,Default,Comment,0000,0000,0000,,Hey, tôi sẽ ko nhẹ tay với cậu đâu.
Dialogue: 0,0:11:43.67,0:11:46.96,Default,Comment,0000,0000,0000,,Nhân tiện, ngôi nhà đó được ko?
Dialogue: 0,0:11:47.90,0:11:51.57,Default,Comment,0000,0000,0000,,Nó rất tuyệt, cảm ơn anh đã giới thiệu cho chúng tôi căn hộ đó.
Dialogue: 0,0:11:52.24,0:11:55.70,Default,Comment,0000,0000,0000,,À này, chuyện chăn gối với Akira thế nào rồi?
Dialogue: 0,0:11:57.28,0:11:59.54,Default,Comment,0000,0000,0000,,Ừ thì...
Dialogue: 0,0:12:02.38,0:12:04.35,Default,Comment,0000,0000,0000,,Nấu gì tối nay đây nhỉ?
Dialogue: 0,0:12:04.42,0:12:06.55,Default,Comment,0000,0000,0000,,Có lẽ mình sẽ làm món gì đó với thịt? 
Dialogue: 0,0:12:07.56,0:12:11.55,Default,Comment,0000,0000,0000,,Thưa bà, hôm nay thịt bò đang có đợt giảm giá rất lớn.
Dialogue: 0,0:12:13.29,0:12:14.82,Default,Comment,0000,0000,0000,,Bà á...?
Dialogue: 0,0:12:15.20,0:12:17.02,Default,Comment,0000,0000,0000,,Ko phải sao? Ý tôi là chiếc nhẫn kia...
Dialogue: 0,0:12:17.77,0:12:18.86,Default,Comment,0000,0000,0000,,Oh...
Dialogue: 0,0:12:19.67,0:12:20.96,Default,Comment,0000,0000,0000,,Xin thứ lỗi nếu tôi đã lầm.
Dialogue: 0,0:12:21.04,0:12:24.70,Default,Comment,0000,0000,0000,,Tại các bà nội trợ thường xuyên tới đây nên tôi đã đoán như vậy.
Dialogue: 0,0:12:25.71,0:12:27.14,Default,Comment,0000,0000,0000,,Um, ko sao đâu...
Dialogue: 0,0:12:30.21,0:12:32.68,Default,Comment,0000,0000,0000,,Mình biết ngay mà,đạo diễn phim này rất khó tính.
Dialogue: 0,0:12:33.28,0:12:35.77,Default,Comment,0000,0000,0000,,Nếu mình ko đưa được cô diễn viên đó tới, mình sẽ bị ông ta quở mắng mất.
Dialogue: 0,0:12:37.25,0:12:38.05,Default,Comment,0000,0000,0000,,Misaki-san.
Dialogue: 0,0:12:38.35,0:12:40.45,Default,Comment,0000,0000,0000,,Làm ơn tới trường quay nhanh lên...!
Dialogue: 0,0:12:55.27,0:12:56.46,Default,Comment,0000,0000,0000,,Tôi xin lỗi!
Dialogue: 0,0:12:58.47,0:13:00.30,Default,Comment,0000,0000,0000,,Anh là người mới đến hả.
Dialogue: 0,0:13:00.38,0:13:03.87,Default,Comment,0000,0000,0000,,Anh thật may mắn vì đã được chiêm ngưỡng một nữ diễn viên khỏa thân.
Dialogue: 0,0:13:04.53,0:13:05.82,Default,Comment,0000,0000,0000,,Ko...
Dialogue: 0,0:13:06.28,0:13:08.28,Default,Comment,0000,0000,0000,,T, Tôi xin lỗi.
Dialogue: 0,0:13:14.26,0:13:14.95,Default,Comment,0000,0000,0000,,Coi anh kìa!
Dialogue: 0,0:13:15.02,0:13:16.79,Default,Comment,0000,0000,0000,,Anh vẫn đang nhìn đấy thôi!
Dialogue: 0,0:13:17.39,0:13:19.42,Default,Comment,0000,0000,0000,,Ờ thì...
Dialogue: 0,0:13:19.49,0:13:22.55,Default,Comment,0000,0000,0000,,Chúng ta sắp bắt đầu quay rồi, làm ơn nhanh lên cho!
Dialogue: 0,0:13:26.33,0:13:28.20,Default,Comment,0000,0000,0000,,Đóng lại rồi.
Dialogue: 0,0:13:28.27,0:13:29.63,Default,Comment,0000,0000,0000,,Tốt nhất là mình nên cẩn thận hơn...
Dialogue: 0,0:13:29.70,0:13:32.50,Default,Comment,0000,0000,0000,,Nhưng mà, công nhận thân hình cô ta tuyệt thật...
Dialogue: 0,0:13:35.04,0:13:38.77,Default,Comment,0000,0000,0000,,Này, tôi có việc muốn nhờ anh đây.
Dialogue: 0,0:13:39.88,0:13:42.58,Default,Comment,0000,0000,0000,,Gặp lại các anh sau, tôi phải đi đây.
Dialogue: 0,0:13:54.23,0:13:55.49,Default,Comment,0000,0000,0000,,Tôi tới rồi đây.
Dialogue: 0,0:13:56.46,0:13:59.43,Default,Comment,0000,0000,0000,,Misaki-san, chuyện này là sao?
Dialogue: 0,0:13:59.50,0:14:01.02,Default,Comment,0000,0000,0000,,Sao cô lại đột ngột gọi tôi tới đây?
Dialogue: 0,0:14:01.50,0:14:04.49,Default,Comment,0000,0000,0000,,Anh biết bao nhiêu về tôi nào?
Dialogue: 0,0:14:05.92,0:14:06.43,Default,Comment,0000,0000,0000,,Hả?
Dialogue: 0,0:14:10.28,0:14:11.30,Default,Comment,0000,0000,0000,,{\i1}Cái gì...?!{\i0}
Dialogue: 0,0:14:27.73,0:14:29.99,Default,Comment,0000,0000,0000,,Anh là Yusuke-kun, đúng ko?
Dialogue: 0,0:14:35.14,0:14:36.87,Default,Comment,0000,0000,0000,,Cô ta muốn gì nhỉ...
Dialogue: 0,0:14:38.71,0:14:42.27,Default,Comment,0000,0000,0000,,Tốt nhất là mình nên về nhà với Akira.
Dialogue: 0,0:14:45.05,0:14:46.31,Default,Comment,0000,0000,0000,,Anh về rồi đây!
Dialogue: 0,0:14:48.05,0:14:50.02,Default,Comment,0000,0000,0000,,Chào anh, anh yêu.
Dialogue: 0,0:14:50.08,0:14:52.71,Default,Comment,0000,0000,0000,,Vậy bây giờ anh muốn ăn tối trước?
Dialogue: 0,0:14:52.79,0:14:54.15,Default,Comment,0000,0000,0000,,Hay muốn đi tắm?
Dialogue: 0,0:14:54.22,0:14:58.32,Default,Comment,0000,0000,0000,,Hay...là...em?
Dialogue: 0,0:14:59.59,0:15:02.79,Default,Comment,0000,0000,0000,,Orisaku... ko, Akira!
Dialogue: 0,0:15:03.56,0:15:06.36,Default,Comment,0000,0000,0000,,Em sẽ phục vụ anh hết khả năng của mình.
Dialogue: 0,0:15:06.43,0:15:09.27,Default,Comment,0000,0000,0000,,Sao nào, anh muốn làm gì trước đây?
Dialogue: 0,0:15:09.54,0:15:11.10,Default,Comment,0000,0000,0000,,Điều này rõ ràng quá còn gì!
Dialogue: 0,0:15:17.01,0:15:18.91,Default,Comment,0000,0000,0000,,Ko phải ở đây...
Dialogue: 0,0:15:18.98,0:15:21.04,Default,Comment,0000,0000,0000,,Đừng ngại!
Dialogue: 0,0:15:35.63,0:15:38.12,Default,Comment,0000,0000,0000,,Xông lên nào Yusuke!
Dialogue: 0,0:15:38.67,0:15:39.72,Default,Comment,0000,0000,0000,,Yusuke-kun!
Dialogue: 0,0:15:55.12,0:15:56.64,Default,Comment,0000,0000,0000,,Ngày mai chúng ta thử lại nhé.
Dialogue: 0,0:16:05.93,0:16:07.26,Default,Comment,0000,0000,0000,,Gì thế nhỉ?
Dialogue: 0,0:16:10.97,0:16:11.80,Default,Comment,0000,0000,0000,,Hả!?
Dialogue: 0,0:16:12.60,0:16:14.90,Default,Comment,0000,0000,0000,,Chào buổi sáng, ngài trợ lí đạo diễn.
Dialogue: 0,0:16:15.74,0:16:17.70,Default,Comment,0000,0000,0000,,Sao cô lại tới đây, Misaki-san?
Dialogue: 0,0:16:20.54,0:16:22.70,Default,Comment,0000,0000,0000,,Thế là thế quái nào nhỉ?
Dialogue: 0,0:16:23.38,0:16:27.78,Default,Comment,0000,0000,0000,,Wow, nữ diễn viên Misaki Atsuko-san là bạn của anh hả?
Dialogue: 0,0:16:29.65,0:16:31.48,Default,Comment,0000,0000,0000,,Nhưng sao cô lại ở đây?
Dialogue: 0,0:16:31.55,0:16:34.82,Default,Comment,0000,0000,0000,,Em nghĩ anh nên giúp cô ấy kiểm tra lại vai diễn đi thôi, Yusuke-kun?
Dialogue: 0,0:16:35.16,0:16:36.02,Default,Comment,0000,0000,0000,,Cái gì?
Dialogue: 0,0:16:36.46,0:16:40.72,Default,Comment,0000,0000,0000,,Yusuke-kun, điều đó thật tuyệt! Em rất hãnh diện về anh.
Dialogue: 0,0:16:40.80,0:16:43.06,Default,Comment,0000,0000,0000,,Trông cậy cả vào anh đấy, ngài đạo diễn.
Dialogue: 0,0:16:43.73,0:16:46.93,Default,Comment,0000,0000,0000,,Là trợ lí đạo diễn chứ, vả lại còn buổi thử vai hôm trước đã làm ngài đạo diễn ko hài lòng nữa chứ?
Dialogue: 0,0:16:47.00,0:16:48.59,Default,Comment,0000,0000,0000,,Anh chưa nghe gì sao?
Dialogue: 0,0:16:48.67,0:16:51.54,Default,Comment,0000,0000,0000,,Ngài đạo diễn đã hủy buổi thử vai hôm nay.
Dialogue: 0,0:16:51.61,0:16:53.30,Default,Comment,0000,0000,0000,,Sao cơ, thật hả?
Dialogue: 0,0:16:53.44,0:16:58.97,Default,Comment,0000,0000,0000,,Xin lỗi, nhưng hình như các tay săn ảnh đã chộp được vài tấm ảnh về chúng ta ngày hôm qua.
Dialogue: 0,0:16:59.05,0:17:02.91,Default,Comment,0000,0000,0000,,Tôi muốn xin lỗi anh nên đã yêu cầu họ hủy việc đó.
Dialogue: 0,0:17:03.42,0:17:04.25,Default,Comment,0000,0000,0000,,Cái gì?!
Dialogue: 0,0:17:08.76,0:17:12.78,Default,Comment,0000,0000,0000,,Uhm, em còn mấy việc vặt phải làm bây giờ, gặp lại hai người sau nhé.
Dialogue: 0,0:17:13.43,0:17:15.05,Default,Comment,0000,0000,0000,,Cho anh xin lỗi chuyện này nhé.
Dialogue: 0,0:17:15.50,0:17:17.40,Default,Comment,0000,0000,0000,,Em sẽ ko làm phiền anh đâu.
Dialogue: 0,0:17:17.47,0:17:19.19,Default,Comment,0000,0000,0000,,Đây là yêu cầu công việc của anh mà.
Dialogue: 0,0:17:19.27,0:17:21.26,Default,Comment,0000,0000,0000,,Em sẽ ko xen vào chuyện này.
Dialogue: 0,0:17:27.81,0:17:29.33,Default,Comment,0000,0000,0000,,Sao cô lại...?
Dialogue: 0,0:17:32.21,0:17:34.84,Default,Comment,0000,0000,0000,,Cái!? Cái gì...
Dialogue: 0,0:17:35.78,0:17:38.68,Default,Comment,0000,0000,0000,,Đây là một nơi thiêng liêng dành cho hai vợ chồng.
Dialogue: 0,0:17:38.75,0:17:42.42,Default,Comment,0000,0000,0000,,Thế nên chuyện này rất có ý nghĩa với tôi...
Dialogue: 0,0:17:53.53,0:17:54.63,Default,Comment,0000,0000,0000,,Dừng lại!
Dialogue: 0,0:17:56.50,0:17:58.23,Default,Comment,0000,0000,0000,,Cô đang nghĩ cái quái gì vậy!?
Dialogue: 0,0:17:58.31,0:18:02.07,Default,Comment,0000,0000,0000,,Tôi là một trợ lí đạo diễn và tôi đã kết hôn với Akira.
Dialogue: 0,0:18:02.14,0:18:08.05,Default,Comment,0000,0000,0000,,Có thể có một số luật ngầm trong nghề này, nhưng làm ơn đừng có lôi tôi vào mấy thứ đó!
Dialogue: 0,0:18:08.12,0:18:13.02,Default,Comment,0000,0000,0000,,Vả lại, tôi tưởng cô tới đây để xin lỗi mà...?
Dialogue: 0,0:18:28.24,0:18:29.90,Default,Comment,0000,0000,0000,,Anh có phải đàn ông ko vậy?
Dialogue: 0,0:18:29.97,0:18:32.13,Default,Comment,0000,0000,0000,,Cho tôi thấy anh có gì nào.
Dialogue: 0,0:19:01.77,0:19:03.17,Default,Comment,0000,0000,0000,,Ko, ko phải như thế này...
Dialogue: 0,0:19:03.67,0:19:05.90,Default,Comment,0000,0000,0000,,Đây ko phải điều cô muốn sao!?
Dialogue: 0,0:19:11.18,0:19:12.77,Default,Comment,0000,0000,0000,,Cô còn...
Dialogue: 0,0:19:13.85,0:19:16.91,Default,Comment,0000,0000,0000,,Ko sao đâu, tiếp tục đi...
Dialogue: 0,0:19:18.69,0:19:20.48,Default,Comment,0000,0000,0000,,Uhm...
Dialogue: 0,0:19:44.45,0:19:45.91,Default,Comment,0000,0000,0000,,Sắp ra rồi...
Dialogue: 0,0:19:46.65,0:19:48.38,Default,Comment,0000,0000,0000,,Tôi cũng thế!
Dialogue: 0,0:19:57.22,0:19:59.22,Default,Comment,0000,0000,0000,,Sắp ra rồi!
Dialogue: 0,0:20:00.93,0:20:02.36,Default,Comment,0000,0000,0000,,Akira!
Dialogue: 0,0:20:15.68,0:20:18.51,Default,Comment,0000,0000,0000,,Vậy đây là lần đầu tiên của cô sao... Atsuko-san.
Dialogue: 0,0:20:21.32,0:20:25.48,Default,Comment,0000,0000,0000,,Xin lỗi, tôi còn thiếu kinh nghiệm trong chuyện này nên tôi đã lỡ ra vào trong...
Dialogue: 0,0:20:26.12,0:20:29.68,Default,Comment,0000,0000,0000,,Anh nói gì vậy, chả phải anh làm chuyện này với vợ anh suốt rồi sao.
Dialogue: 0,0:20:31.16,0:20:34.09,Default,Comment,0000,0000,0000,,Nếu cô mang thai, tôi e là mình ko đủ khả năng gánh lấy trách nhiệm đó.
Dialogue: 0,0:20:34.16,0:20:35.69,Default,Comment,0000,0000,0000,,Chính cô đã dụ dỗ tôi trước.
Dialogue: 0,0:20:36.40,0:20:37.89,Default,Comment,0000,0000,0000,,Anh quá lạnh lùng rồi đấy.
Dialogue: 0,0:20:39.67,0:20:41.73,Default,Comment,0000,0000,0000,,Này, anh có...
Dialogue: 0,0:20:42.27,0:20:42.89,Default,Comment,0000,0000,0000,,Sao cơ?
Dialogue: 0,0:20:43.27,0:20:45.47,Default,Comment,0000,0000,0000,,Ko, ko có gì cả.
Dialogue: 0,0:20:45.54,0:20:46.77,Default,Comment,0000,0000,0000,,Tôi phải đi rồi.
Dialogue: 0,0:20:47.17,0:20:50.87,Default,Comment,0000,0000,0000,,Xin lỗi vì đã làm bẩn khăn trải giường.
Dialogue: 0,0:20:51.15,0:20:51.87,Default,Comment,0000,0000,0000,,Oh...
Dialogue: 0,0:20:51.95,0:20:53.47,Default,Comment,0000,0000,0000,,Cho tôi dùng nhờ phòng tắm nhé.
Dialogue: 0,0:20:56.58,0:20:59.78,Default,Comment,0000,0000,0000,,{\i1}Mình nghĩ là mình ko nên ở nhà.{\i0}
Dialogue: 0,0:20:59.85,0:21:02.79,Default,Comment,0000,0000,0000,,{\i1}Nhưng cũng chả có gì ở trường quay ...{\i0}
Dialogue: 0,0:21:04.83,0:21:07.32,Default,Comment,0000,0000,0000,,{\i1}Chả có việc gì để làm cả...{\i0}
Dialogue: 0,0:21:08.46,0:21:10.29,Default,Comment,0000,0000,0000,,Um, xin lỗi anh.
Dialogue: 0,0:21:10.36,0:21:12.20,Default,Comment,0000,0000,0000,,Vâng, anh là ai vậy?
Dialogue: 0,0:21:12.27,0:21:14.53,Default,Comment,0000,0000,0000,,Tôi là phóng viên của một tạp chí.
Dialogue: 0,0:21:14.60,0:21:17.37,Default,Comment,0000,0000,0000,,Tôi có vài câu hỏi về mối quan hệ của Misaki Atsuko...
Dialogue: 0,0:21:17.64,0:21:20.57,Default,Comment,0000,0000,0000,,Tôi là người mới ở đây nên tôi chả biết gì đâu!
Dialogue: 0,0:21:20.64,0:21:21.63,Default,Comment,0000,0000,0000,,Gặp lại anh sau nhé!
Dialogue: 0,0:21:23.61,0:21:27.98,Default,Comment,0000,0000,0000,,{\i1}Chà, đúng là chả có nơi nào để đi ngoài nhà mình...{\i0}
Dialogue: 0,0:21:34.05,0:21:35.54,Default,Comment,0000,0000,0000,,Anh về rồi đây...
Dialogue: 0,0:21:41.36,0:21:43.06,Default,Comment,0000,0000,0000,,Chuyện gì thế!?
Dialogue: 0,0:21:44.63,0:21:46.12,Default,Comment,0000,0000,0000,,Yusuke-kun...
Dialogue: 0,0:21:47.10,0:21:49.70,Default,Comment,0000,0000,0000,,Em trượt chân khi lau nhà tắm.
Dialogue: 0,0:21:50.40,0:21:52.63,Default,Comment,0000,0000,0000,,Em ko sao chứ, có bị thương chỗ nào ko?
Dialogue: 0,0:21:54.01,0:21:56.98,Default,Comment,0000,0000,0000,,Phải cẩn thận chứ, anh ko hề muốn em bị thương chút nào.
Dialogue: 0,0:21:57.24,0:21:58.84,Default,Comment,0000,0000,0000,,Yusuke-kun...
Dialogue: 0,0:21:59.45,0:22:00.57,Default,Comment,0000,0000,0000,,Akira...
Dialogue: 0,0:22:12.03,0:22:13.22,Default,Comment,0000,0000,0000,,Akira!
Dialogue: 0,0:22:14.80,0:22:16.39,Default,Comment,0000,0000,0000,,Áo anh ướt hết bây giờ!
Dialogue: 0,0:22:16.46,0:22:17.45,Default,Comment,0000,0000,0000,,Akira...
Dialogue: 0,0:22:17.53,0:22:19.16,Default,Comment,0000,0000,0000,,Yusuke-kun.
Dialogue: 0,0:22:19.93,0:22:21.06,Default,Comment,0000,0000,0000,,Ko sao đâu.
Dialogue: 0,0:22:32.11,0:22:37.55,Default,Comment,0000,0000,0000,,{\i1}Cảm xúc của tôi chưa khi nào bùng lên mãnh liệt như bây giờ.{\i0}
Dialogue: 0,0:22:39.45,0:22:42.79,Default,Comment,0000,0000,0000,,{\i1}Tôi ko thể kiểm soát nổi bản thân mình...{\i0}
Dialogue: 0,0:22:44.63,0:22:45.96,Default,Comment,0000,0000,0000,,Yusuke-kun...
Dialogue: 0,0:22:50.33,0:22:54.56,Default,Comment,0000,0000,0000,,Tuyệt vời, em cảm thấy thật khác thường, Yusuke-kun.
Dialogue: 0,0:22:54.64,0:22:56.16,Default,Comment,0000,0000,0000,,Anh cũng thế.
Dialogue: 0,0:23:05.01,0:23:06.88,Default,Comment,0000,0000,0000,,Tuyệt quá, anh sắp ra rồi...
Dialogue: 0,0:23:09.35,0:23:12.58,Default,Comment,0000,0000,0000,,Nhưng lần này, anh sẽ ra vào bên trong...
Dialogue: 0,0:23:12.65,0:23:14.28,Default,Comment,0000,0000,0000,,Và ra rất nhiều đấy.
Dialogue: 0,0:23:18.19,0:23:22.22,Default,Comment,0000,0000,0000,,Nhưng chúng ta phải có kế hoạch tử tế đã chứ...
Dialogue: 0,0:23:23.66,0:23:25.89,Default,Comment,0000,0000,0000,,Chúng ta có thể làm mọi điều với tình yêu mà.
Dialogue: 0,0:23:27.27,0:23:30.20,Default,Comment,0000,0000,0000,,{\i1}Đúng như vậy, tình yêu của chúng tôi...{\i0}
Dialogue: 0,0:23:35.31,0:23:37.30,Default,Comment,0000,0000,0000,,Đừng lo gì cả, thư giãn đi em.
Dialogue: 0,0:23:37.38,0:23:38.78,Default,Comment,0000,0000,0000,,Vâng...
Dialogue: 0,0:23:38.85,0:23:40.37,Default,Comment,0000,0000,0000,,Anh vào đây, giữ nguyên như thế nhé.
Dialogue: 0,0:23:45.05,0:23:47.52,Default,Comment,0000,0000,0000,,Nó vào trong rồi, Akira. Nó đang ở bên trong!
Dialogue: 0,0:23:48.29,0:23:49.38,Default,Comment,0000,0000,0000,,Yusuke-kun!
Dialogue: 0,0:23:49.49,0:23:51.15,Default,Comment,0000,0000,0000,,Chỗ đó thật nóng và ấm, sướng quá.
Dialogue: 0,0:23:51.23,0:23:52.89,Default,Comment,0000,0000,0000,,Anh sẽ di chuyển đây.
Dialogue: 0,0:23:59.53,0:24:02.50,Default,Comment,0000,0000,0000,,Akira, Anh yêu em. Anh yêu...
Dialogue: 0,0:24:02.94,0:24:05.27,Default,Comment,0000,0000,0000,,Em cũng vậy, em yêu anh, Yusuke-kun...
Dialogue: 0,0:24:05.34,0:24:06.36,Default,Comment,0000,0000,0000,,Sướng quá!
Dialogue: 0,0:24:07.67,0:24:11.58,Default,Comment,0000,0000,0000,,Yusuke-kun, nó đang đâm sâu vào... sâu bên trong!
Dialogue: 0,0:24:12.75,0:24:15.01,Default,Comment,0000,0000,0000,,Akira, của em khít quá!
Dialogue: 0,0:24:16.12,0:24:20.08,Default,Comment,0000,0000,0000,,Anh rất hạnh phúc vì em đã thuộc về anh, nó giống như giấc mơ được làm chuyện này với em mỗi ngày!
Dialogue: 0,0:24:20.69,0:24:25.68,Default,Comment,0000,0000,0000,,Em cũng vậy... Em hạnh phúc vì em đã thuộc về anh!
Dialogue: 0,0:24:35.64,0:24:38.97,Default,Comment,0000,0000,0000,,Anh sắp ra rồi, ở bên trong!
Dialogue: 0,0:24:40.41,0:24:43.74,Default,Comment,0000,0000,0000,,Cho em nào, hãy để em mang thai con của anh!
Dialogue: 0,0:24:50.72,0:24:54.35,Default,Comment,0000,0000,0000,,{\i1}Mình phải cám ơn Atsuko...{\i1}
Dialogue: 0,0:24:58.89,0:25:00.66,Default,Comment,0000,0000,0000,,Chào buổi sáng, ngài trợ lí đão diễn.
Dialogue: 0,0:25:01.90,0:25:03.66,Default,Comment,0000,0000,0000,,Chào buổi sáng, Atsuko-san.
Dialogue: 0,0:25:04.50,0:25:07.66,Default,Comment,0000,0000,0000,,Có một điều làm tôi ko hài lòng về buổi thử vai cảu hai chúng ta.
Dialogue: 0,0:25:07.73,0:25:09.60,Default,Comment,0000,0000,0000,,Ko hài lòng ư?
Dialogue: 0,0:25:09.94,0:25:11.17,Default,Comment,0000,0000,0000,,Giúp tôi nữa nhé.
Dialogue: 0,0:25:11.71,0:25:13.14,Default,Comment,0000,0000,0000,,Tôi ko thể.
Dialogue: 0,0:25:13.21,0:25:18.41,Default,Comment,0000,0000,0000,,Nhưng tôi cũng phải cám ơn cô vì đã giúp tôi làm được điều đó.
Dialogue: 0,0:25:20.38,0:25:23.65,Default,Comment,0000,0000,0000,,Sao cũng được, nhưng anh đừng quên lời hứa của mình nhé.
Dialogue: 0,0:25:24.22,0:25:24.98,Default,Comment,0000,0000,0000,,Lời hứa ư?
Dialogue: 0,0:25:29.12,0:25:32.89,Default,Comment,0000,0000,0000,,Như đã hứa, em sẽ kết hôn với anh vào một ngày nào đó.
Dialogue: 0,0:25:32.96,0:25:36.09,Default,Comment,0000,0000,0000,,Em sẽ giành lấy anh từ tay vợ của anh.
Dialogue: 0,0:25:47.31,0:25:49.14,Default,Comment,0000,0000,0000,,Hãy cho em biết khi anh đã sẵn sàng.
Dialogue: 0,0:25:51.65,0:25:52.61,Default,Comment,0000,0000,0000,,Akko?
Dialogue: 0,0:25:52.68,0:25:54.41,Default,Comment,0000,0000,0000,,Ko thể nào...
Dialogue: 0,0:25:56.38,0:25:58.51,Default,Comment,0000,0000,0000,,{\i1}Mình sẽ ko từ bỏ dễ dàng như vậy...{\i0}
Dialogue: 0,0:26:01.42,0:26:03.08,Default,Comment,0000,0000,0000,,Akira, Anh về rồi đây.
Dialogue: 0,0:26:05.26,0:26:06.78,Default,Comment,0000,0000,0000,,Anh có muốn ăn tối bây giờ ko?
