Dialogue: 0,0:02:17.26,0:02:21.54,Type,,0000,0000,0000,,{\fad(128,0)\bord0\shad0\fnUVN Lac Long Quan\fscx80\pos(318,382)}Phần 2: Số phận
Dialogue: 0,0:02:24.95,0:02:28.21,Default,,0000,0000,0000,,{\pos(322,463)\bord0\shad0\fad(150,0)}Một năm trước
Dialogue: 0,0:02:33.85,0:02:35.33,Default,,0000,0000,0000,,Narumi-chan...
Dialogue: 0,0:02:36.53,0:02:39.07,Default,,0000,0000,0000,,Shinya, anh sẽ bị cảm lạnh mất thôi.
Dialogue: 0,0:02:39.15,0:02:40.17,Default,,0000,0000,0000,,Vào trong nhà nghỉ ngơi đi.
Dialogue: 0,0:02:41.25,0:02:42.45,Default,,0000,0000,0000,,Cứ mặc kệ tôi!
Dialogue: 0,0:02:44.91,0:02:46.61,Default,,0000,0000,0000,,Tôi không hề biết bất cứ điều gì về cô ấy --
Dialogue: 0,0:02:46.85,0:02:48.69,Default,,0000,0000,0000,,kể cả căn bệnh cô ấy đang phải chống chọi,
Dialogue: 0,0:02:48.89,0:02:51.65,Default,,0000,0000,0000,,lẫn cảm giác khi cô ấy trao thân cho tôi.
Dialogue: 0,0:02:52.61,0:02:53.81,Default,,0000,0000,0000,,Không một chút gì cả.
Dialogue: 0,0:02:54.05,0:02:58.29,Default,,0000,0000,0000,,Một kẻ như tôi không xứng đáng với tình yêu của cô ấy.
Dialogue: 0,0:02:59.84,0:03:01.25,Default,,0000,0000,0000,,Shinya...
Dialogue: 0,0:03:02.97,0:03:04.13,Default,,0000,0000,0000,,Shinya...
Dialogue: 0,0:03:08.21,0:03:10.49,Default,,0000,0000,0000,,Tối nay tôi sẽ nấu món thịt hầm.
Dialogue: 0,0:03:10.59,0:03:13.37,Default,,0000,0000,0000,,Vậy nên anh nhớ quay về sớm nhé.
Dialogue: 0,0:03:15.59,0:03:17.05,Default,,0000,0000,0000,,Tôi sẽ đợi anh.
Dialogue: 0,0:03:20.09,0:03:22.51,Default,,0000,0000,0000,,Chán quá đi.
Dialogue: 0,0:03:22.53,0:03:25.21,Default,,0000,0000,0000,,Không những Kazura-chan mà cả Shinya cũng không mấy khi ghé qua đây.
Dialogue: 0,0:03:25.35,0:03:27.37,Default,,0000,0000,0000,,Cô cho rằng bọn họ là người có lỗi trong chuyện này sao?
Dialogue: 0,0:03:27.43,0:03:29.77,Default,,0000,0000,0000,,Bọn họ chắc hẳn cũng đau lòng lắm.
Dialogue: 0,0:03:30.15,0:03:33.53,Default,,0000,0000,0000,,Tôi vẫn mong Kazura-chan có thể ghé qua đây.
Dialogue: 0,0:03:33.73,0:03:35.07,Default,,0000,0000,0000,,Dù cho mỗi lần tới đây,
Dialogue: 0,0:03:35.15,0:03:37.05,Default,,0000,0000,0000,,cô ấy luôn phàn nàn trà nóng này nọ,
Dialogue: 0,0:03:37.15,0:03:38.89,Default,,0000,0000,0000,,còn bánh thì ngọt quá nọ kia.
Dialogue: 0,0:03:38.93,0:03:40.77,Default,,0000,0000,0000,,Phàn nàn hoài không biết chán.
Dialogue: 0,0:03:41.21,0:03:43.84,Default,,0000,0000,0000,,Vậy mà khi thiếu cô ấy, nơi này sao trống vắng quá.
Dialogue: 0,0:03:43.95,0:03:45.93,Default,,0000,0000,0000,,Xin lỗi vì đã gây phiền phức cho hai cô.
Dialogue: 0,0:03:47.03,0:03:48.89,Default,,0000,0000,0000,,C-Cô tới đây từ lúc nào vậy?
Dialogue: 0,0:03:49.29,0:03:51.89,Default,,0000,0000,0000,,Hừ, giờ thì tôi biết hai cô nghĩ gì về tôi rồi nhé.
Dialogue: 0,0:03:52.13,0:03:53.49,Default,,0000,0000,0000,,Tôi chỉ nói đùa thôi mà.
Dialogue: 0,0:03:54.05,0:03:56.67,Default,,0000,0000,0000,,Cho tôi chén trà, nhớ đừng quá nóng nghe chưa.
Dialogue: 0,0:03:56.85,0:03:58.37,Default,,0000,0000,0000,,C-Có ngay đây.
Dialogue: 0,0:03:59.29,0:04:00.37,Default,,0000,0000,0000,,Trông cô khá hơn nhiều rồi đấy.
Dialogue: 0,0:04:00.57,0:04:02.79,Default,,0000,0000,0000,,Uhm, làm gì có ai buồn mãi được.
Dialogue: 0,0:04:02.87,0:04:04.83,Default,,0000,0000,0000,,Narumi sẽ cười nhạo tôi mất.
Dialogue: 0,0:04:04.95,0:04:05.97,Default,,0000,0000,0000,,Tôi cũng đoán vậy.
Dialogue: 0,0:04:07.83,0:04:08.57,Default,,0000,0000,0000,,Chuyện gì vậy?
Dialogue: 0,0:04:37.53,0:04:38.81,Default,,0000,0000,0000,,Anh tới đây làm gì?
Dialogue: 0,0:04:39.97,0:04:41.15,Default,,0000,0000,0000,,Tôi chỉ muốn...
Dialogue: 0,0:04:41.17,0:04:42.31,Default,,0000,0000,0000,,Cút ra khỏi đây mau!
Dialogue: 0,0:04:42.33,0:04:44.05,Default,,0000,0000,0000,,Anh chỉ biết đùa giỡn với tình cảm của cậu ấy!
Dialogue: 0,0:04:44.09,0:04:45.93,Default,,0000,0000,0000,,Kẻ vô lại  như anh không được chào đón tại nơi này!
Dialogue: 0,0:04:48.35,0:04:50.17,Default,,0000,0000,0000,,Cô nói đúng.
Dialogue: 0,0:04:50.89,0:04:54.25,Default,,0000,0000,0000,,Nói rất đúng. Kẻ như tôi không đáng  được chào đón tại đây.
Dialogue: 0,0:04:55.21,0:04:56.29,Default,,0000,0000,0000,,N-Này...
Dialogue: 0,0:04:57.93,0:04:59.57,Default,,0000,0000,0000,,Khoan đã!
Dialogue: 0,0:05:08.11,0:05:11.13,Default,,0000,0000,0000,,Shinya-kun đi đâu mà lâu vậy ta.
Dialogue: 0,0:05:12.45,0:05:13.77,Default,,0000,0000,0000,,Shinya...
Dialogue: 0,0:05:19.43,0:05:20.43,Default,,0000,0000,0000,,Chuyện gì vậy?
Dialogue: 0,0:05:20.55,0:05:22.33,Default,,0000,0000,0000,,Để cháu đi tìm anh ấy.
Dialogue: 0,0:05:22.47,0:05:26.29,Default,,0000,0000,0000,,Không được! Muộn lắm rồi, tuyết đang rơi rất nặng hạt.
Dialogue: 0,0:05:26.39,0:05:29.61,Default,,0000,0000,0000,,Cháu vừa nghe thấy... nghe thấy tiếng gọi cầu cứu của Shinya.
Dialogue: 0,0:05:31.87,0:05:33.05,Default,,0000,0000,0000,,Yuzu...
Dialogue: 0,0:05:53.91,0:05:55.21,Default,,0000,0000,0000,,Lạnh quá.
Dialogue: 0,0:05:55.45,0:05:58.89,Default,,0000,0000,0000,,Nếu ngủ gục tại đây, chắc chắn mình sẽ chết.
Dialogue: 0,0:06:00.25,0:06:01.84,Default,,0000,0000,0000,,Cũng không tệ lắm nhỉ.
Dialogue: 0,0:06:01.89,0:06:04.61,Default,,0000,0000,0000,,Xuống dưới đó, mình sẽ được gặp lại Narumi-chan.
Dialogue: 0,0:06:08.11,0:06:11.81,Default,,0000,0000,0000,,À phải rồi. Chắc Yuzu đang làm món thịt hầm cho bữa tối.
Dialogue: 0,0:06:13.37,0:06:17.01,Default,,0000,0000,0000,,Tha lỗi cho tôi, Yuzu. Tôi...
Dialogue: 0,0:06:34.45,0:06:35.57,Default,,0000,0000,0000,,Naru --
Dialogue: 0,0:06:45.27,0:06:46.69,Default,,0000,0000,0000,,Ah...
Dialogue: 0,0:06:53.21,0:06:54.37,Default,,0000,0000,0000,,Cậu tỉnh rồi hả?
Dialogue: 0,0:06:54.61,0:06:58.39,Default,,0000,0000,0000,,X-Xin lỗi. Um, ban nãy là cô cứu sống tôi phải không?
Dialogue: 0,0:06:58.61,0:07:00.01,Default,,0000,0000,0000,,Phải chăng cậu muốn ân nhân cứu mạng là một người khác, thay vì tôi?
Dialogue: 0,0:07:00.25,0:07:02.61,Default,,0000,0000,0000,,K-Không, ý tôi không phải vậy.
Dialogue: 0,0:07:03.09,0:07:05.17,Default,,0000,0000,0000,,Tôi vốn không có ý định cứu mạng cậu.
Dialogue: 0,0:07:06.49,0:07:10.97,Default,,0000,0000,0000,,Tôi cũng không khoái việc ngăn người khác đi tìm cái chết một chút nào.
Dialogue: 0,0:07:13.21,0:07:17.25,Default,,0000,0000,0000,,Nếu số phận muốn cậu phải chết, chắc chắn tôi sẽ mặc kệ cậu.
Dialogue: 0,0:07:17.43,0:07:18.49,Default,,0000,0000,0000,,Số phận của tôi ư?
Dialogue: 0,0:07:18.89,0:07:22.13,Default,,0000,0000,0000,,Không một ai có thể trốn chạy cái chết.
Dialogue: 0,0:07:22.27,0:07:23.73,Default,,0000,0000,0000,,Cũng giống như Narumi vậy.
Dialogue: 0,0:07:24.49,0:07:26.09,Default,,0000,0000,0000,,Cô biết Narumi-chan ư ?
Dialogue: 0,0:07:27.13,0:07:29.69,Default,,0000,0000,0000,,Cây cung của tôi có thể nhìn thấu tương lai,
Dialogue: 0,0:07:29.93,0:07:32.81,Default,,0000,0000,0000,,nhưng Narumi đã biết rõ số phận của mình từ trước.
Dialogue: 0,0:07:33.21,0:07:36.45,Default,,0000,0000,0000,,Cô ấy hiểu và chấp nhận vận mệnh của mình.
Dialogue: 0,0:07:37.09,0:07:39.05,Default,,0000,0000,0000,,Vận mệnh vốn chỉ dành riêng cho cô ấy.
Dialogue: 0,0:07:39.63,0:07:42.37,Default,,0000,0000,0000,,Cô muốn nói rằng số mệnh đã an bài cho cô ấy cái chết ư?
Dialogue: 0,0:07:42.61,0:07:46.03,Default,,0000,0000,0000,,Tôi đã nói với cậu rồi. Không một ai có thể trốn chạy cái chết.
Dialogue: 0,0:07:46.15,0:07:49.17,Default,,0000,0000,0000,,Điều đó đâu thể bào chữa cho cái chết của một người con gái tốt đẹp như Narumi-chan!
Dialogue: 0,0:07:49.21,0:07:51.01,Default,,0000,0000,0000,,Chuyện tốt hay xấu không liên quan gì ở đây cả.
Dialogue: 0,0:07:51.25,0:07:53.21,Default,,0000,0000,0000,,Đơn giản đó là số mệnh của cô ấy.
Dialogue: 0,0:07:53.45,0:07:55.37,Default,,0000,0000,0000,,Cô đang nói điều quỷ tha ma bắt gì vậy hả!
Dialogue: 0,0:07:58.05,0:08:01.13,Default,,0000,0000,0000,,Số mệnh là thứ chết tiệt gì? Kẻ nào tin vào số mệnh?
Dialogue: 0,0:08:01.41,0:08:04.17,Default,,0000,0000,0000,,Narumi-chan chỉ vừa mới thoát khỏi căn phòng giam lạnh lẽo đó!
Dialogue: 0,0:08:04.27,0:08:06.45,Default,,0000,0000,0000,,Cô ấy xứng đáng được sống một cuộc đời hạnh phúc!
Dialogue: 0,0:08:07.13,0:08:08.45,Default,,0000,0000,0000,,Nhưng thay vào đó...
Dialogue: 0,0:08:08.93,0:08:11.57,Default,,0000,0000,0000,,Cô ấy đã bị tước đi mọi thứ, kể cả những niềm vui nhỏ nhoi nhất!
Dialogue: 0,0:08:12.25,0:08:14.53,Default,,0000,0000,0000,,Tôi sẽ không bao giờ chấp nhận một số phận nghiệt ngã như vậy!
Dialogue: 0,0:08:14.83,0:08:16.21,Default,,0000,0000,0000,,Không bao giờ!
Dialogue: 0,0:08:17.07,0:08:19.69,Default,,0000,0000,0000,,Thế nhưng, dù cậu làm vậy Narumi cũng không thể sống lại được.
Dialogue: 0,0:08:19.89,0:08:23.33,Default,,0000,0000,0000,,Con người vốn không thể thay đổi vận mệnh của họ.
Dialogue: 0,0:08:23.57,0:08:26.85,Default,,0000,0000,0000,,Không đúng! Chúng tôi có thể thay đổi vận mệnh của mình!
Dialogue: 0,0:08:26.85,0:08:28.81,Default,,0000,0000,0000,,Đã có vô vàn những trường hợp như vậy!
Dialogue: 0,0:08:28.95,0:08:32.65,Default,,0000,0000,0000,,Nhưng tất cả đã muộn, Narumi không có được sự may mắn như bọn họ!
Dialogue: 0,0:08:34.83,0:08:36.01,Default,,0000,0000,0000,,T-Tôi xin lỗi.
Dialogue: 0,0:08:37.89,0:08:39.09,Default,,0000,0000,0000,,Không sao hết,
Dialogue: 0,0:08:40.21,0:08:42.13,Default,,0000,0000,0000,,Tôi không ngại làm chuyện đó cùng cậu đâu, Shinya.
Dialogue: 0,0:08:42.49,0:08:44.73,Default,,0000,0000,0000,,Vậy nên, hãy nhìn thẳng vào mắt tôi đi.
Dialogue: 0,0:08:45.73,0:08:48.89,Default,,0000,0000,0000,,Tôi mang cậu tới đây còn vì một lí do khác nữa.
Dialogue: 0,0:08:49.09,0:08:52.49,Default,,0000,0000,0000,,Tôi vẫn còn một vận mệnh chưa hoàn thành.
Dialogue: 0,0:08:55.65,0:08:57.21,Default,,0000,0000,0000,,Cơ thể của cậu không hề nói dối.
Dialogue: 0,0:08:57.45,0:08:59.17,Default,,0000,0000,0000,,À, đó là...
Dialogue: 0,0:08:59.89,0:09:00.77,Default,,0000,0000,0000,,Không sao cả.
Dialogue: 0,0:09:00.87,0:09:04.93,Default,,0000,0000,0000,,Điều này là vận mệnh, nhưng cũng là mong ước của chính bản thân tôi.
Dialogue: 0,0:09:05.93,0:09:11.49,Default,,0000,0000,0000,,Tôi mang cậu tới đây để giúp cậu thoát khỏi nỗi ám ảnh về Narumi.
Dialogue: 0,0:09:12.37,0:09:15.85,Default,,0000,0000,0000,,Có những chuyện không thể do dự được đâu. Làm ơn hãy đồng ý với tôi.
Dialogue: 0,0:09:16.09,0:09:17.97,Default,,0000,0000,0000,,N-Nhưng làm vậy cô sẽ vô cùng thiệt thòi?!
Dialogue: 0,0:09:18.01,0:09:21.69,Default,,0000,0000,0000,,Mao, Makimura Mao. Đó là tên của tôi.
Dialogue: 0,0:09:22.25,0:09:23.17,Default,,0000,0000,0000,,Mao-chan?
Dialogue: 0,0:09:23.31,0:09:24.35,Default,,0000,0000,0000,,Phải, Mao.
Dialogue: 0,0:09:24.47,0:09:27.73,Default,,0000,0000,0000,,N-Nhưng tôi còn chưa biết gì về cô mà.
Dialogue: 0,0:09:27.87,0:09:32.41,Default,,0000,0000,0000,,Nếu tôi làm chuyện đó cùng cô, khác nào tôi đã lặp lại sai lầm trước kia.
Dialogue: 0,0:09:32.89,0:09:35.13,Default,,0000,0000,0000,,Cậu cứng đầu hơn là tôi tưởng đó, Shinya.
Dialogue: 0,0:09:35.81,0:09:37.93,Default,,0000,0000,0000,,Tôi không hề cứng đầu.
Dialogue: 0,0:09:38.91,0:09:44.33,Default,,0000,0000,0000,,Thư giãn đi nào. Ban nãy tôi đã nói rồi, điều này cũng là ước muốn của tôi.
Dialogue: 0,0:09:45.03,0:09:48.87,Default,,0000,0000,0000,,Nếu điều này giúp cậu thoát khỏi nỗi ám ảnh với Narumi và trong tương lai...
Dialogue: 0,0:09:50.13,0:09:51.93,Default,,0000,0000,0000,,Hãy chứng mình cho tôi thấy.
Dialogue: 0,0:09:52.45,0:09:55.89,Default,,0000,0000,0000,,Rằng số mệnh có thể thay đổi.
Dialogue: 0,0:09:56.57,0:10:00.41,Default,,0000,0000,0000,,Nghĩa là cô biết chuyện gì sẽ xảy đến với tôi trong tương lai phải không?
Dialogue: 0,0:10:01.21,0:10:03.89,Default,,0000,0000,0000,,Bấy lâu nay tôi vẫn luôn kiếm tìm nửa kia của mình.
Dialogue: 0,0:10:04.69,0:10:06.69,Default,,0000,0000,0000,,Cô cho rằng tôi là người đó sao?
Dialogue: 0,0:10:06.89,0:10:09.09,Default,,0000,0000,0000,,Tôi tin vào lựa chọn của mình, vậy nên tôi muốn cậu chứng minh điều đó.
Dialogue: 0,0:10:09.84,0:10:13.57,Default,,0000,0000,0000,,Cậu sẵn sàng gánh mọi trách nhiệm về chuyện đêm nay rồi chứ ?
Dialogue: 0,0:10:14.33,0:10:15.49,Default,,0000,0000,0000,,Tại nơi này, tôi đã thuộc về cô.
Dialogue: 0,0:10:17.05,0:10:18.53,Default,,0000,0000,0000,,Cô thực sự muốn vậy chứ?
Dialogue: 0,0:10:32.91,0:10:33.79,Default,,0000,0000,0000,,Cô lạnh ư?
Dialogue: 0,0:10:33.83,0:10:34.89,Default,,0000,0000,0000,,Một chút.
Dialogue: 0,0:10:35.57,0:10:37.17,Default,,0000,0000,0000,,Shinya, theo tôi nào...
Dialogue: 0,0:10:42.17,0:10:43.37,Default,,0000,0000,0000,,Là nơi này ư?
Dialogue: 0,0:10:43.57,0:10:46.53,Default,,0000,0000,0000,,Cậu phải hứa không đùa giỡn với thân thể của tôi đấy nhé!
Dialogue: 0,0:10:46.73,0:10:47.81,Default,,0000,0000,0000,,Tất nhiên là không rồi.
Dialogue: 0,0:11:01.65,0:11:03.41,Default,,0000,0000,0000,,Cậu hăm hở vậy sao.
Dialogue: 0,0:11:19.55,0:11:22.97,Default,,0000,0000,0000,,Nếu cậu làm vậy, tôi sẽ... tôi sẽ...
Dialogue: 0,0:11:31.43,0:11:32.41,Default,,0000,0000,0000,,Thích không hả?
Dialogue: 0,0:11:32.45,0:11:34.05,Default,,0000,0000,0000,,Đừng hỏi tôi điều đó.
Dialogue: 0,0:11:36.89,0:11:39.81,Default,,0000,0000,0000,,Có vẻ như cậu cũng không kềm lòng nổi nữa rồi.
Dialogue: 0,0:11:42.37,0:11:43.53,Default,,0000,0000,0000,,A-Ah...
Dialogue: 0,0:11:53.89,0:11:55.01,Default,,0000,0000,0000,,M-Mao...
Dialogue: 0,0:11:56.69,0:12:00.37,Default,,0000,0000,0000,,Hãy tận hưởng đi. Tận hưởng nó và quên đi tất cả mọi thứ trên đời.
Dialogue: 0,0:12:06.59,0:12:09.69,Default,,0000,0000,0000,,Khoan đã. Nếu cô còn làm vậy, tôi sẽ...
Dialogue: 0,0:12:16.85,0:12:17.83,Default,,0000,0000,0000,,Lại đây với tôi nào.
Dialogue: 0,0:12:17.95,0:12:20.89,Default,,0000,0000,0000,,Thân xác và vận mệnh hai ta sẽ hòa làm một.
Dialogue: 0,0:12:21.57,0:12:22.77,Default,,0000,0000,0000,,Mao...
Dialogue: 0,0:12:30.83,0:12:32.53,Default,,0000,0000,0000,,Mau lên, nhét nó vào bên trong đi.
Dialogue: 0,0:12:40.55,0:12:41.69,Default,,0000,0000,0000,,Tuyệt quá.
Dialogue: 0,0:12:42.57,0:12:45.41,Default,,0000,0000,0000,,Tuyệt quá đi mất. Anh vào cả bên trong tôi rồi!
Dialogue: 0,0:12:49.65,0:12:52.13,Default,,0000,0000,0000,,Phải, mạnh nữa lên! Nữa nào!
Dialogue: 0,0:12:54.05,0:12:56.17,Default,,0000,0000,0000,,Nó vào hết bên trong rồi, Shinya...
Dialogue: 0,0:12:57.95,0:13:02.83,Default,,0000,0000,0000,,Shinya, cậu làm tuyệt lắm! Nó vào hết bên trong tôi rồi!
Dialogue: 0,0:13:02.85,0:13:04.93,Default,,0000,0000,0000,,Tuyệt quá! Cậu làm tuyệt quá đi mất!
Dialogue: 0,0:13:05.03,0:13:06.89,Default,,0000,0000,0000,,Mao! Mao!
Dialogue: 0,0:13:11.87,0:13:12.97,Default,,0000,0000,0000,,Shinya...
Dialogue: 0,0:13:15.85,0:13:19.33,Default,,0000,0000,0000,,Mao... Mao... Tôi... Tôi không kiềm chế nổi nữa rồi.
Dialogue: 0,0:13:21.25,0:13:25.13,Default,,0000,0000,0000,,Phải, Shinya, ra đi nào. Trao vận mệnh của cậu cho tôi.
Dialogue: 0,0:13:25.89,0:13:28.43,Default,,0000,0000,0000,,Tôi sắp... Tôi sắp ra rồi!
Dialogue: 0,0:13:28.51,0:13:29.57,Default,,0000,0000,0000,,Mao!
Dialogue: 0,0:13:31.29,0:13:33.17,Default,,0000,0000,0000,,Shinya! Shinya!
Dialogue: 0,0:13:41.25,0:13:43.97,Default,,0000,0000,0000,,Cậu ra nhiều thật đấy...
Dialogue: 0,0:13:56.61,0:13:58.13,Default,,0000,0000,0000,,Cảm thấy khá hơn chưa?
Dialogue: 0,0:13:59.89,0:14:01.81,Default,,0000,0000,0000,,Tôi đã làm tất cả những gì có thể.
Dialogue: 0,0:14:02.05,0:14:03.85,Default,,0000,0000,0000,,Ý-Ý cô là sao?
Dialogue: 0,0:14:04.25,0:14:06.09,Default,,0000,0000,0000,,Tôi chỉ là người dẫn đường cho cậu.
Dialogue: 0,0:14:06.13,0:14:10.93,Default,,0000,0000,0000,,Sẽ có một ai đó mở rộng lòng mình và cùng cậu chia sẻ tương lai.
Dialogue: 0,0:14:11.29,0:14:14.07,Default,,0000,0000,0000,,Cô muốn ám chỉ điều gì?
Dialogue: 0,0:14:14.09,0:14:18.03,Default,,0000,0000,0000,,Dường như cậu không chú ý, có một người vẫn luôn dõi theo cậu.
Dialogue: 0,0:14:18.05,0:14:20.99,Default,,0000,0000,0000,,Luôn luôn dõi theo hình bóng cậu...
Dialogue: 0,0:14:21.01,0:14:22.07,Default,,0000,0000,0000,,Dõi theo tôi ư?
Dialogue: 0,0:14:23.53,0:14:24.73,Default,,0000,0000,0000,,Shinya!
Dialogue: 0,0:14:27.89,0:14:28.83,Default,,0000,0000,0000,,Chuyện gì vậy?
Dialogue: 0,0:14:28.95,0:14:30.77,Default,,0000,0000,0000,,Có ai đó ngoài kia. Tôi vừa nghe thấy giọng của người đó.
Dialogue: 0,0:14:31.13,0:14:32.23,Default,,0000,0000,0000,,Vào giữa lúc bão tuyết thế này ư?
Dialogue: 0,0:14:32.37,0:14:34.51,Default,,0000,0000,0000,,Giọng nói đó... Là...
Dialogue: 0,0:14:34.59,0:14:35.37,Default,,0000,0000,0000,,Mao!
Dialogue: 0,0:14:50.39,0:14:51.31,Default,,0000,0000,0000,,Đằng kia!
Dialogue: 0,0:14:51.53,0:14:53.53,Default,,0000,0000,0000,,Đâu cơ! Tôi chẳng nhìn thấy gì cả.
Dialogue: 0,0:14:56.17,0:14:57.25,Default,,0000,0000,0000,,Yuzu!
Dialogue: 0,0:14:59.67,0:15:03.69,Default,,0000,0000,0000,,Yuzu, tỉnh lại đi! Cô làm gì ở đây vậy!?
Dialogue: 0,0:15:08.87,0:15:10.69,Default,,0000,0000,0000,,Sh-Shinya...
Dialogue: 0,0:15:12.11,0:15:14.93,Default,,0000,0000,0000,,Tạ ơn trời. Cuối cùng tôi đã tìm thấy anh.
Dialogue: 0,0:15:16.15,0:15:18.25,Default,,0000,0000,0000,,Yuzu, ráng lên nào.
Dialogue: 0,0:15:19.05,0:15:21.09,Default,,0000,0000,0000,,Yuzu! Cô không được phép thiếp đi!
Dialogue: 0,0:15:21.33,0:15:22.57,Default,,0000,0000,0000,,Mở mắt ra nào!
Dialogue: 0,0:15:22.95,0:15:25.01,Default,,0000,0000,0000,,Yuzu, mau tỉnh lại đi!
Dialogue: 0,0:15:25.33,0:15:26.89,Default,,0000,0000,0000,,Yuzu!
Dialogue: 0,0:15:41.27,0:15:42.41,Default,,0000,0000,0000,,Yuzu...
Dialogue: 0,0:15:44.09,0:15:46.65,Default,,0000,0000,0000,,Bác sĩ, cô ấy sao rồi?
Dialogue: 0,0:15:47.25,0:15:50.65,Default,,0000,0000,0000,,Chỉ cần được sưởi ấm là cô ấy sẽ hồi phục ngay thôi,
Dialogue: 0,0:15:51.01,0:15:52.61,Default,,0000,0000,0000,,nhưng lại nảy sinh một vấn đề khác.
Dialogue: 0,0:15:52.81,0:15:53.89,Default,,0000,0000,0000,,Không lẽ nào...
Dialogue: 0,0:15:55.05,0:15:56.41,Default,,0000,0000,0000,,G-Gì vậy ?
Dialogue: 0,0:15:56.89,0:15:59.77,Default,,0000,0000,0000,,Như cậu thấy đó, Yuzu có triệu chứng mất trí nhớ.
Dialogue: 0,0:16:00.53,0:16:01.89,Default,,0000,0000,0000,,Mất trí nhớ ư!?
Dialogue: 0,0:16:02.83,0:16:05.95,Default,,0000,0000,0000,,Yuzu không thể nhớ bất cứ điều gì về thời thơ ấu của cô ấy.
Dialogue: 0,0:16:05.97,0:16:08.29,Default,,0000,0000,0000,,Nhưng đó không phải là tất cả.
Dialogue: 0,0:16:08.49,0:16:11.25,Default,,0000,0000,0000,,Bệnh mất trí nhớ của cô ấy có thể biến đổi theo chiều hướng xấu đi.
Dialogue: 0,0:16:11.45,0:16:15.41,Default,,0000,0000,0000,,Mỗi khi cô ấy bị kích động bởi chuyện gì đó, trung khu bộ nhớ của cô ấy sẽ càng thương tổn thêm.
Dialogue: 0,0:16:15.55,0:16:17.69,Default,,0000,0000,0000,,N-Nghĩa là kí ức của cô ấy sẽ hoàn toàn biến mất ư?
Dialogue: 0,0:16:18.29,0:16:22.01,Default,,0000,0000,0000,,Hiện giờ có lẽ cô ấy đã quên hết tất cả mọi thứ rồi.
Dialogue: 0,0:16:22.25,0:16:25.41,Default,,0000,0000,0000,,Tôi không tin! Không lẽ bác sĩ cũng đành bó tay sao?
Dialogue: 0,0:16:25.51,0:16:27.37,Default,,0000,0000,0000,,Xin lỗi, Sinclair-kun.
Dialogue: 0,0:16:27.51,0:16:30.13,Default,,0000,0000,0000,,Tôi không thể làm gì hơn được.
Dialogue: 0,0:16:32.53,0:16:34.65,Default,,0000,0000,0000,,Yuzu, mở mắt ra nào.
Dialogue: 0,0:16:34.83,0:16:37.57,Default,,0000,0000,0000,,Cô đã hứa sẽ làm món thịt hầm cho tôi mà, phải không?
Dialogue: 0,0:16:37.67,0:16:40.33,Default,,0000,0000,0000,,Đừng thiếp đi như vậy? Mau tỉnh lại đi!
Dialogue: 0,0:16:40.55,0:16:42.37,Default,,0000,0000,0000,,Làm ơn, tỉnh lại đi! Yuzu!
Dialogue: 0,0:16:43.01,0:16:45.33,Default,,0000,0000,0000,,Đó là số mệnh của cô ấy.
Dialogue: 0,0:16:46.29,0:16:48.85,Default,,0000,0000,0000,,Không lẽ đó là con đường duy nhất sao?
Dialogue: 0,0:16:49.41,0:16:52.65,Default,,0000,0000,0000,,Như vậy quá phũ phàng với Shinya.
Dialogue: 0,0:17:11.65,0:17:13.85,Default,,0000,0000,0000,,Chào anh. Đây là trạm dừng chân cuối cùng.
Dialogue: 0,0:17:15.53,0:17:16.77,Default,,0000,0000,0000,,Trạm dừng chân cuối cùng.
Dialogue: 0,0:17:18.93,0:17:22.63,Type,,0000,0000,0000,,{\bord0\shad0\fnArial\fs20\pos(236,155)\frz6.391}Shinya Sinclair
Dialogue: 0,0:17:18.93,0:17:22.63,Type,,0000,0000,0000,,{\bord0\shad0\fnArial\fs20\frz6.858\pos(299,210)}Đón Shinya tại ga Kuramachi
Dialogue: 0,0:17:18.93,0:17:22.63,Type,,0000,0000,0000,,{\bord0\shad0\fnArial\fs20\pos(385,300)\frz6.141}Đưa anh ấy tới nhà thờ
Dialogue: 0,0:17:18.93,0:17:22.63,Type,,0000,0000,0000,,{\bord0\shad0\fnArial\fs20\frz4.865\pos(347,425)}Shinya
Dialogue: 0,0:17:18.93,0:17:22.63,Type,,0000,0000,0000,,{\bord0\shad0\fnArial\fs20\frz2.895\pos(476,412)}Tuyệt vời
Dialogue: 0,0:17:23.57,0:17:24.85,Default,,0000,0000,0000,,Shinya, anh thật tuyệt.
Dialogue: 0,0:17:24.95,0:17:25.75,Default,,0000,0000,0000,,Gì cơ?
Dialogue: 0,0:17:25.87,0:17:27.17,Default,,0000,0000,0000,,Anh rất tuyệt.
Dialogue: 0,0:17:27.37,0:17:29.49,Default,,0000,0000,0000,,Cám ơn cô.
Dialogue: 0,0:17:30.45,0:17:35.09,Default,,0000,0000,0000,,Tôi là búp bê Yuzu! Tôi sẽ nói thay cô chủ Yuzu của tôi!
Dialogue: 0,0:17:39.33,0:17:41.13,Default,,0000,0000,0000,,A-Anh cười gì vậy?
Dialogue: 0,0:17:43.37,0:17:45.21,Type,,0000,0000,0000,,{\bord0\shad0\fnArial\fs20\pos(244,92)\frz21.315}Shinya đang buồn...
Dialogue: 0,0:17:43.37,0:17:45.21,Type,,0000,0000,0000,,{\bord0\shad0\fnArial\fs20\pos(291,193)\frz22.078}Mình cũng buồn
Dialogue: 0,0:17:43.37,0:17:45.21,Type,,0000,0000,0000,,{\bord0\shad0\fnArial\fs20\pos(388,269)\frz22.111}Mình muốn giúp anh ấy. Biết làm sao đây?
Dialogue: 0,0:17:43.37,0:17:45.21,Type,,0000,0000,0000,,{\bord0\shad0\fnArial\fs20\pos(338,378)\frz21.359}An ủi anh ấy
Dialogue: 0,0:17:50.13,0:17:52.69,Type,,0000,0000,0000,,{\bord0\shad0\fnArial\fs20\pos(267,165)\frz28.437\frx22\fry342}Nấu bữa tối
Dialogue: 0,0:17:50.13,0:17:52.69,Type,,0000,0000,0000,,{\bord0\shad0\fnArial\fs20\frz27.296\pos(338,210)\frx20\fry348}Làm thịt hầm cho Shinya
Dialogue: 0,0:17:50.13,0:17:52.69,Type,,0000,0000,0000,,{\bord0\shad0\fnArial\fs20\pos(419,300)\frx14\fry346\frz26.152}Hi vọng sẽ an ủi anh ấy được đôi phần
Dialogue: 0,0:17:54.11,0:17:57.19,Default,,0000,0000,0000,,Vậy ra đó là những gì Mao-chan đã ám chỉ sao?
Dialogue: 0,0:17:57.21,0:17:58.89,Default,,0000,0000,0000,,Sao mình lại không nhận ra sớm hơn chứ?
Dialogue: 0,0:18:00.97,0:18:03.37,Default,,0000,0000,0000,,Yuzu, anh đến với em đây.
Dialogue: 0,0:18:03.41,0:18:04.89,Default,,0000,0000,0000,,Anh sẽ luôn ở bên cạnh em.
Dialogue: 0,0:18:05.49,0:18:07.97,Default,,0000,0000,0000,,Vậy nên, hãy mau bình phục em nhé.
Dialogue: 0,0:18:16.13,0:18:18.57,Default,,0000,0000,0000,,Shinya-kun, cháu thức cả đêm ư?
Dialogue: 0,0:18:18.61,0:18:20.95,Default,,0000,0000,0000,,Cô ấy bị như vậy đều do cháu mà ra cả.
Dialogue: 0,0:18:21.07,0:18:22.95,Default,,0000,0000,0000,,Không phải. Không phải lỗi của cháu.
Dialogue: 0,0:18:23.07,0:18:26.03,Default,,0000,0000,0000,,Cô ấy bị như vậy từ trước lúc quen cháu cơ!
Dialogue: 0,0:18:26.15,0:18:28.01,Default,,0000,0000,0000,,Cũng vậy cả thôi.
Dialogue: 0,0:18:29.85,0:18:34.49,Default,,0000,0000,0000,,Từ lúc lần đầu đặt chân tới đây, cô ấy đã luôn dõi theo cháu.
Dialogue: 0,0:18:34.85,0:18:37.85,Default,,0000,0000,0000,,Vậy mà, cháu lại không hề nhận ra điều đó.
Dialogue: 0,0:18:38.05,0:18:39.37,Default,,0000,0000,0000,,Shinya-kun...
Dialogue: 0,0:18:39.43,0:18:41.65,Default,,0000,0000,0000,,Yuzu vẫn còn sống mà.
Dialogue: 0,0:18:41.89,0:18:45.05,Default,,0000,0000,0000,,Cháu không muốn mất đi bất kì người thân nào nữa... bất kì ai...
Dialogue: 0,0:18:45.25,0:18:49.57,Default,,0000,0000,0000,,Nếu Yuzu tỉnh lại, biết đâu cô ấy sẽ không còn nhớ gì về cháu thì sao?!
Dialogue: 0,0:18:49.67,0:18:51.05,Default,,0000,0000,0000,,Cháu chịu đựng được chứ?
Dialogue: 0,0:18:51.81,0:18:55.57,Default,,0000,0000,0000,,Dù cô ấy mất toàn bộ kí ức và không nhận ra cháu,
Dialogue: 0,0:18:55.67,0:18:57.05,Default,,0000,0000,0000,,tình cảm của cháu dành cho cô ấy vẫn không hề thay đổi.
Dialogue: 0,0:18:58.85,0:19:00.33,Default,,0000,0000,0000,,Dì hiểu rồi.
Dialogue: 0,0:19:06.93,0:19:10.25,Default,,0000,0000,0000,,Shinya-kun, dì hiểu cảm giác của cháu lúc này,
Dialogue: 0,0:19:10.35,0:19:12.67,Default,,0000,0000,0000,,Dì giao lại cô ấy cho cháu đấy,
Dialogue: 0,0:19:12.89,0:19:17.63,Default,,0000,0000,0000,,dù bất cứ chuyện gì xảy ra, mong cháu đừng suy sụp giống như lần trước.
Dialogue: 0,0:19:18.05,0:19:20.37,Default,,0000,0000,0000,,Hãy can đảm đối mặt và học cách thích nghi với điều đó.
Dialogue: 0,0:19:30.01,0:19:32.77,Default,,0000,0000,0000,,Liệu chúng ta có giúp gì cho họ được không nhỉ?!
Dialogue: 0,0:19:33.33,0:19:37.15,Default,,0000,0000,0000,,Có cách rồi! Này, Suzuha-chan, giúp tôi một tay nào!
Dialogue: 0,0:19:37.23,0:19:37.95,Default,,0000,0000,0000,,Uh!
Dialogue: 0,0:19:37.97,0:19:38.87,Default,,0000,0000,0000,,Lại đây nào!
Dialogue: 0,0:19:45.13,0:19:46.45,Default,,0000,0000,0000,,Vâng, mời vào.
Dialogue: 0,0:19:46.49,0:19:48.95,Default,,0000,0000,0000,,Xin chào, người của tiệm ăn tới rồi đây!
Dialogue: 0,0:19:49.03,0:19:50.91,Default,,0000,0000,0000,,Phục vụ tại gia theo sự xếp đặt của gia chủ...
Dialogue: 0,0:19:51.09,0:19:53.37,Default,,0000,0000,0000,,Tôi không hề yêu cầu gì mà.
Dialogue: 0,0:19:53.85,0:19:55.05,Default,,0000,0000,0000,,Ta-da!
Dialogue: 0,0:19:55.59,0:19:57.21,Default,,0000,0000,0000,,Đây là quà ra mắt của chúng tôi.
Dialogue: 0,0:19:57.35,0:19:59.17,Default,,0000,0000,0000,,Hi vọng anh sẽ thích nó.
Dialogue: 0,0:19:59.77,0:20:02.17,Default,,0000,0000,0000,,Hai cô tốt quá. Tôi vô cùng biết ơn.
Dialogue: 0,0:20:39.35,0:20:40.57,Default,,0000,0000,0000,,Ba tháng đã trôi qua.
Dialogue: 0,0:20:41.35,0:20:43.01,Default,,0000,0000,0000,,Cô ấy vẫn chưa tỉnh lại.
Dialogue: 0,0:20:47.97,0:20:49.01,Default,,0000,0000,0000,,Một điềm báo chẳng lành.
Dialogue: 0,0:20:49.05,0:20:51.95,Default,,0000,0000,0000,,Đó thực sự là số phận của cô ấy sao?
Dialogue: 0,0:20:54.57,0:20:57.97,Default,,0000,0000,0000,,Tất nhiên, số phận có thể thay đổi được.
Dialogue: 0,0:20:59.45,0:21:01.09,Default,,0000,0000,0000,,Shinya, hãy chứng minh cho tôi thấy.
Dialogue: 0,0:21:01.13,0:21:03.05,Default,,0000,0000,0000,,Chứng minh rằng hai người hoàn toàn có thể thay đổi số phận.
Dialogue: 0,0:21:14.69,0:21:16.73,Default,,0000,0000,0000,,Yuzu...
Dialogue: 0,0:21:22.69,0:21:27.65,Default,,0000,0000,0000,,Trống rỗng. Tối tăm. Không trông thấy hay cảm nhận được bất cứ điều gì.
Dialogue: 0,0:21:28.49,0:21:32.33,Default,,0000,0000,0000,,Ra vậy, mình bị giam hãm trong chính bản thân mình.
Dialogue: 0,0:21:35.25,0:21:38.09,Default,,0000,0000,0000,,Quá khứ bị lãng quên, những kí ức dần tan biến...
Dialogue: 0,0:21:38.57,0:21:41.09,Default,,0000,0000,0000,,Mình sắp mất tất cả.
Dialogue: 0,0:21:41.83,0:21:45.33,Default,,0000,0000,0000,,Dù cho đó là số mệnh của mình... Mình vẫn...
Dialogue: 0,0:21:48.45,0:21:49.97,Default,,0000,0000,0000,,Có gì đáng buồn đâu chứ.
Dialogue: 0,0:21:50.37,0:21:53.25,Default,,0000,0000,0000,,Mình đâu còn gì đáng để buồn phiền lúc này.
Dialogue: 0,0:21:54.09,0:21:55.57,Default,,0000,0000,0000,,Một quá khứ trống rỗng.
Dialogue: 0,0:21:56.09,0:21:57.57,Default,,0000,0000,0000,,Một kí ức không còn tồn tại.
Dialogue: 0,0:22:00.17,0:22:01.27,Default,,0000,0000,0000,,Yuzu...
Dialogue: 0,0:22:01.49,0:22:02.37,Default,,0000,0000,0000,,Ai đó?
Dialogue: 0,0:22:13.35,0:22:14.25,Default,,0000,0000,0000,,Shinya!
Dialogue: 0,0:22:14.95,0:22:17.69,Default,,0000,0000,0000,,Đó là những kí ức về Shinya!
Dialogue: 0,0:22:19.31,0:22:21.97,Default,,0000,0000,0000,,Shinya đang tồn tại bên trong mình!
Dialogue: 0,0:22:28.33,0:22:31.53,Default,,0000,0000,0000,,Không, Shinya đã biến mất!
Dialogue: 0,0:22:32.83,0:22:34.97,Default,,0000,0000,0000,,Mọi kí ức về Shinya!
Dialogue: 0,0:22:36.39,0:22:37.57,Default,,0000,0000,0000,,Kí ức của mình...
Dialogue: 0,0:22:39.37,0:22:40.29,Default,,0000,0000,0000,,Yuzu!
Dialogue: 0,0:22:41.05,0:22:44.33,Default,,0000,0000,0000,,Những kí ức tươi đẹp biết bao!
Dialogue: 0,0:22:47.61,0:22:50.73,Default,,0000,0000,0000,,Những kí ức mình không hề muốn lãng quên hay đánh mất.
Dialogue: 0,0:22:51.13,0:22:52.61,Default,,0000,0000,0000,,Yuzu, chúng ta về nhà thôi.
Dialogue: 0,0:22:52.65,0:22:57.05,Default,,0000,0000,0000,,Shinya! Anh chính là tương lai của em.
Dialogue: 0,0:22:58.97,0:23:00.61,Default,,0000,0000,0000,,Shinya!
Dialogue: 0,0:23:04.67,0:23:07.45,Default,,0000,0000,0000,,Không hề phản ứng. Có lẽ là cô ấy đã quá mệt mỏi.
Dialogue: 0,0:23:11.75,0:23:12.81,Default,,0000,0000,0000,,Yuzu!
Dialogue: 0,0:23:14.49,0:23:16.95,Default,,0000,0000,0000,,Shin... ya...
Dialogue: 0,0:23:18.61,0:23:19.91,Default,,0000,0000,0000,,Yuzu!
Dialogue: 0,0:23:20.09,0:23:21.95,Default,,0000,0000,0000,,Không phải anh đang nằm mơ chứ?
Dialogue: 0,0:23:22.03,0:23:24.21,Default,,0000,0000,0000,,Em tỉnh lại rồi ư?!
Dialogue: 0,0:23:24.77,0:23:28.17,Default,,0000,0000,0000,,Vâng, em đã nghe được giọng nói của anh.
Dialogue: 0,0:23:28.21,0:23:31.69,Default,,0000,0000,0000,,Tạ ơn Trời. Em không hề quên anh.
Dialogue: 0,0:23:32.17,0:23:33.07,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,0:23:33.25,0:23:36.49,Default,,0000,0000,0000,,Shinya, hai ta đã có vô vàn kỉ niệm đẹp đẽ bên nhau,
Dialogue: 0,0:23:36.93,0:23:40.77,Default,,0000,0000,0000,,và anh cũng chính là tương lai của em.
Dialogue: 0,0:23:41.45,0:23:45.51,Default,,0000,0000,0000,,Shinya, vào lúc em sắp mất đi tất cả, chính anh là người đã mang tới nghị lực sống cho em.
Dialogue: 0,0:23:45.63,0:23:49.53,Default,,0000,0000,0000,,Em muốn cùng anh tạo nên nhiều kỉ niệm đáng nhớ hơn nữa.
Dialogue: 0,0:23:49.63,0:23:51.85,Default,,0000,0000,0000,,Em muốn được ở bên anh mãi mãi.
Dialogue: 0,0:23:51.91,0:23:52.85,Default,,0000,0000,0000,,Yuzu...
Dialogue: 0,0:23:52.95,0:23:55.85,Default,,0000,0000,0000,,Shinya, em yêu anh.
Dialogue: 0,0:23:56.05,0:23:58.17,Default,,0000,0000,0000,,Anh cũng yêu em, Yuzu.
Dialogue: 0,0:23:59.85,0:24:02.93,Default,,0000,0000,0000,,Em không muốn cô đơn thêm bất kì phút giây nào nữa, Shinya.
Dialogue: 0,0:24:03.13,0:24:04.41,Default,,0000,0000,0000,,Yuzu.
Dialogue: 0,0:24:15.73,0:24:16.57,Default,,0000,0000,0000,,Đau hả em?
Dialogue: 0,0:24:16.67,0:24:19.53,Default,,0000,0000,0000,,Không, chỉ hơi kích thích chút xíu thôi.
Dialogue: 0,0:24:19.73,0:24:22.73,Default,,0000,0000,0000,,Đừng lo. Cứ tin ở anh.
Dialogue: 0,0:24:23.37,0:24:24.17,Default,,0000,0000,0000,,Vâng
Dialogue: 0,0:24:32.05,0:24:33.69,Default,,0000,0000,0000,,Em xấu hổ lắm.
Dialogue: 0,0:24:33.89,0:24:34.73,Default,,0000,0000,0000,,Sao thế?
Dialogue: 0,0:24:35.61,0:24:38.53,Default,,0000,0000,0000,,Ngực em... bé quá.
Dialogue: 0,0:24:39.01,0:24:40.57,Default,,0000,0000,0000,,Đừng bận tâm.
Dialogue: 0,0:24:40.93,0:24:43.05,Default,,0000,0000,0000,,Anh luôn muốn chiêm ngưỡng những thứ thuộc về em.
Dialogue: 0,0:24:46.89,0:24:49.01,Default,,0000,0000,0000,,Em đẹp quá, Yuzu.
Dialogue: 0,0:24:50.09,0:24:51.73,Default,,0000,0000,0000,,Anh nói thật không đấy?
Dialogue: 0,0:24:52.33,0:24:55.37,Default,,0000,0000,0000,,Chỉ kề cận bên em mà nó đã chào cờ luôn rồi này.
Dialogue: 0,0:24:56.25,0:25:00.03,Default,,0000,0000,0000,,T-Tuyệt quá. Không ngờ nó lại bự đến vậy.
Dialogue: 0,0:25:00.21,0:25:02.85,Default,,0000,0000,0000,,Nó chỉ bự lên khi người yêu của anh sờ vào nó thôi.
Dialogue: 0,0:25:03.89,0:25:04.69,Default,,0000,0000,0000,,Yuzu!
Dialogue: 0,0:25:05.61,0:25:07.49,Default,,0000,0000,0000,,Không... Không, dừng lại!
Dialogue: 0,0:25:07.83,0:25:09.93,Default,,0000,0000,0000,,Đừng lo, Yuzu.
Dialogue: 0,0:25:10.84,0:25:12.25,Default,,0000,0000,0000,,Shinya...
Dialogue: 0,0:25:20.95,0:25:23.45,Default,,0000,0000,0000,,Cơ thể em... Cơ thể em khác quá!
Dialogue: 0,0:25:24.84,0:25:25.95,Default,,0000,0000,0000,,Thích không em?
Dialogue: 0,0:25:26.17,0:25:30.19,Default,,0000,0000,0000,,Em không biết nữa. Cơ thể em mất kiểm soát rồi!
Dialogue: 0,0:25:37.07,0:25:38.45,Default,,0000,0000,0000,,Tuyệt quá!
Dialogue: 0,0:25:38.59,0:25:39.85,Default,,0000,0000,0000,,Nó bự chưa kìa.
Dialogue: 0,0:25:40.84,0:25:42.77,Default,,0000,0000,0000,,Nếu em không thích thì anh cũng chẳng ép đâu.
Dialogue: 0,0:25:42.91,0:25:46.69,Default,,0000,0000,0000,,Không sao đâu anh. Em đã là một thiếu nữ trưởng thành rồi.
Dialogue: 0,0:25:58.77,0:26:02.37,Default,,0000,0000,0000,,Shinya, thế nào hả? Sướng không anh?
Dialogue: 0,0:26:03.47,0:26:05.53,Default,,0000,0000,0000,,Phải, sướng lắm!
Dialogue: 0,0:26:06.87,0:26:08.13,Default,,0000,0000,0000,,Giờ tới lượt anh.
Dialogue: 0,0:26:10.17,0:26:11.85,Default,,0000,0000,0000,,Không. Dừng lại.
Dialogue: 0,0:26:11.99,0:26:15.17,Default,,0000,0000,0000,,Thôi nào. Cho anh ngắm chút đi.
Dialogue: 0,0:26:21.49,0:26:23.01,Default,,0000,0000,0000,,Anh muốn ngắm nhìn mọi thứ.
Dialogue: 0,0:26:23.11,0:26:28.65,Default,,0000,0000,0000,,Không, dừng lại đi. Đừng áp sát mặt anh vào chỗ đó.
Dialogue: 0,0:26:29.83,0:26:33.21,Default,,0000,0000,0000,,Em đẹp lắm, Yuzu. Anh muốn liếm em.
Dialogue: 0,0:26:38.21,0:26:39.45,Default,,0000,0000,0000,,Không, đừng mà.
Dialogue: 0,0:26:45.47,0:26:53.49,Default,,0000,0000,0000,,Shinya, không phải chỗ đó! Không... Shinya! Em... Em...
Dialogue: 0,0:26:56.83,0:26:58.13,Default,,0000,0000,0000,,Shinya!
Dialogue: 0,0:27:12.83,0:27:14.37,Default,,0000,0000,0000,,Yuzu, anh vào đây.
Dialogue: 0,0:27:14.47,0:27:15.33,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,0:27:19.63,0:27:20.65,Default,,0000,0000,0000,,Em vẫn ổn chứ?
Dialogue: 0,0:27:21.09,0:27:25.29,Default,,0000,0000,0000,,Em không sao. Giờ đây hai chúng ta đã hòa làm một.
Dialogue: 0,0:27:25.83,0:27:29.93,Default,,0000,0000,0000,,Đúng vậy. Em cảm thấy anh bên trong chứ?
Dialogue: 0,0:27:30.53,0:27:34.73,Default,,0000,0000,0000,,Vâng. Em cảm thấy anh đang ở bên trong em.
Dialogue: 0,0:27:40.17,0:27:42.53,Default,,0000,0000,0000,,Sh-Shinya. Shinya!
Dialogue: 0,0:27:42.53,0:27:43.53,Default,,0000,0000,0000,,Yuzu!
Dialogue: 0,0:27:47.11,0:27:53.11,Default,,0000,0000,0000,,Thế này xấu hổ quá. Cơ thể em... mất tự chủ rồi.
Dialogue: 0,0:27:53.19,0:27:54.45,Default,,0000,0000,0000,,Sướng không em?
Dialogue: 0,0:27:55.01,0:27:56.49,Default,,0000,0000,0000,,Em không biết nữa.
Dialogue: 0,0:27:56.99,0:28:01.03,Default,,0000,0000,0000,,Em cảm thấy anh bên trong, sâu bên trong em.
Dialogue: 0,0:28:01.15,0:28:04.57,Default,,0000,0000,0000,,Anh có ở khắp nơi bên trong cơ thể em.
Dialogue: 0,0:28:07.85,0:28:11.37,Default,,0000,0000,0000,,Yuzu, anh yêu em! Anh yêu em, Yuzu!
Dialogue: 0,0:28:12.37,0:28:15.35,Default,,0000,0000,0000,,Em cũng yêu anh, hơn bất kì người nào khác trên đời.
Dialogue: 0,0:28:15.43,0:28:17.37,Default,,0000,0000,0000,,Em yêu anh, Shinya!
Dialogue: 0,0:28:18.15,0:28:21.45,Default,,0000,0000,0000,,Anh không thể kiềm chế lâu hơn nữa. Yuzu, anh ra đây!
Dialogue: 0,0:28:21.55,0:28:24.37,Default,,0000,0000,0000,,Vâng, ra vào bên trong em đi.
Dialogue: 0,0:28:24.47,0:28:25.41,Default,,0000,0000,0000,,Shinya...
Dialogue: 0,0:28:25.43,0:28:26.73,Default,,0000,0000,0000,,Shinya!
Dialogue: 0,0:28:27.23,0:28:28.37,Default,,0000,0000,0000,,Yuzu!
Dialogue: 0,0:28:35.83,0:28:40.41,Default,,0000,0000,0000,,Ôi Shinya. Tinh dịch của anh đang lấp đầy bên trong em.
Dialogue: 0,0:28:50.35,0:28:51.33,Default,,0000,0000,0000,,Shinya...
Dialogue: 0,0:28:51.97,0:28:53.05,Default,,0000,0000,0000,,Yuzu.
Dialogue: 0,0:28:53.15,0:28:55.01,Default,,0000,0000,0000,,Giờ đây chúng ta đã có thêm một kỉ niệm đẹp nữa.
Dialogue: 0,0:28:56.01,0:28:57.93,Default,,0000,0000,0000,,Cám ơn anh, Shinya.
Dialogue: 0,0:28:58.53,0:28:59.57,Default,,0000,0000,0000,,Yuzu...
Dialogue: 0,0:29:12.39,0:29:14.61,Default,,0000,0000,0000,,Vậy bệnh tình cô ấy sau đó thế nào?
Dialogue: 0,0:29:14.71,0:29:17.49,Default,,0000,0000,0000,,À, kể từ đó, căn bệnh hoàn toàn biến mất.
Dialogue: 0,0:29:17.59,0:29:19.59,Default,,0000,0000,0000,,Ngay cả bác sĩ cũng không tin vào mắt mình.
Dialogue: 0,0:29:19.67,0:29:23.89,Default,,0000,0000,0000,,Bởi vì đó là một căn bệnh nan y, ông cho rằng điều này giống như phép màu vậy.
Dialogue: 0,0:29:24.09,0:29:25.89,Default,,0000,0000,0000,,Giống như phép màu...
Dialogue: 0,0:29:29.13,0:29:33.01,Default,,0000,0000,0000,,Anh ta vẫn chưa tới ư? Muộn lắm rồi đó.
Dialogue: 0,0:29:33.07,0:29:34.17,Default,,0000,0000,0000,,Xin lỗi vì đã để mọi người chờ lâu
Dialogue: 0,0:29:35.83,0:29:37.01,Default,,0000,0000,0000,,Xin lỗi, xin lỗi.
Dialogue: 0,0:29:37.11,0:29:39.05,Default,,0000,0000,0000,,Tuyết rơi dày quá, vì phải dọn tuyết nên chúng tôi đã tới trễ.
Dialogue: 0,0:29:39.15,0:29:40.81,Default,,0000,0000,0000,,Lề mề quá đấy. Tên hầu!
Dialogue: 0,0:29:43.51,0:29:46.27,Default,,0000,0000,0000,,Nhanh đến với Narumi đi kìa!
Dialogue: 0,0:29:46.39,0:29:47.97,Default,,0000,0000,0000,,Anh không sao chứ, Shinya?
Dialogue: 0,0:29:48.65,0:29:49.05,Default,,0000,0000,0000,,Shinya!
Dialogue: 0,0:29:49.15,0:29:51.29,Default,,0000,0000,0000,,Mấy người bọn họ vẫn chẳng thay đổi gì cả.
Dialogue: 0,0:29:53.21,0:29:54.41,Default,,0000,0000,0000,,Có lẽ nào...
Dialogue: 0,0:29:55.01,0:29:56.81,Default,,0000,0000,0000,,Không, không có gì.
Dialogue: 0,0:31:23.25,0:31:26.37,Default,,0000,0000,0000,,Chú chim kia... Tựa như một thiên thần vậy!
