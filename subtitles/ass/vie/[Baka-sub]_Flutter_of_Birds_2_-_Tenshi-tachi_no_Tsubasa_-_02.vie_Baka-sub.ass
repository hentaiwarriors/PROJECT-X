Dialogue: 0,0:00:11.45,0:00:13.17,Default,,0000,0000,0000,,Cô vẫn nhớ gương mặt của Shinya-kun lúc đó.
Dialogue: 0,0:00:13.41,0:00:15.89,Default,,0000,0000,0000,,Cô thậm chí còn không dám nhìn vào mặt cậu ấy.
Dialogue: 0,0:00:16.37,0:00:19.45,Default,,0000,0000,0000,,Cậu ấy suốt ngày đổ lỗi cho mình về sự ra đi của Narumi-chan.
Dialogue: 0,0:00:23.29,0:00:25.15,Default,,0000,0000,0000,,Hắn ta đáng bị như vậy!
Dialogue: 0,0:00:25.33,0:00:29.89,Default,,0000,0000,0000,,Chỉ cần hắn không đùa giỡn với tình cảm của Narumi...
Dialogue: 0,0:00:30.93,0:00:32.47,Default,,0000,0000,0000,,Cô biết thâm tâm cháu không hề nghĩ như vậy.
Dialogue: 0,0:00:32.69,0:00:34.09,Default,,0000,0000,0000,,N-Nói vậy là sao chứ ?
Dialogue: 0,0:00:34.19,0:00:36.41,Default,,0000,0000,0000,,C-Cháu không có nói đùa đâu!
Dialogue: 0,0:00:36.91,0:00:39.81,Default,,0000,0000,0000,,Tuy nhiên, cô đã sai khi đổ lỗi cho người khác về cái chết của Narumi.
Dialogue: 0,0:00:40.65,0:00:41.73,Default,,0000,0000,0000,,Mao-chan!
Dialogue: 0,0:00:00.00,0:00:00.00,Default,,0000,0000,0000,,Không một ai có thể trốn chạy cái chết.
Dialogue: 0,0:00:42.89,0:00:45.89,Default,,0000,0000,0000,,Cái chết là một phần của số mệnh.
Dialogue: 0,0:00:46.73,0:00:48.73,Default,,0000,0000,0000,,Cám ơn vì cháu đã tới.
Dialogue: 0,0:00:51.19,0:00:55.13,Default,,0000,0000,0000,,Điều quan trọng nhất với mỗi người là được sống một cuộc đời hạnh phúc.
Dialogue: 0,0:00:56.01,0:00:58.77,Default,,0000,0000,0000,,Narumi đã được sống cuộc đời như ý nguyện của cô ấy.
Dialogue: 0,0:00:59.03,0:01:01.01,Default,,0000,0000,0000,,Cô ấy đã tìm được hạnh phúc của riêng mình.
Dialogue: 0,0:01:01.25,0:01:04.05,Default,,0000,0000,0000,,Cô chỉ đang cố bào chữa cho sự bất lực của mình mà thôi!
Dialogue: 0,0:01:04.29,0:01:07.03,Default,,0000,0000,0000,,Cô biết sớm muộn gì chuyện đó cũng xảy ra. Cô là người có thể biết trước tương lai mà!
Dialogue: 0,0:01:07.33,0:01:09.95,Default,,0000,0000,0000,,Cô thừa biết rằng cậu ấy rất yếu ớt...
Dialogue: 0,0:01:10.17,0:01:11.89,Default,,0000,0000,0000,,và cái chết luôn lơ lửng trên đầu cậu ấy từng phút từng giây!
Dialogue: 0,0:01:13.01,0:01:14.05,Default,,0000,0000,0000,,Tôi không phủ nhận điều đó.
Dialogue: 0,0:01:14.09,0:01:16.05,Default,,0000,0000,0000,,Đó là năng lực đặc biệt của tôi.
Dialogue: 0,0:01:16.09,0:01:20.49,Default,,0000,0000,0000,,Lời chỉ dẫn của cây cung may mắn vẽ lên một định mệnh mà không ai có thể lẩn tránh.
Dialogue: 0,0:01:21.45,0:01:25.17,Default,,0000,0000,0000,,Mao-chan vẫn thường xuyên tới thăm Narumi-chan mà,
Dialogue: 0,0:01:25.85,0:01:30.09,Default,,0000,0000,0000,,cho dù cô ấy biết mạng sống của Narumi-chan là vô cùng ngắn ngủi.
Dialogue: 0,0:01:30.33,0:01:34.37,Default,,0000,0000,0000,,Cháu biết, nhưng chính điều đó khiến cháu cảm thấy tồi tệ vô cùng.
Dialogue: 0,0:01:34.61,0:01:37.21,Default,,0000,0000,0000,,Cậu ấy xứng đáng được hưởng hạnh phúc.
Dialogue: 0,0:01:37.53,0:01:40.02,Default,,0000,0000,0000,,Tại sao số phận lại đối xử nghiệt ngã với cậu ấy như vậy?
Dialogue: 0,0:01:40.45,0:01:43.57,Default,,0000,0000,0000,,Phải, số phận luôn nghiệt ngã.
Dialogue: 0,0:01:43.81,0:01:48.21,Default,,0000,0000,0000,,Với cả những người ra đi, và cả những người ở lại.
Dialogue: 0,0:01:48.84,0:01:51.81,Default,,0000,0000,0000,,Shinya đã từng nguyền rủa số phận nghiệt ngã của cô ấy.
Dialogue: 0,0:01:52.05,0:01:54.69,Default,,0000,0000,0000,,Vào lúc tôi gặp cậu ấy.
Dialogue: 0,0:01:55.13,0:01:57.17,Default,,0000,0000,0000,,Có lẽ việc hai chúng tôi gặp nhau cũng là do số phận run rủi.
Dialogue: 0,0:01:57.21,0:01:59.57,Default,,0000,0000,0000,,Chẳng phải cháu đã đoán trước được chuyện đó rồi sao?
Dialogue: 0,0:01:59.81,0:02:02.93,Default,,0000,0000,0000,,Tôi chỉ đơn giản làm theo lời chỉ dẫn của cây cung và chấp nhận sự an bài của số phận mà thôi.
Dialogue: 0,0:02:04.29,0:02:07.29,Default,,0000,0000,0000,,Vận mệnh mà tôi được giao phó.
