Dialogue: 0,0:00:02.92,0:00:06.44,Default,,0000,0000,0000,,Project này thuộc về website : Baka-sub.net
Dialogue: 0,0:00:07.67,0:00:10.10,Default,,0000,0000,0000,,{\i1}Nhìn em này.{\i0}
Dialogue: 0,0:00:14.61,0:00:18.01,Default,,0000,0000,0000,,{\i1}Thấy ko? Chỗ đó của em ướt lắm rồi.{\i0}
Dialogue: 0,0:00:18.84,0:00:21.54,Default,,0000,0000,0000,,{\i1}Hãy nhìn vào bên trong em.{\i0}
Dialogue: 0,0:00:21.58,0:00:25.01,Default,,0000,0000,0000,,{\i1}Hãy ghi lại hết những khoảnh khắc như lúc này của em.{\i0}
Dialogue: 0,0:00:26.08,0:00:28.81,Default,,0000,0000,0000,,{\i1}Nhìn xem chúng banh hết ra tới mức nào...{\i0}
Dialogue: 0,0:00:29.65,0:00:32.59,Default,,0000,0000,0000,,{\i1}Anh có nghe thấy những âm thanh đó ko?{\i0}
Dialogue: 0,0:00:35.26,0:00:37.23,Default,,0000,0000,0000,,{\i1}Sướng quá đi mất!{\i0}\NChuyện này là sao?
Dialogue: 0,0:00:37.59,0:00:40.83,Default,,0000,0000,0000,,Tôi đang nghĩ tới việc tung nó lên lnternet.
Dialogue: 0,0:00:41.57,0:00:44.90,Default,,0000,0000,0000,,Sao cậu có thể làm điều khủng khiếp như vậy, liệu con bé có chịu đựng nổi việc này ko?
Dialogue: 0,0:00:46.00,0:00:47.90,Default,,0000,0000,0000,,Yuna đã rất yêu cậu...
Dialogue: 0,0:00:48.51,0:00:52.97,Default,,0000,0000,0000,,Chính cô là người đã nói rằng tôi có thể làm bất cứ điều gì với cô ấy,
Dialogue: 0,0:00:53.01,0:00:54.38,Default,,0000,0000,0000,,dù cho cô ấy là em gái của tôi.
Dialogue: 0,0:00:56.68,0:01:00.64,Default,,0000,0000,0000,,Nếu như cô nghĩ lại, có thể tôi sẽ đổi ý đó.
Dialogue: 0,0:01:01.85,0:01:03.72,Default,,0000,0000,0000,,Tôi sẽ ko bao giờ giao bức tranh đó cho cậu.
Dialogue: 0,0:01:04.86,0:01:07.48,Default,,0000,0000,0000,,Tôi ko cần bức tranh đó.
Dialogue: 0,0:01:08.23,0:01:10.79,Default,,0000,0000,0000,,Thứ mà tôi muốn lúc này chính là cô.
Dialogue: 0,0:01:12.46,0:01:15.33,Default,,0000,0000,0000,,Nếu cô chấp nhận cùng tôi làm một số chuyện...
Dialogue: 0,0:01:16.43,0:01:18.06,Default,,0000,0000,0000,,Tôi sẽ ko làm bất cứ điều gì ảnh hưởng tới Yuna cả.
Dialogue: 0,0:01:21.14,0:01:22.16,Default,,0000,0000,0000,,Cô sẽ nói gì nào?
Dialogue: 0,0:01:24.04,0:01:25.24,Default,,0000,0000,0000,,Có vẻ như cô đã kiên quyết từ chối.
Dialogue: 0,0:01:31.12,0:01:32.01,Default,,0000,0000,0000,,Vào đây.
Dialogue: 0,0:01:32.68,0:01:34.55,Default,,0000,0000,0000,,Vâng, anh hai.
Dialogue: 0,0:01:40.56,0:01:42.79,Default,,0000,0000,0000,,Yuna! Con nghĩ con đang làm cái gì vậy?
Dialogue: 0,0:01:43.36,0:01:46.99,Default,,0000,0000,0000,,Con đã làm đúng theo những gì mà mẹ yêu cầu mà.
Dialogue: 0,0:01:48.20,0:01:49.56,Default,,0000,0000,0000,,Nhưng...
Dialogue: 0,0:01:51.17,0:01:56.80,Default,,0000,0000,0000,,Yuna, nâng chân lên và cho Megumi-san thấy chỗ đó của em nào.
Dialogue: 0,0:01:57.57,0:01:59.54,Default,,0000,0000,0000,,Vâng, anh hai.
Dialogue: 0,0:02:00.54,0:02:03.95,Default,,0000,0000,0000,,Dùng tay của em banh rộng hơn nữa cho cô ta nhìn rõ hơn nào.
Dialogue: 0,0:02:06.32,0:02:08.08,Default,,0000,0000,0000,,Cô ấy ướt quá.
Dialogue: 0,0:02:09.29,0:02:12.98,Default,,0000,0000,0000,,Tôi ko thể tin là cách đây một tháng cô ấy vẫn còn là một trinh nữ.
Dialogue: 0,0:02:13.92,0:02:15.98,Default,,0000,0000,0000,,Tôi sẽ thử nhét cả bàn tay mình vào đó xem sao.
Dialogue: 0,0:02:17.06,0:02:24.73,Default,,0000,0000,0000,,Ko, đừng! Anh ko thể làm thế được! Ko! Dừng lại! Cứu con với! Mẹ ơi!
Dialogue: 0,0:02:25.40,0:02:26.46,Default,,0000,0000,0000,,Dừng lại ngay!
Dialogue: 0,0:02:29.67,0:02:31.30,Default,,0000,0000,0000,,Yuna! Con ko sao chứ?
Dialogue: 0,0:02:36.68,0:02:38.58,Default,,0000,0000,0000,,Tôi sẽ thế chỗ cho Yuna!
Dialogue: 0,0:02:39.68,0:02:41.08,Default,,0000,0000,0000,,Thế chỗ cho việc gì?
Dialogue: 0,0:02:44.76,0:02:49.06,Default,,0000,0000,0000,,Tôi sẽ thay Yuna thỏa mãn những ham muốn của cậu.
Dialogue: 0,0:02:49.53,0:02:50.65,Default,,0000,0000,0000,,Thật vậy hả?
Dialogue: 0,0:02:52.20,0:02:55.19,Default,,0000,0000,0000,,Đúng thế, cậu có thể làm bất cứ điều gì mình muốn.
Dialogue: 0,0:03:11.88,0:03:13.14,Default,,0000,0000,0000,,D... Dừng lại!
Dialogue: 0,0:03:15.59,0:03:17.78,Default,,0000,0000,0000,,Cậu làm gì thế? Đau đấy!
Dialogue: 0,0:03:18.96,0:03:21.32,Default,,0000,0000,0000,,Tôi cần làm cho cô ko thể phản kháng lại, vậy nên...
Dialogue: 0,0:03:21.96,0:03:22.98,Default,,0000,0000,0000,,Nhưng mà...
Dialogue: 0,0:03:23.79,0:03:26.89,Default,,0000,0000,0000,,Làm ơn... Yuna đang... Làm ơn, đừng làm điều này trước mặt Yuna.
Dialogue: 0,0:03:27.97,0:03:28.95,Default,,0000,0000,0000,,Làm ơn đi mà...
Dialogue: 0,0:03:32.30,0:03:35.40,Default,,0000,0000,0000,,Yuna thì liên quan gì tới chuyện này chứ.
Dialogue: 0,0:03:37.44,0:03:39.24,Default,,0000,0000,0000,,Có vẻ như cô ấy ngất đi rồi.
Dialogue: 0,0:03:39.28,0:03:41.47,Default,,0000,0000,0000,,Sao cậu có thể... Đau quá.
Dialogue: 0,0:03:41.51,0:03:44.11,Default,,0000,0000,0000,,Kyosuke-kun, đừng có vuốt ve chỗ đó mạnh tay như vậy.
Dialogue: 0,0:03:48.85,0:03:50.72,Default,,0000,0000,0000,,D... Dừng lại đi, Kyosuke-kun.
Dialogue: 0,0:03:51.79,0:03:53.48,Default,,0000,0000,0000,,Quần lót của cô có một vết dơ này.
Dialogue: 0,0:03:54.36,0:03:57.19,Default,,0000,0000,0000,,Cô bị kích thích khi trông thấy Yuna khỏa thân phải ko?
Dialogue: 0,0:03:57.23,0:03:59.16,Default,,0000,0000,0000,,Đừng có nói đến những điều ngu ngốc đó!
Dialogue: 0,0:04:03.27,0:04:07.14,Default,,0000,0000,0000,,Yuna, coi nè. Megumi đang rất phấn khích.
Dialogue: 0,0:04:08.11,0:04:11.10,Default,,0000,0000,0000,,Ko, Yuna. Đừng có nhìn mẹ.
Dialogue: 0,0:04:11.14,0:04:13.61,Default,,0000,0000,0000,,Đừng hành hạ tôi trước mặt con bé.
Dialogue: 0,0:04:14.08,0:04:15.37,Default,,0000,0000,0000,,Cơ thể cô đang nóng ran lên.
Dialogue: 0,0:04:16.58,0:04:17.88,Default,,0000,0000,0000,,Ko, dừng lại.
Dialogue: 0,0:04:17.92,0:04:20.98,Default,,0000,0000,0000,,Ko ngờ gái một con như cô mà chỗ đó lại khít như vậy.
Dialogue: 0,0:04:25.09,0:04:27.82,Default,,0000,0000,0000,,Sao thế? Ko chịu nổi nữa rồi hả?
Dialogue: 0,0:04:29.89,0:04:30.95,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,0:04:31.33,0:04:36.03,Default,,0000,0000,0000,,Yuna. Con ko việc gì phải làm chuyện đó nữa. Mẹ đã...
Dialogue: 0,0:04:36.43,0:04:39.80,Default,,0000,0000,0000,,Thật là ko công bằng. Mẹ đã được anh hai vuốt ve một lúc rồi mà.
Dialogue: 0,0:04:41.44,0:04:43.03,Default,,0000,0000,0000,,Yuna, con...
Dialogue: 0,0:04:45.21,0:04:48.94,Default,,0000,0000,0000,,Thế này ko được. Tôi đã hứa với cậu là sẽ thay thế Yuna rồi mà.
Dialogue: 0,0:04:49.65,0:04:54.78,Default,,0000,0000,0000,,Yuna tự nguyện làm như vậy. Tôi chẳng có lí do gì để ngăn cấm cô ấy cả.
Dialogue: 0,0:04:55.19,0:04:56.71,Default,,0000,0000,0000,,Nhưng...
Dialogue: 0,0:04:57.19,0:05:03.22,Default,,0000,0000,0000,,Yuna, ráng đợi chút nữa đi, được ko? Anh sẽ làm cho Megumi-san thỏa mãn trước đã.
Dialogue: 0,0:05:03.86,0:05:05.29,Default,,0000,0000,0000,,Hai người....
Dialogue: 0,0:05:07.23,0:05:11.72,Default,,0000,0000,0000,,Con muốn mẹ và anh hai hiểu nhau hơn.
Dialogue: 0,0:05:12.54,0:05:14.83,Default,,0000,0000,0000,,Con muốn tất cả chúng ta có thể chung sống hạnh phúc bên nhau.
Dialogue: 0,0:05:20.34,0:05:21.44,Default,,0000,0000,0000,,Đợi đã!
Dialogue: 0,0:05:22.98,0:05:24.41,Default,,0000,0000,0000,,Ko!
Dialogue: 0,0:05:24.45,0:05:27.32,Default,,0000,0000,0000,,Thế nào? Cô có thích điều đó ko? Đã lâu lắm rồi cô chưa làm chuyện này phải ko.
Dialogue: 0,0:05:29.59,0:05:31.82,Default,,0000,0000,0000,,Phải chăng chuyện này sướng tới mức làm cô ko thể thột nên lời?
Dialogue: 0,0:05:32.92,0:05:34.72,Default,,0000,0000,0000,,Ko, dừng lại, Kyosuke-kun...
Dialogue: 0,0:05:37.09,0:05:38.76,Default,,0000,0000,0000,,{\i1}Ko, mình ko muốn mọi chuyện diễn ra như thế này.{\i0}
Dialogue: 0,0:05:39.30,0:05:42.20,Default,,0000,0000,0000,,{\i1}Mình bị cưỡng bức bởi con trai riêng của chồng mình nhưng mình lại cảm thấy phấn khích.{\i0}
Dialogue: 0,0:05:44.17,0:05:50.16,Default,,0000,0000,0000,,Mẹ, có sướng ko ạ? Mẹ có thể rên lên nếu muốn mà.
Dialogue: 0,0:05:50.61,0:05:51.94,Default,,0000,0000,0000,,Yuna...
Dialogue: 0,0:05:52.64,0:05:54.41,Default,,0000,0000,0000,,Megumi, cô đang rất phấn khích, phải ko?
Dialogue: 0,0:05:54.88,0:05:55.85,Default,,0000,0000,0000,,Ko...
Dialogue: 0,0:05:57.65,0:05:59.48,Default,,0000,0000,0000,,Cô sẽ phải nói ra điều đó khi tôi làm đau cô.
Dialogue: 0,0:06:00.28,0:06:02.11,Default,,0000,0000,0000,,Cậu đừng hòng... Ko...
Dialogue: 0,0:06:08.36,0:06:10.95,Default,,0000,0000,0000,,Cô muốn tôi làm đến cùng, phải ko, Megumi?
Dialogue: 0,0:06:11.29,0:06:12.82,Default,,0000,0000,0000,,Làm ơn, dừng lại đi...
Dialogue: 0,0:06:13.93,0:06:15.45,Default,,0000,0000,0000,,Cô sắp ra rồi phải ko.
Dialogue: 0,0:06:15.50,0:06:17.43,Default,,0000,0000,0000,,Ko, ko phải thế... Ko...
Dialogue: 0,0:06:20.54,0:06:21.83,Default,,0000,0000,0000,,Ra đi nào, Megumi!
Dialogue: 0,0:06:22.71,0:06:25.11,Default,,0000,0000,0000,,Kooo!
Dialogue: 0,0:06:50.03,0:06:51.93,Default,,0000,0000,0000,,{\i1}Vào khoảnh khắc đó, mọi chuyện đã trở nên rõ ràng đối với tôi.{\i0}
Dialogue: 0,0:06:53.04,0:06:57.23,Default,,0000,0000,0000,,{\i1}Cả Megumi và Yuna đều thích điều đó.{\i0}
Dialogue: 0,0:07:00.01,0:07:04.21,Default,,0000,0000,0000,,Xin lỗi anh, nhưng chỉ nhân viên ở đây mới được phép vào chỗ đó.
Dialogue: 0,0:07:05.62,0:07:09.88,Default,,0000,0000,0000,,Dì tôi... uhm, Megumi Wakao đã ra ngoài rồi hả?
Dialogue: 0,0:07:10.59,0:07:12.42,Default,,0000,0000,0000,,Cậu là con trai của Megumi-san à?
Dialogue: 0,0:07:13.09,0:07:13.68,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,0:07:14.52,0:07:18.65,Default,,0000,0000,0000,,Cô ấy đã ra ngoài để giải quyết một số việc lặt vặt. Chắc cô ấy sẽ sớm quay về thôi.
Dialogue: 0,0:07:19.40,0:07:23.23,Default,,0000,0000,0000,,Tôi ngồi đợi cô ấy trong văn phòng thì ko vấn đề gì chứ?
Dialogue: 0,0:07:23.27,0:07:24.53,Default,,0000,0000,0000,,Tôi thật sự xin lỗi nhưng...
Dialogue: 0,0:07:24.57,0:07:28.33,Default,,0000,0000,0000,,Tệ thật... Dì tôi ko hề nói gì với cô ư?
Dialogue: 0,0:07:30.27,0:07:35.51,Default,,0000,0000,0000,,Tôi đến để bàn về vấn đề thừa kế gia tài của cha tôi. Cô ấy bảo tôi đợi ...
Dialogue: 0,0:07:35.55,0:07:37.84,Default,,0000,0000,0000,,ở trong văn phòng vì giữ kín cuộc nói chuyện này.
Dialogue: 0,0:07:38.62,0:07:40.11,Default,,0000,0000,0000,,Cô ấy đã dặn cậu như vậy hả?
Dialogue: 0,0:07:40.62,0:07:41.35,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,0:07:45.12,0:07:45.99,Default,,0000,0000,0000,,Cám ơn cô.
Dialogue: 0,0:07:47.22,0:07:48.71,Default,,0000,0000,0000,,Um...
Dialogue: 0,0:07:48.76,0:07:52.49,Default,,0000,0000,0000,,Megumi-san mấy hôm nay trông có vẻ rất mệt mỏi.
Dialogue: 0,0:07:53.43,0:07:55.23,Default,,0000,0000,0000,,Chắc hẳn có chuyện gì đó đã xảy ra?
Dialogue: 0,0:07:55.57,0:07:58.73,Default,,0000,0000,0000,,Đó chắc hẳn là do sắp tới ngày diễn ra buổi triển lãm tranh của cha tôi.
Dialogue: 0,0:07:59.60,0:08:01.47,Default,,0000,0000,0000,,Hi vọng mọi chuyện đều diễn ra suôn sẻ.
Dialogue: 0,0:08:06.81,0:08:09.97,Default,,0000,0000,0000,,{\i1}Sự khao khát của bình minh. Đây là tác phẩm đầu tiên của cha tôi,{\i0}
Dialogue: 0,0:08:10.01,0:08:10.98,Default,,0000,0000,0000,,và cũng chính là một kiệt tác của ông.
Dialogue: 0,0:08:11.92,0:08:15.44,Default,,0000,0000,0000,,Nhưng nó lại ko hề có trong bản danh sách do cha để lại.
Dialogue: 0,0:08:17.89,0:08:22.55,Default,,0000,0000,0000,,{\i1}Cha đã nói nó có liên quan tới bức "Sự kết thúc của màn đêm", nhưng...{\i0}
Dialogue: 0,0:08:25.43,0:08:26.66,Default,,0000,0000,0000,,Sao cậu lại tới đây?
Dialogue: 0,0:08:26.96,0:08:29.52,Default,,0000,0000,0000,,Tôi nghĩ cô nên trưng bày nó trong buổi triển lãm...
Dialogue: 0,0:08:29.57,0:08:31.40,Default,,0000,0000,0000,,Nếu cô cứ treo nó tại đây thì...
Dialogue: 0,0:08:34.64,0:08:36.73,Default,,0000,0000,0000,,Tôi đã nói với cậu rồi. Nếu bức tranh này được trưng bày,
Dialogue: 0,0:08:36.77,0:08:39.94,Default,,0000,0000,0000,,Bộ văn hóa nghệ thuật và văn phòng thuế sẽ...
Dialogue: 0,0:08:41.44,0:08:44.00,Default,,0000,0000,0000,,Thực ra tôi ko đến đây vì bức tranh này.
Dialogue: 0,0:08:45.12,0:08:47.08,Default,,0000,0000,0000,,Ở đây sao? Cậu có điên ko vậy?
Dialogue: 0,0:08:48.85,0:08:52.65,Default,,0000,0000,0000,,Hãy cho cha thấy chúng ta làm điều đó tuyệt như thế nào.
Dialogue: 0,0:08:53.16,0:08:54.56,Default,,0000,0000,0000,,Thật điên rồi.
Dialogue: 0,0:08:54.59,0:08:58.15,Default,,0000,0000,0000,,Nếu cô nói to như vậy, cô nhân viên ngoài kia sẽ nghe thấy đó.
Dialogue: 0,0:08:59.73,0:09:02.22,Default,,0000,0000,0000,,Cô ko hề thay bộ đồ lót đó sao.
Dialogue: 0,0:09:02.83,0:09:04.66,Default,,0000,0000,0000,,Chính cậu đã yêu cầu tôi mặc chúng mà.
Dialogue: 0,0:09:05.20,0:09:06.97,Default,,0000,0000,0000,,Cô thấy xấu hổ à?
Dialogue: 0,0:09:07.00,0:09:10.37,Default,,0000,0000,0000,,Dĩ nhiên rồi. Sao tôi có thể mặc chúng tại công sở được cơ chứ.
Dialogue: 0,0:09:10.41,0:09:13.90,Default,,0000,0000,0000,,Tôi thì lại thấy nó hợp với cô đấy chứ, bởi vì cô thích đau mà.
Dialogue: 0,0:09:16.35,0:09:19.28,Default,,0000,0000,0000,,Bộ ngực của cô thật ấn tượng, tôi ko nhớ là đã ngắm nhìn chúng bao nhiêu lần rồi.
Dialogue: 0,0:09:19.32,0:09:23.31,Default,,0000,0000,0000,,Ko, ko phải ở đây. Tôi ko thể làm điều đó được. Xin cậu đấy, hãy đợi đến khi chúng ta về nhà.
Dialogue: 0,0:09:23.82,0:09:26.41,Default,,0000,0000,0000,,Nếu Nakuru trông thấy thế này... Kyosuke-kun.
Dialogue: 0,0:09:27.39,0:09:28.91,Default,,0000,0000,0000,,Tôi sẽ ko dừng lại đâu.
Dialogue: 0,0:09:30.56,0:09:34.89,Default,,0000,0000,0000,,Chính cô đã nói sẽ thay thế vị trí của Yuna.
Dialogue: 0,0:09:36.33,0:09:39.89,Default,,0000,0000,0000,,Hãy làm cho tôi ra trước khi cô gái đó để ý chuyện gì đang diễn ra.
Dialogue: 0,0:09:40.34,0:09:41.90,Default,,0000,0000,0000,,Nhưng mà...
Dialogue: 0,0:09:42.11,0:09:43.60,Default,,0000,0000,0000,,Ko...
Dialogue: 0,0:09:47.91,0:09:50.28,Default,,0000,0000,0000,,Thôi nào. Làm đi, Megumi.
Dialogue: 0,0:09:51.51,0:09:54.18,Default,,0000,0000,0000,,Sao thế? Cô muốn tôi quay về sao?
Dialogue: 0,0:09:58.59,0:10:02.79,Default,,0000,0000,0000,,Làm hết khả năng của cô xem nào. Yuna rất cừ trong chuyện này.
Dialogue: 0,0:10:15.14,0:10:18.84,Default,,0000,0000,0000,,Khá hơn rồi đó... Cô đã thành thạo hơn rồi, giờ hãy chơi tôi với bộ ngực của cô.
Dialogue: 0,0:10:20.08,0:10:22.31,Default,,0000,0000,0000,,Sao thế? Thôi nào. Làm lẹ lên đi.
Dialogue: 0,0:10:27.58,0:10:29.81,Default,,0000,0000,0000,,Đây là điều duy nhất Yuna ko thể làm.
Dialogue: 0,0:10:30.32,0:10:31.75,Default,,0000,0000,0000,,Đừng nói nữa.
Dialogue: 0,0:10:32.72,0:10:34.82,Default,,0000,0000,0000,,Giờ thì, dùng miệng của cô đi.
Dialogue: 0,0:10:48.37,0:10:50.53,Default,,0000,0000,0000,,Cô đã nứng lên khi chơi tôi bằng ngực hả?
Dialogue: 0,0:10:52.01,0:10:58.24,Default,,0000,0000,0000,,Cô thật dâm đãng. Hạ mông xuống và nhét nó vào đi.
Dialogue: 0,0:10:58.72,0:11:00.08,Default,,0000,0000,0000,,Nhưng mà...
Dialogue: 0,0:11:00.12,0:11:03.64,Default,,0000,0000,0000,,Nếu ko ko nhanh lên, cô ta sẽ vào đây đó.
Dialogue: 0,0:11:04.32,0:11:05.29,Default,,0000,0000,0000,,Nhưng...
Dialogue: 0,0:11:05.66,0:11:09.35,Default,,0000,0000,0000,,Việc cô khỏa thân ko có vấn đề gì với tôi đâu.
Dialogue: 0,0:11:25.68,0:11:29.04,Default,,0000,0000,0000,,Đừng có tự thỏa mãn một mình như thế. Nhịp mông cô nhanh lên đi nào.
Dialogue: 0,0:11:30.35,0:11:31.54,Default,,0000,0000,0000,,Nhưng mà...
Dialogue: 0,0:11:31.58,0:11:33.41,Default,,0000,0000,0000,,Vậy tôi sẽ về nhà ngay bây giờ, nhé?
Dialogue: 0,0:11:43.29,0:11:45.73,Default,,0000,0000,0000,,Di chuyển mông cô mạnh nữa lên nào!
Dialogue: 0,0:11:49.20,0:11:50.93,Default,,0000,0000,0000,,Cô ko nhịp mông nhanh hơn được nữa à?
Dialogue: 0,0:11:57.84,0:12:04.27,Default,,0000,0000,0000,,{\i1}Nếu cậu làm thế, tôi sẽ trở nên phấn khích. Tôi sẽ ko thể dừng lại được...{\i0}
Dialogue: 0,0:12:08.22,0:12:10.71,Default,,0000,0000,0000,,Ko, tôi sắp ra rồi. Tôi sắp ra rồi!
Dialogue: 0,0:12:18.29,0:12:20.16,Default,,0000,0000,0000,,{\i1}Ko, ko thể dừng lại được nữa.{\i0}
Dialogue: 0,0:12:21.06,0:12:23.23,Default,,0000,0000,0000,,Mạnh nữa lên, nhịp mông cô mạnh nữa lên.
Dialogue: 0,0:12:25.80,0:12:29.07,Default,,0000,0000,0000,,Hãy bấu chặt lấy chỗ đó và làm cho cô ra đi.
Dialogue: 0,0:12:29.37,0:12:31.57,Default,,0000,0000,0000,,{\i1}Ko, tôi sắp ra rồi...{\i0}
Dialogue: 0,0:12:31.61,0:12:35.10,Default,,0000,0000,0000,,{\i1}Phải rồi, chỗ đó sướng quá đi mất.{\i0}
Dialogue: 0,0:12:35.95,0:12:39.24,Default,,0000,0000,0000,,{\i1}Tôi sắp ra nữa rồi. Tôi ra đây.{\i0}
Dialogue: 0,0:12:41.18,0:12:42.41,Default,,0000,0000,0000,,Megumi-san.
Dialogue: 0,0:12:43.12,0:12:45.21,Default,,0000,0000,0000,,Ko! Đừng nhìn vào đó, Nakuru.
Dialogue: 0,0:12:48.66,0:12:53.15,Default,,0000,0000,0000,,Ko, đừng nhịp nữa. Tôi sẽ ra mất. Ko, đừng có nhìn tôi nữa!
Dialogue: 0,0:12:53.66,0:12:55.32,Default,,0000,0000,0000,,Tôi ra rồi! Tôi ra rồi!
Dialogue: 0,0:13:08.11,0:13:11.27,Default,,0000,0000,0000,,{\i1}Tại sao mọi chuyện lại trở nên như vậy?{\i0}
Dialogue: 0,0:13:14.35,0:13:17.05,Default,,0000,0000,0000,,{\i1}Mình đã phải đánh đổi cả Yuna cho Kyosuke-kun, và gần như tất cả mọi thứ...{\i0}
Dialogue: 0,0:13:17.09,0:13:19.05,Default,,0000,0000,0000,,{\i1}để thực hiện kế hoạch này.{\i0}
Dialogue: 0,0:13:20.06,0:13:23.55,Default,,0000,0000,0000,,{\i1}Mình ko thể ngờ cậu ta lại thèm khát mình.{\i0}
Dialogue: 0,0:13:28.90,0:13:32.27,Default,,0000,0000,0000,,{\i1}Ngay cả khi cậu ta tiếp cận mình, mình đã nghĩ mình vẫn có thể kiểm soát mọi chuyện.{\i0}
Dialogue: 0,0:13:32.84,0:13:34.39,Default,,0000,0000,0000,,{\i1}Mình ko bao giờ nghĩ rằng mình lại có thể trở nên như vậy.{\i0}
Dialogue: 0,0:13:35.31,0:13:37.97,Default,,0000,0000,0000,,{\i1}Tại sao việc bị cậu ta hành hạ lại khiến mình sung sướng đến vậy.{\i0}
Dialogue: 0,0:13:38.71,0:13:41.37,Default,,0000,0000,0000,,{\i1}Mình vẫn là mẹ của Kyosuke-kun trên danh nghĩa...{\i0}
Dialogue: 0,0:13:42.11,0:13:48.61,Default,,0000,0000,0000,,{\i1}Yuna yêu say đắm Kyosuke-kun, còn mình thì lại thèm muốn cậu ta...{\i0}
Dialogue: 0,0:13:51.89,0:13:54.62,Default,,0000,0000,0000,,{\i1}Mình thật là xấu xa...{\i0}
Dialogue: 0,0:13:57.06,0:13:59.15,Default,,0000,0000,0000,,{\i1}Tha lỗi cho mẹ, Yuna...{\i0}
Dialogue: 0,0:14:12.98,0:14:16.43,Default,,0000,0000,0000,,Chắc hẳn cô đã từng làm mẫu cho cha tôi vẽ rất nhiều, nhưng...
Dialogue: 0,0:14:17.31,0:14:20.04,Default,,0000,0000,0000,,Tôi dám cá đây là lần đầu tiên cô làm mẫu trong tư thế này.
Dialogue: 0,0:14:21.58,0:14:23.64,Default,,0000,0000,0000,,Ước gì cha có thể trông thấy cô trong tư thế này.
Dialogue: 0,0:14:24.39,0:14:25.79,Default,,0000,0000,0000,,C... Cậu định làm gì thế?
Dialogue: 0,0:14:25.82,0:14:28.26,Default,,0000,0000,0000,,Ko! Dừng lại, Kyosuke-kun!
Dialogue: 0,0:14:28.86,0:14:32.32,Default,,0000,0000,0000,,Đây là cây cọ mà cha ưa dùng nhất. Thấy sướng ko, hả?
Dialogue: 0,0:14:33.96,0:14:36.06,Default,,0000,0000,0000,,Hai đầu vú của cô nhạy cảm thật đấy.
Dialogue: 0,0:14:36.90,0:14:37.80,Default,,0000,0000,0000,,Ko...
Dialogue: 0,0:14:37.83,0:14:39.56,Default,,0000,0000,0000,,Chúng cứng lên rồi này.
Dialogue: 0,0:14:40.27,0:14:41.33,Default,,0000,0000,0000,,Dừng lại...
Dialogue: 0,0:14:43.51,0:14:45.74,Default,,0000,0000,0000,,Megumi, còn ở đây thì sao?
Dialogue: 0,0:14:46.61,0:14:48.84,Default,,0000,0000,0000,,Ko, nếu cậu làm ở đó...
Dialogue: 0,0:14:49.05,0:14:51.51,Default,,0000,0000,0000,,Ha. Nước của cô đang rịn ra kìa.
Dialogue: 0,0:14:55.05,0:14:58.38,Default,,0000,0000,0000,,Ko, đừng nhét nó vào trong đó...
Dialogue: 0,0:15:01.69,0:15:06.69,Default,,0000,0000,0000,,Ko, cậu làm tôi nứng lên rồi. Ko. Chỗ đó. Nữa. Hãy làm mạnh nữa lên.
Dialogue: 0,0:15:07.10,0:15:08.89,Default,,0000,0000,0000,,Thế chỗ này thì sao, Megumi?
Dialogue: 0,0:15:10.63,0:15:15.94,Default,,0000,0000,0000,,Ko, dừng lại! Cậu ko thể làm thế được! Ko được đâu! Đừng có nhét nó vào trong.
Dialogue: 0,0:15:18.54,0:15:23.04,Default,,0000,0000,0000,,Ko, nếu cậu còn làm thế, tôi sẽ ra mất. Dừng lại đi...
Dialogue: 0,0:15:24.08,0:15:27.38,Default,,0000,0000,0000,,Làm ơn, đừng làm thế nữa, Kyosuke-kun... Tôi sắp tè ra rồi.
Dialogue: 0,0:15:28.22,0:15:29.98,Default,,0000,0000,0000,,Tôi sẽ tè ra mất.
Dialogue: 0,0:15:35.73,0:15:38.85,Default,,0000,0000,0000,,Ko... Đừng có nhìn tôi...
Dialogue: 0,0:15:42.63,0:15:44.62,Default,,0000,0000,0000,,Cô nên kìm lại đi thì hơn.
Dialogue: 0,0:15:46.57,0:15:47.59,Default,,0000,0000,0000,,Cậu thật ác độc.
Dialogue: 0,0:16:03.75,0:16:05.65,Default,,0000,0000,0000,,Làm ơn, Kyosuke-kun...
Dialogue: 0,0:16:06.19,0:16:11.68,Default,,0000,0000,0000,,Hãy làm cho tôi ra đi... Tôi muốn quên đi mọi thứ.
Dialogue: 0,0:16:12.60,0:16:14.65,Default,,0000,0000,0000,,Cô muốn tôi làm gì nào, Megumi?
Dialogue: 0,0:16:15.73,0:16:22.30,Default,,0000,0000,0000,,Cái đó của cậu... Làm ơn hãy nhét nó vào bên trong tôi.
Dialogue: 0,0:16:23.07,0:16:26.34,Default,,0000,0000,0000,,Cuối cùng thì cô cũng học được cách van xin rồi đó.
Dialogue: 0,0:16:29.41,0:16:31.57,Default,,0000,0000,0000,,Vâng. Làm ơn...
Dialogue: 0,0:16:32.75,0:16:34.77,Default,,0000,0000,0000,,Chơi tôi đi, Kyosuke-kun.
Dialogue: 0,0:16:35.95,0:16:37.61,Default,,0000,0000,0000,,Và làm cho tôi ra...
Dialogue: 0,0:16:40.99,0:16:42.39,Default,,0000,0000,0000,,Cái gì thế?
Dialogue: 0,0:16:42.66,0:16:44.79,Default,,0000,0000,0000,,Thứ đó sẽ giúp cô đỡ đau hơn.
Dialogue: 0,0:16:47.30,0:16:48.16,Default,,0000,0000,0000,,Ko!
Dialogue: 0,0:16:48.70,0:16:52.63,Default,,0000,0000,0000,,Cậu ko thể làm như thế! Ko phải chỗ đó! Ko, dừng lại!
Dialogue: 0,0:16:54.64,0:16:58.27,Default,,0000,0000,0000,,Ko... Rút nó ra... Rút nó ra đi, Kyosuke-kun.
Dialogue: 0,0:17:00.01,0:17:01.57,Default,,0000,0000,0000,,Tôi làm đây, Megumi.
Dialogue: 0,0:17:02.58,0:17:07.41,Default,,0000,0000,0000,,Ko, Đừng! Hậu môn của tôi... hậu môn của tôi sẽ rách ra mất!
Dialogue: 0,0:17:08.38,0:17:10.28,Default,,0000,0000,0000,,Làm ơn, đừng làm thế nữa, Kyosuke-kun.
Dialogue: 0,0:17:10.32,0:17:12.88,Default,,0000,0000,0000,,Đây hẳn là lần đầu tiên cô được chơi chỗ đó phải ko, Megumi?
Dialogue: 0,0:17:14.69,0:17:17.29,Default,,0000,0000,0000,,Hậu môn của cô thật tuyệt.
Dialogue: 0,0:17:19.33,0:17:20.63,Default,,0000,0000,0000,,Đừng có đùa giỡn với tôi nữa...
Dialogue: 0,0:17:27.94,0:17:30.10,Default,,0000,0000,0000,,Sự phấn khích của cô chẳng hề giảm đi dù bị chơi bằng chỗ đó.
Dialogue: 0,0:17:30.67,0:17:32.16,Default,,0000,0000,0000,,Đừng nói nữa...
Dialogue: 0,0:17:33.21,0:17:35.47,Default,,0000,0000,0000,,Phải rồi... Chơi ở chỗ đó thật là sướng...
Dialogue: 0,0:17:37.48,0:17:40.92,Default,,0000,0000,0000,,Ko, tôi sắp ra rồi! Tôi sắp ra ở chỗ đó rồi!
Dialogue: 0,0:17:42.12,0:17:43.52,Default,,0000,0000,0000,,Ra đi nào, Megumi!
Dialogue: 0,0:17:47.06,0:17:49.08,Default,,0000,0000,0000,,Tôi ko thể, chịu đựng hơn nữa! Tôi ra đây!
Dialogue: 0,0:17:54.50,0:17:56.47,Default,,0000,0000,0000,,Coi nào, cho chúng ra ngoài hết đi, Megumi.
Dialogue: 0,0:17:57.97,0:18:02.77,Default,,0000,0000,0000,,Đừng bắt tôi làm điều đó... Sao cậu lại làm những chuyện tệ hại đến mức đó với tôi?
Dialogue: 0,0:18:03.37,0:18:05.17,Default,,0000,0000,0000,,Cô quên lời hứa giữa hai chúng ta rồi sao?
Dialogue: 0,0:18:05.84,0:18:09.57,Default,,0000,0000,0000,,Cậu thật là nhẫn tâm. Tôi còn có thể nói gì khác sao?
Dialogue: 0,0:18:20.16,0:18:21.85,Default,,0000,0000,0000,,Mùi vị thế nào hả, Megumi?
Dialogue: 0,0:18:24.83,0:18:29.16,Default,,0000,0000,0000,,Tuyệt quá. Tinh dịch của cậu... tinh dịch của cậu thật ngon, Kyosuke-kun...
Dialogue: 0,0:18:34.24,0:18:37.26,Default,,0000,0000,0000,,{\i1}Bức tranh này chính là câu trả lời cho  "Sự khao khát của bình minh"...{\i0}
Dialogue: 0,0:18:49.39,0:18:55.29,Default,,0000,0000,0000,,{\i1}Kyosuke, Megumi, Yuna. Cha muốn nói với cả ba người một chuyện.{\i0}
Dialogue: 0,0:18:57.23,0:18:59.75,Default,,0000,0000,0000,,{\i1}Trước khi cha chính thức trở thành một họa sĩ chuyên nghiệp,{\i0}
Dialogue: 0,0:18:59.80,0:19:03.93,Default,,0000,0000,0000,,{\i1}Ta đã có thời học việc với một nữ họa sĩ có tên là Azumi Murayama.{\i0}
Dialogue: 0,0:19:04.80,0:19:08.17,Default,,0000,0000,0000,,{\i1}Đó là thời điểm trước lúc cha tìm ra con đường hội họa của riêng mình.{\i0}
Dialogue: 0,0:19:11.01,0:19:16.67,Default,,0000,0000,0000,,{\i1}Vài năm sau đó, Azumi qua đời. Trước khi qua đời, bà đã dặn cha...{\i0}
Dialogue: 0,0:19:16.71,0:19:20.15,Default,,0000,0000,0000,,{\i1}''Bà có ý định vẽ một bức họa nhưng mới chỉ kịp hoàn thành bản phác thảo của nó.''{\i0}
Dialogue: 0,0:19:20.18,0:19:22.85,Default,,0000,0000,0000,,{\i1}''Bà ấy muốn cha hoàn thành nó và trưng bày cho công chúng.''{\i0}
Dialogue: 0,0:19:24.39,0:19:27.65,Default,,0000,0000,0000,,{\i1}Cha ko hề có ý định hoàn thành nó cho riêng mình.{\i0}
Dialogue: 0,0:19:28.29,0:19:30.45,Default,,0000,0000,0000,,{\i1}Cha đã quả quyết rằng sẽ để bức tranh mang tên bà ấy.{\i0}
Dialogue: 0,0:19:34.13,0:19:38.97,Default,,0000,0000,0000,,{\i1}Nhưng danh lợi đã làm cha mù quáng. Cha đã giới thiệu bức họa trước công chúng như là một tác phẩm của riêng mình.{\i0}
Dialogue: 0,0:19:39.97,0:19:44.13,Default,,0000,0000,0000,,{\i1}Và cha đã nghiễm nhiên được công nhận là tác giả của nó, như là tác phẩm đầu tiên của một họa sĩ vô danh, thay vì là...{\i0}
Dialogue: 0,0:19:44.17,0:19:48.17,Default,,0000,0000,0000,,{\i1}tác phẩm cuối cùng của Azumi Murayama, một nữ danh họa theo trường phái Showa Era .{\i0}
Dialogue: 0,0:19:48.91,0:19:51.97,Default,,0000,0000,0000,,{\i1}Đó chính là bức họa "Sự khao khát của bình minh".{\i0}
Dialogue: 0,0:19:53.18,0:19:57.88,Default,,0000,0000,0000,,{\i1}Nhiều năm trôi qua, cho tới một ngày, Megumi, một nữ doanh nhân trong ngành kinh doanh các tác phẩm hội họa, tới tìm cha.{\i0}
Dialogue: 0,0:19:59.32,0:20:04.89,Default,,0000,0000,0000,,{\i1}Cô ấy biết " Sự khao khát của bình minh " là tác phẩm của Azumi Murayama,{\i0}
Dialogue: 0,0:20:05.73,0:20:09.99,Default,,0000,0000,0000,,{\i1}và cha đã nhận ra Megumi chính là con gái của Azumi Murayama.{\i0}
Dialogue: 0,0:20:11.17,0:20:13.69,Default,,0000,0000,0000,,{\i1}Có lẽ cha cưới cô ấy một phần vì muốn bù đắp cho cô ấy.{\i0}
Dialogue: 0,0:20:14.64,0:20:18.70,Default,,0000,0000,0000,,{\i1}Nhưng tình yêu của cha dành cho Megumi là ko hề giả dối.{\i0}
Dialogue: 0,0:20:20.34,0:20:23.74,Default,,0000,0000,0000,,{\i1}Nhưng cha biết Megumi sẽ ko bao giờ tha thứ cho cha...{\i0}
Dialogue: 0,0:20:24.78,0:20:29.18,Default,,0000,0000,0000,,{\i1}vì đã đánh cắp trắng trợn thành quả cuối cùng của mẹ cô ấy.{\i0}
Dialogue: 0,0:20:32.62,0:20:34.95,Default,,0000,0000,0000,,{\i1}Megumi, Kyosuke, làm ơn hãy tha lỗi cho tôi.{\i0}
Dialogue: 0,0:20:35.56,0:20:38.39,Default,,0000,0000,0000,,{\i1}Tất cả đều bắt đầu từ sự ích kỉ của tôi.{\i0}
Dialogue: 0,0:20:39.66,0:20:43.43,Default,,0000,0000,0000,,{\i1}Tôi ko muốn hai người tiếp tục thù ghét lẫn nhau.{\i0}
Dialogue: 0,0:20:44.20,0:20:47.00,Default,,0000,0000,0000,,{\i1}Hãy vì tương lai của Yuna, con bé ko hề biết bất cứ điều gì cả.{\i0}
Dialogue: 0,0:20:47.64,0:20:51.20,Default,,0000,0000,0000,,{\i1}Tôi là người duy nhất đáng bị trừng phạt trong chuyện này.{\i0}
Dialogue: 0,0:20:52.68,0:20:56.27,Default,,0000,0000,0000,,{\i1}Tôi hi vọng ba người có thể luôn luôn sống hạnh phúc bên nhau.{\i0}
Dialogue: 0,0:20:58.05,0:21:01.57,Default,,0000,0000,0000,,Đó chính là thông điệp được giấu đằng sau bức "Sự kết thúc của màn đêm".
Dialogue: 0,0:21:03.02,0:21:06.01,Default,,0000,0000,0000,,Bây giờ tôi đã hiểu vì sao cô nâng niu bức tranh đó đến như vậy.
Dialogue: 0,0:21:07.02,0:21:10.89,Default,,0000,0000,0000,,Có trưng bày " Sự khao khát của bình minh " hay ko hoàn toàn là quyền của cô.
Dialogue: 0,0:21:12.43,0:21:16.06,Default,,0000,0000,0000,,Và cả việc đi hay ở nơi này cũng vậy.
Dialogue: 0,0:21:17.00,0:21:19.33,Default,,0000,0000,0000,,Thậm chí tôi sẽ sẵn sàng rời khỏi đây nếu cô muốn.
Dialogue: 0,0:21:22.17,0:21:26.51,Default,,0000,0000,0000,,Tôi chỉ mong cô hiểu cảm giác của Cha.
Dialogue: 0,0:21:33.62,0:21:35.55,Default,,0000,0000,0000,,Có chuyện gì vậy, anh hai?
Dialogue: 0,0:21:36.95,0:21:38.51,Default,,0000,0000,0000,,Anh trông lạ quá.
Dialogue: 0,0:21:39.09,0:21:39.99,Default,,0000,0000,0000,,Thế hả?
Dialogue: 0,0:21:40.72,0:21:41.55,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,0:21:44.79,0:21:48.49,Default,,0000,0000,0000,,Anh hai, chuyện đó là gì vậy?
Dialogue: 0,0:21:51.93,0:21:53.13,Default,,0000,0000,0000,,Em ko chịu nổi rồi hả?
Dialogue: 0,0:22:05.75,0:22:09.68,Default,,0000,0000,0000,,{\i1}Tôi hi vọng ba người có thể luôn luôn sống hạnh phúc bên nhau.{\i0}
Dialogue: 0,0:22:17.63,0:22:20.03,Default,,0000,0000,0000,,Cả ba chúng ta đều thật ngu ngốc.
Dialogue: 0,0:22:24.37,0:22:31.97,Default,,0000,0000,0000,,Phải rồi... Anh hai, sướng quá. Làm ơn, em ko thể đợi lâu hơn nữa.
Dialogue: 0,0:22:35.81,0:22:39.30,Default,,0000,0000,0000,,Chơi em đi. Nhét nó vào bên trong em đi, anh hai.
Dialogue: 0,0:22:42.08,0:22:44.75,Default,,0000,0000,0000,,Nhanh lên nào, nhét nó vào trong đi. Anh hai.
Dialogue: 0,0:22:46.52,0:22:48.25,Default,,0000,0000,0000,,Phải rồi, sướng quá.
Dialogue: 0,0:22:50.69,0:22:52.35,Default,,0000,0000,0000,,Phải rồi! Phải rồi!
Dialogue: 0,0:22:55.90,0:22:59.33,Default,,0000,0000,0000,,Anh hai, chơi em mạnh nữa lên nào!
Dialogue: 0,0:22:59.37,0:23:02.36,Default,,0000,0000,0000,,Hãy chơi chỗ đó của em thật mạnh nào!
Dialogue: 0,0:23:05.01,0:23:06.34,Default,,0000,0000,0000,,Anh hai?
Dialogue: 0,0:23:10.95,0:23:12.00,Default,,0000,0000,0000,,Mẹ?
Dialogue: 0,0:23:12.72,0:23:19.42,Default,,0000,0000,0000,,Đây là những gì ông ấy muốn, và cả con cũng vậy, phải ko?
Dialogue: 0,0:23:20.36,0:23:21.88,Default,,0000,0000,0000,,Phải ko, Yuna?
Dialogue: 0,0:23:22.16,0:23:23.89,Default,,0000,0000,0000,,Vâng, thưa mẹ.
Dialogue: 0,0:23:46.88,0:23:51.72,Default,,0000,0000,0000,,Làm ơn, Kyosuke-kun. Hãy chơi tôi đi.
Dialogue: 0,0:23:55.79,0:23:59.52,Default,,0000,0000,0000,,Phải rồi... Nữa.. Hãy đâm nó vào thật sâu bên trong tôi...
Dialogue: 0,0:24:12.48,0:24:17.81,Default,,0000,0000,0000,,Anh hai, hãy hành hạ em đi... Em muốn được ra cùng với mẹ.
Dialogue: 0,0:24:18.61,0:24:20.17,Default,,0000,0000,0000,,Được thôi, Yuna.
Dialogue: 0,0:24:22.22,0:24:29.32,Default,,0000,0000,0000,,Phải rồi, anh hai! Nữa đi, bú chỗ đó của em nữa đi!
Dialogue: 0,0:24:30.93,0:24:32.45,Default,,0000,0000,0000,,Sướng quá.
Dialogue: 0,0:24:33.63,0:24:40.00,Default,,0000,0000,0000,,Phải rồi... Kyosuke-kun, tôi sắp ra rồi! Chơi tôi đi! Chơi tôi nữa đi!
Dialogue: 0,0:24:40.04,0:24:43.70,Default,,0000,0000,0000,,Mẹ, sướng quá đi mất. chỗ đó của con sướng chết đi được.
Dialogue: 0,0:24:45.01,0:24:46.80,Default,,0000,0000,0000,,Yuna, mẹ cũng vậy.
Dialogue: 0,0:24:47.91,0:24:52.75,Default,,0000,0000,0000,,Phải rồi, anh hai! Làm mạnh nữa lên nào!
Dialogue: 0,0:24:54.02,0:24:56.28,Default,,0000,0000,0000,,Mẹ sắp ra rồi... sướng quá, sướng quá!
Dialogue: 0,0:24:56.42,0:24:58.44,Default,,0000,0000,0000,,Mẹ, hãy ra cùng với con nào!
Dialogue: 0,0:24:59.05,0:25:02.65,Default,,0000,0000,0000,,Em ra đây! Em ra đây! Em ra đây!
Dialogue: 0,0:25:03.79,0:25:06.23,Default,,0000,0000,0000,,Yuna, mẹ cũng thế. Mẹ ra rồi!
Dialogue: 0,0:25:31.39,0:25:33.82,Default,,0000,0000,0000,,Tôi ko thể ngờ lại nó còn có một bức phác thảo nữa.
Dialogue: 0,0:25:34.22,0:25:37.39,Default,,0000,0000,0000,,Họ nói bức tranh này là tác phẩm đầu tiên của ông ấy, nhưng...
Dialogue: 0,0:25:38.99,0:25:41.76,Default,,0000,0000,0000,,Khi tôi xem đến bức " Sự kết thúc của màn đêm ",
Dialogue: 0,0:25:41.80,0:25:44.46,Default,,0000,0000,0000,,Tôi chợt nhận thấy bức họa đó mới thực sự tiêu biểu cho phong cách hội họa của  Kazuma Wakao.
Dialogue: 0,0:25:45.17,0:25:48.50,Default,,0000,0000,0000,,Chúng ta như có thể nhìn thấy toàn bộ tâm hồn của ông ấy đã đặt cả vào nó.
Dialogue: 0,0:25:49.41,0:25:54.74,Default,,0000,0000,0000,,Và cũng ko thể quên nhắc tới triết lí nhân sinh ẩn chứa trong bức họa " Sự khao khát của bình minh ".
Dialogue: 0,0:25:55.01,0:25:56.44,Default,,0000,0000,0000,,Ngài nói rất phải.
Dialogue: 0,0:25:56.48,0:25:57.95,Default,,0000,0000,0000,,Thật là tuyệt diệu.
Dialogue: 0,0:26:11.03,0:26:12.22,Default,,0000,0000,0000,,Anh hai.
Dialogue: 0,0:26:17.33,0:26:19.53,Default,,0000,0000,0000,,Kyosuke-kun, chuyện gì thế?
Dialogue: 0,0:26:23.97,0:26:26.31,Default,,0000,0000,0000,,Ko có gì đâu, thưa Dì.
Dialogue: 0,0:27:09.25,0:27:16.18,Default,,0000,0000,0000,,Gặp gỡ em từ sâu thẳm bóng tối trong tôi...
Dialogue: 0,0:27:16.83,0:27:22.23,Default,,0000,0000,0000,,Hãy cho tôi biết bằng cách nào mà tôi vẫn còn tồn tại.
Dialogue: 0,0:27:23.47,0:27:30.46,Default,,0000,0000,0000,,Khi tôi nhận ra điều gì đang được phán xét,
Dialogue: 0,0:27:30.97,0:27:36.43,Default,,0000,0000,0000,,Tôi đã cố quên đi tất cả.
Dialogue: 0,0:27:37.25,0:27:44.02,Default,,0000,0000,0000,,Tựa như những canh hoa anh đào run lên trong gió bão, cố để vươn tới cõi bình yên,
Dialogue: 0,0:27:44.32,0:27:51.06,Default,,0000,0000,0000,,Cùng âm thanh của nước,
Dialogue: 0,0:27:51.39,0:27:57.99,Default,,0000,0000,0000,,và dòng chảy thời gian, tất cả trôi đi và tan biến,
Dialogue: 0,0:27:58.50,0:28:06.31,Default,,0000,0000,0000,,làm dậy lên trong tôi nỗi sợ hãi tột cùng.
