Dialogue: 0,0:08:03.23,0:08:06.76,Oshioki Dialogue,,0000,0000,0000,,Bo. Ku. No. Fu. Ne.
Dialogue: 0,0:08:07.35,0:08:09.54,Oshioki Dialogue,,0000,0000,0000,,Nào, nói theo tôi.
Dialogue: 0,0:08:10.89,0:08:21.41,Oshioki Dialogue,,0000,0000,0000,,Sui... Hei... Ri... Bei...
Dialogue: 0,0:08:21.98,0:08:27.22,Oshioki Dialogue,,0000,0000,0000,,Bo... Ku... No... Fune...
Dialogue: 0,0:08:28.35,0:08:30.08,Oshioki Dialogue,,0000,0000,0000,,Rất tốt.
Dialogue: 0,0:08:30.08,0:08:31.78,Oshioki Dialogue,,0000,0000,0000,,Đây là phần thưởng.
Dialogue: 0,0:08:49.54,0:08:51.12,Oshioki Dialogue,,0000,0000,0000,,Em ra mất...
Dialogue: 0,0:09:04.61,0:09:08.50,Oshioki Dialogue,,0000,0000,0000,,Ồ, ra là vậy?
Dialogue: 0,0:09:06.09,0:09:09.61,Oshioki Sign 2,,0000,0000,0000,,{\fad(150,150)\pos(496,127)}{\bord0\shad0\be1}Hinako
Dialogue: 0,0:09:10.02,0:09:14.46,Oshioki Dialogue,,0000,0000,0000,,Tôi thật thất vọng về cô đấy, Kuji Hinako-sensei.
Dialogue: 0,0:09:19.95,0:09:21.42,Oshioki Dialogue,,0000,0000,0000,,Kuji-sensei.
Dialogue: 0,0:09:21.42,0:09:23.78,Oshioki Dialogue,,0000,0000,0000,,Về vụ gian lận hôm qua...
Dialogue: 0,0:09:24.96,0:09:28.41,Oshioki Dialogue,,0000,0000,0000,,Tôi nghĩ là chúng ta sẽ không bàn về tin đồn đó nữa mà.
Dialogue: 0,0:09:28.41,0:09:30.83,Oshioki Dialogue,,0000,0000,0000,,Còn nhiều thứ quan trọng hơn nhiều.
Dialogue: 0,0:09:32.43,0:09:34.32,Oshioki Dialogue,,0000,0000,0000,,N-Như là...
Dialogue: 0,0:09:34.89,0:09:39.31,Oshioki Dialogue,,0000,0000,0000,,Tono-san thường xuyên cúp học, dù điểm số của em ấy khá cao.
Dialogue: 0,0:09:39.67,0:09:42.17,Oshioki Dialogue,,0000,0000,0000,,Còn Shiwa-san thì luôn ngủ gật trong lớp.
Dialogue: 0,0:09:42.68,0:09:44.02,Oshioki Dialogue,,0000,0000,0000,,Thật là phiền phức.
Dialogue: 0,0:09:44.78,0:09:49.69,Oshioki Dialogue,,0000,0000,0000,,Giá mà Kuji-sensei trong sạch hơn thì tốt biết bao.
Dialogue: 0,0:09:50.17,0:09:55.56,Oshioki Dialogue,,0000,0000,0000,,Như một con người, như là một giáo viên, và như là chị gái của Mahiru-san.
Dialogue: 0,0:10:01.93,0:10:02.56,Oshioki Dialogue,,0000,0000,0000,,Ai đó?
Dialogue: 0,0:10:03.24,0:10:04.65,Oshioki Dialogue,,0000,0000,0000,,Ôi ôi.
Dialogue: 0,0:10:04.65,0:10:08.14,Oshioki Dialogue,,0000,0000,0000,,Tôi cứ nghĩ là đã giấu kĩ khí của mình rồi.
Dialogue: 0,0:10:08.14,0:10:09.23,Oshioki Dialogue,,0000,0000,0000,,Khí của thầy?
Dialogue: 0,0:10:09.95,0:10:12.16,Oshioki Dialogue,,0000,0000,0000,,Em có chắc là không cần phải ở trong lớp học chứ?
Dialogue: 0,0:10:12.69,0:10:13.80,Oshioki Dialogue,,0000,0000,0000,,Không cần.
Dialogue: 0,0:10:13.95,0:10:15.27,Oshioki Dialogue,,0000,0000,0000,,Em đã biết hết rồi.
Dialogue: 0,0:10:15.67,0:10:18.89,Oshioki Dialogue,,0000,0000,0000,,Nhưng... không phải về vấn đề em đạt điểm cao thế nào,
Dialogue: 0,0:10:19.01,0:10:23.48,Oshioki Dialogue,,0000,0000,0000,,mà chúng tôi không cho phép em hành xử như vậy trong khi mọi người đang sốt sắng học hành được.
Dialogue: 0,0:10:23.48,0:10:26.32,Oshioki Dialogue,,0000,0000,0000,,Quay trở về lớp và xin lỗi đi.
Dialogue: 0,0:10:26.95,0:10:27.69,Oshioki Dialogue,,0000,0000,0000,,Đi nào.
Dialogue: 0,0:10:30.15,0:10:31.33,Oshioki Dialogue,,0000,0000,0000,,Đừng quấy rầy tôi!
Dialogue: 0,0:10:31.69,0:10:35.92,Oshioki Dialogue,,0000,0000,0000,,Nhưng tôi đã hy vọng giải quyết được vấn đề của em.
Dialogue: 0,0:10:35.92,0:10:37.52,Oshioki Dialogue,,0000,0000,0000,,Tôi không có vấn đề gì cả!
Dialogue: 0,0:10:37.94,0:10:39.18,Oshioki Dialogue,,0000,0000,0000,,Thật chứ?
Dialogue: 0,0:10:39.73,0:10:42.73,Oshioki Dialogue,,0000,0000,0000,,Ví dụ như... Shiwa Minami-san...
Dialogue: 0,0:10:44.80,0:10:47.05,Oshioki Dialogue,,0000,0000,0000,,Em gái tôi làm sao?
Dialogue: 0,0:10:48.77,0:10:51.68,Oshioki Dialogue,,0000,0000,0000,,Em mạnh mẽ, nhưng cũng yếu đuối.
Dialogue: 0,0:10:52.92,0:10:59.61,Oshioki Dialogue,,0000,0000,0000,,Em ước rằng Minami sẽ bỏ đi và để em được sống một mình với bố mẹ đẻ.
Dialogue: 0,0:11:02.24,0:11:04.01,Oshioki Dialogue,,0000,0000,0000,,T-Thầy...
Dialogue: 0,0:11:06.91,0:11:08.45,Oshioki Dialogue,,0000,0000,0000,,C-Cái gì?
Dialogue: 0,0:11:08.45,0:11:09.80,Oshioki Dialogue,,0000,0000,0000,,Tôi không thể cử động!
Dialogue: 0,0:11:10.03,0:11:16.72,Oshioki Dialogue,,0000,0000,0000,,À, khi em ném tôi lúc nãy, tôi đã tiêm cho em một liều thuốc giãn cơ.
Dialogue: 0,0:11:17.29,0:11:19.98,Oshioki Dialogue,,0000,0000,0000,,Và nó được pha thêm chút thuốc kích dục.
Dialogue: 0,0:11:20.93,0:11:23.01,Oshioki Dialogue,,0000,0000,0000,,G-Gì cơ?
Dialogue: 0,0:11:25.22,0:11:26.53,Oshioki Dialogue,,0000,0000,0000,,Dừng lại!
Dialogue: 0,0:11:28.61,0:11:29.79,Oshioki Dialogue,,0000,0000,0000,,Không!
Dialogue: 0,0:11:29.79,0:11:31.91,Oshioki Dialogue,,0000,0000,0000,,Thuốc hiệu quả thật.
Dialogue: 0,0:11:32.63,0:11:34.10,Oshioki Dialogue,,0000,0000,0000,,Dừng... lại...
Dialogue: 0,0:11:36.35,0:11:37.32,Oshioki Dialogue,,0000,0000,0000,,Dừng lại.
Dialogue: 0,0:11:37.32,0:11:38.29,Oshioki Dialogue,,0000,0000,0000,,Đừng có chạm vào tôi!
Dialogue: 0,0:11:40.18,0:11:41.91,Oshioki Dialogue,,0000,0000,0000,,Đây là hình phạt của em.
Dialogue: 0,0:11:42.24,0:11:43.68,Oshioki Dialogue,,0000,0000,0000,,Em xứng đáng bị thế.
Dialogue: 0,0:11:44.20,0:11:45.55,Oshioki Dialogue,,0000,0000,0000,,Ai cho phép ông làm vậy chứ?
Dialogue: 0,0:11:46.20,0:11:49.27,Oshioki Dialogue,,0000,0000,0000,,Bởi vì tôi là một giáo viên.
Dialogue: 0,0:11:49.27,0:11:50.22,Oshioki Dialogue,,0000,0000,0000,,Không lẽ...
Dialogue: 0,0:12:00.17,0:12:01.73,Oshioki Dialogue,,0000,0000,0000,,Đau không?
Dialogue: 0,0:12:04.26,0:12:05.48,Oshioki Dialogue,,0000,0000,0000,,Đừng di chuyển mà!
Dialogue: 0,0:12:05.48,0:12:07.18,Oshioki Dialogue,,0000,0000,0000,,Tôi không thể ngừng được.
Dialogue: 0,0:12:09.05,0:12:10.91,Oshioki Dialogue,,0000,0000,0000,,Em phải bị trừng phạt.
Dialogue: 0,0:12:12.48,0:12:14.74,Oshioki Dialogue,,0000,0000,0000,,Không! Dừng lại!
Dialogue: 0,0:12:15.53,0:12:17.30,Oshioki Dialogue,,0000,0000,0000,,Để tôi nói cho em biết vài điều về trường học.
Dialogue: 0,0:12:17.51,0:12:21.76,Oshioki Dialogue,,0000,0000,0000,,Nó không chỉ là nơi để em học từ sách vở.
Dialogue: 0,0:12:25.03,0:12:28.03,Oshioki Dialogue,,0000,0000,0000,,Em còn phải giao lưu, học hỏi từ người khác nữa.
Dialogue: 0,0:12:28.18,0:12:31.80,Oshioki Dialogue,,0000,0000,0000,,Và ngược lại họ cũng học tập từ em.
Dialogue: 0,0:12:32.98,0:12:34.87,Oshioki Dialogue,,0000,0000,0000,,Em hiểu điều này chứ?
Dialogue: 0,0:12:34.87,0:12:41.88,Oshioki Dialogue,,0000,0000,0000,,Em có nhận ra sự vắng mặt của mình trong lớp ảnh hưởng nhiều thế nào đến em em không?
Dialogue: 0,0:12:48.43,0:12:50.93,Oshioki Dialogue,,0000,0000,0000,,Đ-Đừng nhắc đến em ấy!
Dialogue: 0,0:12:53.98,0:12:55.71,Oshioki Dialogue,,0000,0000,0000,,Em đã nhận ra rồi ư,
Dialogue: 0,0:12:55.71,0:12:58.17,Oshioki Dialogue,,0000,0000,0000,,những việc làm sai trái của mình?
Dialogue: 0,0:13:15.40,0:13:18.85,Oshioki Dialogue,,0000,0000,0000,,Vậy là em không còn cái tôi trước đây nữa.
Dialogue: 0,0:13:18.85,0:13:21.51,Oshioki Dialogue,,0000,0000,0000,,Em không còn cảm thấy đau nữa chứ.
Dialogue: 0,0:13:22.47,0:13:23.61,Oshioki Dialogue,,0000,0000,0000,,Vâng!
Dialogue: 0,0:13:26.45,0:13:29.96,Oshioki Dialogue,,0000,0000,0000,,Rất... rất là sướng!
Dialogue: 0,0:13:33.98,0:13:36.36,Oshioki Dialogue,,0000,0000,0000,,Nữa... nữa đi ạ!
Dialogue: 0,0:13:39.69,0:13:44.44,Oshioki Dialogue,,0000,0000,0000,,Sensei, khuấy đảo em bằng cái đó của thầy đi!
Dialogue: 0,0:13:46.06,0:13:48.57,Oshioki Dialogue,,0000,0000,0000,,Phải! Tuyệt quá!
Dialogue: 0,0:13:51.34,0:13:54.90,Oshioki Dialogue,,0000,0000,0000,,Em muốn thầy dạy em nhiều hơn nữa, Sensei!
Dialogue: 0,0:13:56.50,0:14:00.81,Oshioki Dialogue,,0000,0000,0000,,Em ra đây... Em ra đây, Sensei!
Dialogue: 0,0:14:01.78,0:14:04.60,Oshioki Dialogue,,0000,0000,0000,,Em sẽ ra mất!
Dialogue: 0,0:14:13.00,0:14:14.26,Oshioki Dialogue,,0000,0000,0000,,Em chịu hết nổi rồi.
Dialogue: 0,0:14:14.26,0:14:18.55,Oshioki Dialogue,,0000,0000,0000,,{\fad(0,2000}Em ra đây~!
Dialogue: 0,0:14:30.40,0:14:33.22,Oshioki Dialogue,,0000,0000,0000,,Tên tôi là Shimohei Joutaro.
Dialogue: 0,0:14:34.31,0:14:40.35,Oshioki Dialogue,,0000,0000,0000,,Nhiệm vụ của tôi là trừng phạt những học sinh không tuân theo nội quy nhà trường.
Dialogue: 0,0:15:01.21,0:15:03.96,Oshioki Dialogue,,0000,0000,0000,,Mục tiêu tiếp theo của tôi là cô gái kia ...
Dialogue: 0,0:15:03.96,0:15:05.96,Oshioki Dialogue,,0000,0000,0000,,
