Dialogue: 0,0:19:52.55,0:19:55.13,Type,,0000,0000,0000,,{\bord0\shad0\fs20\fnUVN Nguyen Du\pos(330,30)}Không phận sự miễn vào
Dialogue: 0,0:20:29.05,0:20:30.03,Default,,0000,0000,0000,,Tôi được phép xuất viện?
Dialogue: 0,0:20:30.05,0:20:31.67,Default,,0000,0000,0000,,Chân cậu đã hoàn toàn bình phục.
Dialogue: 0,0:20:31.87,0:20:33.81,Default,,0000,0000,0000,,Cậu có thể đi lại bình thường được rồi.
Dialogue: 0,0:20:34.87,0:20:36.45,Default,,0000,0000,0000,,Tôi hiểu rồi.
Dialogue: 0,0:20:37.01,0:20:39.13,Default,,0000,0000,0000,,Đừng bận tâm về chuyện Narumi.
Dialogue: 0,0:20:39.23,0:20:41.39,Default,,0000,0000,0000,,Ta rất biết ơn những gì cậu đã làm cho con bé.
Dialogue: 0,0:20:42.93,0:20:47.41,Default,,0000,0000,0000,,Bệnh viện này quả thật giống như một nhà giam đối với nó vậy.
Dialogue: 0,0:20:47.45,0:20:49.57,Default,,0000,0000,0000,,chính cậu đã giải thoát cho con bé.
Dialogue: 0,0:20:49.81,0:20:52.91,Default,,0000,0000,0000,,Với tư cách một người cha, ta không thể trông mong gì hơn thế.
Dialogue: 0,0:20:56.03,0:20:58.33,Default,,0000,0000,0000,,Cám ơn cậu, Sinclair-kun.
Dialogue: 0,0:20:59.03,0:21:01.09,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,0:21:06.61,0:21:08.29,Default,,0000,0000,0000,,Vậy là xong.
Dialogue: 0,0:21:13.65,0:21:14.93,Default,,0000,0000,0000,,Shinya-san...
Dialogue: 0,0:21:16.17,0:21:17.53,Default,,0000,0000,0000,,Lâu rồi không gặp.
Dialogue: 0,0:21:17.91,0:21:19.37,Default,,0000,0000,0000,,Cô thấy khá hơn chưa?
Dialogue: 0,0:21:19.57,0:21:21.91,Default,,0000,0000,0000,,Vâng! Khá hơn nhiều rồi.
Dialogue: 0,0:21:22.03,0:21:23.89,Default,,0000,0000,0000,,Tốt quá. Vậy thì tôi yên tâm rồi.
Dialogue: 0,0:21:24.21,0:21:29.47,Default,,0000,0000,0000,,Um, lần trước tôi chưa kịp nói với anh điều này. Anh có hứng nghe chứ?
Dialogue: 0,0:21:30.71,0:21:31.57,Default,,0000,0000,0000,,Chắc chắn rồi.
Dialogue: 0,0:21:34.87,0:21:37.17,Default,,0000,0000,0000,,Xin lỗi vì đã khiến anh phải lo lắng.
Dialogue: 0,0:21:37.37,0:21:38.77,Default,,0000,0000,0000,,Không, tôi mới la người phải xin lỗi ở đây.
Dialogue: 0,0:21:38.97,0:21:43.59,Default,,0000,0000,0000,,Là do tôi cố tình chơi đùa cùng cô, dù biết cô đang bệnh nặng.
Dialogue: 0,0:21:43.77,0:21:45.69,Default,,0000,0000,0000,,Đó không phải lỗi của anh!
Dialogue: 0,0:21:45.93,0:21:48.61,Default,,0000,0000,0000,,Là tôi tự nguyện làm vậy mà!
Dialogue: 0,0:21:48.65,0:21:51.37,Default,,0000,0000,0000,,Vậy nên, anh đừng tự đổ lỗi cho bản thân nữa, Shinya-san!
Dialogue: 0,0:21:57.53,0:22:01.09,Default,,0000,0000,0000,,Vả lại, tôi đã có một khoảng thời gian rất vui vẻ còn gì.
Dialogue: 0,0:22:01.19,0:22:04.37,Default,,0000,0000,0000,,Tôi đã hóa thân thành một chú gấu và thám hiểm khắp khu rừng.
Dialogue: 0,0:22:05.17,0:22:09.13,Default,,0000,0000,0000,,Vỡi những người khác, đó đơn giản chỉ là một chuyến đi dạo,
Dialogue: 0,0:22:09.65,0:22:13.77,Default,,0000,0000,0000,,nhưng với tôi, điều đó thật đặc biệt, bởi vì đó là chuyến phiêu lưu đầu tiên trong đời tôi.
Dialogue: 0,0:22:20.61,0:22:21.77,Default,,0000,0000,0000,,Narumi-chan...
Dialogue: 0,0:22:23.05,0:22:25.35,Default,,0000,0000,0000,,Làm ơn hãy lắng nghe những gì em sắp nói ra và đừng cười nhạo nó.
Dialogue: 0,0:22:25.43,0:22:30.93,Default,,0000,0000,0000,,Trong căn phòng này, em đã mơ về tương lai và biết bao điều khác
Dialogue: 0,0:22:31.13,0:22:33.77,Default,,0000,0000,0000,,Mơ về con người sau này của em,
Dialogue: 0,0:22:33.97,0:22:35.73,Default,,0000,0000,0000,,mơ về một công việc mà mình yêu thích,
Dialogue: 0,0:22:36.21,0:22:39.61,Default,,0000,0000,0000,,và cả người đàn ông sẽ cùng em gắn bó trọn cuộc đời.
Dialogue: 0,0:22:40.21,0:22:45.61,Default,,0000,0000,0000,,Lạ lùng lắm phải không? Một người sắp chết như em thì làm gì có tương lai cơ chứ...
Dialogue: 0,0:22:45.85,0:22:49.97,Default,,0000,0000,0000,,Đừng nói vậy! Mọi người ai cũng có quyền được ước mơ!
Dialogue: 0,0:22:50.17,0:22:54.49,Default,,0000,0000,0000,,"Tương lai" là hai từ mà em luôn muốn vươn tới.
Dialogue: 0,0:22:55.21,0:22:58.41,Default,,0000,0000,0000,,Mơ về một ngày, em có thể bước ra thế giới ngoài kia,
Dialogue: 0,0:22:59.01,0:23:01.37,Default,,0000,0000,0000,,và sống hạnh phúc trọn đời với người đàn ông mà em yêu thương!
Dialogue: 0,0:23:01.61,0:23:03.33,Default,,0000,0000,0000,,Đó là giấc mơ của em!
Dialogue: 0,0:23:03.93,0:23:06.49,Default,,0000,0000,0000,,Đó là tương lai mà em luôn khát khao vươn tới!
Dialogue: 0,0:23:06.53,0:23:11.17,Default,,0000,0000,0000,,Shinya-chan, em muốn cùng anh biến ước mơ đó thành hiện thực.
Dialogue: 0,0:23:11.41,0:23:14.09,Default,,0000,0000,0000,,Một tương lai chỉ có anh và em bên nhau!
Dialogue: 0,0:23:17.21,0:23:18.73,Default,,0000,0000,0000,,Narumi-chan...
Dialogue: 0,0:23:23.85,0:23:25.25,Default,,0000,0000,0000,,Shinya-san!
Dialogue: 0,0:23:44.21,0:23:45.97,Default,,0000,0000,0000,,Em đẹp quá, Narumi-chan.
Dialogue: 0,0:23:46.17,0:23:48.61,Default,,0000,0000,0000,,Đừng. Em xấu hổ lắm.
Dialogue: 0,0:23:48.63,0:23:50.77,Default,,0000,0000,0000,,Đừng nói vậy. Để anh chiêm ngưỡng em thật kĩ nào.
Dialogue: 0,0:23:51.63,0:23:54.21,Default,,0000,0000,0000,,Oh, Shinya-san, anh hư quá đi.
Dialogue: 0,0:23:54.53,0:23:57.81,Default,,0000,0000,0000,,Nếu em đã chê anh hư thì anh cũng đành nhận mình hư thôi.
Dialogue: 0,0:24:02.69,0:24:03.97,Default,,0000,0000,0000,,Sướng không em?
Dialogue: 0,0:24:04.07,0:24:08.09,Default,,0000,0000,0000,,Em không rõ lắm, nhưng cơ thể em đang...
Dialogue: 0,0:24:16.55,0:24:19.97,Default,,0000,0000,0000,,Đừng... Đừng làm vậy, Shinya-san! Nếu anh làm vậy...
Dialogue: 0,0:24:22.91,0:24:23.75,Default,,0000,0000,0000,,Em không sao chứ?
Dialogue: 0,0:24:23.93,0:24:27.25,Default,,0000,0000,0000,,Vâng, dường như có luồng điện chạy dọc cơ thể em.
Dialogue: 0,0:24:27.29,0:24:30.25,Default,,0000,0000,0000,,Đó là vì em cảm thấy phấn khích đó thôi. Dễ thương quá đi mất.
Dialogue: 0,0:24:33.49,0:24:35.05,Default,,0000,0000,0000,,Đó là...
Dialogue: 0,0:24:36.61,0:24:38.85,Default,,0000,0000,0000,,Tuyệt... Tuyệt quá đi mất.
Dialogue: 0,0:24:39.85,0:24:42.45,Default,,0000,0000,0000,,Ah, em ướt đẫm rồi nè.
Dialogue: 0,0:24:45.95,0:24:49.45,Default,,0000,0000,0000,,Shinya-san, em... em...
Dialogue: 0,0:24:49.65,0:24:51.61,Default,,0000,0000,0000,,Anh sẽ khiến em thấy sung sướng ngay bây giờ thôi.
Dialogue: 0,0:24:56.95,0:24:59.61,Default,,0000,0000,0000,,Không, đừng nhìn em chằm chằm như vậy.
Dialogue: 0,0:25:00.23,0:25:04.05,Default,,0000,0000,0000,,Không được. Anh muốn chiêm ngưỡng cơ thể hoàn mĩ của em.
Dialogue: 0,0:25:06.01,0:25:08.29,Default,,0000,0000,0000,,Không. Anh không được liếm chỗ đó.
Dialogue: 0,0:25:09.89,0:25:10.81,Default,,0000,0000,0000,,Không!
Dialogue: 0,0:25:20.45,0:25:22.57,Default,,0000,0000,0000,,Narumi-chan, anh vào đây.
Dialogue: 0,0:25:23.43,0:25:24.61,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,0:25:29.57,0:25:30.57,Default,,0000,0000,0000,,Đau hả em?
Dialogue: 0,0:25:31.85,0:25:35.11,Default,,0000,0000,0000,,Em không sao. Tiếp tục đi anh.
Dialogue: 0,0:25:35.15,0:25:36.37,Default,,0000,0000,0000,,Uh.
Dialogue: 0,0:25:45.27,0:25:47.21,Default,,0000,0000,0000,,Em đừng gắng sức quá.
Dialogue: 0,0:25:47.41,0:25:50.73,Default,,0000,0000,0000,,Em không sao! Em muốn anh vào thật sâu bên trong em.
Dialogue: 0,0:25:50.83,0:25:53.97,Default,,0000,0000,0000,,Hãy lấp đầy bên trong em!
Dialogue: 0,0:26:05.85,0:26:11.61,Default,,0000,0000,0000,,Thật lạ lùng. Cảm giác này... Cảm giác này là sao?
Dialogue: 0,0:26:12.97,0:26:14.33,Default,,0000,0000,0000,,Em cảm thấy rồi ư?
Dialogue: 0,0:26:14.97,0:26:17.97,Default,,0000,0000,0000,,Em không biết nữa, nhưng mà...
Dialogue: 0,0:26:18.07,0:26:20.17,Default,,0000,0000,0000,,Bên trong em đang nóng bừng lên!
Dialogue: 0,0:26:28.45,0:26:33.73,Default,,0000,0000,0000,,Thích quá! Nó vào hết bên trong em rồi!
Dialogue: 0,0:26:36.17,0:26:37.29,Default,,0000,0000,0000,,Narumi-chan.
Dialogue: 0,0:26:39.53,0:26:44.73,Default,,0000,0000,0000,,Nếu anh làm vậy, em sẽ không kiềm chế nổi mất!
Dialogue: 0,0:26:46.27,0:26:48.97,Default,,0000,0000,0000,,Narumi-chan, anh sắp...
Dialogue: 0,0:26:49.45,0:26:52.49,Default,,0000,0000,0000,,Shinya-san, em cũng vậy! Em cũng vậy!
Dialogue: 0,0:27:05.75,0:27:07.09,Default,,0000,0000,0000,,Lạnh không em?
Dialogue: 0,0:27:07.19,0:27:09.85,Default,,0000,0000,0000,,Không, em cảm thấy ấm áp vô cùng.
Dialogue: 0,0:27:12.45,0:27:13.73,Default,,0000,0000,0000,,Narumi-chan...
Dialogue: 0,0:27:14.89,0:27:18.53,Default,,0000,0000,0000,,Cuối cùng thì em cũng được giống như bao phụ nữ bình thường khác.
Dialogue: 0,0:27:29.09,0:27:30.69,Default,,0000,0000,0000,,Xin chào?
Dialogue: 0,0:27:31.89,0:27:33.81,Default,,0000,0000,0000,,Không một bóng người.
Dialogue: 0,0:27:40.83,0:27:43.09,Default,,0000,0000,0000,,Chào Suzuka-chan và Akane-san.
Dialogue: 0,0:27:47.21,0:27:48.41,Default,,0000,0000,0000,,Kazura-chan!
Dialogue: 0,0:27:49.37,0:27:51.85,Default,,0000,0000,0000,,Bây giờ thì ngươi còn tới đây làm chi nữa!?
Dialogue: 0,0:27:56.41,0:27:58.05,Default,,0000,0000,0000,,Không. Không lẽ nào...
Dialogue: 0,0:28:07.65,0:28:10.93,Default,,0000,0000,0000,,Không đúng! Điều này không phải sự thật, phải không?
Dialogue: 0,0:28:11.65,0:28:14.85,Default,,0000,0000,0000,,Trả lời anh đi, Narumi-chan! Narumi-chan!
Dialogue: 0,0:28:15.97,0:28:20.33,Default,,0000,0000,0000,,Narumi-chan!!
Dialogue: 0,0:30:13.43,0:30:15.09,Default,,0000,0000,0000,,Những kí ức bị lãng quên.
Dialogue: 0,0:30:15.63,0:30:17.49,Default,,0000,0000,0000,,Những cảm giác mà con người cố níu kéo.
Dialogue: 0,0:30:18.05,0:30:21.97,Default,,0000,0000,0000,,Liệu những con tim lầm lạc có tìm về bên nhau?
Dialogue: 0,0:30:23.23,0:30:25.61,Default,,0000,0000,0000,,Phần tiếp theo: Số phận.
Dialogue: 0,0:30:26.57,0:30:27.69,Default,,0000,0000,0000,,Shinya...
Dialogue: 0,0:30:27.99,0:30:30.89,Default,,0000,0000,0000,,Anh chính là tương lai vô giá của em.
