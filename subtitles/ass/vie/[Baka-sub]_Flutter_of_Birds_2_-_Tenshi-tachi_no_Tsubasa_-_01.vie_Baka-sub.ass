Dialogue: 0,0:01:41.01,0:01:44.43,Default,,0000,0000,0000,,{\fad(150,0)\bord0\shad0\fs30\pos(314,463)}Một năm trước
Dialogue: 0,0:02:15.09,0:02:17.21,Default,,0000,0000,0000,,Chào anh. Đây là trạm dừng chân cuối cùng.
Dialogue: 0,0:02:19.35,0:02:20.73,Default,,0000,0000,0000,,Trạm dừng chân cuối cùng.
Dialogue: 0,0:02:24.71,0:02:27.87,Default,,0000,0000,0000,,Ra vậy. Cô là thành viên của gia đình Mitsuru-san.
Dialogue: 0,0:02:27.95,0:02:29.99,Default,,0000,0000,0000,,Tên tôi là Shinya Sinclair.
Dialogue: 0,0:02:30.21,0:02:32.85,Default,,0000,0000,0000,,Tôi biết. Anh gọi cô ấy bằng dì phải không?
Dialogue: 0,0:02:33.21,0:02:35.37,Default,,0000,0000,0000,,Tên tôi là Yukiyanagi Yuzu.
Dialogue: 0,0:02:35.47,0:02:37.13,Default,,0000,0000,0000,,Yuzu viết theo kiểu chữ Hiragana.
Dialogue: 0,0:02:38.09,0:02:40.49,Default,,0000,0000,0000,,Vậy, từ đây đến nhà thờ còn bao xa?
Dialogue: 0,0:02:41.27,0:02:42.33,Default,,0000,0000,0000,,Vẫn còn một quãng đường khá dài đó.
Dialogue: 0,0:02:42.49,0:02:43.69,Default,,0000,0000,0000,,Tôi hiểu rồi.
Dialogue: 0,0:02:49.99,0:02:51.85,Default,,0000,0000,0000,,Cảnh vật nơi đây có quen thuộc với anh không?
Dialogue: 0,0:02:52.37,0:02:55.29,Default,,0000,0000,0000,,Không, thực ra thì, là...
Dialogue: 0,0:02:56.93,0:02:59.65,Default,,0000,0000,0000,,Đây là nơi mẹ tôi đã sinh ra,
Dialogue: 0,0:02:59.73,0:03:02.57,Default,,0000,0000,0000,,và cũng là nơi bà gặp và yêu cha tôi.
Dialogue: 0,0:03:03.05,0:03:06.73,Default,,0000,0000,0000,,Tôi đã hình dung ra rất nhiều điều về nơi này,
Dialogue: 0,0:03:07.05,0:03:08.89,Default,,0000,0000,0000,,và cả cách con người ở đây sinh sống ra sao nữa.
Dialogue: 0,0:03:09.37,0:03:12.17,Default,,0000,0000,0000,,Dường như bóng dáng mẹ tôi luôn phảng phất tại nơi đây.
Dialogue: 0,0:03:17.13,0:03:18.25,Default,,0000,0000,0000,,C-Chuyện gì vậy?
Dialogue: 0,0:03:18.65,0:03:20.15,Default,,0000,0000,0000,,Shinya, anh thật tuyệt.
Dialogue: 0,0:03:20.27,0:03:21.01,Default,,0000,0000,0000,,Gì cơ?
Dialogue: 0,0:03:21.05,0:03:22.49,Default,,0000,0000,0000,,Anh rất tuyệt.
Dialogue: 0,0:03:22.97,0:03:24.65,Default,,0000,0000,0000,,Cám ơn cô.
Dialogue: 0,0:03:27.97,0:03:30.45,Default,,0000,0000,0000,,Không thể nào, gấu ư? Ngay giữa mùa đông này sao?
Dialogue: 0,0:03:32.65,0:03:33.85,Default,,0000,0000,0000,,Chạy mau!
Dialogue: 0,0:03:37.51,0:03:38.33,Default,,0000,0000,0000,,Oái!
Dialogue: 0,0:03:39.85,0:03:40.73,Default,,0000,0000,0000,,Shinya!
Dialogue: 0,0:03:44.31,0:03:45.37,Default,,0000,0000,0000,,Shinya.
Dialogue: 0,0:03:45.57,0:03:48.01,Default,,0000,0000,0000,,Không cần lo cho tôi. Cô mau chạy đi!
Dialogue: 0,0:03:48.35,0:03:49.53,Default,,0000,0000,0000,,Nhưng mà...
Dialogue: 0,0:03:50.13,0:03:51.61,Default,,0000,0000,0000,,Oh, là hai người hả!
Dialogue: 0,0:03:56.85,0:04:00.09,Default,,0000,0000,0000,,Cháu đi đón khách lâu quá nên ở nhà mọi người có hơi lo lắng.
Dialogue: 0,0:04:00.73,0:04:01.89,Default,,0000,0000,0000,,Cháu là Shinya-kun, phải không?
Dialogue: 0,0:04:01.99,0:04:04.15,Default,,0000,0000,0000,,Dì là Mizueda Mitsuru. Rất vui được gặp cháu.
Dialogue: 0,0:04:04.23,0:04:05.93,Default,,0000,0000,0000,,Oh, vâng, rất vui được gặp dì.
Dialogue: 0,0:04:09.43,0:04:10.57,Default,,0000,0000,0000,,Ôi cái chân tôi...
Dialogue: 0,0:04:10.93,0:04:11.97,Default,,0000,0000,0000,,Oái!
Dialogue: 0,0:04:19.23,0:04:21.23,Default,,0000,0000,0000,,Đau quá!
Dialogue: 0,0:04:22.05,0:04:23.39,Default,,0000,0000,0000,,Cậu bị bong gân rồi.
Dialogue: 0,0:04:23.61,0:04:25.31,Default,,0000,0000,0000,,Cần hai tuần để bình phục hoàn toàn,
Dialogue: 0,0:04:25.57,0:04:27.35,Default,,0000,0000,0000,,vậy nên từ giờ cậu cứ ở luôn tại bệnh viện này cho tiện điều trị.
Dialogue: 0,0:04:27.39,0:04:29.41,Default,,0000,0000,0000,,Gì cờ? Cháu chỉ vừa mới tới đây mà!
Dialogue: 0,0:04:29.83,0:04:31.65,Default,,0000,0000,0000,,Nào, nào, suy nghĩ theo hướng tích cực một chút đi.
Dialogue: 0,0:04:31.81,0:04:34.41,Default,,0000,0000,0000,,Ít ra chân tay của cháu hãy còn lành lặn mà.
Dialogue: 0,0:04:35.43,0:04:36.39,Default,,0000,0000,0000,,Này...
Dialogue: 0,0:04:36.57,0:04:38.67,Default,,0000,0000,0000,,Shinya, tôi xin lỗi!
Dialogue: 0,0:04:38.85,0:04:41.57,Default,,0000,0000,0000,,Hả? Sao cô lại xin lỗi tôi?
Dialogue: 0,0:04:42.29,0:04:45.35,Default,,0000,0000,0000,,Tôi xin lỗi! Tôi xin lỗi!
Dialogue: 0,0:04:45.43,0:04:46.73,Default,,0000,0000,0000,,Không sao đâu.
Dialogue: 0,0:04:47.25,0:04:48.03,Default,,0000,0000,0000,,Vậy nhé?
Dialogue: 0,0:04:51.17,0:04:52.03,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,0:04:53.69,0:04:56.09,Default,,0000,0000,0000,,Uhm, để dì mang hành lý vào giúp cháu.
Dialogue: 0,0:04:56.29,0:04:58.69,Default,,0000,0000,0000,,Cẩn thận nhé, Sinclayer-kun.
Dialogue: 0,0:04:59.57,0:05:02.47,Default,,0000,0000,0000,,Uhm, bác sĩ có thể phát âm theo ngôn ngữ chuẩn được không ạ?
Dialogue: 0,0:05:03.49,0:05:04.63,Default,,0000,0000,0000,,Tôi vẫn phát âm chuẩn mà.
Dialogue: 0,0:05:04.65,0:05:07.01,Default,,0000,0000,0000,,Ý tôi là nó mang hơi hướng địa phương nhiều quá.
Dialogue: 0,0:05:07.21,0:05:10.67,Default,,0000,0000,0000,,Hiểu rồi. Tôi sẽ cố gắng, Sinclayer-kun.
Dialogue: 0,0:05:10.85,0:05:12.05,Default,,0000,0000,0000,,Vâng...
Dialogue: 0,0:05:13.81,0:05:15.97,Default,,0000,0000,0000,,Hẹn gặp lại hai người sau. Chúc vui vẻ!
Dialogue: 0,0:05:17.49,0:05:18.69,Default,,0000,0000,0000,,M-Mitsuru!
Dialogue: 0,0:05:33.97,0:05:35.01,Default,,0000,0000,0000,,Uhm...
Dialogue: 0,0:05:35.54,0:05:36.97,Default,,0000,0000,0000,,Vâng?
Dialogue: 0,0:05:37.21,0:05:39.09,Default,,0000,0000,0000,,Hả? C-Cái gì vậy!?
Dialogue: 0,0:05:39.23,0:05:43.81,Default,,0000,0000,0000,,Tôi là búp bê Yuzu! Tôi sẽ nói thay cô chủ Yuzu của tôi!
Dialogue: 0,0:05:49.97,0:05:51.83,Default,,0000,0000,0000,,A-Anh cười gì vậy?
Dialogue: 0,0:05:51.91,0:05:55.33,Default,,0000,0000,0000,,X-Xin lỗi. Vậy, cô muốn nói gì nào?
Dialogue: 0,0:05:55.85,0:06:00.37,Default,,0000,0000,0000,,À, như anh thấy đấy, bệnh viện này có một quán ăn tự phục vụ.
Dialogue: 0,0:06:00.57,0:06:02.85,Default,,0000,0000,0000,,Anh có muốn tới đó cùng tôi không?
Dialogue: 0,0:06:03.37,0:06:04.43,Default,,0000,0000,0000,,Tất nhiên rồi, ta đi nào.
Dialogue: 0,0:06:04.97,0:06:05.77,Default,,0000,0000,0000,,Tuyệt quá!
Dialogue: 0,0:06:17.37,0:06:18.37,Default,,0000,0000,0000,,Uhm...
Dialogue: 0,0:06:27.21,0:06:28.84,Default,,0000,0000,0000,,Ngươi thấy hết rồi phải không?
Dialogue: 0,0:06:29.05,0:06:31.45,Default,,0000,0000,0000,,À, nó sờ sờ ra trước mắt, thế nên...
Dialogue: 0,0:06:32.49,0:06:35.57,Default,,0000,0000,0000,,Ngươi thật đáng chết!
Dialogue: 0,0:06:38.17,0:06:39.84,Default,,0000,0000,0000,,Không thể tin được ngươi dám làm chuyện tày đình này!
Dialogue: 0,0:06:40.09,0:06:42.33,Default,,0000,0000,0000,,Xin lỗi. Tôi không cố ý va vào cô đâu!
Dialogue: 0,0:06:42.34,0:06:43.29,Default,,0000,0000,0000,,Câm miệng!
Dialogue: 0,0:06:43.39,0:06:46.09,Default,,0000,0000,0000,,Kể từ giờ, ngươi sẽ là người hầu của ta. Rõ chưa hả?
Dialogue: 0,0:06:46.33,0:06:47.29,Default,,0000,0000,0000,,Người hầu?
Dialogue: 0,0:06:47.53,0:06:50.33,Default,,0000,0000,0000,,Nếu tái phạm một lần nữa, ngươi sẽ biết tay ta.
Dialogue: 0,0:06:50.37,0:06:51.85,Default,,0000,0000,0000,,Rõ chưa, tên hầu?
Dialogue: 0,0:06:54.41,0:06:57.29,Default,,0000,0000,0000,,Tên cô ấy là Kayaba Kazura-chan.
Dialogue: 0,0:06:57.33,0:07:00.05,Default,,0000,0000,0000,,Hình như cô ấy xuất thân trong một gia đình giàu sang.
Dialogue: 0,0:07:00.69,0:07:02.25,Default,,0000,0000,0000,,Ra là vậy. Đã hiểu.
Dialogue: 0,0:07:02.69,0:07:06.65,Default,,0000,0000,0000,,Phổi cô ấy gặp vấn đề, vậy nên cô ấy tới Kuramachi để dưỡng bệnh.
Dialogue: 0,0:07:07.33,0:07:09.81,Default,,0000,0000,0000,,Trông cô ta có giống người bệnh đâu nhỉ?
Dialogue: 0,0:07:10.55,0:07:13.09,Default,,0000,0000,0000,,Chỉ dựa vào diện mạo bên ngoài thì khó mà biết được bệnh tình của cô ấy.
Dialogue: 0,0:07:13.33,0:07:15.61,Default,,0000,0000,0000,,Chúng ta có phải bác sĩ đâu, phải không nào?
Dialogue: 0,0:07:15.71,0:07:16.81,Default,,0000,0000,0000,,Cô nói đúng.
Dialogue: 0,0:07:21.09,0:07:23.01,Default,,0000,0000,0000,,Um, Shinya?
Dialogue: 0,0:07:24.03,0:07:24.97,Default,,0000,0000,0000,,Tôi về rồi đây!
Dialogue: 0,0:07:25.33,0:07:27.83,Default,,0000,0000,0000,,Mừng cô trở về. Họ còn cà phê hột trong kho không vậy?
Dialogue: 0,0:07:27.87,0:07:29.97,Default,,0000,0000,0000,,Có đây, tôi đã mua tất cả những gì cô yêu cầu,
Dialogue: 0,0:07:30.01,0:07:32.01,Default,,0000,0000,0000,,nhưng trên đường về tuyết rơi dữ quá.
Dialogue: 0,0:07:32.05,0:07:34.05,Default,,0000,0000,0000,,Đêm nay khả năng sẽ có bão tuyết đấy.
Dialogue: 0,0:07:35.59,0:07:36.93,Default,,0000,0000,0000,,X-Xin lỗi anh!
Dialogue: 0,0:07:39.25,0:07:40.57,Default,,0000,0000,0000,,Sh-Shinya!
Dialogue: 0,0:07:40.77,0:07:42.61,Default,,0000,0000,0000,,Oh, tôi đã làm gì thế này!
Dialogue: 0,0:07:42.81,0:07:44.45,Default,,0000,0000,0000,,Hừ, Akane-san.
Dialogue: 0,0:07:44.65,0:07:46.77,Default,,0000,0000,0000,,Vô cùng xin lỗi anh. Anh vẫn ổn đấy chứ?
Dialogue: 0,0:07:47.29,0:07:49.73,Default,,0000,0000,0000,,V-Vâng, tôi ổn... mà có lẽ là không!
Dialogue: 0,0:07:49.83,0:07:52.45,Default,,0000,0000,0000,,Shinya, ráng chịu một chút. Shinya!
Dialogue: 0,0:08:03.53,0:08:05.01,Default,,0000,0000,0000,,Dễ chịu quá.
Dialogue: 0,0:08:05.65,0:08:08.13,Default,,0000,0000,0000,,Yuzu, ta kì lưng cho nhau nhé!
Dialogue: 0,0:08:09.67,0:08:11.33,Default,,0000,0000,0000,,Cháu không dám thổ lộ với cậu ấy.
Dialogue: 0,0:08:14.25,0:08:15.73,Default,,0000,0000,0000,,Cháu yêu cậu ta rồi hả?
Dialogue: 0,0:08:17.73,0:08:19.69,Default,,0000,0000,0000,,Nếu phải, hãy chắc chắn là cháu đã sẵn sàng.
Dialogue: 0,0:08:20.33,0:08:22.25,Default,,0000,0000,0000,,Eh? Sẵn sàng gì cơ?
Dialogue: 0,0:08:22.49,0:08:26.25,Default,,0000,0000,0000,,Đừng giả bộ, chuyện giữa đàn ông và đàn bà đó!
Dialogue: 0,0:08:30.69,0:08:32.13,Default,,0000,0000,0000,,Có gì đâu mà phải xấu hổ chứ
Dialogue: 0,0:08:32.37,0:08:36.45,Default,,0000,0000,0000,,Coi nào, để cô xem cháu lớn tới mức nào rồi.
Dialogue: 0,0:08:36.59,0:08:37.61,Default,,0000,0000,0000,,Dừng lại.
Dialogue: 0,0:08:38.85,0:08:40.83,Default,,0000,0000,0000,,Oh, cháu được lắm! Đỡ này!
Dialogue: 0,0:08:41.13,0:08:41.89,Default,,0000,0000,0000,,Không!
Dialogue: 0,0:08:44.13,0:08:45.69,Default,,0000,0000,0000,,Đừng!
Dialogue: 0,0:09:02.05,0:09:04.85,Default,,0000,0000,0000,,Giờ này hẳn Yuzu vẫn chưa tới đây.
Dialogue: 0,0:09:11.87,0:09:14.97,Default,,0000,0000,0000,,Tên hầu kia! Ngươi làm gì ở đây vậy?
Dialogue: 0,0:09:19.21,0:09:22.71,Default,,0000,0000,0000,,Chuyện hôm qua ta làm vậy là quá nhân nhượng với ngươi rồi đó, có biết không hả?
Dialogue: 0,0:09:22.89,0:09:24.89,Default,,0000,0000,0000,,Vâng, tôi biết ạ.
Dialogue: 0,0:09:24.93,0:09:26.69,Default,,0000,0000,0000,,Biết điều hơn rồi đấy.
Dialogue: 0,0:09:31.05,0:09:34.21,Default,,0000,0000,0000,,Đánh chết cái nết không chừa, giỏi lắm!
Dialogue: 0,0:09:35.01,0:09:38.09,Default,,0000,0000,0000,,Lần này thì bà xé xác mày ra !
Dialogue: 0,0:09:39.87,0:09:43.31,Default,,0000,0000,0000,,Này, tên hầu kia dám cãi lệnh bỏ trốn sao !
Dialogue: 0,0:09:43.49,0:09:46.05,Default,,0000,0000,0000,,Đứng lại! Đứng lại!
Dialogue: 0,0:09:46.25,0:09:48.45,Default,,0000,0000,0000,,Ngươi trốn đâu rồi?
Dialogue: 0,0:09:47.89,0:09:49.19,Default,,0000,0000,0000,,Thoát rồi.
Dialogue: 0,0:09:49.21,0:09:51.29,Default,,0000,0000,0000,,Cô ta đúng là ác mộng.
Dialogue: 0,0:09:56.61,0:09:59.21,Default,,0000,0000,0000,,Chim cánh cụt thuộc họ nhà chim.
Dialogue: 0,0:09:59.41,0:10:01.53,Default,,0000,0000,0000,,Gì cơ? Này, cô...
Dialogue: 0,0:10:02.05,0:10:05.89,Default,,0000,0000,0000,,Ôi không, con lươn nó chui vào mũi mình hay sao ấy.
Dialogue: 0,0:10:10.75,0:10:11.85,Default,,0000,0000,0000,,Chào buổi sáng.
Dialogue: 0,0:10:18.55,0:10:21.61,Default,,0000,0000,0000,,Hi vọng chúng ta quen nhau trong tình huống tử tế hơn thế này.
Dialogue: 0,0:10:22.84,0:10:26.49,Default,,0000,0000,0000,,Nanahara Narumi... Sao giống tên bệnh viện quá vậy?
Dialogue: 0,0:10:27.51,0:10:30.21,Default,,0000,0000,0000,,Narahara Nao là cha tôi.
Dialogue: 0,0:10:30.31,0:10:31.35,Default,,0000,0000,0000,,Mời anh.
Dialogue: 0,0:10:31.55,0:10:32.49,Default,,0000,0000,0000,,Cám ơn cô.
Dialogue: 0,0:10:32.59,0:10:33.37,Default,,0000,0000,0000,,Không có gì.
Dialogue: 0,0:10:33.57,0:10:37.33,Default,,0000,0000,0000,,Chỉ mình Kazura-chan là hay tới đây thăm tôi, vậy nên có anh ghé qua tôi vui lắm.
Dialogue: 0,0:10:38.37,0:10:40.45,Default,,0000,0000,0000,,K-Kazura-chan hay tới đây lắm hả?
Dialogue: 0,0:10:40.55,0:10:42.57,Default,,0000,0000,0000,,Uhm, cô ấy hay tới đây để tán gẫu...
Dialogue: 0,0:10:43.17,0:10:44.81,Default,,0000,0000,0000,,nhưng hôm nay cô ấy không có đến.
Dialogue: 0,0:10:44.97,0:10:45.99,Default,,0000,0000,0000,,R-Ra vậy.
Dialogue: 0,0:10:46.17,0:10:49.85,Default,,0000,0000,0000,,Những hôm Kazura-chan không tới, tôi  toàn ở đây một mình.
Dialogue: 0,0:10:50.29,0:10:54.97,Default,,0000,0000,0000,,Tôi thường đọc sách và ngắm ánh mặt trời, nhưng vẫn cô đơn lắm.
Dialogue: 0,0:10:55.17,0:10:59.13,Default,,0000,0000,0000,,Cô... Cô sở hữu nhiều sách thật đó.
Dialogue: 0,0:10:59.33,0:11:01.37,Default,,0000,0000,0000,,Một mình cô đọc hết tất cả chỗ sách này sao?
Dialogue: 0,0:11:01.57,0:11:03.45,Default,,0000,0000,0000,,Phải, tôi rất mê đọc sách!
Dialogue: 0,0:11:03.65,0:11:07.63,Default,,0000,0000,0000,,Dù không thể rời hỏi căn phòng này, đọc sách khiến tôi cảm thấy mình như đang phiêu lưu hết nơi này tới nơi khác.
Dialogue: 0,0:11:07.71,0:11:09.77,Default,,0000,0000,0000,,Đó là thú vui duy nhất để giết thời gian của tôi.
Dialogue: 0,0:11:09.97,0:11:12.37,Default,,0000,0000,0000,,Hả? Cô chưa từng ra ngoài bao giờ sao?
Dialogue: 0,0:11:12.61,0:11:15.81,Default,,0000,0000,0000,,Từ lúc sinh ra, cơ thể tôi đã rất yếu đuối,
Dialogue: 0,0:11:15.85,0:11:21.13,Default,,0000,0000,0000,,Vậy nên căn phòng cùng bộ sưu tập sách mẹ tôi để lại là tất cả những gì tôi có.
Dialogue: 0,0:11:22.45,0:11:27.17,Default,,0000,0000,0000,,Tôi giống như... một chú chim bị giam trong lồng vậy.
Dialogue: 0,0:11:30.03,0:11:32.17,Default,,0000,0000,0000,,Cảm giác thật khó chịu làm sao.
Dialogue: 0,0:11:32.21,0:11:35.35,Default,,0000,0000,0000,,Tôi chỉ còn biết phiêu lưu cùng với những trang sách kia.
Dialogue: 0,0:11:35.57,0:11:38.43,Default,,0000,0000,0000,,Du hành tới những miền đất xa xôi hay vượt thời gian về Nhật Bản thời cổ xưa.
Dialogue: 0,0:11:38.45,0:11:40.39,Default,,0000,0000,0000,,Chơi đùa cùng các thiên thần và các loài vật kì lạ.
Dialogue: 0,0:11:40.41,0:11:44.37,Default,,0000,0000,0000,,Đó là những điều sách mang đến cho tôi mỗi ngày, vậy nên tôi không hề cảm thấy buồn chán.
Dialogue: 0,0:11:45.73,0:11:47.65,Default,,0000,0000,0000,,Quan điểm của tôi khác cô.
Dialogue: 0,0:11:49.05,0:11:53.99,Default,,0000,0000,0000,,Thật khó để giải thích, nhưng thế giới trong sách chỉ là viễn tưởng.
Dialogue: 0,0:11:54.17,0:11:56.89,Default,,0000,0000,0000,,Đó không phải những chuyến phiêu lưu thật sự, phải không nào?
Dialogue: 0,0:11:57.57,0:12:00.93,Default,,0000,0000,0000,,Nhưng tôi đâu biết làm gì khác ngoài việc đó.
Dialogue: 0,0:12:01.17,0:12:02.77,Default,,0000,0000,0000,,Đơn giản thôi mà.
Dialogue: 0,0:12:04.25,0:12:07.61,Default,,0000,0000,0000,,Chỉ cần cô chịu nhìn ra thế giới rộng lớn ngoài kia. Như thế này!
Dialogue: 0,0:12:12.83,0:12:16.51,Default,,0000,0000,0000,,Không hề thiếu con người và các sinh vật.
Dialogue: 0,0:12:16.77,0:12:18.41,Default,,0000,0000,0000,,Nhiều chuyền phiêu lưu thú vị đang chờ đón cô!
Dialogue: 0,0:12:18.65,0:12:20.51,Default,,0000,0000,0000,,Vậy nên sẽ thật lãng phí nếu cả đời cô chỉ giam mình trong căn phòng này
Dialogue: 0,0:12:20.73,0:12:22.21,Default,,0000,0000,0000,,Shinya-san...
Dialogue: 0,0:12:22.49,0:12:24.31,Default,,0000,0000,0000,,Cô cần phải nhìn về phía trước.
Dialogue: 0,0:12:24.43,0:12:28.53,Default,,0000,0000,0000,,Nếu được như vậy, chẳng phải ước mơ của cô đã trở thành hiện thực rồi sao?
Dialogue: 0,0:12:32.09,0:12:34.85,Default,,0000,0000,0000,,Narumi, xem hoa mình mang tới có đẹp không này.
Dialogue: 0,0:12:36.73,0:12:39.13,Default,,0000,0000,0000,,Tên hầu kia! Ngươi làm gì ở đây hả!?
Dialogue: 0,0:12:39.17,0:12:40.53,Default,,0000,0000,0000,,À, chuyện này...
Dialogue: 0,0:12:41.09,0:12:44.45,Default,,0000,0000,0000,,Oh, hóa ra họ của Shinya-san là "Hầu" à?
Dialogue: 0,0:12:44.69,0:12:47.25,Default,,0000,0000,0000,,K-Không! là Kazura-chan tự ý gọi như vậy đó.
Dialogue: 0,0:12:47.27,0:12:47.99,Default,,0000,0000,0000,,Cái gì?
Dialogue: 0,0:12:48.01,0:12:50.85,Default,,0000,0000,0000,,Thân làm thằng hầu thì phải ăn nói lễ độ với ta nghe chưa!
Dialogue: 0,0:12:51.05,0:12:53.75,Default,,0000,0000,0000,,Vả lại, ngươi còn dám mò vào đây quấy rầy cô bạn thân nhất của ta nữa chứ!
Dialogue: 0,0:12:53.86,0:12:55.05,Default,,0000,0000,0000,,Hừ, ta đánh chết ngươi!
Dialogue: 0,0:12:55.09,0:12:57.75,Default,,0000,0000,0000,,K-Khoan đã nào! Tôi có cố ý làm vậy đâu!
Dialogue: 0,0:12:57.83,0:12:59.89,Default,,0000,0000,0000,,Câm miệng! Đừng hòng gạt ta!
Dialogue: 0,0:13:01.09,0:13:02.73,Default,,0000,0000,0000,,Đứng lại, tên hầu kia!
Dialogue: 0,0:13:03.61,0:13:06.23,Default,,0000,0000,0000,,Này! Tên kia!
Dialogue: 0,0:13:06.31,0:13:07.57,Default,,0000,0000,0000,,Cô có thôi ngay đi không hả?
Dialogue: 0,0:13:07.67,0:13:09.67,Default,,0000,0000,0000,,Đứng lại, tên khốn kia!
Dialogue: 0,0:13:10.61,0:13:11.47,Default,,0000,0000,0000,,Định hành hung cả bệnh nhân sao!
Dialogue: 0,0:13:27.87,0:13:29.77,Default,,0000,0000,0000,,Thế giới bên ngoài.
Dialogue: 0,0:13:33.65,0:13:36.09,Default,,0000,0000,0000,,... tuyết rơi ngày càng nặng hạt,
Dialogue: 0,0:13:36.13,0:13:37.85,Default,,0000,0000,0000,,cuối cùng mình trông chả khác gì một người tuyết cả.
Dialogue: 0,0:13:38.37,0:13:39.61,Default,,0000,0000,0000,,Cậu có nghe không vậy?
Dialogue: 0,0:13:41.13,0:13:42.23,Default,,0000,0000,0000,,M-Mình xin lỗi!
Dialogue: 0,0:13:42.33,0:13:43.85,Default,,0000,0000,0000,,Cậu đang kể chuyện về loài cá, phải không?
Dialogue: 0,0:13:43.99,0:13:46.83,Default,,0000,0000,0000,,Không, không phải! Hôm nay cậu sao vậy?
Dialogue: 0,0:13:46.87,0:13:48.73,Default,,0000,0000,0000,,Đầu óc cứ để đi đâu ấy.
Dialogue: 0,0:13:51.83,0:13:52.83,Default,,0000,0000,0000,,Này, Kazura-chan...
Dialogue: 0,0:13:52.95,0:13:53.85,Default,,0000,0000,0000,,Gì cơ?
Dialogue: 0,0:13:53.95,0:13:56.29,Default,,0000,0000,0000,,Chúng ta ra ngoài chơi được không?
Dialogue: 0,0:13:59.69,0:14:00.61,Default,,0000,0000,0000,,Mời anh.
Dialogue: 0,0:14:05.01,0:14:07.17,Default,,0000,0000,0000,,Ngươi đã làm gì Narumi vậy?
Dialogue: 0,0:14:07.69,0:14:08.81,Default,,0000,0000,0000,,Tôi chẳng làm gì cả.
Dialogue: 0,0:14:09.01,0:14:09.91,Default,,0000,0000,0000,,Đừng có giả vờ!
Dialogue: 0,0:14:09.99,0:14:12.47,Default,,0000,0000,0000,,Trước giờ Narumi chưa bao giờ đả động tới chuyện ra ngoài chơi,
Dialogue: 0,0:14:12.55,0:14:14.69,Default,,0000,0000,0000,,sao tự dưng hôm nay cô ấy lại đòi đi hả!
Dialogue: 0,0:14:15.07,0:14:15.95,Default,,0000,0000,0000,,Narumi-chan?
Dialogue: 0,0:14:16.07,0:14:17.25,Default,,0000,0000,0000,,Shinya-san!
Dialogue: 0,0:14:20.67,0:14:23.09,Default,,0000,0000,0000,,Tôi đã quyết định tham gia một chuyến phiêu lưu nhỏ!
Dialogue: 0,0:14:24.05,0:14:25.17,Default,,0000,0000,0000,,Narumi-chan!
Dialogue: 0,0:14:25.27,0:14:26.69,Default,,0000,0000,0000,,Ngươi đã làm gì cô ấy hả?
Dialogue: 0,0:14:27.09,0:14:29.31,Default,,0000,0000,0000,,Tôi không có làm gì cả, chỉ là...
Dialogue: 0,0:14:29.33,0:14:30.03,Default,,0000,0000,0000,,Là sao?
Dialogue: 0,0:14:32.33,0:14:34.01,Default,,0000,0000,0000,,Tôi đã mở cửa sổ phòng cô ấy.
Dialogue: 0,0:14:34.49,0:14:35.05,Default,,0000,0000,0000,,Cửa sổ phòng cậu ấy?
Dialogue: 0,0:14:35.07,0:14:36.05,Default,,0000,0000,0000,,Tôi biết rồi!
Dialogue: 0,0:14:42.69,0:14:45.29,Default,,0000,0000,0000,,Ngày mai mình sẽ phiêu lưu thêm chuyến nữa.
Dialogue: 0,0:14:53.91,0:14:54.84,Default,,0000,0000,0000,,Không phải lúc này...
Dialogue: 0,0:14:55.05,0:14:57.41,Default,,0000,0000,0000,,Mình không muốn có kết cục như vậy.
Dialogue: 0,0:14:57.45,0:15:00.57,Default,,0000,0000,0000,,Giấc mơ của mình chỉ vừa mới bắt đầu.
Dialogue: 0,0:15:14.05,0:15:14.93,Default,,0000,0000,0000,,Này!
Dialogue: 0,0:15:17.49,0:15:19.29,Default,,0000,0000,0000,,Hôm nay tôi chưa động chạm gì tới cô đâu đấy!
Dialogue: 0,0:15:19.39,0:15:20.61,Default,,0000,0000,0000,,Ngươi nói gì lạ vậy?
Dialogue: 0,0:15:22.33,0:15:25.49,Default,,0000,0000,0000,,Ta chỉ muốn thay Narumi cảm ơn ngươi .
Dialogue: 0,0:15:25.57,0:15:26.33,Default,,0000,0000,0000,,Gì cơ?
Dialogue: 0,0:15:27.13,0:15:28.77,Default,,0000,0000,0000,,Đ-Đừng hiểu lầm.
Dialogue: 0,0:15:28.87,0:15:31.53,Default,,0000,0000,0000,,Ta chỉ muốn nhắc nhở ngươi về phận sự của một tên hầu thôi.
Dialogue: 0,0:15:31.63,0:15:33.01,Default,,0000,0000,0000,,Cấm ý kiến ý cò gì nghe chưa.
Dialogue: 0,0:15:39.23,0:15:40.53,Default,,0000,0000,0000,,Narumi-chan?
Dialogue: 0,0:15:40.57,0:15:41.53,Default,,0000,0000,0000,,Tôi Shinya đây.
Dialogue: 0,0:15:41.89,0:15:43.05,Default,,0000,0000,0000,,Tôi vào nhé.
Dialogue: 0,0:15:44.45,0:15:45.49,Default,,0000,0000,0000,,Narumi-chan?
Dialogue: 0,0:15:50.67,0:15:52.77,Default,,0000,0000,0000,,Biết tìm cô ấy ở đâu bây giờ.
Dialogue: 0,0:15:53.01,0:15:54.85,Default,,0000,0000,0000,,S-Sinclayer-kun!
Dialogue: 0,0:15:55.09,0:15:57.37,Default,,0000,0000,0000,,Làm ơn phát âm chuẩn được không ạ.
Dialogue: 0,0:15:57.47,0:15:59.05,Default,,0000,0000,0000,,Cậu thấy Narumi đâu không?
Dialogue: 0,0:16:00.29,0:16:02.17,Default,,0000,0000,0000,,Không, cô ấy không có trong phòng.
Dialogue: 0,0:16:02.37,0:16:03.93,Default,,0000,0000,0000,,Chuyện gì xảy ra với cô ấy vậy?
Dialogue: 0,0:16:04.13,0:16:05.47,Default,,0000,0000,0000,,Tôi không tìm thấy con bé ở bất cứ đâu cả.
Dialogue: 0,0:16:05.49,0:16:06.37,Default,,0000,0000,0000,,Hả?
Dialogue: 0,0:16:06.69,0:16:10.75,Default,,0000,0000,0000,,Tôi đã tìm khắp mọi nơi, nhưng con bé không hề ở trong bệnh viện.
Dialogue: 0,0:16:10.89,0:16:12.73,Default,,0000,0000,0000,,Con bé hiểu rõ bệnh tình của mình nên sẽ không thể la cà lâu được.
Dialogue: 0,0:16:13.81,0:16:16.13,Default,,0000,0000,0000,,Không lẽ nào... Hay cô ấy ra ngoài chơi rồi!
Dialogue: 0,0:16:16.23,0:16:17.21,Default,,0000,0000,0000,,Sao cơ!?
Dialogue: 0,0:16:17.97,0:16:21.89,Default,,0000,0000,0000,,Narumi! Trả lời ba đi, làm ơn!
Dialogue: 0,0:16:20.45,0:16:22.11,Default,,0000,0000,0000,,Narumi!
Dialogue: 0,0:16:24.87,0:16:27.73,Default,,0000,0000,0000,,Kazura-chan, cháu nên về đi thôi.
Dialogue: 0,0:16:27.97,0:16:31.15,Default,,0000,0000,0000,,Không, cháu muốn giúp mọi người. Narumi là người bạn thân nhất của cháu.
Dialogue: 0,0:16:31.23,0:16:32.87,Default,,0000,0000,0000,,Narumi!
Dialogue: 0,0:16:32.95,0:16:35.45,Default,,0000,0000,0000,,Narumi-chan!
Dialogue: 0,0:16:36.29,0:16:37.84,Default,,0000,0000,0000,,Cô ấy không có ở đây.
Dialogue: 0,0:16:37.85,0:16:39.01,Default,,0000,0000,0000,,Chúng ta tìm thử nơi khác xem sao.
Dialogue: 0,0:16:39.17,0:16:40.89,Default,,0000,0000,0000,,Narumi-chan!
Dialogue: 0,0:16:42.49,0:16:44.05,Default,,0000,0000,0000,,Cô ấy có thể ở đâu được nhỉ?
Dialogue: 0,0:16:44.53,0:16:46.71,Default,,0000,0000,0000,,Khốn kiếp, tất cả đều do lỗi của mình.
Dialogue: 0,0:16:49.21,0:16:50.45,Default,,0000,0000,0000,,Những dấu chân kia...
Dialogue: 0,0:16:51.87,0:16:53.77,Default,,0000,0000,0000,,Không lẽ nào. Một con gấu ư?
Dialogue: 0,0:16:55.17,0:16:56.57,Default,,0000,0000,0000,,Ôi, không!
Dialogue: 0,0:16:58.97,0:17:01.27,Default,,0000,0000,0000,,Khoan đã! Là tôi đây mà.
Dialogue: 0,0:17:01.35,0:17:02.29,Default,,0000,0000,0000,,Giọng nói này...
Dialogue: 0,0:17:04.19,0:17:05.57,Default,,0000,0000,0000,,N-Narumi-chan?
Dialogue: 0,0:17:05.83,0:17:07.93,Default,,0000,0000,0000,,Phải, là gấu Narumi đây.
Dialogue: 0,0:17:08.07,0:17:09.21,Default,,0000,0000,0000,,Tạ ơn Trời.
Dialogue: 0,0:17:09.35,0:17:12.17,Default,,0000,0000,0000,,Với cái chân què này, gặp gấu thật chắc tôi chết mất.
Dialogue: 0,0:17:13.01,0:17:14.25,Default,,0000,0000,0000,,Sao cô lại mò ra tận đây thế?
Dialogue: 0,0:17:14.45,0:17:18.17,Default,,0000,0000,0000,,Sau khi nghe anh giảng giải, tôi nảy ra ý muốn thám hiểm thế giới bên ngoài một phen.
Dialogue: 0,0:17:18.21,0:17:20.39,Default,,0000,0000,0000,,Bộ trang phục gấu này sẽ giúp tôi giữ ấm cơ thể.
Dialogue: 0,0:17:20.57,0:17:22.17,Default,,0000,0000,0000,,N-Nhưng mà cái đó...
Dialogue: 0,0:17:22.37,0:17:28.95,Default,,0000,0000,0000,,Đúng như anh nói, thế giới bên ngoài vui thật đó!
Dialogue: 0,0:17:29.07,0:17:31.85,Default,,0000,0000,0000,,Đúng là một chuyến phiêu lưu đích thực!
Dialogue: 0,0:17:31.95,0:17:32.79,Default,,0000,0000,0000,,Phiêu lưu ư?
Dialogue: 0,0:17:32.87,0:17:35.13,Default,,0000,0000,0000,,Đúng! Phiêu lưu, phiêu lưu!
Dialogue: 0,0:17:36.09,0:17:37.41,Default,,0000,0000,0000,,Phải rồi!
Dialogue: 0,0:17:38.33,0:17:41.93,Default,,0000,0000,0000,,Đối với cô ấy, đây đích thực là một chuyến phiêu lưu vĩ đại.
Dialogue: 0,0:17:52.85,0:17:54.99,Default,,0000,0000,0000,,Chơi ném tuyết với tôi nhé.
Dialogue: 0,0:17:55.07,0:17:56.01,Default,,0000,0000,0000,,Okay
Dialogue: 0,0:18:04.67,0:18:05.77,Default,,0000,0000,0000,,Đỡ này!
Dialogue: 0,0:18:06.47,0:18:07.53,Default,,0000,0000,0000,,Đỡ này!
Dialogue: 0,0:18:11.65,0:18:16.47,Default,,0000,0000,0000,,Vui thật đó. Trước giờ tôi chưa bao giờ được chơi vui đến vậy.
Dialogue: 0,0:18:16.55,0:18:17.53,Default,,0000,0000,0000,,Tôi biết.
Dialogue: 0,0:18:17.69,0:18:21.39,Default,,0000,0000,0000,,Nhưng từ giờ, cô đừng tự ý ra ngoài như vậy nữa nhé
Dialogue: 0,0:18:21.47,0:18:22.45,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,0:18:23.89,0:18:24.81,Default,,0000,0000,0000,,Um...
Dialogue: 0,0:18:26.05,0:18:30.17,Default,,0000,0000,0000,,Um, tôi muốn nói với anh một chuyện.
Dialogue: 0,0:18:30.85,0:18:32.37,Default,,0000,0000,0000,,Là chuyện gì, Narumi-chan?
Dialogue: 0,0:18:32.57,0:18:36.85,Default,,0000,0000,0000,,À, anh biết đó... Tôi... Tôi...
Dialogue: 0,0:18:41.61,0:18:43.41,Default,,0000,0000,0000,,Cô không sao chứ, Narumi-chan?
Dialogue: 0,0:18:46.93,0:18:48.01,Default,,0000,0000,0000,,Cô vẫn ổn đấy chứ?
Dialogue: 0,0:18:49.25,0:18:50.33,Default,,0000,0000,0000,,V-Vâng.
Dialogue: 0,0:18:52.63,0:18:55.69,Default,,0000,0000,0000,,Tôi xin lỗi. Tôi.. Tôi..
Dialogue: 0,0:18:55.89,0:18:58.29,Default,,0000,0000,0000,,Đừng nói gì cả. Chúng ta phải trở về ngay!
Dialogue: 0,0:19:14.53,0:19:19.17,Default,,0000,0000,0000,,Tất cả là lỗi của ngươi! Narumi... Cậu ấy...
Dialogue: 0,0:19:21.85,0:19:23.85,Default,,0000,0000,0000,,Tình hình thế nào rồi?
Dialogue: 0,0:19:24.33,0:19:26.53,Default,,0000,0000,0000,,Bác sĩ nói một vài ngày tới, bệnh tình cô ấy sẽ trở nên nguy kịch.
Dialogue: 0,0:19:26.57,0:19:27.69,Default,,0000,0000,0000,,Cái gì?
Dialogue: 0,0:19:36.01,0:19:39.01,Default,,0000,0000,0000,,Con xin lỗi. Con đã tự ý ra ngoài mà không xin phép ba.
Dialogue: 0,0:19:39.55,0:19:41.85,Default,,0000,0000,0000,,Đừng bận tâm. Ra ngoài chơi vui không con?
Dialogue: 0,0:19:41.99,0:19:43.13,Default,,0000,0000,0000,,Có ạ.
Dialogue: 0,0:19:44.05,0:19:45.17,Default,,0000,0000,0000,,Ta hiểu rồi.
