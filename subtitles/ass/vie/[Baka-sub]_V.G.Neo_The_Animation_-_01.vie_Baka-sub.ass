Dialogue: 0,0:00:28.86,0:00:30.19,Default,,0000,0000,0000,,Mày làm việc cho ai, hả?
Dialogue: 0,0:00:40.07,0:00:41.63,Default,,0000,0000,0000,,Con ả này dai thật.
Dialogue: 0,0:00:44.24,0:00:47.87,Default,,0000,0000,0000,,Tao hỏi lại lần nữa, những đứa khác đang trốn ở đâu?
Dialogue: 0,0:00:50.71,0:00:51.80,Default,,0000,0000,0000,,Con khốn!
Dialogue: 0,0:00:52.41,0:00:53.64,Default,,0000,0000,0000,,Khai mau!
Dialogue: 0,0:00:54.15,0:00:55.62,Default,,0000,0000,0000,,Khai mau, đồ khốn!
Dialogue: 0,0:01:04.59,0:01:05.62,Default,,0000,0000,0000,,Nói đi!
Dialogue: 0,0:01:09.40,0:01:10.83,Default,,0000,0000,0000,,Mày vẫn không định nói à?
Dialogue: 0,0:01:18.54,0:01:21.44,Default,,0000,0000,0000,,Tra tấn vậy mà vẫn không nói. Đem nó tới đây.
Dialogue: 0,0:01:21.51,0:01:22.13,Default,,0000,0000,0000,,Vâng, thưa ngài
Dialogue: 0,0:01:27.05,0:01:27.88,Default,,0000,0000,0000,,Làm đi.
Dialogue: 0,0:01:30.85,0:01:31.94,Default,,0000,0000,0000,,Các ngươi định giết ta?
Dialogue: 0,0:01:32.42,0:01:34.35,Default,,0000,0000,0000,,Bọn tao không định làm thế.
Dialogue: 0,0:01:40.83,0:01:42.80,Default,,0000,0000,0000,,Xem nó có hiệu quả không nào.
Dialogue: 0,0:01:47.94,0:01:49.53,Default,,0000,0000,0000,,Ngươi làm gì vậy?
Dialogue: 0,0:01:50.87,0:01:54.04,Default,,0000,0000,0000,,Ê, nhiều thế nó có chịu được không?
Dialogue: 0,0:01:54.38,0:01:58.24,Default,,0000,0000,0000,,Một đứa con tin có nổi điên thì cũng chả ai quan tâm?
Dialogue: 0,0:02:05.39,0:02:06.25,Default,,0000,0000,0000,,Nóng...
Dialogue: 0,0:02:06.66,0:02:07.82,Default,,0000,0000,0000,,Đ-Đó là gì vậy?
Dialogue: 0,0:02:12.39,0:02:14.59,Default,,0000,0000,0000,,Không... các ngươi đã làm gì?
Dialogue: 0,0:02:14.90,0:02:16.52,Default,,0000,0000,0000,,Đó có phải huyết thanh?
Dialogue: 0,0:02:18.30,0:02:21.76,Default,,0000,0000,0000,,Để xem tác dụng của nó dưới này thế nào.
Dialogue: 0,0:02:22.24,0:02:23.76,Default,,0000,0000,0000,,Đ-Đừng!
Dialogue: 0,0:02:28.88,0:02:30.10,Default,,0000,0000,0000,,Xem nào...
Dialogue: 0,0:02:30.10,0:02:30.84,Default,,0000,0000,0000,,Không...
Dialogue: 0,0:02:33.08,0:02:33.84,Default,,0000,0000,0000,,Không!
Dialogue: 0,0:02:34.72,0:02:35.88,Default,,0000,0000,0000,,Coi nào, coi nào...
Dialogue: 0,0:02:38.09,0:02:39.52,Default,,0000,0000,0000,,Khiếp thật!
Dialogue: 0,0:02:41.56,0:02:42.40,Default,,0000,0000,0000,,Không!
Dialogue: 0,0:02:42.40,0:02:44.15,Default,,0000,0000,0000,,Ê, để tao...
Dialogue: 0,0:02:45.43,0:02:47.13,Default,,0000,0000,0000,,Chờ đó, để tao chơi trước.
Dialogue: 0,0:02:47.13,0:02:49.10,Default,,0000,0000,0000,,Tao sẽ là người bắt đầu.
Dialogue: 0,0:02:49.26,0:02:52.67,Default,,0000,0000,0000,,Nếu bọn mày muốn thì tranh nhau cái lỗ kia của nó đi.
Dialogue: 0,0:02:58.67,0:03:00.00,Default,,0000,0000,0000,,Tao không chờ được nữa.
Dialogue: 0,0:03:00.58,0:03:04.31,Default,,0000,0000,0000,,Không... Dừng lại... Không...
Dialogue: 0,0:03:05.25,0:03:06.51,Default,,0000,0000,0000,,Cái gì?
Dialogue: 0,0:03:06.98,0:03:09.68,Default,,0000,0000,0000,,Nói lớn lên để tao còn nghe thấy.
Dialogue: 0,0:03:12.39,0:03:15.32,Default,,0000,0000,0000,,D-Dừng lại... dừng lại!
Dialogue: 0,0:03:16.29,0:03:18.35,Default,,0000,0000,0000,,Tao chờ nghe điều đó nãy giờ!
Dialogue: 0,0:03:21.90,0:03:24.09,Default,,0000,0000,0000,,Đau... đau... đừng!
Dialogue: 0,0:03:24.87,0:03:29.27,Default,,0000,0000,0000,,Không! Kéo ra... kéo ra! Làm ơn kéo nó ra đi.
Dialogue: 0,0:03:29.37,0:03:31.93,Default,,0000,0000,0000,,Hàng trinh đúng là tuyệt thật!
Dialogue: 0,0:03:40.05,0:03:41.74,Default,,0000,0000,0000,,Không...
Dialogue: 0,0:03:48.72,0:03:51.16,Default,,0000,0000,0000,,Ê này! Đừng siết chắt nữa!
Dialogue: 0,0:03:49.82,0:03:51.16,Default,,0000,0000,0000,,Mạnh hơn đi!
Dialogue: 0,0:03:57.10,0:03:58.73,Default,,0000,0000,0000,,Thế này hả...
Dialogue: 0,0:04:00.57,0:04:01.43,Default,,0000,0000,0000,,Phải...
Dialogue: 0,0:04:04.14,0:04:07.51,Default,,0000,0000,0000,,Không... Cái đó... Cái đó...
Dialogue: 0,0:04:10.41,0:04:13.81,Default,,0000,0000,0000,,Không... Không... N-Nữa đi!
Dialogue: 0,0:04:19.85,0:04:21.08,Default,,0000,0000,0000,,Tôi ướt lắm rồi!
Dialogue: 0,0:04:39.47,0:04:41.11,Default,,0000,0000,0000,,Con này khá lắm.
Dialogue: 0,0:04:41.11,0:04:43.04,Default,,0000,0000,0000,,Tốt. Tiếp theo đến tao.
Dialogue: 0,0:04:43.68,0:04:45.41,Default,,0000,0000,0000,,Vui một chút chứ hả?
Dialogue: 0,0:04:50.72,0:04:52.62,Default,,0000,0000,0000,,Lỗ này của nó cũng không tệ...
Dialogue: 0,0:04:54.32,0:04:55.52,Default,,0000,0000,0000,,Đau...
Dialogue: 0,0:05:00.46,0:05:02.02,Default,,0000,0000,0000,,Không khai ra à?
Dialogue: 0,0:05:08.70,0:05:10.67,Default,,0000,0000,0000,,Phải! Phải!!
Dialogue: 0,0:05:14.08,0:05:15.20,Default,,0000,0000,0000,,Không chịu được nữa!
