Dialogue: 0,0:00:02.92,0:00:08.44,Default,,0000,0000,0000,,Project này thuộc về website : Baka-sub.net
Dialogue: 0,0:00:11.56,0:00:15.02,Default,,0000,0000,0000,,Phải rồi... Dì sắp ra rồi.
Dialogue: 0,0:00:15.06,0:00:16.52,Default,,0000,0000,0000,,Ra đi nào, Megumi!
Dialogue: 0,0:00:22.03,0:00:23.26,Default,,0000,0000,0000,,Dì ra đây!
Dialogue: 0,0:00:39.78,0:00:43.27,Default,,0000,0000,0000,,Thật ko công bằng chút nào, anh hai. Anh luôn ưu ái mẹ hơn em.
Dialogue: 0,0:00:49.93,0:00:52.92,Default,,0000,0000,0000,,Tuyệt quá... Cái đó vẫn còn mùi của mẹ.
Dialogue: 0,0:01:01.87,0:01:03.74,Default,,0000,0000,0000,,{\i1}Yuna luôn mong muốn có một gia đình hạnh phúc.{\i0}
Dialogue: 0,0:01:03.77,0:01:06.80,Default,,0000,0000,0000,,{\i1}Nguyện vọng của cô ấy là vô cùng chính đáng, cô ấy đã có được điều mình mong muốn.{\i0}
Dialogue: 0,0:01:07.24,0:01:08.71,Default,,0000,0000,0000,,{\i1}Đó chính là bản giao kèo được tạo thành từ chính dục vọng của tôi,{\i0}
Dialogue: 0,0:01:08.74,0:01:12.81,Default,,0000,0000,0000,,{\i1}mơ ước của Yuna, và cả sự đồng thuận của Megumi.{\i0}
Dialogue: 0,0:01:13.55,0:01:15.24,Default,,0000,0000,0000,,{\i1}Mọi việc diễn ra rất nhanh sau khi...{\i0}
Dialogue: 0,0:01:15.28,0:01:17.95,Default,,0000,0000,0000,,{\i1}cha tôi qua đời, với lời đề nghị của Megumi.{\i0}
Dialogue: 0,0:01:31.70,0:01:34.76,Default,,0000,0000,0000,,Cậu muốn bàn với tôi về chuyện gì?
Dialogue: 0,0:01:35.37,0:01:37.57,Default,,0000,0000,0000,,Tôi muốn cô rời khỏi ngôi nhà này ngay lập tức.
Dialogue: 0,0:01:40.04,0:01:43.57,Default,,0000,0000,0000,,Tôi sẽ đài thọ mọi chi phí cho việc chuyển đi của cô. Đó là điều duy nhất tôi có thể làm.
Dialogue: 0,0:01:44.25,0:01:47.15,Default,,0000,0000,0000,,Cậu lạnh lùng quá đấy. Dù gì chúng ta vẫn đang là một gia đình mà.
Dialogue: 0,0:01:47.45,0:01:52.25,Default,,0000,0000,0000,,Gia đình ư? Tôi sẽ ko bao giờ tha thứ cho kẻ đã thay thế vị trí của mẹ tôi trong tấm ảnh chụp gia đình này!
Dialogue: 0,0:01:55.16,0:01:58.85,Default,,0000,0000,0000,,Cha tôi đã di chúc để lại cho tôi toàn bộ tài sản.
Dialogue: 0,0:01:59.60,0:02:01.46,Default,,0000,0000,0000,,Tôi sẽ rất mừng nếu ko phải trông thấy mặt cô nữa.
Dialogue: 0,0:02:02.80,0:02:07.83,Default,,0000,0000,0000,,Hiểu rồi. Vậy là cậu coi tôi là kẻ đào mỏ chứ gì.
Dialogue: 0,0:02:08.64,0:02:12.57,Default,,0000,0000,0000,,Cậu nghĩ rằng đuổi tôi đi là ý kiến hay sao?
Dialogue: 0,0:02:12.98,0:02:14.44,Default,,0000,0000,0000,,Cô cho rằng tôi đang đùa sao?
Dialogue: 0,0:02:14.48,0:02:18.88,Default,,0000,0000,0000,,Nghe này, cậu đã được thừa kế toàn bộ gia tài của Kazuma Wakao,
Dialogue: 0,0:02:19.58,0:02:21.74,Default,,0000,0000,0000,,Bao gồm cả những tác phẩm hội họa của ông ấy.
Dialogue: 0,0:02:22.08,0:02:22.95,Default,,0000,0000,0000,,Thì sao?
Dialogue: 0,0:02:23.42,0:02:28.88,Default,,0000,0000,0000,,Đó chính là vấn đề của cậu. Cậu sẽ phải trả một khoản thuế thừa kế gia tài vô cùng lớn.
Dialogue: 0,0:02:29.29,0:02:34.92,Default,,0000,0000,0000,,Cậu ko biết gì sao? Những chuyên gia định giá tài sản là những kẻ vô cùng nhẫn tâm.
Dialogue: 0,0:02:35.80,0:02:41.90,Default,,0000,0000,0000,,Họ dư sức thổi phồng giá trị thực của những tài sản cậu được thừa kế.
Dialogue: 0,0:02:42.67,0:02:45.47,Default,,0000,0000,0000,,Thời điểm hiện tại, giá thị trường là một chiêu bài mà họ hay sử dụng...
Dialogue: 0,0:02:45.51,0:02:48.10,Default,,0000,0000,0000,,Trong trường hợp xấu nhất, cậu có thể chỉ nhận được một phần mười số tài sản của cậu.
Dialogue: 0,0:02:49.14,0:02:50.81,Default,,0000,0000,0000,,Cậu có hiểu điều đó nghĩa là gì ko?
Dialogue: 0,0:02:52.35,0:02:55.15,Default,,0000,0000,0000,,Ngay cả khi tôi bán đi toàn bộ số tranh đó, tôi cũng ko thể kham nổi khoản thuế đó.
Dialogue: 0,0:02:55.75,0:02:58.05,Default,,0000,0000,0000,,Chính xác. Cậu có thể làm mọi cách để bảo vệ gia tài của mình,
Dialogue: 0,0:02:58.09,0:02:59.52,Default,,0000,0000,0000,,nhưng nguy cơ phá sản vẫn vô cùng lớn.
Dialogue: 0,0:02:59.55,0:03:02.08,Default,,0000,0000,0000,,Cô nói thế hoàn toàn bởi vì cô muốn được chia gia tài.
Dialogue: 0,0:03:02.79,0:03:05.85,Default,,0000,0000,0000,,Tôi sẽ ko yêu cầu một xu nào trong tài sản thừa kế.
Dialogue: 0,0:03:06.33,0:03:11.23,Default,,0000,0000,0000,,Những bức tranh của ông ấy... Những bức tranh do chính tay Kazuo Wakao vẽ...
Dialogue: 0,0:03:11.27,0:03:13.33,Default,,0000,0000,0000,,Hãy trao chúng cho tôi.
Dialogue: 0,0:03:14.07,0:03:15.93,Default,,0000,0000,0000,,Nếu cậu giao những bức tranh đó cho tôi,
Dialogue: 0,0:03:16.27,0:03:18.26,Default,,0000,0000,0000,,Tôi sẽ lo mọi vấn đề liên quan đến khoản thuế đó.
Dialogue: 0,0:03:18.71,0:03:20.94,Default,,0000,0000,0000,,Trao những bức tranh của cha tôi cho cô?
Dialogue: 0,0:03:21.71,0:03:23.70,Default,,0000,0000,0000,,Tất cả gia tài đều là của cậu.
Dialogue: 0,0:03:24.55,0:03:26.74,Default,,0000,0000,0000,,Tôi chỉ yêu cầu những bức tranh đó thôi. Cậu vẫn ko chấp thuận ư?
Dialogue: 0,0:03:26.78,0:03:28.68,Default,,0000,0000,0000,,Tôi ko thể giao hết chúng cho cô được.
Dialogue: 0,0:03:29.22,0:03:31.21,Default,,0000,0000,0000,,Vậy thì tôi sẽ dành cho cậu một đề nghị khác.
Dialogue: 0,0:03:32.05,0:03:33.18,Default,,0000,0000,0000,,Đề nghị gì?
Dialogue: 0,0:03:33.56,0:03:37.15,Default,,0000,0000,0000,,Kyosuke-kun, cậu thích Yuna chứ?
Dialogue: 0,0:03:38.43,0:03:41.92,Default,,0000,0000,0000,,Đúng như thế, cậu có thể làm bất cứ điều gì cậu muốn với con bé.
Dialogue: 0,0:03:42.33,0:03:44.09,Default,,0000,0000,0000,,Cậu ko muốn làm chuyện đó với con bé sao?
Dialogue: 0,0:03:44.53,0:03:48.70,Default,,0000,0000,0000,,Cô chẳng phải mẹ ruột của Yuna sao! Cô điên mất rồi. Cô ấy là em gái tôi.
Dialogue: 0,0:03:49.44,0:03:52.87,Default,,0000,0000,0000,,Nhưng hai người đâu phải ruột thịt. Dù sao đi nữa, những bức tranh...
Dialogue: 0,0:03:52.91,0:03:54.71,Default,,0000,0000,0000,,Tôi chỉ yêu cầu duy nhất những bức tranh đó,
Dialogue: 0,0:03:54.74,0:03:56.40,Default,,0000,0000,0000,,và tôi sẽ lo toàn bộ mọi chuyện.
Dialogue: 0,0:03:57.15,0:04:01.01,Default,,0000,0000,0000,,Vì thế hãy để tôi ở đây thêm một thời gian nữa, đó là tất cả yêu cầu của tôi.
Dialogue: 0,0:04:01.05,0:04:02.81,Default,,0000,0000,0000,,Yuna sẽ ko đời nào đồng ý...
Dialogue: 0,0:04:03.29,0:04:05.48,Default,,0000,0000,0000,,Cứ để tôi lo chuyện Yuna.
Dialogue: 0,0:04:06.49,0:04:08.48,Default,,0000,0000,0000,,Yuna sẽ ko từ chối cậu.
Dialogue: 0,0:04:09.32,0:04:15.16,Default,,0000,0000,0000,,Tôi ko thể giải thích chuyện đó vào lúc này, nhưng chắc chắn cậu cũng đã hình dung ra.
Dialogue: 0,0:04:16.03,0:04:19.90,Default,,0000,0000,0000,,Hiếm khi cả nhà ta ngồi ăn tối cùng nhau thế này.
Dialogue: 0,0:04:20.74,0:04:21.60,Default,,0000,0000,0000,,Quả đúng là như vậy.
Dialogue: 0,0:04:21.64,0:04:27.87,Default,,0000,0000,0000,,Em rất vui khi cả hai người ăn tối cùng với em.
Dialogue: 0,0:04:28.41,0:04:29.18,Default,,0000,0000,0000,,Thật hả?
Dialogue: 0,0:04:29.75,0:04:30.35,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,0:04:30.91,0:04:33.97,Default,,0000,0000,0000,,Từ bây giờ liệu ba chúng ta có thể thường xuyên ăn tối cùng nhau ko nhỉ?
Dialogue: 0,0:04:34.78,0:04:38.45,Default,,0000,0000,0000,,Chúng ta sẽ cố hết sức để đáp ứng yêu cầu của con.
Dialogue: 0,0:04:39.35,0:04:40.84,Default,,0000,0000,0000,,Phải ko, Kyosuke-kun?
Dialogue: 0,0:04:42.56,0:04:43.82,Default,,0000,0000,0000,,Thật chứ ạ?
Dialogue: 0,0:04:44.73,0:04:49.25,Default,,0000,0000,0000,,Nhưng mẹ đừng quá để tâm tới chuyện đó. Con biết công việc là vô cùng quan trọng.
Dialogue: 0,0:04:50.37,0:04:51.39,Default,,0000,0000,0000,,Uhm, mẹ hứa với con.
Dialogue: 0,0:04:52.47,0:04:55.77,Default,,0000,0000,0000,,Yuna này, mẹ có chuyện cần nói với con sau bữa tối.
Dialogue: 0,0:04:56.81,0:04:58.27,Default,,0000,0000,0000,,Chuyện cần nói ư?
Dialogue: 0,0:04:58.31,0:05:00.54,Default,,0000,0000,0000,,Uhm, chuyện đó vô cùng quan trọng.
Dialogue: 0,0:05:01.44,0:05:02.34,Default,,0000,0000,0000,,Vâng...
Dialogue: 0,0:05:13.39,0:05:14.41,Default,,0000,0000,0000,,Anh hai.
Dialogue: 0,0:05:16.02,0:05:21.62,Default,,0000,0000,0000,,Chuyện mẹ nói là sự thật ư? Anh định đuổi em và mẹ ra khỏi nhà ư?
Dialogue: 0,0:05:22.93,0:05:27.27,Default,,0000,0000,0000,,Phải khó khăn lắm em mới có được gia đình của mình... Em ko muốn gia đình ta chia lìa...
Dialogue: 0,0:05:28.20,0:05:30.23,Default,,0000,0000,0000,,Em ko hề muốn như thế.
Dialogue: 0,0:05:37.45,0:05:42.78,Default,,0000,0000,0000,,Nếu em cố gắng hơn nữa... ba chúng ta liệu có thể tiếp tục sống bên nhau chứ?
Dialogue: 0,0:05:44.19,0:05:45.21,Default,,0000,0000,0000,,Uhm.
Dialogue: 0,0:05:45.25,0:05:46.28,Default,,0000,0000,0000,,Thật chứ anh?
Dialogue: 0,0:05:58.77,0:05:59.86,Default,,0000,0000,0000,,Ko...
Dialogue: 0,0:06:02.57,0:06:04.04,Default,,0000,0000,0000,,Em đẹp quá, Yuna.
Dialogue: 0,0:06:14.22,0:06:16.84,Default,,0000,0000,0000,,Anh hai... Nhột quá...
Dialogue: 0,0:06:22.69,0:06:24.09,Default,,0000,0000,0000,,Nó cứng lên rồi.
Dialogue: 0,0:06:30.87,0:06:32.30,Default,,0000,0000,0000,,Ko!
Dialogue: 0,0:06:39.37,0:06:41.07,Default,,0000,0000,0000,,Em ướt rồi này, Yuna.
Dialogue: 0,0:06:41.64,0:06:45.37,Default,,0000,0000,0000,,Anh nói dối. Anh hai, làm ơn đừng nhìn chằm chằm như thế.
Dialogue: 0,0:06:50.39,0:06:51.51,Default,,0000,0000,0000,,Ko...
Dialogue: 0,0:06:54.42,0:06:58.22,Default,,0000,0000,0000,,Em... em... phát điên lên mất!
Dialogue: 0,0:06:59.86,0:07:01.29,Default,,0000,0000,0000,,Anh hai...
Dialogue: 0,0:07:23.55,0:07:24.88,Default,,0000,0000,0000,,K... Ko!
Dialogue: 0,0:07:26.49,0:07:30.05,Default,,0000,0000,0000,,Yuna! Chúng ta đã đi quá xa rồi! Em đừng có như vậy chứ!
Dialogue: 0,0:07:30.63,0:07:35.19,Default,,0000,0000,0000,,Ko, em ko thể. Em ko muốn làm chuyện này với anh theo cách này...
Dialogue: 0,0:07:35.50,0:07:36.36,Default,,0000,0000,0000,,Yuna!
Dialogue: 0,0:07:36.87,0:07:39.77,Default,,0000,0000,0000,,Em ko muốn như vậy. Dù anh có nói gì đi chăng nữa,
Dialogue: 0,0:07:39.80,0:07:42.03,Default,,0000,0000,0000,,Em ko muốn lần đầu tiên của em như thế này.
Dialogue: 0,0:07:42.74,0:07:48.64,Default,,0000,0000,0000,,Anh hai, em xin anh. Trừ việc này ra. Em sẽ làm bất cứ điều gì khác.
Dialogue: 0,0:07:50.41,0:07:52.07,Default,,0000,0000,0000,,Anh có thể yêu cầu ở em mọi điều.
Dialogue: 0,0:07:53.18,0:07:57.58,Default,,0000,0000,0000,,Mọi điều trừ điều này, huh? Em chắc chứ, Yuna?
Dialogue: 0,0:07:58.52,0:08:01.39,Default,,0000,0000,0000,,Em sẽ để cho anh làm bất cứ điều gì trừ điều này?
Dialogue: 0,0:08:01.66,0:08:05.96,Default,,0000,0000,0000,,Vâng. Nhưng anh phải hứa với em. Em muốn giữ được trinh tiết của mình.
Dialogue: 0,0:08:06.56,0:08:09.19,Default,,0000,0000,0000,,Được rồi. Anh hứa với em.
Dialogue: 0,0:08:11.93,0:08:15.99,Default,,0000,0000,0000,,Mẹ phải đi bây giờ. Con dọn dẹp chỗ này dùm mẹ nhé.
Dialogue: 0,0:08:16.91,0:08:18.24,Default,,0000,0000,0000,,Vâng ạ.
Dialogue: 0,0:08:28.88,0:08:29.98,Default,,0000,0000,0000,,Anh hai...
Dialogue: 0,0:08:33.69,0:08:39.46,Default,,0000,0000,0000,,Em... Em xin lỗi. Chuyện đêm qua làm em vô cùng áy náy...
Dialogue: 0,0:08:40.73,0:08:46.33,Default,,0000,0000,0000,,Tại em quá xấu hổ. Khi em nghĩ đến chuyện sắp làm với anh...
Dialogue: 0,0:08:47.67,0:08:50.37,Default,,0000,0000,0000,,Yuna, em chưa quên lời hứa giữa hai chúng ta chứ, phải ko?
Dialogue: 0,0:08:51.41,0:08:53.03,Default,,0000,0000,0000,,Vâng...
Dialogue: 0,0:09:02.38,0:09:04.68,Default,,0000,0000,0000,,{\i1}Một kiệt tác của cha, Sự khao khát của bình minh,{\i0}
Dialogue: 0,0:09:04.72,0:09:07.05,Default,,0000,0000,0000,,{\i1}ko hề được nhắc tới trong danh sách này.{\i0}
Dialogue: 0,0:09:08.99,0:09:10.55,Default,,0000,0000,0000,,{\i1}Sao cha lại làm thế nhỉ?{\i0}
Dialogue: 0,0:09:11.06,0:09:12.49,Default,,0000,0000,0000,,Anh hai...
Dialogue: 0,0:09:12.86,0:09:16.59,Default,,0000,0000,0000,,Đây là bản danh sách của cha-- có thể coi như danh mục các tác phẩm của ông.
Dialogue: 0,0:09:18.10,0:09:21.76,Default,,0000,0000,0000,,Ông đã tự mình lên danh sách khi còn đang trong viện. Ông đã trao nó cho anh.
Dialogue: 0,0:09:23.64,0:09:25.83,Default,,0000,0000,0000,,Em xin anh, anh hai...
Dialogue: 0,0:09:27.14,0:09:29.74,Default,,0000,0000,0000,,Làm ơn hãy chỉ làm điều đó khi chúng ta ở nhà...
Dialogue: 0,0:09:31.41,0:09:33.54,Default,,0000,0000,0000,,Cảm thấy thế nào khi ko mặc quần lót?
Dialogue: 0,0:09:34.42,0:09:36.04,Default,,0000,0000,0000,,Xấu hổ lắm ạ.
Dialogue: 0,0:09:36.95,0:09:38.38,Default,,0000,0000,0000,,Em ướt rồi này, Yuna.
Dialogue: 0,0:09:39.25,0:09:41.25,Default,,0000,0000,0000,,Ai đó sẽ trông thấy mất.
Dialogue: 0,0:09:42.06,0:09:43.42,Default,,0000,0000,0000,,Em thích chuyện đó mà.
Dialogue: 0,0:09:43.69,0:09:44.62,Default,,0000,0000,0000,,Ko...
Dialogue: 0,0:09:44.66,0:09:47.36,Default,,0000,0000,0000,,Anh còn nhiều thứ muốn dạy cho em.
Dialogue: 0,0:09:48.83,0:09:50.86,Default,,0000,0000,0000,,Huh? Ko!
Dialogue: 0,0:09:51.80,0:09:54.43,Default,,0000,0000,0000,,Vậy chúng ta sẽ tiến hành theo bản đề án này, phải ko ạ?
Dialogue: 0,0:09:54.47,0:09:57.93,Default,,0000,0000,0000,,Uhm... cô có thể ra về được rồi, Nakuru.
Dialogue: 0,0:09:58.24,0:09:59.14,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,0:10:02.31,0:10:05.91,Default,,0000,0000,0000,,Thật hiếm khi. Đây hẳn là lần đầu tiên cậu đến nơi này.
Dialogue: 0,0:10:06.41,0:10:09.25,Default,,0000,0000,0000,,Tôi được biết cô chính là người tổ chức buổi triển lãm các tác phẩm hội họa của cha tôi.
Dialogue: 0,0:10:09.65,0:10:12.92,Default,,0000,0000,0000,,Chúng tôi đang phải giải quyết một số việc, vì thế ko thể tiến hành việc triển lãm ngay được.
Dialogue: 0,0:10:13.35,0:10:15.85,Default,,0000,0000,0000,,Bức "Sự khao khát của bình minh" ko được trưng bày sao ?
Dialogue: 0,0:10:16.56,0:10:19.93,Default,,0000,0000,0000,,Oh, văn phòng thuế và Bộ văn hóa nghệ thuật...
Dialogue: 0,0:10:19.96,0:10:22.05,Default,,0000,0000,0000,,đã bắt đầu để mắt tới nơi này.
Dialogue: 0,0:10:22.10,0:10:23.69,Default,,0000,0000,0000,,Tôi ko thể trưng bày nó một cách tùy tiện được.
Dialogue: 0,0:10:26.67,0:10:29.60,Note,,0000,0000,0000,,{\i1}Ko phận sự miễn vào{\i0}
Dialogue: 0,0:10:27.27,0:10:29.60,Default,,0000,0000,0000,,Tôi hiểu rồi.
Dialogue: 0,0:10:48.79,0:10:51.73,Note,,0000,0000,0000,,{\i1}Phòng thí nghiệm{\i0}
Dialogue: 0,0:10:58.13,0:11:00.19,Default,,0000,0000,0000,,Hôm nay chúng ta sẽ thử thứ này.
Dialogue: 0,0:11:07.31,0:11:08.87,Default,,0000,0000,0000,,Em muốn ở chỗ nào, Yuna!
Dialogue: 0,0:11:09.01,0:11:10.87,Default,,0000,0000,0000,,Ko phải chỗ đó !
Dialogue: 0,0:11:11.11,0:11:14.67,Default,,0000,0000,0000,,À đúng rồi, anh đã hứa rồi mà! Vậy để anh làm chỗ khác vậy.
Dialogue: 0,0:11:14.85,0:11:16.65,Default,,0000,0000,0000,,Ko, chỗ đó của em sẽ rách mất!
Dialogue: 0,0:11:17.29,0:11:19.38,Default,,0000,0000,0000,,Em làm được mà.
Dialogue: 0,0:11:20.12,0:11:22.92,Default,,0000,0000,0000,,Nhưng... Em sợ lắm, anh hai.
Dialogue: 0,0:11:23.19,0:11:25.32,Default,,0000,0000,0000,,Em đã nói là em sẽ làm bất cứ điều gì mà.
Dialogue: 0,0:11:25.36,0:11:29.06,Default,,0000,0000,0000,,Anh muốn trông thấy em rên lên vì đau đớn với thứ này.
Dialogue: 0,0:11:29.40,0:11:30.42,Default,,0000,0000,0000,,Nhưng mà...
Dialogue: 0,0:11:31.23,0:11:34.50,Default,,0000,0000,0000,,Em muốn ở chỗ nào, Yuna? Ở đây? Hay là...
Dialogue: 0,0:11:36.74,0:11:38.43,Default,,0000,0000,0000,,Sao em ko nói gì cả?
Dialogue: 0,0:11:39.41,0:11:40.54,Default,,0000,0000,0000,,Bên trong hậu môn em...
Dialogue: 0,0:11:40.56,0:11:42.24,Default,,0000,0000,0000,,Chỗ nào?
Dialogue: 0,0:11:42.31,0:11:46.61,Default,,0000,0000,0000,,Hậu... Làm ơn hãy nhét nó vào trong hậu môn em...
Dialogue: 0,0:11:50.45,0:11:51.98,Default,,0000,0000,0000,,Anh thật nhẫn tâm, anh hai.
Dialogue: 0,0:11:54.46,0:11:58.36,Default,,0000,0000,0000,,Thôi nào, Yuna. Nói cho anh biết chuyện gì đang xảy ra nào.
Dialogue: 0,0:12:00.50,0:12:01.33,Default,,0000,0000,0000,,Nói đi nào...
Dialogue: 0,0:12:02.16,0:12:05.93,Default,,0000,0000,0000,,Cái ống nghiệm đó đang vào trong hậu môn em và...
Dialogue: 0,0:12:07.17,0:12:09.10,Default,,0000,0000,0000,,Em thấy gì bên trong nào?
Dialogue: 0,0:12:10.00,0:12:12.87,Default,,0000,0000,0000,,Em có thể nhìn thấy ruột của mình.
Dialogue: 0,0:12:14.38,0:12:17.97,Default,,0000,0000,0000,,Hậu môn của em... Hậu môn của em đang tê đi rồi.
Dialogue: 0,0:12:19.05,0:12:20.48,Default,,0000,0000,0000,,Anh hai...
Dialogue: 0,0:12:21.35,0:12:24.01,Default,,0000,0000,0000,,Nước của em lại chảy ra nữa rồi kìa.
Dialogue: 0,0:12:24.62,0:12:25.75,Default,,0000,0000,0000,,Anh nói dối...
Dialogue: 0,0:12:25.79,0:12:28.09,Default,,0000,0000,0000,,Anh ko nghĩ là em lại sướng đến như vậy.
Dialogue: 0,0:12:28.82,0:12:31.45,Default,,0000,0000,0000,,Ko... Anh nhầm rồi...
Dialogue: 0,0:12:32.06,0:12:34.43,Default,,0000,0000,0000,,Vậy tại sao nó lại đang trào hết ra ngoài thế kia?
Dialogue: 0,0:12:35.93,0:12:38.23,Default,,0000,0000,0000,,Đừng làm nhanh như vậy... Em...
Dialogue: 0,0:12:43.77,0:12:48.44,Default,,0000,0000,0000,,Ôi, ko!
Dialogue: 0,0:12:58.35,0:13:02.41,Default,,0000,0000,0000,,{\i1}Khi dục vọng trong tôi ngày một tăng, tôi bắt đầu huấn luyện Yuna.{\i0}
Dialogue: 0,0:13:03.52,0:13:06.39,Default,,0000,0000,0000,,{\i1}Phải Yuna thật sự thích điều đó?{\i0}
Dialogue: 0,0:13:07.50,0:13:10.43,Default,,0000,0000,0000,,{\i1}Tôi thực sự kinh ngạc khi chứng kiến cô ấy ...{\i0}
Dialogue: 0,0:13:10.47,0:13:12.19,Default,,0000,0000,0000,,{\i1}kiên trì chịu đựng nỗi xấu hổ.{\i0}
Dialogue: 0,0:13:13.23,0:13:15.93,Default,,0000,0000,0000,,{\i1}Tôi bắt đầu nhìn Yuna theo cách khác sau những chuyện đó...{\i0}
Dialogue: 0,0:13:15.97,0:13:19.46,Default,,0000,0000,0000,,{\i1}cô ấy đã dần đạt tới niềm phấn khích khôn ta, còn tôi thì bắt đầu cảm thấy...{\i0}
Dialogue: 0,0:13:19.51,0:13:22.53,Default,,0000,0000,0000,,{\i1}vị đắng lẫn trong sự hài lòng của mình.{\i0}
Dialogue: 0,0:13:25.25,0:13:26.04,Default,,0000,0000,0000,,Nóng quá!
Dialogue: 0,0:13:28.98,0:13:31.98,Default,,0000,0000,0000,,{\i1}Có lẽ đó chính là cái mà mọi người gọi là sự đồi bại.{\i0}
Dialogue: 0,0:13:35.29,0:13:36.66,Default,,0000,0000,0000,,Anh hai...
Dialogue: 0,0:13:37.46,0:13:42.92,Default,,0000,0000,0000,,Em sẽ làm tất cả mọi điều, hãy hành hạ em nhiều hơn nữa...
Dialogue: 0,0:13:44.07,0:13:45.97,Default,,0000,0000,0000,,Hành hạ em nữa đi...
Dialogue: 0,0:13:47.44,0:13:50.53,Default,,0000,0000,0000,,Em yêu anh, Anh hai...
Dialogue: 0,0:13:52.67,0:13:54.73,Default,,0000,0000,0000,,Em yêu anh, Anh hai...
Dialogue: 0,0:14:08.52,0:14:09.79,Default,,0000,0000,0000,,Anh hai...
Dialogue: 0,0:14:17.60,0:14:18.59,Default,,0000,0000,0000,,Mẹ.
Dialogue: 0,0:14:21.10,0:14:22.97,Default,,0000,0000,0000,,Con đang gần gũi với Kyosuke-kun hơn phải ko?
Dialogue: 0,0:14:23.87,0:14:24.93,Default,,0000,0000,0000,,Vâng ạ.
Dialogue: 0,0:14:24.97,0:14:28.50,Default,,0000,0000,0000,,Con phải thành thật với lòng mình hơn nữa.
Dialogue: 0,0:14:28.98,0:14:33.38,Default,,0000,0000,0000,,Con cảm thấy hạnh phúc khi ba chúng ta tiếp tục sống cùng nhau.
Dialogue: 0,0:14:35.52,0:14:38.71,Default,,0000,0000,0000,,Nhân tiện, hôm nay anh hai vừa cho con xem cuốn sách của cha.
Dialogue: 0,0:14:39.49,0:14:40.89,Default,,0000,0000,0000,,Cuốn sách nào?
Dialogue: 0,0:14:41.09,0:14:46.62,Default,,0000,0000,0000,,Anh hai nói đó là một bản liệt kê các tác phẩm hội họa. Chính cha đã tự tay lập ra.
Dialogue: 0,0:14:47.26,0:14:48.19,Default,,0000,0000,0000,,Mẹ hiểu rồi...
Dialogue: 0,0:14:50.60,0:14:51.62,Default,,0000,0000,0000,,Kyosuke-kun.
Dialogue: 0,0:14:53.07,0:14:57.40,Default,,0000,0000,0000,,Cậu có thể cho tôi mượn bản danh sách do cha cậu tự tay làm được ko?
Dialogue: 0,0:14:58.07,0:14:59.60,Default,,0000,0000,0000,,Sao cô biết điều đó?
Dialogue: 0,0:15:00.68,0:15:03.37,Default,,0000,0000,0000,,Oh, Yuna. Rõ rồi.
Dialogue: 0,0:15:03.71,0:15:07.37,Default,,0000,0000,0000,,Sao quan điểm của cậu lại ko nhất quán như vậy. Chúng ta đâu cần thiết phải làm khó cho nhau.
Dialogue: 0,0:15:09.68,0:15:11.91,Default,,0000,0000,0000,,Oh, nó đây. Tôi cũng có điều muốn hỏi cô đây...
Dialogue: 0,0:15:11.95,0:15:13.28,Default,,0000,0000,0000,,liên quan đến bản danh sách này.
Dialogue: 0,0:15:13.96,0:15:17.48,Default,,0000,0000,0000,,Bức "Sự khao khát của bình minh" mà cô đang giữ ko có tên trong đây.
Dialogue: 0,0:15:35.18,0:15:36.23,Default,,0000,0000,0000,,Anh hai.
Dialogue: 0,0:15:36.74,0:15:39.74,Default,,0000,0000,0000,,Yuna, nằm sấp xuống mau.
Dialogue: 0,0:15:41.98,0:15:43.08,Default,,0000,0000,0000,,N... Như thế này phải ko?
Dialogue: 0,0:15:43.62,0:15:46.55,Default,,0000,0000,0000,,Em đáng bị trừng phạt ngay bây giờ.
Dialogue: 0,0:15:47.76,0:15:50.32,Default,,0000,0000,0000,,Em đã nói cho Megumi-san biết về bản danh sách đó, phải ko?
Dialogue: 0,0:15:51.16,0:15:51.92,Default,,0000,0000,0000,,Vâng em..
Dialogue: 0,0:15:54.26,0:15:56.06,Default,,0000,0000,0000,,Đau quá, anh hai!
Dialogue: 0,0:15:56.26,0:16:00.60,Default,,0000,0000,0000,,Chỉ vì sưh ba hoa của em, anh đã đánh mất lợi thế trước cô ta!
Dialogue: 0,0:16:02.94,0:16:06.50,Default,,0000,0000,0000,,Yuna, em nghĩ việc gây rắc rối cho anh là chuyện tốt sao?
Dialogue: 0,0:16:07.31,0:16:09.14,Default,,0000,0000,0000,,Chuyện đó thật tồi tệ.
Dialogue: 0,0:16:09.71,0:16:11.44,Default,,0000,0000,0000,,Yuna...
Dialogue: 0,0:16:11.48,0:16:13.34,Default,,0000,0000,0000,,Yuna thật tồi tệ.
Dialogue: 0,0:16:14.22,0:16:15.18,Default,,0000,0000,0000,,Vì thế...
Dialogue: 0,0:16:16.02,0:16:18.68,Default,,0000,0000,0000,,Làm ơn hãy trừng phạt em đi.
Dialogue: 0,0:16:21.26,0:16:26.19,Default,,0000,0000,0000,,Yuna thật tồi tệ. Vì thế... Hãy trừng phạt em đi!
Dialogue: 0,0:16:29.86,0:16:36.60,Default,,0000,0000,0000,,Yuna là cô gái hư hỏng. Nữa đi! Trừng phạt em nữa đi!
Dialogue: 0,0:16:52.52,0:16:56.51,Default,,0000,0000,0000,,Yuna, em cố tình nói với cô ta để bị anh trừng phạt, phải ko?
Dialogue: 0,0:16:57.69,0:17:02.13,Default,,0000,0000,0000,,Phải rồi... Hãy trừng phạt em thật nặng vào.
Dialogue: 0,0:17:02.70,0:17:05.53,Default,,0000,0000,0000,,Sao em lại ướt thế này, Yuna?
Dialogue: 0,0:17:06.30,0:17:07.29,Default,,0000,0000,0000,,Anh nói dối...
Dialogue: 0,0:17:07.34,0:17:09.67,Default,,0000,0000,0000,,Em cảm thấy sung sướng khi đau.
Dialogue: 0,0:17:10.00,0:17:11.06,Default,,0000,0000,0000,,Ko...
Dialogue: 0,0:17:11.84,0:17:15.97,Default,,0000,0000,0000,,Em sung sướng khi bị vả vào mông. Em thật dâm đãng.
Dialogue: 0,0:17:17.48,0:17:19.07,Default,,0000,0000,0000,,Ko, em ko...
Dialogue: 0,0:17:19.55,0:17:21.64,Default,,0000,0000,0000,,Yuna, em muốn anh làm gì với thứ này?
Dialogue: 0,0:17:27.29,0:17:28.78,Default,,0000,0000,0000,,Chỗ đó của em đã trả lời thay em rồi.
Dialogue: 0,0:17:32.26,0:17:37.53,Default,,0000,0000,0000,,Em thích sự đau đớn, đúng ko? Hãy nói mau ko thì anh sẽ bỏ nó ra ngay lập tức.
Dialogue: 0,0:17:39.80,0:17:43.96,Default,,0000,0000,0000,,Cở thể em đau nhói lên từng cơn, nhưng cũng sướng vô cùng.
Dialogue: 0,0:17:46.21,0:17:47.87,Default,,0000,0000,0000,,Thế này sướng ko, Yuna?
Dialogue: 0,0:17:48.74,0:17:51.58,Default,,0000,0000,0000,,Sướng quá đi mất. Sướng quá.
Dialogue: 0,0:17:52.05,0:17:54.54,Default,,0000,0000,0000,,Vậy em có muốn thêm một cái ở chỗ này ko?
Dialogue: 0,0:17:55.62,0:17:56.58,Default,,0000,0000,0000,,Nhưng mà chỗ đó...
Dialogue: 0,0:17:57.39,0:18:00.18,Default,,0000,0000,0000,,Phải cầu xin nếu em muốn.
Dialogue: 0,0:18:03.10,0:18:08.13,Default,,0000,0000,0000,,Làm ơn hãy cặp nó vào chỗ đó của em
Dialogue: 0,0:18:14.10,0:18:17.13,Default,,0000,0000,0000,,Phải rồi, sướng quá!
Dialogue: 0,0:18:18.04,0:18:22.34,Default,,0000,0000,0000,,Làm ơn đi, anh hai! Nữa! Hãy kéo mạnh hơn nữa!
Dialogue: 0,0:18:24.48,0:18:29.42,Default,,0000,0000,0000,,Hãy kéo hết sức của anh đi!
Dialogue: 0,0:19:02.08,0:19:03.28,Default,,0000,0000,0000,,Ấm quá.
Dialogue: 0,0:19:06.85,0:19:08.29,Default,,0000,0000,0000,,Sướng quá đi mất.
Dialogue: 0,0:19:10.52,0:19:11.99,Default,,0000,0000,0000,,Nhanh lên nào, Yuna! Này!
Dialogue: 0,0:19:13.76,0:19:15.29,Default,,0000,0000,0000,,Chúng ta sẽ muộn mất. Nhanh lên nào!
Dialogue: 0,0:19:15.33,0:19:16.76,Default,,0000,0000,0000,,Serika, đợi đã nào!
Dialogue: 0,0:19:17.40,0:19:18.33,Default,,0000,0000,0000,,Ko đâu!
Dialogue: 0,0:19:19.13,0:19:20.07,Default,,0000,0000,0000,,Serika!
Dialogue: 0,0:19:26.97,0:19:28.07,Default,,0000,0000,0000,,Anh hai!
Dialogue: 0,0:19:34.98,0:19:38.47,Default,,0000,0000,0000,,Anh hai. Anh hai, bữa tối xong rồi.
Dialogue: 0,0:19:41.49,0:19:42.96,Default,,0000,0000,0000,,Anh ko có trong này hả? Anh hai?
Dialogue: 0,0:19:43.42,0:19:47.86,Default,,0000,0000,0000,,{\i1}Kyosuke, cha vẽ bức tranh này là để dành riêng cho gia đình chúng ta.{\i0}
Dialogue: 0,0:19:48.56,0:19:51.33,Default,,0000,0000,0000,,{\i1}"Sự khao khát của bình minh" chính là câu trả lời của cha.{\i0}
Dialogue: 0,0:19:52.07,0:19:54.16,Default,,0000,0000,0000,,{\i1}Bức tranh này chứa đựng tất cả những gì con muốn biết.{\i0}
Dialogue: 0,0:19:55.77,0:19:58.80,Default,,0000,0000,0000,,{\i1}Sự kết thúc của màn đêm. Đó chính là tiêu đề của thứ này.{\i0}
Dialogue: 0,0:20:00.74,0:20:03.23,Default,,0000,0000,0000,,{\i1}Cha ơi. Cha ơi...{\i0}
Dialogue: 0,0:20:03.81,0:20:06.44,Default,,0000,0000,0000,,{\i1}Chúng ta sẽ bàn chuyện đó khi tôi quay về.{\i0}
Dialogue: 0,0:20:06.48,0:20:07.67,Default,,0000,0000,0000,,{\i1}Tôi vẫn còn đang ở nơi hỏa táng.{\i0}
Dialogue: 0,0:20:09.85,0:20:11.18,Default,,0000,0000,0000,,{\i1}Oh! Chào anh, anh hai!{\i0}
Dialogue: 0,0:20:11.35,0:20:13.84,Default,,0000,0000,0000,,{\i1}Kyosuke! Lại đây ngồi với chúng ta nào.{\i0}
Dialogue: 0,0:20:15.96,0:20:16.79,Default,,0000,0000,0000,,Mẹ...
Dialogue: 0,0:20:24.73,0:20:28.67,Default,,0000,0000,0000,,{\i1}Um... Em có thể gọi anh là Anh hai chứ?{\i0}
Dialogue: 0,0:20:29.74,0:20:31.73,Default,,0000,0000,0000,,{\i1}Chắc chắn rồi, em là...{\i0}
Dialogue: 0,0:20:32.37,0:20:37.81,Default,,0000,0000,0000,,{\i1}Vâng! Tên em là Yuna. Rất vui được gặp anh. Anh hai.{\i0}
Dialogue: 0,0:20:39.65,0:20:40.88,Default,,0000,0000,0000,,{\i1}Anh hai!{\i0}
Dialogue: 0,0:20:51.86,0:20:55.76,Default,,0000,0000,0000,,Ko biết mọi người nghĩ thế nào về hai chúng ta?
Dialogue: 0,0:20:56.33,0:20:59.42,Default,,0000,0000,0000,,Em đang nghĩ xem họ sẽ nghĩ chúng ta là hai anh em hay một đôi tình nhân nhỉ?
Dialogue: 0,0:21:00.10,0:21:01.19,Default,,0000,0000,0000,,Anh cũng nghĩ giống như em.
Dialogue: 0,0:21:01.24,0:21:05.07,Default,,0000,0000,0000,,Em thật sự rất hạnh phúc khi được anh mời đi chơi.
Dialogue: 0,0:21:05.97,0:21:08.24,Default,,0000,0000,0000,,Anh đã ko để ý tới em nhiều kể từ lần đó.
Dialogue: 0,0:21:09.38,0:21:10.64,Default,,0000,0000,0000,,Đó là em nghĩ như vậy thôi.
Dialogue: 0,0:21:11.05,0:21:13.84,Default,,0000,0000,0000,,Anh làm em lo lắng vô cùng. Em nghĩ rằng anh đã...
Dialogue: 0,0:21:14.05,0:21:17.85,Default,,0000,0000,0000,,Đã đến lúc anh cho em biết tình cảm thật sự của anh rồi đó.
Dialogue: 0,0:21:19.72,0:21:20.74,Default,,0000,0000,0000,,Anh hai.
Dialogue: 0,0:21:22.66,0:21:25.22,Default,,0000,0000,0000,,Thời gian đầu khi em tới nhà anh, em cười rất nhiều.
Dialogue: 0,0:21:25.26,0:21:26.78,Default,,0000,0000,0000,,Em cũng đã 18 tuổi rồi.
Dialogue: 0,0:21:27.60,0:21:30.86,Default,,0000,0000,0000,,Nhưng từ khi cha nhập viện, nụ cười đã ko còn thường trực trên môi em nữa.
Dialogue: 0,0:21:31.93,0:21:36.89,Default,,0000,0000,0000,,Ban nãy khi nhìn em, anh lại nhớ đến thời gian em mới chuyển đến.
Dialogue: 0,0:21:38.94,0:21:42.34,Default,,0000,0000,0000,,Lúc đó nụ cười của em thật tươi tắn và hạnh phúc biết bao...
Dialogue: 0,0:21:43.08,0:21:45.34,Default,,0000,0000,0000,,Em có thể gọi anh là Anh hai được ko?
Dialogue: 0,0:21:52.15,0:21:53.25,Default,,0000,0000,0000,,Em hạnh phúc quá.
Dialogue: 0,0:21:53.29,0:21:54.28,Default,,0000,0000,0000,,Chuyện gì thế?
Dialogue: 0,0:21:55.16,0:21:57.12,Default,,0000,0000,0000,,Ko, ko có gì cả.
Dialogue: 0,0:22:00.16,0:22:05.16,Default,,0000,0000,0000,,Anh hai. Anh thật sự nghĩ rằng mẹ em là một kẻ đào mỏ ư?
Dialogue: 0,0:22:06.10,0:22:07.86,Default,,0000,0000,0000,,Anh ko hề nghĩ như vậy.
Dialogue: 0,0:22:09.17,0:22:10.26,Default,,0000,0000,0000,,Tốt quá rồi.
Dialogue: 0,0:22:10.30,0:22:13.74,Default,,0000,0000,0000,,Nhưng việc cô ta bảo mật bức "Sự khao khát của bình minh" kĩ như vậy...
Dialogue: 0,0:22:14.58,0:22:17.07,Default,,0000,0000,0000,,chắc chắn cô ta đang có kế hoạch nào đó, nhưng...
Dialogue: 0,0:22:17.65,0:22:20.11,Default,,0000,0000,0000,,Anh hai... Anh ghét mẹ em đến vậy sao?
Dialogue: 0,0:22:20.95,0:22:22.78,Default,,0000,0000,0000,,Em biết rõ điều đó mà, nhưng...
Dialogue: 0,0:22:22.82,0:22:26.18,Default,,0000,0000,0000,,Khi cha bắt đầu hẹn hò với Megumi và bỏ rơi mẹ anh.
Dialogue: 0,0:22:27.32,0:22:29.98,Default,,0000,0000,0000,,Ko lâu sau đó, mẹ anh ốm nặng và qua đời.
Dialogue: 0,0:22:31.83,0:22:35.76,Default,,0000,0000,0000,,Anh biết đó ko hoàn toàn là lỗi của Megumi-san...
Dialogue: 0,0:22:36.33,0:22:39.36,Default,,0000,0000,0000,,Nhưng anh đã luôn tự nhủ rằng...
Dialogue: 0,0:22:40.20,0:22:46.50,Default,,0000,0000,0000,,Lẽ ra mẹ anh có thể sống đến bây giờ nếu bà và cha ko li dị nhau.
Dialogue: 0,0:22:47.44,0:22:50.64,Default,,0000,0000,0000,,Đôi lúc điều đó vẫn làm cho anh đau đớn vô cùng.
Dialogue: 0,0:22:51.45,0:22:55.58,Default,,0000,0000,0000,,Nhưng nếu mẹ em và cha anh ko cưới nhau,
Dialogue: 0,0:22:55.62,0:22:58.18,Default,,0000,0000,0000,,Em sẽ ko bao giờ có thể gặp được anh!
Dialogue: 0,0:22:58.69,0:23:02.99,Default,,0000,0000,0000,,Em luôn muốn ba người chúng ta sống hạnh phúc bên nhau!
Dialogue: 0,0:23:03.82,0:23:04.79,Default,,0000,0000,0000,,Mãi mãi...
Dialogue: 0,0:23:15.10,0:23:16.83,Default,,0000,0000,0000,,Buộc em lại đi, Anh hai...
Dialogue: 0,0:23:20.31,0:23:22.90,Default,,0000,0000,0000,,Làm ơn, anh hai, hãy cột chặt hơn nữa...
Dialogue: 0,0:23:24.45,0:23:28.01,Default,,0000,0000,0000,,Phải rồi... Sợi dây đó đang xiết lấy âm hộ em. Sướng quá...
Dialogue: 0,0:23:31.62,0:23:33.05,Default,,0000,0000,0000,,Em làm tuyệt lắm, Yuna.
Dialogue: 0,0:23:35.79,0:23:38.12,Default,,0000,0000,0000,,Em sẽ làm cho anh sướng hơn nữa.
Dialogue: 0,0:23:46.40,0:23:48.30,Default,,0000,0000,0000,,Anh hai, nằm xuống nào.
Dialogue: 0,0:23:49.44,0:23:50.23,Default,,0000,0000,0000,,Uhm.
Dialogue: 0,0:24:05.09,0:24:06.61,Default,,0000,0000,0000,,Tuyệt lắm, Yuna.
Dialogue: 0,0:24:08.59,0:24:10.32,Default,,0000,0000,0000,,Có thứ gì rịn ra ngoài kìa.
Dialogue: 0,0:24:24.24,0:24:25.47,Default,,0000,0000,0000,,Anh sắp ra rồi!
Dialogue: 0,0:24:39.75,0:24:41.45,Default,,0000,0000,0000,,Chuyện đó thực sự rất tuyệt, Yuna.
Dialogue: 0,0:24:44.19,0:24:48.42,Default,,0000,0000,0000,,Anh hai, vì sao anh lại giữ lời hứa với em?
Dialogue: 0,0:24:49.36,0:24:52.09,Default,,0000,0000,0000,,Anh là người giữ lợi thế trong lời hứa đó.
Dialogue: 0,0:24:53.30,0:24:54.82,Default,,0000,0000,0000,,Anh đã làm nhiều điều tồi tệ với em,
Dialogue: 0,0:24:55.60,0:24:59.04,Default,,0000,0000,0000,,nhưng phần nào đó trong anh, lại ko hề muốn bị em căm ghét.
Dialogue: 0,0:25:00.04,0:25:04.00,Default,,0000,0000,0000,,Nếu anh phá vỡ lời hứa đó, anh lo mình sẽ ko bao giờ có thể gặp lại em nữa.
Dialogue: 0,0:25:04.78,0:25:08.91,Default,,0000,0000,0000,,Em đã luôn luôn cảm thấy cô đơn những khi chờ đợi mẹ.
Dialogue: 0,0:25:08.95,0:25:12.54,Default,,0000,0000,0000,,Em luôn ăn uống và dọn dẹp một mình. Tất cả đều chỉ một mình...
Dialogue: 0,0:25:13.25,0:25:15.92,Default,,0000,0000,0000,,Đó chính là lí do tại sao em đã vô cùng hạnh phúc khi...
Dialogue: 0,0:25:15.96,0:25:19.48,Default,,0000,0000,0000,,có thêm một người cha và một người anh trai.
Dialogue: 0,0:25:19.53,0:25:21.36,Default,,0000,0000,0000,,Ko khí gia đình thật tuyệt vời...
Dialogue: 0,0:25:21.80,0:25:22.85,Default,,0000,0000,0000,,Chúng mình làm chuyện đó đo.
Dialogue: 0,0:25:23.66,0:25:28.29,Default,,0000,0000,0000,,Bây giờ em đã biết là anh thực sự quan tâm tới em, đó là tất cả những gì em cần.
Dialogue: 0,0:25:29.60,0:25:32.16,Default,,0000,0000,0000,,Làm ơn hãy nhét nó vào bên trong em.
Dialogue: 0,0:25:33.54,0:25:35.10,Default,,0000,0000,0000,,Anh vào đây, Yuna.
Dialogue: 0,0:25:35.91,0:25:36.71,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,0:25:38.68,0:25:42.05,Default,,0000,0000,0000,,Nó vào trong rồi! Cái đó của anh đang vào sâu bên trong em.
Dialogue: 0,0:25:42.08,0:25:43.05,Default,,0000,0000,0000,,Em ko sao chứ?
Dialogue: 0,0:25:43.25,0:25:44.24,Default,,0000,0000,0000,,Vâng...
Dialogue: 0,0:25:44.28,0:25:45.77,Default,,0000,0000,0000,,Anh làm nhé, Yuna.
Dialogue: 0,0:25:51.36,0:25:55.32,Default,,0000,0000,0000,,Em cảm thấy rồi. Cảm thấy nó. Em cảm thấy thứ đó của anh.
Dialogue: 0,0:26:07.88,0:26:10.81,Default,,0000,0000,0000,,Sướng quá. Nó vào hết bên trong em rồi.
Dialogue: 0,0:26:10.84,0:26:12.21,Default,,0000,0000,0000,,Chơi em mạnh nữa lên nào...
Dialogue: 0,0:26:13.61,0:26:16.48,Default,,0000,0000,0000,,Phải rồi... Sướng quá...
Dialogue: 0,0:26:18.29,0:26:21.45,Default,,0000,0000,0000,,Yuna, em có muồn dùng thứ này nữa ko?
Dialogue: 0,0:26:23.69,0:26:25.96,Default,,0000,0000,0000,,Nếu e muốn, hãy tự tay nhét nó vào.
Dialogue: 0,0:26:26.56,0:26:30.36,Default,,0000,0000,0000,,Thật ư? Nó lớn quá... Liệu em có thể?
Dialogue: 0,0:26:33.97,0:26:35.73,Default,,0000,0000,0000,,Á! Nó vào bên trong rồi!
Dialogue: 0,0:26:36.40,0:26:39.37,Default,,0000,0000,0000,,Em đã nhét nó vào hết bên trong hậu môn em!
Dialogue: 0,0:26:42.24,0:26:45.04,Default,,0000,0000,0000,,Nó đang khuấy động bên trong em!
Dialogue: 0,0:26:46.18,0:26:47.77,Default,,0000,0000,0000,,Bên trong em như sắp trào hết ra ngoài.
Dialogue: 0,0:26:47.82,0:26:50.98,Default,,0000,0000,0000,,Thứ đó và cậu bé của anh đang cọ xát bên trong em.
Dialogue: 0,0:26:51.02,0:26:55.85,Default,,0000,0000,0000,,Tuyệt quá! Em sắp ra rồi! Em ra nhé? Em ra nhé, anh hai?
Dialogue: 0,0:26:56.16,0:26:57.32,Default,,0000,0000,0000,,Anh cũng sắp ra rồi, Yuna.
Dialogue: 0,0:26:57.56,0:27:01.22,Default,,0000,0000,0000,,Hãy ra đi, anh hai! Hãy ra cùng với em nào!
Dialogue: 0,0:27:01.46,0:27:02.79,Default,,0000,0000,0000,,Anh ra rồi!\N Em cũng ra rồi!
Dialogue: 0,0:27:03.50,0:27:04.69,Default,,0000,0000,0000,,Anh hai...
Dialogue: 0,0:27:16.61,0:27:19.34,Default,,0000,0000,0000,,{\i1}Nhưng chuyện này đã thực sự kết thúc chưa?{\i0}
Dialogue: 0,0:27:20.58,0:27:24.21,Default,,0000,0000,0000,,{\i1}Dục vọng bên trong tôi liệu có thể thỏa mãn chỉ với một mình Yuna?{\i0}
Dialogue: 0,0:27:26.72,0:27:33.99,Default,,0000,0000,0000,,{\i1}Tôi đã nhận thấy một niềm ham muốn khác trong tôi đang trỗi dậy.{\i0}
Dialogue: 0,0:28:07.59,0:28:14.43,Default,,0000,0000,0000,,Gặp gỡ em từ sâu thẳm bóng tối trong tôi...
Dialogue: 0,0:28:15.10,0:28:20.47,Default,,0000,0000,0000,,Hãy cho tôi biết bằng cách nào mà tôi vẫn còn tồn tại.
Dialogue: 0,0:28:21.78,0:28:28.77,Default,,0000,0000,0000,,Khi tôi nhận ra điều gì đang được phán xét,
Dialogue: 0,0:28:29.35,0:28:34.81,Default,,0000,0000,0000,,Tôi đã cố quên đi tất cả.
Dialogue: 0,0:28:35.49,0:28:42.29,Default,,0000,0000,0000,,Tựa như những canh hoa anh đào run lên trong gió bão, cố để vươn tới cõi bình yên,
Dialogue: 0,0:28:42.70,0:28:49.30,Default,,0000,0000,0000,,Cùng âm thanh của nước,
Dialogue: 0,0:28:49.80,0:28:56.44,Default,,0000,0000,0000,,và dòng chảy thời gian, tất cả trôi đi và tan biến,
Dialogue: 0,0:28:56.91,0:29:05.32,Default,,0000,0000,0000,,làm dậy lên trong tôi nỗi sợ hãi tột cùng.
