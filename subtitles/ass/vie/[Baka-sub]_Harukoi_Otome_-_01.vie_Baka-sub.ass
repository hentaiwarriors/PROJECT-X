Dialogue: 0,0:00:02.97,0:00:05.96,Default,,0000,0000,0000,,Oh, đến nơi rồi hả.
Dialogue: 0,0:00:06.48,0:00:08.72,Default,,0000,0000,0000,,Học viện Thánh Francesca trông tuyệt thật đấy.
Dialogue: 0,0:00:08.96,0:00:13.03,Default,,0000,0000,0000,,-Lớn quá nhỉ?\N-Onii-chan, anh to tiếng quá đấy.
Dialogue: 0,0:00:13.16,0:00:17.09,Default,,0000,0000,0000,,Nghe nói trường cũ của em sắp đóng cửa rồi phải ko.
Dialogue: 0,0:00:17.47,0:00:22.76,Default,,0000,0000,0000,,Thật ko ngờ họ lại chuyển em tới ngôi trường nữ sinh trung học.
Dialogue: 0,0:00:22.97,0:00:24.98,Default,,0000,0000,0000,,Giờ nó đâu còn là nữ sinh trung học nữa.
Dialogue: 0,0:00:25.11,0:00:27.58,Default,,0000,0000,0000,,Từ mùa xuân năm nay, trường sẽ nhận cả nam sinh và nữ sinh mà.
Dialogue: 0,0:00:27.74,0:00:29.67,Default,,0000,0000,0000,,Đúng vậy...
Dialogue: 0,0:00:29.91,0:00:32.35,Default,,0000,0000,0000,,Nhưng có lẽ tỉ lệ nam nữ ở đây chắc khỏi cần bàn.
Dialogue: 0,0:00:32.51,0:00:35.68,Default,,0000,0000,0000,,Phải đó, em cũng ko quan tâm tới chuyện đó lắm.
Dialogue: 0,0:00:45.49,0:00:48.47,Default,,0000,0000,0000,,Onii-chan, anh xấu lắm nhé! Mắt mũi sáng hết lên rồi kìa!
Dialogue: 0,0:00:48.58,0:00:50.47,Default,,0000,0000,0000,,Uh, xin lỗi em!
Dialogue: 0,0:01:01.94,0:01:05.81,Default,,0000,0000,0000,,{fs18\pos(320,28)\c&H492525&\3c&HF3F3F8&}Ojousama's Schoolyard Pure Love OVA
Dialogue: 0,0:01:01.94,0:01:05.81,Default,,0000,0000,0000,,{\3c&H7B31F5&\3c&HEDEDFA&\fs50\pos(320,70)\c&H733AD3&}Harukoi Otome
Dialogue: 0,0:01:01.91,0:01:05.81,Default,,0000,0000,0000,,{\pos(320,89)\fs17\3c&HF6F6FD&\c&H43A16A&}~Buổi gặp gỡ trong vườn hoa Otome~
Dialogue: 0,0:01:01.91,0:01:05.81,Default4,,0000,0000,0000,,Phần 1
Dialogue: 0,0:01:06.41,0:01:08.55,Default,,0000,0000,0000,,Tên tôi là Hayasaka Akihito.
Dialogue: 0,0:01:08.61,0:01:13.86,Default,,0000,0000,0000,,Tôi vừa được nhận vào học viện Thánh Francesca cách đây ko lâu.
Dialogue: 0,0:01:14.49,0:01:20.72,Default,,0000,0000,0000,,Dẹp qua một bên sự chênh lệch về tỉ lệ nam nữ, năm học mới của tôi đã thực sự bắt đầu .
Dialogue: 0,0:01:21.15,0:01:25.98,Default,,0000,0000,0000,,Chỉ trong một khoảng thời gian ngắn, tôi đã gặp gỡ nhiều người và làm được nhiều chuyện thú vị.
Dialogue: 0,0:01:26.52,0:01:31.56,Default,,0000,0000,0000,,Tuy nhiên việc tập luyện Kendo sau một khoảng thời gian dài bỏ dở quả là khó khăn vô cùng.
Dialogue: 0,0:01:32.15,0:01:37.09,Default,,0000,0000,0000,,Nhưng thật đáng mừng là chuyện đó khiến tôi gần gũi với mọi người hơn.
Dialogue: 0,0:01:38.03,0:01:43.86,Default,,0000,0000,0000,,Cho tới giữa mùa xuân, một chuyện bất ngờ đã xảy ra...
Dialogue: 0,0:01:45.81,0:01:49.50,Default,,0000,0000,0000,,Dậy đi, Onii-chan.
Dialogue: 0,0:01:51.01,0:01:54.78,Default,,0000,0000,0000,,Thôi nào, dậy đi anh.
Dialogue: 0,0:01:57.79,0:02:00.23,Default,,0000,0000,0000,,Sáng rồi hả, em gái?
Dialogue: 0,0:02:00.42,0:02:04.32,Default,,0000,0000,0000,,-Làm phiền em quá.\N-Chà, Onii-chan.
Dialogue: 0,0:02:05.08,0:02:07.68,Default,,0000,0000,0000,,Nếu anh ko nhanh lên, chúng ta sẽ muộn mất đó.
Dialogue: 0,0:02:07.76,0:02:11.04,Default,,0000,0000,0000,,Sao em gái anh ngày càng đáng yêu thế này nhỉ.
Dialogue: 0,0:02:11.39,0:02:15.67,Default,,0000,0000,0000,,Nếu em mà là bạn gái anh, chắc anh sẽ vồ lấy em và abcxyz ngay mất.
Dialogue: 0,0:02:21.61,0:02:26.13,Default,,0000,0000,0000,,Từ giờ em sẽ ko tới gọi anh dậy nữa.\NOnii-chan, đồ ngốc!
Dialogue: 0,0:02:26.27,0:02:28.46,Default,,0000,0000,0000,,Umi, em sao thế?
Dialogue: 0,0:02:28.79,0:02:31.23,Default,,0000,0000,0000,,Aki-chan, chuyện gì vậy?
Dialogue: 0,0:02:31.33,0:02:33.77,Default,,0000,0000,0000,,Sao Umi-chan lại vùng vằng chạy ra khỏi đây vậy .
Dialogue: 0,0:02:33.88,0:02:36.43,Default,,0000,0000,0000,,Oh, phải chăng là...
Dialogue: 0,0:02:37.65,0:02:42.88,Default,,0000,0000,0000,,Umi-chan đã biết chuyện tình của hai chúng ta?
Dialogue: 0,0:02:44.77,0:02:47.97,Default,,0000,0000,0000,,Oái, oái, oái!
Dialogue: 0,0:02:56.54,0:02:58.62,Default,,0000,0000,0000,,Em sao vậy, Umi...
Dialogue: 0,0:03:05.10,0:03:09.16,Default,,0000,0000,0000,,Này! Nếu cậu thích ngủ đến vậy, sao ko ra ngoài sân mà ngủ.
Dialogue: 0,0:03:09.38,0:03:12.71,Default,,0000,0000,0000,,Ngủ trong lớp là thói quen xấu lắm, biết ko hả.
Dialogue: 0,0:03:12.96,0:03:14.64,Default,,0000,0000,0000,,Cậu muốn gì nào?
Dialogue: 0,0:03:14.77,0:03:17.45,Default,,0000,0000,0000,,Tớ ngủ ở đây thì liên quan gì đến cậu chứ.
Dialogue: 0,0:03:17.51,0:03:20.71,Default,,0000,0000,0000,,Ngủ cái đầu cậu ý. Lại đang mơ mộng về em nào chứ gì?
Dialogue: 0,0:03:20.87,0:03:23.77,Default,,0000,0000,0000,,Chỗ bạn bè cùng lớp với nhau,
Dialogue: 0,0:03:24.04,0:03:27.24,Default,,0000,0000,0000,,Tớ nỡ lòng nào để cậu chìm đắm trong những mơ ước viển vông như vậy chứ.
Dialogue: 0,0:03:27.40,0:03:30.52,Default,,0000,0000,0000,,-Cái gì?\N-Này, mình nói chuẩn quá đi chứ, phải ko, Yuika-san?
Dialogue: 0,0:03:32.17,0:03:35.31,Default,,0000,0000,0000,,Riru-san, cậu vừa phải thôi nhé...
Dialogue: 0,0:03:34.69,0:03:36.67,Default,,0000,0000,0030,,Rồi rồi, mình lượn đây.
Dialogue: 0,0:03:36.67,0:03:39.38,Default,,0000,0000,0000,,Mọi chuyện còn lại để cho bạn thưở nhỏ của cậu, Yuika-san giải quyết vậy.
Dialogue: 0,0:03:40.49,0:03:44.80,Default,,0000,0000,0000,,Muốn ý kiến ý cò gì thì đến tìm mình ở quán cà phê nhé.
Dialogue: 0,0:03:44.99,0:03:49.29,Default,,0000,0000,0000,,Ôi trời, tức chết mất! Cậu ta đúng là nhiều chuyện!
Dialogue: 0,0:03:49.48,0:03:51.81,Default,,0000,0000,0000,,Aki-chan, có chuyện gì à?
Dialogue: 0,0:03:52.00,0:03:54.06,Default,,0000,0000,0000,,Từ sáng đến giờ trông cậu khác lắm.
Dialogue: 0,0:03:54.12,0:03:56.88,Default,,0000,0000,0000,,Oh, cũng ko có gì to tát lắm đâu.
Dialogue: 0,0:03:57.02,0:03:58.67,Default,,0000,0000,0000,,Mình ko cho là vậy đâu.
Dialogue: 0,0:03:58.81,0:04:01.92,Default,,0000,0000,0000,,Điều khiến Aki-chan lo lắng như vậy hẳn là một chuyện rất khó khăn.
Dialogue: 0,0:04:02.00,0:04:04.58,Default,,0000,0000,0000,,Cậu nhất quyết muốn biết sao?
Dialogue: 0,0:04:04.66,0:04:09.16,Default,,0000,0000,0000,,Ah, mình xin lỗi, mình tò mò quá.
Dialogue: 0,0:04:09.70,0:04:12.27,Default,,0000,0000,0000,,Cũng ko có gì nghiêm trọng đâu... chỉ là...
Dialogue: 0,0:04:15.58,0:04:19.89,Default,,0000,0000,0000,,Chỉ là một câu nói đùa thôi mà, đâu cần phải kích động thế chứ?
Dialogue: 0,0:04:20.02,0:04:22.24,Default,,0000,0000,0000,,Con bé thật là...
Dialogue: 0,0:04:22.46,0:04:25.09,Default,,0000,0000,0000,,Aki-chan, cậu sai rồi.
Dialogue: 0,0:04:25.31,0:04:28.48,Default,,0000,0000,0000,,Dù là em gái cậu, Umi-chan cũng như bao thiếu nữ khác.
Dialogue: 0,0:04:28.59,0:04:29.62,Default,,0000,0000,0000,,Uhm.
Dialogue: 0,0:04:29.94,0:04:33.22,Default,,0000,0000,0000,,Cho dù lúc ấy cậu đang đùa, nhưng nói cậu muốn làm chuyện này chuyện kia thì thật ko ổn chút nào.
Dialogue: 0,0:04:33.41,0:04:35.22,Default,,0000,0000,0000,,Phải rồi...
Dialogue: 0,0:04:35.71,0:04:38.61,Default,,0000,0000,0000,,Ko ngờ Aki-chan lại nói năng thiếu suy nghĩ như vậy.
Dialogue: 0,0:04:38.94,0:04:41.19,Default,,0000,0000,0000,,Mình ko muốn nói chuyện với cậu nữa.
Dialogue: 0,0:04:41.94,0:04:44.60,Default,,0000,0000,0000,,Là lỗi của mình cả sao?
Dialogue: 0,0:04:46.55,0:04:48.66,Default,,0000,0000,0000,,Tạm biệt, Kisaya-oneesama.
Dialogue: 0,0:04:49.23,0:04:51.29,Default,,0000,0000,0000,,Tạm biệt.
Dialogue: 0,0:05:02.62,0:05:07.12,Default,,0000,0000,0000,,Akihito-dono, sao hôm nay cậu thiếu tập trung vậy?
Dialogue: 0,0:05:07.44,0:05:09.72,Default,,0000,0000,0000,,Đang bận tâm về điều gì à?
Dialogue: 0,0:05:10.37,0:05:14.41,Default,,0000,0000,0000,,Hôm nay cậu chẳng để tâm vào việc tập luyện chút nào cả;
Dialogue: 0,0:05:14.73,0:05:17.66,Default,,0000,0000,0000,,Động tác hời hợt và cứng nhắc như một cỗ máy vậy.
Dialogue: 0,0:05:17.93,0:05:23.00,Default,,0000,0000,0000,,Ah... đúng là ko gì qua mắt được Kisaya-senpai.\NChị đã để ý thấy điều đó rồi sao?
Dialogue: 0,0:05:24.11,0:05:27.06,Default,,0000,0000,0000,,chỉ vì chuyện đó mà cậu cứ như người mất hồn cả ngày hôm nay sao.
Dialogue: 0,0:05:27.22,0:05:28.42,Default,,0000,0000,0000,,Đó đâu phải tác phong của đấng nam nhi.
Dialogue: 0,0:05:28.47,0:05:29.80,Default,,0000,0000,0000,,V-Vâng.
Dialogue: 0,0:05:29.88,0:05:32.64,Default,,0000,0000,0000,,Cậu phải hiểu rằng dù đó là em gái cậu, cô ấy cũng sắp đến tuổi trưởng thành.
Dialogue: 0,0:05:32.89,0:05:36.93,Default,,0000,0000,0000,,Vì vậy ko có lí do gì khiến cô ấy giận cậu vì trò đùa vụn vặt đó!
Dialogue: 0,0:05:37.68,0:05:40.37,Default,,0000,0000,0000,,Nhưng thái độ của cô ấy...?
Dialogue: 0,0:05:40.58,0:05:45.08,Default,,0000,0000,0000,,Đó ko hẳn là một câu đùa tệ hại, nhưng người nghe nó lại là em gái của cậu...
Dialogue: 0,0:05:45.60,0:05:49.82,Default,,0000,0000,0000,,Umm...\NXin lỗi. Điều đó sẽ ko làm ảnh hưởng tới mối quan hệ của hai chúng ta đâu.
Dialogue: 0,0:05:50.18,0:05:52.37,Default,,0000,0000,0000,,Tôi ko hề có ý đó...
Dialogue: 0,0:05:54.16,0:05:55.84,Default,,0000,0000,0000,,Akihito-dono...
Dialogue: 0,0:06:20.74,0:06:22.94,Default,,0000,0000,0000,,Senpai, chị nhảy cảm quá đấy.
Dialogue: 0,0:06:23.10,0:06:25.81,Default,,0000,0000,0000,,Bình thường tôi đâu có như vậy.
Dialogue: 0,0:06:41.53,0:06:44.99,Default,,0000,0000,0000,,Ngực của chị đẹp quá.
Dialogue: 0,0:06:45.32,0:06:48.57,Default,,0000,0000,0000,,Làm chuyện đó ở đây ko phải là ý hay đâu.
Dialogue: 0,0:06:48.84,0:06:50.79,Default,,0000,0000,0000,,Chị thích chứ?
Dialogue: 0,0:06:50.98,0:06:53.31,Default,,0000,0000,0000,,Tên ngốc.
Dialogue: 0,0:07:05.64,0:07:08.16,Default,,0000,0000,0000,,Bị cậu đánh bại bằng cách này thì kì quá.
Dialogue: 0,0:07:08.30,0:07:09.98,Default,,0000,0000,0000,,Ái chà.
Dialogue: 0,0:07:21.44,0:07:23.34,Default,,0000,0000,0000,,Đừng làm tôi rên lên nhé.
Dialogue: 0,0:07:23.47,0:07:25.51,Default,,0000,0000,0000,,Tôi sẽ ko làm vậy đâu.
Dialogue: 0,0:07:45.94,0:07:49.62,Default,,0000,0000,0000,,Akihito-dono, tôi ko chịu nổi nữa rồi...
Dialogue: 0,0:08:34.85,0:08:37.91,Default,,0000,0000,0000,,Đừng làm... mạnh như vậy!
Dialogue: 0,0:10:16.43,0:10:17.67,Default,,0000,0000,0000,,Phải...
Dialogue: 0,0:11:08.70,0:11:11.54,Default,,0000,0000,0000,,Senpai, chị dùng miệng của mình được ko?
Dialogue: 0,0:11:11.82,0:11:13.44,Default,,0000,0000,0000,,Miệng ư?
Dialogue: 0,0:11:17.63,0:11:19.19,Default,,0000,0000,0000,,Tôi sẽ cố.
Dialogue: 0,0:11:28.08,0:11:31.26,Default,,0000,0000,0000,,Senpai, chị làm tuyệt quá.
Dialogue: 0,0:11:38.16,0:11:40.63,Default,,0000,0000,0000,,Xin lỗi chị!
Dialogue: 0,0:11:49.71,0:11:52.27,Default,,0000,0000,0000,,Nó mang mùi hương đặc trưng của cậu.
Dialogue: 0,0:11:52.90,0:11:56.54,Default,,0000,0000,0000,,Thiệt thòi cho chị quá. Giờ hãy để tôi "đền bù" cho chị nhé.
Dialogue: 0,0:12:05.95,0:12:08.03,Default,,0000,0000,0000,,Hãy làm bất cứ điều gì cậu muốn...
Dialogue: 0,0:12:31.94,0:12:33.54,Default,,0000,0000,0000,,Onii-chan...
Dialogue: 0,0:12:36.69,0:12:39.61,Default,,0000,0000,0000,,Sao tớ phải mời hai cậu ăn trưa nhỉ...
Dialogue: 0,0:12:39.92,0:12:42.28,Default,,0000,0000,0000,,Mình ko biết gã cận kia là ai,
Dialogue: 0,0:12:42.50,0:12:46.07,Default,,0000,0000,0000,,Nhưng cậu đã hứa sẽ mời mình ăn trưa hôm nay mà.
Dialogue: 0,0:12:46.25,0:12:49.28,Default,,0000,0000,0000,,Mình ko phải gã cận. Tên mình là Oikawa.
Dialogue: 0,0:12:49.61,0:12:53.73,Default,,0000,0000,0000,,Bạn của Aki-chan cũng là bạn của mình.
Dialogue: 0,0:12:54.31,0:12:56.13,Default,,0000,0000,0000,,Cùng nhau ăn trưa vui vẻ nhé.
Dialogue: 0,0:12:56.31,0:12:58.97,Default,,0000,0000,0000,,Oh để xem nào? Thế này là sao nhỉ.
Dialogue: 0,0:12:59.17,0:13:02.94,Default,,0000,0000,0000,,bước đầu tiên, bạn cần mua một vài vật dụng dùng cho "chuyện đó' ở khu vực số 3.
Dialogue: 0,0:13:03.24,0:13:05.28,Default,,0000,0000,0000,,Nếu cậu thiếu tiền, mình sẽ cho cậu vay.
Dialogue: 0,0:13:06.93,0:13:08.79,Default,,0000,0000,0000,,Hai tên này...
Dialogue: 0,0:13:09.14,0:13:12.74,Default,,0000,0000,0000,,Đừng lo, Aki-chan trông vậy thôi chứ tốt bụng lắm đấy.
Dialogue: 0,0:13:14.67,0:13:16.34,Default,,0000,0000,0000,,Oh, là Umi-chan.
Dialogue: 0,0:13:18.09,0:13:20.95,Default,,0000,0000,0000,,-Hm? Chuyện gì vậy?\N-Oh, ko có gì.
Dialogue: 0,0:13:21.47,0:13:23.69,Default,,0000,0000,0000,,À phải rồi, Umi-chan ko tới trường cùng cậu sáng nay.
Dialogue: 0,0:13:23.86,0:13:26.16,Default,,0000,0000,0000,,Có chuyện gì xảy ra với Umi-chan vậy?
Dialogue: 0,0:13:26.53,0:13:29.86,Default,,0000,0000,0000,,-Ko có gì đâu.\N-Như vậy mà cậu nói là ko có gì sao?
Dialogue: 0,0:13:30.04,0:13:32.14,Default,,0000,0000,0000,,Cậu có nghe mình nói ko đấy.
Dialogue: 0,0:13:32.36,0:13:34.57,Default,,0000,0000,0000,,Uhm, mình cũng thấy thế.
Dialogue: 0,0:13:34.89,0:13:36.74,Default,,0000,0000,0000,,Ko có gì đâu, thật mà!
Dialogue: 0,0:13:44.21,0:13:46.82,Default,,0000,0000,0000,,Uhm, cứ gọi bất cứ món gì hai cậu thích nhé.
Dialogue: 0,0:13:47.55,0:13:50.09,Default,,0000,0000,0000,,Này! Aki-chan!
Dialogue: 0,0:13:55.64,0:13:57.74,Default,,0000,0000,0000,,Sao mình lại hành động như vậy nhỉ?
Dialogue: 0,0:13:58.24,0:13:59.78,Default,,0000,0000,0000,,Akihito-dono.
Dialogue: 0,0:14:00.34,0:14:02.08,Default,,0000,0000,0000,,Tôi đã chứng kiến tất cả.
Dialogue: 0,0:14:02.40,0:14:04.08,Default,,0000,0000,0000,,chị thấy cả rồi ư?
Dialogue: 0,0:14:04.42,0:14:06.15,Default,,0000,0000,0000,,Vậy, chắc chị hiểu tâm trạng của tôi lúc này.
Dialogue: 0,0:14:06.50,0:14:10.34,Default,,0000,0000,0000,,Thái độ của em gái cậu đúng là có vấn đề.
Dialogue: 0,0:14:10.75,0:14:13.98,Default,,0000,0000,0000,,Dù cho đó là chuyện gì, cậu cũng ko thể bỏ mặc cô ấy như vậy được.
Dialogue: 0,0:14:14.52,0:14:17.49,Default,,0000,0000,0000,,Sao cậu ko thử tìm hiểu điều đó qua bạn bè của cô ấy?
Dialogue: 0,0:14:17.95,0:14:19.57,Default,,0000,0000,0000,,Bạn bè của con bé?
Dialogue: 0,0:14:20.53,0:14:23.58,Default,,0000,0000,0000,,Phải rồi, bạn của con bé.
Dialogue: 0,0:14:30.24,0:14:31.71,Default,,0000,0000,0000,,Cô bé có trong đó ko nhỉ?
Dialogue: 0,0:14:41.31,0:14:43.40,Default,,0000,0000,0000,,Sonya-chan, chuyện gì thế?
Dialogue: 0,0:14:43.53,0:14:45.54,Default,,0000,0000,0000,,Ah, Akihito-san!
Dialogue: 0,0:14:45.80,0:14:47.84,Default,,0000,0000,0000,,Thế này là sao?
Dialogue: 0,0:14:48.23,0:14:53.11,Default,,0000,0000,0000,,Em muốn cứu chú chim bồ câu non kia, vì thế nên em đã mắc kẹt trong tấm lưới này.
Dialogue: 0,0:14:53.26,0:14:54.84,Default,,0000,0000,0000,,Bồ câu ư?
Dialogue: 0,0:14:59.46,0:15:01.19,Default,,0000,0000,0000,,Ah, tạ ơn Chúa!
Dialogue: 0,0:15:01.32,0:15:02.75,Default,,0000,0000,0000,,Uhm.
Dialogue: 0,0:15:04.57,0:15:06.11,Default,,0000,0000,0000,,Chặt quá nhỉ.
Dialogue: 0,0:15:06.20,0:15:07.87,Default,,0000,0000,0000,,Em xin lỗi.
Dialogue: 0,0:15:10.10,0:15:12.57,Default,,0000,0000,0000,,- Em thấy khó chịu lắm hả?\N- Em ko sao.
Dialogue: 0,0:15:19.14,0:15:21.55,Default,,0000,0000,0000,,Đừng nhìn chằm chằm vào em như thế.
Dialogue: 0,0:15:22.52,0:15:24.39,Default,,0000,0000,0000,,Anh xin lỗi!
Dialogue: 0,0:15:25.10,0:15:28.33,Default,,0000,0000,0000,,Umm... Akihito-san, anh tìm em có chuyện gì vậy?
Dialogue: 0,0:15:28.49,0:15:31.20,Default,,0000,0000,0000,,À thì, Sonya-chan...
Dialogue: 0,0:15:31.54,0:15:33.64,Default,,0000,0000,0000,,Sao hôm nay Umi-chan đến lớp muộn vậy em?
Dialogue: 0,0:15:33.86,0:15:35.77,Default,,0000,0000,0000,,Tại sao Umi-san đến lớp muộn ư?
Dialogue: 0,0:15:35.99,0:15:36.72,Default,,0000,0000,0000,,Uhm.
Dialogue: 0,0:15:38.33,0:15:42.34,Default,,0000,0000,0000,,Thái độ con bé mấy hôm nay rất lạ.
Dialogue: 0,0:15:43.03,0:15:45.50,Default,,0000,0000,0000,,Có chuyện gì xảy ra với con bé ở lớp phải ko?
Dialogue: 0,0:15:47.43,0:15:49.69,Default,,0000,0000,0000,,- Hóa ra là chuyện này...\N- Chuyện gì cơ?
Dialogue: 0,0:15:49.86,0:15:53.70,Default,,0000,0000,0000,,Em đã nghe cô ấy lẩm bẩm một mình.
Dialogue: 0,0:15:53.70,0:15:55.65,Default,,0000,0000,0000,,- Lẩm bẩm?\N- Vâng.
Dialogue: 0,0:15:55.93,0:15:56.97,Default,,0000,0000,0000,,Là chuyện gì thế?
Dialogue: 0,0:15:57.17,0:16:02.04,Default,,0000,0000,0000,,Umi-san luôn miệng nói cô ấy muốn quên đi thứ gì đó.
Dialogue: 0,0:16:02.82,0:16:04.43,Default,,0000,0000,0000,,Quên đi thứ gì đó?
Dialogue: 0,0:16:04.73,0:16:08.07,Default,,0000,0000,0000,,Cô ấy cứ nhìn vào cuốn lịch và lẩm bẩm luôn mồm...
Dialogue: 0,0:16:17.01,0:16:20.15,Default,,0000,0000,0000,,con bé muốn "quên đi" thứ gì đó. Là thứ gì nhỉ?
Dialogue: 0,0:16:20.77,0:16:24.05,Default,,0000,0000,0000,,Con bé đã làm điều gì ko đúng sao?
Dialogue: 0,0:16:26.43,0:16:28.15,Default,,0000,0000,0000,,Ko thể nào.
Dialogue: 0,0:16:28.31,0:16:31.66,Default,,0000,0000,0000,,- Oh, điên đầu mất.\N- Cám ơn vì đã đợi mình.
Dialogue: 0,0:16:32.23,0:16:36.70,Default,,0000,0000,0000,,Lâu lắm rồi Aki-chan mới rủ mình đi dạo đó.
Dialogue: 0,0:16:36.84,0:16:41.13,Default,,0000,0000,0000,,Có lẽ vậy. Từ đầu năm học tới giờ, mình chỉ gặp được cậu ở lớp học.
Dialogue: 0,0:16:41.64,0:16:45.10,Default,,0000,0000,0000,,Bọn mình đã gặp lại nhau, nhưng lại chẳng đi chơi được với nhau lần nào.
Dialogue: 0,0:16:45.41,0:16:49.77,Default,,0000,0000,0000,,Đúng vậy. Hình như lần đó mình đã bị từ chối.
Dialogue: 0,0:16:51.76,0:16:54.82,Default,,0000,0000,0000,,Tại lễ tốt nghiệp, mình thực sự rất muốn...
Dialogue: 0,0:16:54.95,0:16:56.30,Default,,0000,0000,0000,,Thôi bỏ đi, bỏ đi!
Dialogue: 0,0:16:56.41,0:17:00.86,Default,,0000,0000,0000,,Xin lỗi cậu, cứ coi như là mình chưa nói gì đi. \NMình chỉ nói luyên thuyên cho vui thôi.
Dialogue: 0,0:17:01.10,0:17:03.17,Default,,0000,0000,0000,,Đừng bận tâm về điều đó, Yuika.
Dialogue: 0,0:17:03.39,0:17:05.86,Default,,0000,0000,0000,,Cứ coi như chưa có chuyện gì xảy ra cả.
Dialogue: 0,0:17:07.38,0:17:09.90,Default,,0000,0000,0000,,- Vậy, là thế này...\N- Vâng?
Dialogue: 0,0:17:10.12,0:17:14.88,Default,,0000,0000,0000,,Mình ko biết Umi đang gặp phải vấn đề gì.
Dialogue: 0,0:17:15.03,0:17:19.13,Default,,0000,0000,0000,,- Vấn đề gì?\N- Umi-chan gần đây có thái độ rất lạ lùng?
Dialogue: 0,0:17:19.40,0:17:21.95,Default,,0000,0000,0000,,Ý cậu là chuyện Umi-chan gần đây hay tránh mặt cậu hả?
Dialogue: 0,0:17:21.97,0:17:22.75,Default,,0000,0000,0000,,Uhm.
Dialogue: 0,0:17:25.02,0:17:27.35,Default,,0000,0000,0000,,Mình biết chuyện gì đang xảy ra.
Dialogue: 0,0:17:28.65,0:17:30.57,Default,,0000,0000,0000,,Cậu biết sao?
Dialogue: 0,0:17:30.64,0:17:34.69,Default,,0000,0000,0000,,Phải, nhưng trước đó...
Dialogue: 0,0:17:35.86,0:17:38.66,Default,,0000,0000,0000,,Mình muốn cậu làm chuyện đó với mình.
Dialogue: 0,0:17:38.77,0:17:40.89,Default,,0000,0000,0000,,Yuika...
Dialogue: 0,0:17:56.82,0:17:59.53,Default,,0000,0000,0000,,Cơ thể mình xấu lắm sao?
Dialogue: 0,0:18:00.26,0:18:02.20,Default,,0000,0000,0000,,Ko hề.
Dialogue: 0,0:18:05.02,0:18:08.39,Default,,0000,0000,0000,,-Đó là cách cậu bắt đầu sao?\N- Cậu thích chứ?
Dialogue: 0,0:18:18.29,0:18:20.91,Default,,0000,0000,0000,,Cậu nằm xuống đi nào!
Dialogue: 0,0:18:59.99,0:19:02.83,Default,,0000,0000,0000,,- Mình muốn ở chỗ này nữa.\N- Tất nhiên rồi
Dialogue: 0,0:19:05.28,0:19:09.16,Default,,0000,0000,0000,,- Ngón tay của cậu thật dâm đãng...\N- Mình đang làm điều dâm đãng đó cùng cậu mà.
Dialogue: 0,0:19:14.85,0:19:16.19,Default,,0000,0000,0000,,Ko!
Dialogue: 0,0:19:17.16,0:19:19.45,Default,,0000,0000,0000,,Bên trong Yuika thật là ấm.
Dialogue: 0,0:19:20.93,0:19:24.15,Default,,0000,0000,0000,,Chỗ đó của cậu ướt cả rồi nè.
Dialogue: 0,0:19:34.62,0:19:37.00,Default,,0000,0000,0000,,Tuyệt quá đi mất!
Dialogue: 0,0:19:55.62,0:19:59.17,Default,,0000,0000,0000,,Mình sẽ làm Aki-chan sung sướng như mình.
Dialogue: 0,0:20:13.06,0:20:15.30,Default,,0000,0000,0000,,Nó đang bự dần lên này.
Dialogue: 0,0:20:28.97,0:20:31.75,Default,,0000,0000,0000,,Cậu làm tuyệt lắm, Yuika.
Dialogue: 0,0:20:55.73,0:20:59.56,Default,,0000,0000,0000,,Nào, hãy làm bất cứ điều gì cậu muốn đối với mình.
Dialogue: 0,0:20:59.74,0:21:03.42,Default,,0000,0000,0000,,- Mình đã thích cậu từ rất lâu rồi.\N- Nghe cậu nói vậy mình vui lắm.
Dialogue: 0,0:21:25.81,0:21:27.27,Default,,0000,0000,0000,,Yuika...
Dialogue: 0,0:21:27.53,0:21:30.11,Default,,0000,0000,0000,,Ko sao đâu, tiếp tục đi nào.
Dialogue: 0,0:22:10.91,0:22:13.13,Default,,0000,0000,0000,,Mạnh... nữa lên!
Dialogue: 0,0:22:24.20,0:22:26.93,Default,,0000,0000,0000,,A-Aki-chan!
Dialogue: 0,0:23:34.84,0:23:38.81,Default,,0000,0000,0000,,Umi-chan rất yêu cậu, Aki-chan.
Dialogue: 0,0:23:39.09,0:23:42.11,Default,,0000,0000,0000,,Yêu mình ư? Tất nhiên rồi, con bé là em gái mình mà.
Dialogue: 0,0:23:42.13,0:23:44.76,Default,,0000,0000,0000,,Ko, ý mình là tình yêu nam nữ đó.
Dialogue: 0,0:23:45.04,0:23:47.82,Default,,0000,0000,0000,,Ko thể nào. Cậu nói gì lạ vậy, Yuika?
Dialogue: 0,0:23:47.98,0:23:52.38,Default,,0000,0000,0000,,- Cậu còn nhớ vụ tai nạn đó chứ?\N- Tai nạn ư? Là tai nạn nào?
Dialogue: 0,0:23:52.78,0:23:57.61,Default,,0000,0000,0000,,Đó chính là điều cậu ko bao giờ muốn nhớ lại.
Dialogue: 0,0:23:57.61,0:23:59.61,Default,,0000,0000,0000,,
Dialogue: 0,0:23:58.58,0:24:04.37,Default,,0000,0000,0000,,Vào năm cậu lên 7 tuổi, ngay cạnh hiệu bánh mì trước công viên.
Dialogue: 0,0:24:17.80,0:24:21.83,Default,,0000,0000,0000,,Em gái tôi đã gặp phải tai nạn ngay trước mắt tôi.
Dialogue: 0,0:24:22.47,0:24:24.81,Default,,0000,0000,0000,,Lúc đó tôi đã ko dám tin vào mắt mình.
Dialogue: 0,0:24:25.00,0:24:28.71,Default,,0000,0000,0000,,Tôi đã như người mất hồn trong suốt khoảng thời gian sau đó.
Dialogue: 0,0:24:30.01,0:24:34.06,Default,,0000,0000,0000,,Ko biết là trong bao lâu, cho tới một ngày...
Dialogue: 0,0:24:36.29,0:24:40.43,Default,,0000,0000,0000,,Phải rồi. Một người em gái khác xuất hiện trước mặt tôi.
Dialogue: 0,0:24:46.08,0:24:51.78,Default,,0000,0000,0000,,Tôi yêu quí cô bé ko khác gì em gái ruột của mình, và cố quên đi những kỉ niệm cũ.
Dialogue: 0,0:24:52.36,0:24:56.04,Default,,0000,0000,0000,,Vụ tai nạn thảm khốc đó đã được chôn sâu trong tâm trí tôi.
Dialogue: 0,0:24:56.43,0:24:59.98,Default,,0000,0000,0000,,Cho tới lúc này, cuộc sống của tôi đã khác trước rất nhiều.
Dialogue: 0,0:25:01.83,0:25:05.45,Default,,0000,0000,0000,,Mình biết quãng thời gian mình cùng Umi-chan bên nhau hoàn toàn là sự thật.
Dialogue: 0,0:25:06.68,0:25:09.53,Default,,0000,0000,0000,,Cô bé rất yêu quí mình...
Dialogue: 0,0:25:09.84,0:25:11.51,Default,,0000,0000,0000,,Suốt từ lúc đó cho tới giờ.
Dialogue: 0,0:25:11.66,0:25:14.40,Default,,0000,0000,0000,,Thật lòng, mình cũng luôn muốn làm điều đó.
Dialogue: 0,0:25:14.60,0:25:17.64,Default,,0000,0000,0000,,Mình luôn muốn quên đi chuyện đó, quên đi tất cả.
Dialogue: 0,0:25:17.77,0:25:22.57,Default,,0000,0000,0000,,Sau khi em gái cậu gặp tai nạn, mình đã nhớ ra một chuyện.
Dialogue: 0,0:25:22.88,0:25:26.76,Default,,0000,0000,0000,,- Là chuyện gì? \N- Chính mình là người đã cười đùa với con bé.
Dialogue: 0,0:25:27.14,0:25:29.43,Default,,0000,0000,0000,,Khiến cho con bé mải cười nói vời mình mà ko để ý đường.
Dialogue: 0,0:25:30.20,0:25:33.77,Default,,0000,0000,0000,,Là lỗi tại mình... vì mình mà con bé gặp tai nạn!
Dialogue: 0,0:25:33.86,0:25:36.11,Default,,0000,0000,0000,,Ko, cậu ko có lỗi gì cả.
Dialogue: 0,0:25:36.70,0:25:40.03,Default,,0000,0000,0000,,Mình yêu cậu, vì vậy mình luôn lo sợ có ngày cậu sẽ biết sự thật.
Dialogue: 0,0:25:40.76,0:25:45.92,Default,,0000,0000,0000,,Vì quá sợ hãi, mình đã chuyển đi nơi khác.
Dialogue: 0,0:25:46.86,0:25:50.94,Default,,0000,0000,0000,,Nhưng mình ko ngờ ngôi trường này lại thay đổi quy chế và nhận cả nam sinh.
Dialogue: 0,0:25:56.28,0:25:58.70,Default,,0000,0000,0000,,Nhưng tại sao Umi làm thế?
Dialogue: 0,0:25:59.80,0:26:02.49,Default,,0000,0000,0000,,Sao con bé phải chờ đến thời điểm này để làm điều đó?
Dialogue: 0,0:26:02.64,0:26:05.71,Default,,0000,0000,0000,,Mình biết tại sao. Đó là vì...
Dialogue: 0,0:26:05.97,0:26:12.12,Default,,0000,0000,0000,,Vào giữa mùa xuân, khi cậu chuyển tới đây, cả hai mới có cơ hội ở bên nhau.
Dialogue: 0,0:26:30.20,0:26:37.03,Default2,,0000,0000,0050,,Baka-sub\N@http://Baka-sub.net
Dialogue: 0,0:26:34.94,0:26:36.45,Default4,,0000,0000,0000,,Abracadabra
Dialogue: 0,0:26:36.47,0:26:38.62,Default4,,0000,0000,0000,,Xuân sang, Xuân sang, ngập tràn hoa lá.
Dialogue: 0,0:26:38.62,0:26:42.38,Default4,,0000,0000,0000,,Bạn từ đâu đến, hỡi các tinh linh của nắng.
Dialogue: 0,0:26:42.48,0:26:45.04,Default4,,0000,0000,0000,, Điểm tô cho trang phục của tôi
Dialogue: 0,0:26:45.07,0:26:47.10,Default4,,0000,0000,0000,,Cùng đi nào
Dialogue: 0,0:26:47.12,0:26:48.44,Default4,,0000,0000,0000,,"Đi đến khắp mọi nơi"
Dialogue: 0,0:26:48.44,0:26:50.64,Default4,,0000,0000,0000,,Xuân sang, Xuân sang, ngập tràn hoa lá.
Dialogue: 0,0:26:50.64,0:26:54.35,Default4,,0000,0000,0000,,Đón ngày mới cùng sinh lực tràn đầy
Dialogue: 0,0:26:54.42,0:26:56.86,Default4,,0000,0000,0000,,Thần mặt trời đang mỉm cười với bạn đó
Dialogue: 0,0:26:56.86,0:27:00.04,Default4,,0000,0000,0000,,Bạn sẽ làm gì đây
Dialogue: 0,0:27:00.74,0:27:06.24,Default4,,0000,0000,0000,,Từng tà áo trắng
Dialogue: 0,0:27:06.80,0:27:12.27,Default4,,0000,0000,0000,,tung bay trong gió
Dialogue: 0,0:27:12.78,0:27:17.89,Default4,,0000,0000,0000,,Tiếng bước chân hòa cùng nhịp trống
Dialogue: 0,0:27:17.89,0:27:23.65,Default4,,0000,0000,0000,,Lòng phơi phới ngập tràn niềm vui
Dialogue: 0,0:27:24.75,0:27:30.17,Default4,,0000,0000,0000,,Trong cuốn sách ai đó bỏ quên
Dialogue: 0,0:27:30.75,0:27:35.34,Default4,,0000,0000,0000,,Thấp thoáng một lời nhắn còn đang viết dở
Dialogue: 0,0:27:36.03,0:27:41.89,Default4,,0000,0000,0000,,"Cuộc sống là ko chờ đợi..."
Dialogue: 0,0:27:41.89,0:27:47.77,Default4,,0000,0000,0000,,Phải chăng đó là sự ngẫu nhiên?
Dialogue: 0,0:27:48.75,0:27:54.36,Default4,,0000,0000,0000,,Hai ánh mắt giao nhau trong thoáng chốc
Dialogue: 0,0:27:54.78,0:27:59.74,Default4,,0000,0000,0000,,Hai trái tim rung động mãi ko thôi
