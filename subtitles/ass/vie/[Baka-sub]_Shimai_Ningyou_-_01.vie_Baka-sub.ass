Dialogue: 0,0:01:20.44,0:01:24.07,Default,,0000,0000,0000,,Không, đừng dừng lại, làm nữa đi...
Dialogue: 0,0:01:27.55,0:01:30.78,Default,,0000,0000,0000,,Nhanh lên, đút nó vào... Nhanh lên!
Dialogue: 0,0:02:36.65,0:02:39.02,Default,,0000,0000,0000,,Tuyệt quá... Tuyệt quá!
Dialogue: 0,0:02:40.96,0:02:43.12,Default,,0000,0000,0000,,Phải... Tuyệt quá!
Dialogue: 0,0:02:54.24,0:02:59.77,Default,,0000,0000,0000,,Tất cả những gì anh muốn chính là nụ cười của em...
Dialogue: 0,0:03:10.10,0:03:15.08,Title,,0000,0000,0000,,{\fad(1000,0)\pos(331,77)\3c&H625763&\c&H625763&}Baka-sub trân trọng giới thiệu
Dialogue: 0,0:03:10.10,0:03:15.08,Title,,0000,0000,0000,,{\fad(1000,0)\pos(328,74)}Baka-sub trân trọng giới thiệu
Dialogue: 0,0:03:36.48,0:03:39.94,Default,,0000,0000,0000,,Bữa sáng chuẩn bị xong rồi đó, em thức dậy đi.
Dialogue: 0,0:03:43.82,0:03:46.01,Default,,0000,0000,0000,,Mình lại ngủ quên rồi.
Dialogue: 0,0:03:46.09,0:03:52.05,Default,,0000,0000,0000,,Ước mơ của mình là được chăm sóc cho Nii-san nhưng lại toàn gây rắc rối cho anh ấy...
Dialogue: 0,0:04:02.17,0:04:04.76,Default,,0000,0000,0000,,Họ vẫn thân thiết như mọi khi.
Dialogue: 0,0:04:04.84,0:04:06.53,Default,,0000,0000,0000,,Đúng là vậy...
Dialogue: 0,0:04:07.38,0:04:11.97,Default,,0000,0000,0000,,Mẹ họ mất khi họ còn nhỏ, bố họ cũng không có ở đây,
Dialogue: 0,0:04:12.05,0:04:16.78,Default,,0000,0000,0000,,Nên Lester phải chăm sóc cho em gái bị bệnh của mình là Mith.
Dialogue: 0,0:04:18.95,0:04:23.19,Default,,0000,0000,0000,,Giữa hai người đó chỉ là tình cảm anh em thôi ư...?
Dialogue: 0,0:04:23.66,0:04:24.82,Default,,0000,0000,0000,,Ý cậu là sao?
Dialogue: 0,0:04:24.93,0:04:26.95,Default,,0000,0000,0000,,Trông cách họ nhìn nhau kìa!
Dialogue: 0,0:04:28.03,0:04:31.29,Default,,0000,0000,0000,,Cứ như một đôi tình nhân vậy.
Dialogue: 0,0:04:33.10,0:04:34.57,Default,,0000,0000,0000,,Do cậu nghĩ lung tung thôi.
Dialogue: 0,0:04:34.94,0:04:38.17,Default,,0000,0000,0000,,Không, tớ cũng cảm thấy vậy.
Dialogue: 0,0:04:39.04,0:04:40.13,Default,,0000,0000,0000,,Vậy ư?
Dialogue: 0,0:04:41.34,0:04:46.58,Default,,0000,0000,0000,,Tớ nghĩ hai cậu chỉ ghen tị vì Lester không chịu để mắt đến hai cậu thôi.
Dialogue: 0,0:04:47.28,0:04:49.25,Default,,0000,0000,0000,,K-Không hề có chuyện đó!
Dialogue: 0,0:04:49.32,0:04:53.22,Default,,0000,0000,0000,,Hỡi những kẻ phụng sự chúa, các em đang bàn tán gì vậy hả!
Dialogue: 0,0:04:59.09,0:05:01.09,Default,,0000,0000,0000,,Tớ cứ nghĩ là hiệu trưởng!
Dialogue: 0,0:05:01.63,0:05:05.26,Default,,0000,0000,0000,,Tớ chỉ muốn cho các cậu biết là Mith không phải là người mà các cậu nên lo lắng.
Dialogue: 0,0:05:07.04,0:05:09.40,Default,,0000,0000,0000,,Muốn gì thì nói thẳng ra đi!?
Dialogue: 0,0:05:09.87,0:05:18.30,Default,,0000,0000,0000,,Tại ngoại ô Paltia Kingdom, trường Aqualis, nơi đầy những học giả xuất sắc.
Dialogue: 0,0:05:18.98,0:05:21.35,Default,,0000,0000,0000,,Ngôi trường đó thì sao?
Dialogue: 0,0:05:21.45,0:05:26.79,Default,,0000,0000,0000,,Có nghĩ là có người mang dòng máu hoàng gia từ trường đó chuyển đến đây.
Dialogue: 0,0:05:28.19,0:05:29.71,Default,,0000,0000,0000,,Chả hiểu gì hết.
Dialogue: 0,0:05:31.83,0:05:37.49,Default,,0000,0000,0000,,Ồ, Les... Không, cậu không phải làm một thường dân bình thường như chúng tôi.
Dialogue: 0,0:05:37.57,0:05:40.00,Default,,0000,0000,0000,,Chào buổi sáng, Clieford-sama.
Dialogue: 0,0:05:40.10,0:05:41.69,Default,,0000,0000,0000,,Dẹp đi, Agil.
Dialogue: 0,0:05:42.40,0:05:43.46,Default,,0000,0000,0000,,Vẫn như mọi khi.
Dialogue: 0,0:05:43.57,0:05:45.30,Default,,0000,0000,0000,,Lester, có tin lớn đấy!
Dialogue: 0,0:05:46.07,0:05:49.07,Default,,0000,0000,0000,,Con gái của tướng Rainzett sẽ đến đây đấy!
Dialogue: 0,0:05:50.48,0:05:51.84,Default,,0000,0000,0000,,Thật không?
Dialogue: 0,0:05:53.21,0:05:57.08,Default,,0000,0000,0000,,Vẻ đẹp mà những người trong hoàng gia cũng phải nhắc đến sao?
Dialogue: 0,0:05:57.19,0:05:59.02,Default,,0000,0000,0000,,Đúng là tin lớn đấy!
Dialogue: 0,0:06:03.63,0:06:06.59,Default,,0000,0000,0000,,Trước khi buổi học bắt đầu, thầy sẽ giới thiệu với các em học sinh mới.
Dialogue: 0,0:06:07.36,0:06:10.39,Default,,0000,0000,0000,,Con gái của tướng Rainzett, Pusel-sama.
Dialogue: 0,0:06:16.10,0:06:17.90,Default,,0000,0000,0000,,Tôi là Pusel Rainzett.
Dialogue: 0,0:06:17.97,0:06:22.81,Default,,0000,0000,0000,,Chỉ trong một khoảng thời gian ngắn đến khi tốt nghiệp, nhưng tôi sẽ học cùng với mọi người.
Dialogue: 0,0:06:23.71,0:06:25.14,Default,,0000,0000,0000,,Rất hân hạnh.
Dialogue: 0,0:06:27.42,0:06:30.32,Default,,0000,0000,0000,,Pusel-sama, tớ có thể hỏi một câu được chứ?
Dialogue: 0,0:06:32.35,0:06:34.29,Default,,0000,0000,0000,,Gì thế, Crift?
Dialogue: 0,0:06:34.36,0:06:36.88,Default,,0000,0000,0000,,Nếu muốn hỏi, thì nhanh lên.
Dialogue: 0,0:06:38.13,0:06:42.32,Default,,0000,0000,0000,,Ư, hân hạnh được biết cậu, tớ là Crift Mictis.
Dialogue: 0,0:06:42.43,0:06:46.56,Default,,0000,0000,0000,,Ơ, Pusel-sama, lý do gì khiến cậu chuyển đến đây học?
Dialogue: 0,0:06:47.44,0:06:50.77,Default,,0000,0000,0000,,Với lại cậu có hôn phu chưa?
Dialogue: 0,0:06:52.94,0:06:54.97,Default,,0000,0000,0000,,Tên cậu là Crift, đúng chứ?
Dialogue: 0,0:06:55.41,0:06:56.60,Default,,0000,0000,0000,,P-Phải.
Dialogue: 0,0:06:57.08,0:07:00.74,Default,,0000,0000,0000,,Tôi có thể trả lời câu hỏi của cậu, nhưng...
Dialogue: 0,0:07:00.95,0:07:04.68,Default,,0000,0000,0000,,một kẻ làm công như cậu không có tư cách để hỏi tôi!
Dialogue: 0,0:07:14.60,0:07:18.03,Default,,0000,0000,0000,,Sách Aria, Ma thuật tối thượng.
Dialogue: 0,0:07:19.20,0:07:20.60,Default,,0000,0000,0000,,Olfan-sensei...
Dialogue: 0,0:07:21.10,0:07:31.57,Default,,0000,0000,0000,,Không phải giáo viên nào cũng có thể đọc được hết những gì ghi trong Elemen.
Dialogue: 0,0:07:31.81,0:07:32.97,Default,,0000,0000,0000,,Ơ?
Dialogue: 0,0:07:33.88,0:07:38.48,Default,,0000,0000,0000,,Olphan-sensei và Nii-san lại bàn về mấy quyển sách khó hiểu đó nữa à?
Dialogue: 0,0:07:39.39,0:07:42.29,Default,,0000,0000,0000,,Ồ Mith, em cảm thấy khỏe hơn chưa?
Dialogue: 0,0:07:42.42,0:07:47.22,Default,,0000,0000,0000,,Vâng, tất cả đều nhờ vào thuốc của thầy...
Dialogue: 0,0:07:52.43,0:07:55.40,Default,,0000,0000,0000,,Thôi không làm phiền hai người nữa, em đi trước đây.
Dialogue: 0,0:07:55.90,0:08:00.20,Default,,0000,0000,0000,,Nii-san, em sẽ làm bữa tối, anh về nhanh nhanh nhé.
Dialogue: 0,0:08:00.31,0:08:01.64,Default,,0000,0000,0000,,Ừm, anh biết rồi.
Dialogue: 0,0:08:01.98,0:08:06.14,Default,,0000,0000,0000,,Nụ cười đó... làm thầy nhớ đến cháu gái của mình.
Dialogue: 0,0:08:07.28,0:08:11.81,Default,,0000,0000,0000,,Thầy đã không thể cứu được nó, \Nnhưng thầy nhất định sẽ cứu Mith.
Dialogue: 0,0:08:13.15,0:08:16.18,Default,,0000,0000,0000,,Lester, em có kiến thức và sức mạnh.
Dialogue: 0,0:08:16.29,0:08:18.66,Default,,0000,0000,0000,,Em hãy giúp thầy bào chế thuốc cho Mith.
Dialogue: 0,0:08:18.73,0:08:20.56,Default,,0000,0000,0000,,Ơ... Ơ, vâng.
Dialogue: 0,0:08:25.87,0:08:28.63,Default,,0000,0000,0000,,Trông có vẻ Sage Olphan-sensei rất tin tưởng cậu.
Dialogue: 0,0:08:29.10,0:08:31.09,Default,,0000,0000,0000,,Cậu biết Olphan-sensei à?
Dialogue: 0,0:08:31.74,0:08:34.61,Default,,0000,0000,0000,,Cậu biết về những thợ săn quỷ ở thành phố hoàng gia chứ?
Dialogue: 0,0:08:35.78,0:08:41.48,Default,,0000,0000,0000,,Tớ nghe tin đồn những người trong nhà thờ đang săn lùng những ai biết sử dụng giả kim thuật.
Dialogue: 0,0:08:42.38,0:08:43.91,Default,,0000,0000,0000,,Không phải là tin đồn.
Dialogue: 0,0:08:43.99,0:08:49.86,Default,,0000,0000,0000,,Những kỵ sĩ cần phải săn lùng bọn quỷ dữ đó để bảo vệ hòa bình!
Dialogue: 0,0:08:50.89,0:08:53.49,Default,,0000,0000,0000,,Cậu không dè dặt khi nó chuyện với tôi. {fix this cuz I don't know the context of it}
Dialogue: 0,0:08:53.63,0:08:55.76,Default,,0000,0000,0000,,Cậu khác hẳn với những học sinh khác.
Dialogue: 0,0:08:56.26,0:09:00.13,Default,,0000,0000,0000,,Có lẽ do cha tớ là linh mục của hoàng gia?
Dialogue: 0,0:09:00.27,0:09:02.63,Default,,0000,0000,0000,,Cậu có thể cho tôi biết tên chứ?
Dialogue: 0,0:09:03.17,0:09:04.87,Default,,0000,0000,0000,,Lester Clieford.
Dialogue: 0,0:09:05.04,0:09:06.20,Default,,0000,0000,0000,,Clieford?
Dialogue: 0,0:09:06.81,0:09:09.33,Default,,0000,0000,0000,,Đúng rồi, cậu chắc là con của Xenon Clieford-san!
Dialogue: 0,0:09:09.44,0:09:12.00,Default,,0000,0000,0000,,Cha cậu nổi tiếng lắm!
Dialogue: 0,0:09:12.11,0:09:14.10,Default,,0000,0000,0000,,Tôi thường dự những bài giảng của ông ấy.
Dialogue: 0,0:09:15.58,0:09:17.85,Default,,0000,0000,0000,,Tìm cách chữa cho em gái cậu ư...
Dialogue: 0,0:09:17.95,0:09:21.22,Default,,0000,0000,0000,,Sensei đã mất cháu gái với căn bệnh tương tự.
Dialogue: 0,0:09:21.32,0:09:24.16,Default,,0000,0000,0000,,Nên thầy ấy quyết tâm tìm ra cách chữa trị.
Dialogue: 0,0:09:24.53,0:09:31.16,Default,,0000,0000,0000,,Những kỵ sĩ cho rằng Olfan-sensei đến đây chỉ vì muốn trốn tránh nghĩa vụ của mình.
Dialogue: 0,0:09:31.73,0:09:35.29,Default,,0000,0000,0000,,Nhưng nó hoàn toàn không phải vậy.
Dialogue: 0,0:09:36.84,0:09:41.47,Default,,0000,0000,0000,,Thật ra, tôi đến đây là để tìm cách chữa bệnh cho mẹ mình.
Dialogue: 0,0:09:41.61,0:09:43.67,Default,,0000,0000,0000,,Vì bà ấy...
Dialogue: 0,0:09:45.25,0:09:49.51,Default,,0000,0000,0000,,Thế sao cậu không nhờ Sensei xem bệnh cho mẹ của cậu?
Dialogue: 0,0:09:50.02,0:09:50.99,Default,,0000,0000,0000,,Ừm...
Dialogue: 0,0:09:52.72,0:09:56.16,Default,,0000,0000,0000,,Hoàng tử của em đã bị công chúa quyến rũ...
Dialogue: 0,0:09:56.22,0:09:57.89,Default,,0000,0000,0000,,Thôi đi, Crift.
Dialogue: 0,0:09:59.43,0:10:01.12,Default,,0000,0000,0000,,Bỏ cuộc đi, Linus.
Dialogue: 0,0:10:01.23,0:10:03.72,Default,,0000,0000,0000,,Cậu ta khác với bọn mình.
Dialogue: 0,0:10:03.83,0:10:05.73,Default,,0000,0000,0000,,Không cần cậu nói...
Dialogue: 0,0:10:05.90,0:10:08.93,Default,,0000,0000,0000,,Nếu được hãy để tớ làm hoàng tử của cậu...
Dialogue: 0,0:10:12.64,0:10:14.11,Default,,0000,0000,0000,,Nóng quá...
Dialogue: 0,0:10:33.70,0:10:35.22,Default,,0000,0000,0000,,Đau lắm, Crift.
Dialogue: 0,0:10:35.33,0:10:37.30,Default,,0000,0000,0000,,Nhẹ nhàng hơn chút nữa.
Dialogue: 0,0:10:37.37,0:10:38.53,Default,,0000,0000,0000,,Ư-Ừm.
Dialogue: 0,0:11:05.96,0:11:08.69,Default,,0000,0000,0000,,Không được, nó làm tớ phát điên mất...!
Dialogue: 0,0:11:09.26,0:11:12.89,Default,,0000,0000,0000,,Nếu cậu la lớn như vậy, hoàng tử của cậu nghe thấy mất.
Dialogue: 0,0:11:14.84,0:11:17.07,Default,,0000,0000,0000,,Đồ xấu xa...
Dialogue: 0,0:11:20.44,0:11:22.27,Default,,0000,0000,0000,,Tuyệt quá!
Dialogue: 0,0:11:22.44,0:11:23.71,Default,,0000,0000,0000,,Tớ cảm thấy nó...!
Dialogue: 0,0:11:26.85,0:11:29.25,Default,,0000,0000,0000,,Nhẹ nhàng thôi, Crift...
Dialogue: 0,0:11:34.79,0:11:36.76,Default,,0000,0000,0000,,Crift, hãy để tớ...
Dialogue: 0,0:12:09.36,0:12:13.49,Default,,0000,0000,0000,,Pusel... Không được, tớ không thể giữ được nữa...
Dialogue: 0,0:12:13.56,0:12:14.86,Default,,0000,0000,0000,,Ra đi!
Dialogue: 0,0:12:23.81,0:12:25.86,Default,,0000,0000,0000,,Crift...
Dialogue: 0,0:12:26.11,0:12:28.01,Default,,0000,0000,0000,,Ừm, tớ đến đây...
Dialogue: 0,0:12:28.78,0:12:31.40,Default,,0000,0000,0000,,Crift, không phải chỗ đó...
Dialogue: 0,0:12:31.48,0:12:33.57,Default,,0000,0000,0000,,Xuống một chút... chỗ đó!
Dialogue: 0,0:12:33.65,0:12:35.95,Default,,0000,0000,0000,,Lên chút nữa....
Dialogue: 0,0:12:37.62,0:12:38.92,Default,,0000,0000,0000,,Là chỗ đó...
Dialogue: 0,0:12:52.43,0:12:53.63,Default,,0000,0000,0000,,Tớ ra mất.
Dialogue: 0,0:12:53.70,0:12:56.14,Default,,0000,0000,0000,,Không được... Hãy giữ thêm chút nữa!
Dialogue: 0,0:13:41.72,0:13:44.45,Default,,0000,0000,0000,,Tuyệt quá, tớ ra đây!
Dialogue: 0,0:13:44.69,0:13:45.88,Default,,0000,0000,0000,,Tớ cũng vậy!
Dialogue: 0,0:13:54.00,0:13:54.98,Default,,0000,0000,0000,,Pusel!
Dialogue: 0,0:14:25.46,0:14:29.05,Default,,0000,0000,0000,,Nii-san... Cô gái đó là ai vậy?
Dialogue: 0,0:14:30.23,0:14:33.36,Default,,0000,0000,0000,,Hể! Là học sinh mới chuyển đến sao...
Dialogue: 0,0:14:34.00,0:14:40.50,Default,,0000,0000,0000,,Ừm, cô ấy hơi nam tính một chút, nhưng lúc nào cũng dùng loại nước hoa mà mẹ cô ấy hay dùng.
Dialogue: 0,0:14:42.98,0:14:47.04,Default,,0000,0000,0000,,Nii-san, anh thân với Pusel-san vậy ư?
Dialogue: 0,0:14:49.85,0:14:51.75,Default,,0000,0000,0000,,Mith, chờ anh một chút.
Dialogue: 0,0:14:53.09,0:14:54.25,Default,,0000,0000,0000,,Đây, tặng em.
Dialogue: 0,0:14:56.62,0:14:58.46,Default,,0000,0000,0000,,Cái gì thế, Nii-san?
Dialogue: 0,0:15:02.96,0:15:06.83,Default,,0000,0000,0000,,Anh biết là sớm hai ngày, nhưng... chúc em sinh nhật vui vẻ, Mith.
Dialogue: 0,0:15:07.44,0:15:09.46,Default,,0000,0000,0000,,Pusel giúp anh chọn đấy.
Dialogue: 0,0:15:11.34,0:15:13.53,Default,,0000,0000,0000,,Cảm ơn anh, Nii-san...
Dialogue: 0,0:15:26.92,0:15:29.55,Default,,0000,0000,0000,,Tốt quá, có vẻ như em ấy thích nó.
Dialogue: 0,0:15:33.69,0:15:34.75,Default,,0000,0000,0000,,Mith!
Dialogue: 0,0:15:40.20,0:15:42.17,Default,,0000,0000,0000,,M-Mith!
Dialogue: 0,0:15:42.74,0:15:45.73,Default,,0000,0000,0000,,Mith, uống thuốc đi, cố gắng lên!
Dialogue: 0,0:16:05.79,0:16:08.32,Default,,0000,0000,0000,,Tốt quá, em ấy cũng hạ sốt rồi.
Dialogue: 0,0:16:20.04,0:16:21.10,Default,,0000,0000,0000,,Lester!
Dialogue: 0,0:16:23.21,0:16:26.01,Default,,0000,0000,0000,,Xin lỗi Pusel, nhưng Mith không được khỏe.
Dialogue: 0,0:16:26.11,0:16:28.88,Default,,0000,0000,0000,,Bây giờ tớ phải đến chỗ của Olfan-sensei.
Dialogue: 0,0:16:30.85,0:16:32.15,Default,,0000,0000,0000,,Em của cậu ư?
Dialogue: 0,0:16:33.85,0:16:36.35,Default,,0000,0000,0000,,Được, tôi sẽ đi với cậu.
Dialogue: 0,0:16:37.89,0:16:40.62,Default,,0000,0000,0000,,Tôi cũng phải nói với thầy ấy về mẹ của mình.
Dialogue: 0,0:16:42.46,0:16:43.59,Default,,0000,0000,0000,,Nào, đi thôi.
Dialogue: 0,0:16:43.76,0:16:44.70,Default,,0000,0000,0000,,Ừm.
Dialogue: 0,0:16:46.57,0:16:50.47,Default,,0000,0000,0000,,Vậy ư, chúng ta cầm một loại thuốc mới.
Dialogue: 0,0:16:51.14,0:16:53.13,Default,,0000,0000,0000,,Lester, đi với thầy.
Dialogue: 0,0:16:53.27,0:16:56.21,Default,,0000,0000,0000,,Em cần phải biết vài thứ trong trường hợp thấy không có ở đó.
Dialogue: 0,0:16:56.38,0:16:57.14,Default,,0000,0000,0000,,Vâng.
Dialogue: 0,0:16:57.68,0:17:00.08,Default,,0000,0000,0000,,Pusel-san, em đợi một chút nhé.
Dialogue: 0,0:17:00.95,0:17:03.04,Default,,0000,0000,0000,,Chúng ta sẽ nói chuyện về mẹ của em sau.
Dialogue: 0,0:17:03.52,0:17:06.38,Default,,0000,0000,0000,,Vâng, không cần lo cho em.
Dialogue: 0,0:17:11.86,0:17:13.52,Default,,0000,0000,0000,,Đó là gì vậy nhỉ?
Dialogue: 0,0:17:36.45,0:17:37.68,Default,,0000,0000,0000,,Đây là...
Dialogue: 0,0:17:39.49,0:17:40.82,Default,,0000,0000,0000,,Olfan-dono!
Dialogue: 0,0:17:41.89,0:17:43.58,Default,,0000,0000,0000,,Cái này là gì vậy!?
Dialogue: 0,0:17:43.66,0:17:46.65,Default,,0000,0000,0000,,Đây không phải là người lùn tạo bằng thuật giả kim sao!?
Dialogue: 0,0:17:47.53,0:17:50.02,Default,,0000,0000,0000,,Bình tĩnh, Pusel-san.
Dialogue: 0,0:17:50.13,0:17:52.07,Default,,0000,0000,0000,,Đó chỉ là hình nhân thôi.
Dialogue: 0,0:17:52.23,0:17:57.43,Default,,0000,0000,0000,,Phải, nó không hề có linh hồn, chỉ là hình nhân thôi.
Dialogue: 0,0:17:57.97,0:18:00.13,Default,,0000,0000,0000,,Hình nhân... Thứ này ư?
Dialogue: 0,0:18:06.11,0:18:13.49,Default,,0000,0000,0000,,Cũng phải... nếu là người lùn thì chỉ cao 30 cm thôi...
Dialogue: 0,0:18:13.62,0:18:19.56,Default,,0000,0000,0000,,Đúng như Olfan-sensei nói, đó chỉ là hình nhân thôi... chắc vậy...
Dialogue: 0,0:18:22.56,0:18:27.36,Default,,0000,0000,0000,,Cũng may có thuốc mới của sensei... Xin lỗi đã làm hai người lo lắng.
Dialogue: 0,0:18:27.90,0:18:30.80,Default,,0000,0000,0000,,Olfan-sensei đúng là một thầy thuốc giỏi.
Dialogue: 0,0:18:31.77,0:18:35.94,Default,,0000,0000,0000,,Pusel, Mith cực kỳ thích hộp nhạc mà cậu đã chọn đấy.
Dialogue: 0,0:18:37.61,0:18:46.54,Default,,0000,0000,0000,,Đúng vậy, nhờ nó mà em có thể ngủ ngon, để mỗi sáng có thể dậy đúng giờ.
Dialogue: 0,0:18:47.49,0:18:50.62,Default,,0000,0000,0000,,Thế thì mừng quá, thật ra tôi cũng không tự tin lắm.
Dialogue: 0,0:18:50.72,0:18:53.49,Default,,0000,0000,0000,,Lúc nào tôi cũng cư xử như con trai.
Dialogue: 0,0:18:53.89,0:18:56.52,Default,,0000,0000,0000,,Thật chứ? Cậu mà cũng biết vậy ư?
Dialogue: 0,0:18:56.66,0:18:59.29,Default,,0000,0000,0000,,Hể, bất ngờ thật đó.
Dialogue: 0,0:18:59.37,0:19:00.03,Default,,0000,0000,0000,,Cậu muốn gì hả?
Dialogue: 0,0:19:00.10,0:19:01.07,Default,,0000,0000,0000,,Không, xin lỗi.
Dialogue: 0,0:19:04.94,0:19:06.93,Default,,0000,0000,0000,,Một khoảnh khắc thanh bình...
Dialogue: 0,0:19:07.01,0:19:07.14,Default,,0000,0000,0000,,Thế nhưng, đêm đó... Tình trạng của Mith trở nên xấu đi.
Dialogue: 0,0:19:07.14,0:19:10.91,Default,,0000,0000,0000,,Thế nhưng, đêm đó... Tình trạng của Mith trở nên xấu đi.
Dialogue: 0,0:19:11.45,0:19:15.38,Default,,0000,0000,0000,,Olfan-sensei đã cố gắng hết sức, nhưng quá muộn...
Dialogue: 0,0:19:20.39,0:19:23.75,Default,,0000,0000,0000,,Khi mẹ tôi chết, thôi đã nguyền rủi thần linh.
Dialogue: 0,0:19:23.89,0:19:29.26,Default,,0000,0000,0000,,Nhưng tôi đã cầu xin ngài ấy cứu Mith, vậy mà...
Dialogue: 0,0:19:39.61,0:19:44.41,Default,,0000,0000,0000,,Olfan-sensei và tôi quyết định sẽ dùng bí thuật bị cấm...
Dialogue: 0,0:19:44.78,0:19:47.68,Default,,0000,0000,0000,,Hình nhân giống như cháu gái của Olfan-sensei...
Dialogue: 0,0:19:47.95,0:19:50.94,Default,,0000,0000,0000,,Tôi biết thầy ấy đang tạo ra một loại người lùn mới...
Dialogue: 0,0:19:52.89,0:19:55.75,Default,,0000,0000,0000,,Dùng nó để chứ linh hồn của Mith.
Dialogue: 0,0:19:56.16,0:19:59.22,Default,,0000,0000,0000,,Tôi đã quyến định sử dụng nó.
Dialogue: 0,0:19:59.39,0:20:05.33,Default,,0000,0000,0000,,Tuy nhiên, Olfan-sensei bảo rằng không thể đưa linh hồn vào bên trong nó được.
Dialogue: 0,0:20:05.40,0:20:09.23,Default,,0000,0000,0000,,Nhưng với sự giúp sức của quỷ thì tôi...
Dialogue: 0,0:20:10.94,0:20:13.93,Default,,0000,0000,0000,,Cuối cùng tôi cũng tìm được quyển sách này.
Dialogue: 0,0:20:15.01,0:20:17.41,Default,,0000,0000,0000,,Quyển sách Đen...
Dialogue: 0,0:20:21.58,0:20:23.61,Default,,0000,0000,0000,,Tôi, kẻ đứng dưới ánh trăng này.
Dialogue: 0,0:20:24.05,0:20:26.42,Default,,0000,0000,0000,,Kêu gọi đấng tối cao!
Dialogue: 0,0:20:26.55,0:20:30.92,Default,,0000,0000,0000,,Linh hồn của vàng, vị tiên của bạc, nguyên tố của đồng!
Dialogue: 0,0:20:31.59,0:20:36.36,Default,,0000,0000,0000,,Hỡi đấng tối cao, hãy nghe lời thỉnh cầu của tôi!
Dialogue: 0,0:21:00.62,0:21:03.25,Default,,0000,0000,0000,,Tôi là người triệu hồi.
Dialogue: 0,0:21:03.89,0:21:06.38,Default,,0000,0000,0000,,Tên tôi là Lester Clieford!
Dialogue: 0,0:21:41.70,0:21:44.32,Default,,0000,0000,0000,,Ngươi là kẻ đã triệu hồi ta ư?
Dialogue: 0,0:21:44.43,0:21:46.40,Default,,0000,0000,0000,,Ta là Neipher.
Dialogue: 0,0:21:46.57,0:21:49.56,Default,,0000,0000,0000,,Không phải là Ashlum mà ngươi đang tìm kiếm đâu.
Dialogue: 0,0:21:53.07,0:21:55.80,Default,,0000,0000,0000,,Vậy nghĩ là Mith không thể được cứu...
Dialogue: 0,0:21:56.58,0:21:59.44,Default,,0000,0000,0000,,Ngươi nên mừng vì người ngươi gặp là ta.
Dialogue: 0,0:21:59.55,0:22:05.08,Default,,0000,0000,0000,,Nếu là Ashlum, thì đã giết người mà chẳng cần hỏi han gì.
Dialogue: 0,0:22:05.89,0:22:09.69,Default,,0000,0000,0000,,Ta sẽ biến điều ước của ngươi thành hiện thực.
Dialogue: 0,0:22:09.76,0:22:10.78,Default,,0000,0000,0000,,Thật không!?
Dialogue: 0,0:22:10.99,0:22:12.25,Default,,0000,0000,0000,,Với một điều kiện...
Dialogue: 0,0:22:13.56,0:22:15.22,Default,,0000,0000,0000,,Tôi sẽ làm bất cứ chuyện gì...
Dialogue: 0,0:22:17.33,0:22:19.93,Default,,0000,0000,0000,,Hãy để ta thưởng thức linh hồn của ngươi.
Dialogue: 0,0:22:24.91,0:22:29.07,Default,,0000,0000,0000,,Cảm giác không thể cử động được thế nào hả?
Dialogue: 0,0:22:37.18,0:22:40.52,Default,,0000,0000,0000,,Ngươi... Ngươi nhạy cảm hơn người bình thường đấy.
Dialogue: 0,0:22:40.82,0:22:42.41,Default,,0000,0000,0000,,Nào, ta đến đây...
Dialogue: 0,0:22:47.56,0:22:50.03,Default,,0000,0000,0000,,Tuyệt quá! Sướng quá!
Dialogue: 0,0:22:50.30,0:22:53.10,Default,,0000,0000,0000,,Đối với một con người thì ngươi cũng khá đấy!
Dialogue: 0,0:23:13.22,0:23:15.12,Default,,0000,0000,0000,,Đã ra rồi ư?
Dialogue: 0,0:23:15.26,0:23:18.62,Default,,0000,0000,0000,,Nếu không thỏa mãn ta thì ta không biến điều ước của ngươi thành hiện thực đâu.
Dialogue: 0,0:23:19.96,0:23:22.19,Default,,0000,0000,0000,,Nữa đi, nữa đi!
Dialogue: 0,0:23:26.87,0:23:29.13,Default,,0000,0000,0000,,Phải, phải, nữa đi!
Dialogue: 0,0:23:43.05,0:23:45.48,Default,,0000,0000,0000,,Hãy lầp đầy ta đi!
Dialogue: 0,0:23:47.52,0:23:51.79,Default,,0000,0000,0000,,Không thể tin là mình lại ra!
Dialogue: 0,0:23:58.97,0:24:02.16,Default,,0000,0000,0000,,Ngươi cần hai thứ để làm em gái ngươi sống lại.
Dialogue: 0,0:24:02.64,0:24:04.70,Default,,0000,0000,0000,,Thứ nhất, là một nơi chứa linh hồn.
Dialogue: 0,0:24:05.94,0:24:07.60,Default,,0000,0000,0000,,Điều này đã thỏa.
Dialogue: 0,0:24:07.81,0:24:11.61,Default,,0000,0000,0000,,Chúng ta cần thêm một vật hiến tế, đó chính là máu của trinh nữa.
Dialogue: 0,0:24:12.25,0:24:13.41,Default,,0000,0000,0000,,Có liên tưởng gì không?
Dialogue: 0,0:24:13.48,0:24:14.61,Default,,0000,0000,0000,,Máu của trinh nữ!?
Dialogue: 0,0:24:17.78,0:24:20.12,Default,,0000,0000,0000,,Ta có thể thấy suy nghĩ của ngươi!
Dialogue: 0,0:24:31.83,0:24:32.92,Default,,0000,0000,0000,,Bắt đầu thôi!
Dialogue: 0,0:24:40.51,0:24:41.77,Default,,0000,0000,0000,,Nào Lester.
Dialogue: 0,0:24:42.01,0:24:44.81,Default,,0000,0000,0000,,Cắt đầu cô ta để lấy máu đi.
Dialogue: 0,0:24:46.48,0:24:48.68,Default,,0000,0000,0000,,Vầy nghĩ là sao hả, Lester!?
Dialogue: 0,0:24:48.75,0:24:50.58,Default,,0000,0000,0000,,Cậu bán linh hồn của mình ư!?
Dialogue: 0,0:24:50.65,0:24:51.62,Default,,0000,0000,0000,,Im đi, vật hiến tế!
Dialogue: 0,0:25:02.16,0:25:05.43,Default,,0000,0000,0000,,Sao thế Lester? Ngươi còn do dự gì nữa!?
Dialogue: 0,0:25:12.97,0:25:14.30,Default,,0000,0000,0000,,Cảm động nhỉ...
Dialogue: 0,0:25:14.47,0:25:17.53,Default,,0000,0000,0000,,Thật là hết cách, chúng ta dùng cách khác vậy.
Dialogue: 0,0:25:17.68,0:25:21.05,Default,,0000,0000,0000,,Lester, hãy làm tình với cô ta trên vòng tròn ma thuật.
Dialogue: 0,0:25:21.18,0:25:24.24,Default,,0000,0000,0000,,Máu từ tử cung của một trinh nữ có thể lừa được nó.
Dialogue: 0,0:25:25.32,0:25:28.85,Default,,0000,0000,0000,,Bây giờ chả còn lí do gì để dè dặt cả.
Dialogue: 0,0:25:28.96,0:25:30.62,Default,,0000,0000,0000,,Nào nhanh lên.
Dialogue: 0,0:25:36.06,0:25:39.40,Default,,0000,0000,0000,,Nào Pusel, bú nó đi.
Dialogue: 0,0:25:39.87,0:25:41.73,Default,,0000,0000,0000,,Lester, tỉnh lại đi!
Dialogue: 0,0:25:46.61,0:25:48.44,Default,,0000,0000,0000,,Pusel, tuyệt lắm!
Dialogue: 0,0:25:58.92,0:25:59.91,Default,,0000,0000,0000,,Dừng lại đi!
Dialogue: 0,0:26:01.72,0:26:02.52,Default,,0000,0000,0000,,Dừng lại đi...
Dialogue: 0,0:26:03.86,0:26:06.02,Default,,0000,0000,0000,,Dừng lại... Lester!
Dialogue: 0,0:26:15.10,0:26:19.51,Default,,0000,0000,0000,,Cậu thật biến thái khi bị kích thích trong hoàn cảnh này.
Dialogue: 0,0:26:20.61,0:26:21.70,Default,,0000,0000,0000,,Không phải!!
Dialogue: 0,0:26:23.58,0:26:26.48,Default,,0000,0000,0000,,Tôi không muốn lần đầu tiên với cậu như thế này...
Dialogue: 0,0:26:30.22,0:26:33.65,Default,,0000,0000,0000,,Cậu cũng thích tớ làm tớ vui lắm... Vậy thì...
Dialogue: 0,0:26:35.66,0:26:36.85,Default,,0000,0000,0000,,Dừng lại đi, Lester!
Dialogue: 0,0:26:39.89,0:26:43.56,Default,,0000,0000,0000,,Dừng lại đi... Lester, dừng lại đi!
Dialogue: 0,0:26:44.70,0:26:46.89,Default,,0000,0000,0000,,Đau quá... Lester...
Dialogue: 0,0:26:55.18,0:26:57.30,Default,,0000,0000,0000,,Thứ cứng cáp của mình đang ở bên trong Pusel...
Dialogue: 0,0:26:58.78,0:27:01.30,Default,,0000,0000,0000,,Tôi liên tục đâm nó vào...
Dialogue: 0,0:27:03.82,0:27:05.84,Default,,0000,0000,0000,,...hãm hiếp cô ấy.
Dialogue: 0,0:27:26.44,0:27:32.47,Default,,0000,0000,0000,,Mình có thể cảm thấy Lester... Mặc dù bị...!!
Dialogue: 0,0:27:50.90,0:27:58.43,Default,,0000,0000,0000,,Pusel nam tính đã trở nên rất nữ tính và chấp nhận thằng nhỏ của tôi bên trong cô ấy...
Dialogue: 0,0:28:01.27,0:28:03.83,Default,,0000,0000,0000,,Tớ ra đây, tớ không thể lấy nó ra!
Dialogue: 0,0:28:07.35,0:28:11.15,Default,,0000,0000,0000,,Chỗ đó của cậu siết chặt lấy tớ, tớ không thể lấy ra được...!
Dialogue: 0,0:28:11.92,0:28:13.44,Default,,0000,0000,0000,,Tớ ra bên trong đây!
Dialogue: 0,0:28:14.72,0:28:16.62,Default,,0000,0000,0000,,Đừng ra bên trong!
Dialogue: 0,0:28:40.31,0:28:45.15,Default,,0000,0000,0000,,Hãy mở ra, cánh cửa đang ngủ yên của địa ngục.
Dialogue: 0,0:28:48.86,0:28:50.62,Default,,0000,0000,0000,,Hãy nghe đây...
Dialogue: 0,0:28:50.82,0:28:54.26,Default,,0000,0000,0000,,Phá hủy những sơi xích giam giữ linh hồn...
Dialogue: 0,0:28:59.23,0:29:03.46,Default,,0000,0000,0000,,Tiếng thì thầm của hơi thở... hãy mang lại sự sống!
Dialogue: 0,0:29:04.40,0:29:07.31,Default,,0000,0000,0000,,Ngươi sẽ tìm thấy ta ở vùng đất của những giấc mơ.
Dialogue: 0,0:29:07.51,0:29:10.87,Default,,0000,0000,0000,,Và ta sẽ cho ngươi nơi trú ngụ của linh hồl!
Dialogue: 0,0:29:10.87,0:29:12.87,Default,,0000,0000,0000,,
